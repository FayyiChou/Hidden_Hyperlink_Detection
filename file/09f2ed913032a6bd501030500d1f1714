<script>
    function cssValue(e, CSS) {
        var value = $(e).css(CSS);
        if (value == "auto")
            return 0;
        else if (value.indexOf("-") == 0)
            return -parseInt(value.substring(1));
        else
            return parseInt(value);
    };

    function xr() {
        var index = $(".maincontent"),
			con = $(".allcont"),
			conW = con.width() + 0,
			indexW = index.width(),
			ab = conW - indexW,
			per = 0,
			oMl = 0;
        index.bind({
            mousemove: function(event) {
                per = (event.clientX - $(this).offset().left) / indexW;
                oMl = cssValue(con, "margin-left");
                con.stop().animate({ "margin-left": -ab * per }, Math.abs(-ab * per - oMl) * 2, "linear");
            }
        });
    }
    
