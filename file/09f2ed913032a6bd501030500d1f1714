        var wWidth = $(window).width();
        var wHeight = $(window).height();
        var p1 = 1.2788;
        var p2 = 1.0220;
        var p3 = 0.5103;
        var p4 = 1.5299;
        $(".mainwrap").height(wHeight-132);
        $(".mainwrap").width(wWidth - 0);
        $(".nsubone").width($(".nsubone").height()*p1);
        $(".nsubtwo").width($(".nsubtwo").height()*p2);
        $(".nsubthree").width($(".nsubthree").height()*p3);
        $(".nsubfour").width($(".nsubfour").height()*p4);
        
        $(".opacity0").appear();
        
        var tWidth = 0;
        $(".allcont>div").each(function(i, e) {
            tWidth += $(this).width();
        });
        $(".allcont").width(tWidth+10);
        xr();
        
        $(window).resize(function(){
            wWidth = $(window).width();
            wHeight = $(window).height();
            $(".mainwrap").height(wHeight-132);
            $(".mainwrap").width(wWidth - 0);
            
            $(".nsubone").width($(".nsubone").height()*p1);
            $(".nsubtwo").width($(".nsubtwo").height()*p2);
            $(".nsubthree").width($(".nsubthree").height()*p3);
            $(".nsubfour").width($(".nsubfour").height()*p4);
            tWidth = 0;
            $(".allcont>div").each(function(i, e) {
                tWidth += $(this).width();
            });
            $(".allcont").width(tWidth+10);
            xr();
        }); 
    })
</script>

