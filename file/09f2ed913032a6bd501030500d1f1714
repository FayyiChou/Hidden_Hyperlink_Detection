    <script type="text/javascript">



        $('.icon').blur(function () {
            if ($.trim($(this).val()).length < 1)
                $(this).parent().find('span').addClass('red');
            else
                $(this).parent().find('span').removeClass("red");
        })

        $('.password').blur(function () {
            if ($(this).val().length < 6)
                $(this).parent().find('span').addClass('red');
            else
                $(this).parent().find('span').removeClass("red");
        })

        $('.epassword').blur(function () {
            if ($(this).val() != $('.password').val()) {
                $(this).parent().find('span').addClass('red');
                $(this).parent().find('span').html('两次输入的密码不一致');
            }
            else {
                if ($(this).val().length > 0) {
                    $(this).parent().find('span').removeClass("red");
                    $(this).parent().find('span').html('密码一致');
                }
            }
        })

        function icon() {
            $('.icon').each(function () {
                if ($.trim($(this).val()).length < 1)
                    $(this).parent().find('span').addClass('red');
                //else
                //    $(this).parent().find('span').removeClass("red");
            })
        }




        function cname() {
            var tempname = $.trim($('.name').val());
            if (tempname.length < 1)
                $('.name').parent().find('span').addClass('red');
        }

        function cemail() {
            var tempemail = $.trim($('.email').val());
            if (tempemail.length < 1)
                $('.email').parent().find('span').addClass('red');
        }

        function checkreg() {

//            var ischeckbox = $('#icheckbox').attr("checked");
//            if (!ischeckbox) {
//                alert('请先选择‘接受条款’'); return false;
//            }

            var iselect = $('#iselect').val();
            if (iselect < 1) {
                $('#iselect').parent().find('span').addClass('red');
            }

            icon();
            cname();
            cemail();
            var red = $('dl dd').children().hasClass('red');
            if (red) {
                //     {if(confirm("确定吗？"))
                //       return true;
                //       else return false; }
                //else
                return false;
            }
        }
        $('.vcode').click(function () {
            $('#ishow').html('');
        })

        var orgname = $('.name').parent().find('span').html();
        $('.name').keyup(function () {
            var sname = $.trim($(this).val());
            if (sname.length >= 4) {
                $.ajax({
                    url: "/index/check.aspx?type=name&val=" + sname,
                    cache: false,
                    success: function (result) {
                        $('.name').parent().find('span').html(result);
                        if (result.length > 4) {
                            $('.name').parent().find('span').addClass('red');
                        }
                        else
                            $('.name').parent().find('span').removeClass('red')
                        $('.name').parent().find('span').addClass('green');
                    }
                })
            }
            else {
                $('.name').parent().find('span').html(orgname);
                $('.name').parent().find('span').removeClass('green');
                $('.name').parent().find('span').addClass('red');
            }
        })

        var orgemail = $('.email').parent().find('span').html();
        $('.email').blur(function () {
            var semail = $.trim($(this).val());
            if (semail.search(/^\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$/) == -1) {
                $('.email').parent().find('span').html('邮箱格式有误');
                $('.email').parent().find('span').removeClass('green');
                $('.email').parent().find('span').addClass('red');
            }
            else {
                if (semail.length >= 4) {
                    $.ajax({
                        url: "/index/check.aspx?type=email&val=" + semail,
                        cache: false,
                        success: function (result) {
                            $('.email').parent().find('span').html(result);
                            if (result.length > 4) {
                                $('.email').parent().find('span').addClass('red');
                            }
                            else
                                $('.email').parent().find('span').removeClass('red')
                            $('.email').parent().find('span').addClass('green');
                        }
                    })
                }
                else {
                    $('.email').parent().find('span').html(orgemail);
                    $('.email').parent().find('span').removeClass('green');
                    $('.email').parent().find('span').addClass('red');
                }
            }
        })

</script>


