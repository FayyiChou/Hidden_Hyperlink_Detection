<script type="text/javascript">
var patterntel={ 
	regMobile : /^0?1[3|4|5|8][0-9]\d{8}$/,//手机     
	regTel : /^0[\d]{2,3}-[\d]{7,8}$/    
}
var weixinreg=/^\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$/;
var qqreg=/^\d+(\.\d+)?$/;
var emailreg=/^\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$/;
function postform(){
	var account=document.formWrite.title;
	var telphone=document.formWrite.telphone;
	var address=document.formWrite.address;
	var subscribe=document.formWrite.subscribe;
	var message=document.formWrite.body;
	if (account.value==""){
		alert("您的账号不能为空！");
		account.focus();
		return false;
		}
	if(account.value.length<2 || account.value.length>20){
    account.select();
    alert("账号长度为2-20个字符");
    return false;
       }
	   
    if(telphone.value==""){
    alert("您的联系电话不能为空！");
    telphone.focus();
    return false;
    }else{
    var pattern={
      regMobile : /^0?1[3|4|5|8][0-9]\d{8}$/,//手机
      regTel : /^0[\d]{2,3}-[\d]{7,8}$/
    }
    var pflag = pattern.regMobile.test(telphone.value);
    var mflag = pattern.regTel.test(telphone.value);
	telphone.focus();
    if(!(pflag)){
      alert("请输入正确的号码");
      return false;
    }
    }	
	
	if (address.value==""){
		alert("您的地址不能为空！");
		address.focus();
		return false;
		}
	
	if (subscribe.value==""){
		alert("请填写预订产品！");
		subscribe.focus();
		return false;
		}
}
</script>
</body>
</html>
