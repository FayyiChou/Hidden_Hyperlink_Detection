<script>
    var i = 120;
    var intervalid;
    intervalid = setInterval("fun()", 1000);
    function fun() {
        i--;
        $('.miaoshu').html(i);
        if (i == 0) {
            clearInterval(intervalid);
            $('.jishi').html('');
            $('.miaoshu').html('登录二维码已过期');
            return false;
        }
        if(i%2==0) doAjax();
    }
    function doAjax(){
        $.get("/kf5-web/islogin", { sceneId: "4758665579"},
            function(data){
                if(data==1){
                    clearInterval(intervalid);
                    window.location.href = "/kf5-web/index";
                }
            }
        );
    }
