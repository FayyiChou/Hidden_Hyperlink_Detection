<script>
    $(function () {

        //账号登陆/短登陆切换
        var $J_logoType = $('.J_logoType');
        $J_logoType.on('click' , '.logo-type span' , function () {
            var $this = $(this);
            var index = $this.index();  // 点击对象的下标

            // 点击的对象添加active，同类对象移除active
            $this.addClass('active').siblings().removeClass('active');

            // 查找与点击对象相同关系的列表显示并隐藏同类对象
            $('.form-type').find('.form').eq(index).show().siblings().hide();
        });
        //账号登陆/短登陆切换 end

        //卡务中心导航未登录提示
        var $J_cardNav = $('.J_cardNav');
        $J_cardNav.on('click' , '.list-group-item' , function () {
            var $this = $(this);
            var jsonStr=localStorageMap.get("sessionUser");
            var user=jQuery.parseJSON(jsonStr);
            var a=false;
            if(user != null && user != "undefined"){
                a=true;
            }
            if(a){
                //是登录状态
                window.location.href = projectName + "/pages/personalPage/" + $this.attr("value");
            }else{
                $this.find('.hint').show();
            }
        });
        $J_cardNav.on('mouseleave' , '.list-group-item' , function () {
            var $this = $(this);
            $this.find('.hint').hide();
        });
        //卡务中心导航未登录提示 end

    });
</script>
