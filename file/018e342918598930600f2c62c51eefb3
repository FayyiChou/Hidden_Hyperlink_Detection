function showDiv(idname,i){
	document.getElementById(idname+i).style.display='block';
	document.getElementById("pop"+idname+i).style.display='block';
}

function closeDiv(idname,i){
	document.getElementById(idname+i).style.display='none';
	document.getElementById("pop"+idname+i).style.display='none';
}
//加入收藏
function AddFavorite(sURL, sTitle) {   
    try {   
        window.external.addFavorite(sURL, sTitle);   
    } catch (e) {   
        try {   
            window.sidebar.addPanel(sTitle, sURL, "");   
        } catch (e) {   
            alert("加入收藏失败，请使用Ctrl+D进行添加");   
        }   
    }   
}
</script>
