    <script>
    //<![CDATA[

        /*
         * Jobs control
         */

        /* Jobs count */
        var jobs;

        /* Jobs displaying (in use) */
        var arrayJobsInUse = Array();
        arrayJobsInUse[1] = null;
        arrayJobsInUse[2] = null;
        arrayJobsInUse[3] = null;

        /*
         * Round
         */

        var intervalRound, intervalArrowAnimate;
        var roundRefreshId = null; /* Controle do id do item que deve ser atualizado */
        var roundActiveId = null; /* Controle do id do item que deve ser exibido */
        var roundSpeed = 7000; /* Velocidade de giro */
        var arrowBgPos = 0; /* Controle da posicao */
        var arrowSpeed = 220; /* Controle da velocidade do movimento das flechas */
        var arrowSpeedPause = 4500; /* Controle da velocidade da pausa das flechas */

        $(window).load(function() {

            /* Set job count */
            jobs = $('#jobs-preload div').length;

            /*
			 * Initial load
			 */

            /* Show elements */
            setTimeout(function() {
                $('#testimony, .content .home .testimony-box, .content .home .arrow').fadeIn(1000);
            }, 1000);

            /* Load initial jobs */
            loadJob(1, null, true);
            loadJob(2, null, false);
            loadJob(3, null, false);

            /*
			 * Round
			 */

            $('#portfolio-round').roundabout({
                shape: 'lazySusan',
                duration: 300,
                easing: 'swing', /* easeOutBounce, easeOutElastic and easeOutBack (ussing duration 1200~1600) */
                btnNext: '.content .home .arrow-next',
                btnPrev: '.content .home .arrow-prev',
                minScale: 0.5, /* Escala das imagens de trás */
                maxScale: 1, /* Escala das imagens da frente */
                tilt: -4, /* Inclinacao vertical entre elas */
                focusBearing: 35,
                minOpacity: 0,
                clickToFocus: false
            }).hover(
                function() {
                    /* Pause automatic animation when mouse over */
                    clearInterval(intervalRound);
                },
                function() {
                    /* Back automatic animation when mouse out  */
                    intervalRound = doRoundMove();
                }
            );

            /* Ativa de tempos em tempos o movimento das flechas e de rotacao */
            intervalRound = doRoundMove();

            setTimeout(function() {
                intervalArrowAnimate = setInterval('doArrowAnimate();', arrowSpeed);
            }, 5000);

            $('.content .home .arrow-prev').click(function() {
                doRefreshPrevItem();
                clearInterval(intervalRound);
                intervalRound = doRoundMove();
            });
            $('.content .home .arrow-next').click(function() {
                doRefreshNextItem();
                clearInterval(intervalRound);
                intervalRound = doRoundMove();
            });
        });

    //]]>
    </script>

