     function goBack(){
    	var prevUrl = "";
       	if (prevUrl.match(new RegExp("^.*chapter/\\d{14}.htm$"))  || ($("#addBookRack").attr("val") == 1)) {
       		history.go(-1);
       	}else{
       		tipAddBookRack(prevUrl);
       	}
       }
       
