       var b_ds = true;
       //打赏虚拟币
       function moneyAjax(obj){
       	if(b_ds){
       		b_ds = false;
       		var rewardMoney = $("#rewardMoney").val();
       		var propsNo = $("#propsNo").val();
       		var bookId = $("#bookId").val();
        	var token = $('input[name="token"]').val();
       		$.post("awardMoneyAjax.htm", {bookid:bookId,rewardMoney:rewardMoney,propsNo:propsNo,token:token},function(data) {
       			if(data != null && data != ""){
          				var strs = data.split("+");
              			data = strs[0];
              			if(data == -1){
  	        				//window.location.href="login.htm?url=" + "chapter/14641643710563.htm"; 
              				window.location.href='http://m.imengxiang.cn:80/login.htm';
  		    			} else {
  		    				if(data.indexOf("#") > 0){
  	   	    					var arr= data.split("#");
  	   	    					if(arr[0] == "恭喜您,打赏成功"){
  	   	    						// 更新图书余额
      	    	    				var dn = parseInt($("#moneyCount").html()) + parseInt(rewardMoney);
      	    	    				$("#moneyCount").html( dn );
  		  							// 更新用户剩余余额
  		  							var balance = parseInt($("#balance1").html()) - rewardMoney;
  		  							$("#balance1").html(balance);
  		  							$("#balance2").html(balance);
  	   	    						data = arr[0];
	  	   	    					$(".tab_boxds").slideUp("slow");
		  	  						$(".tabbox").fadeOut("slow");
		  	  						//奥运金牌
		  	  						/* if(rewardMoney == 88){
		  	  							$("#alert_olym").show();
		  	  						}else{
		  	  							Success(data);
		  	  						} */
  		    					};
  		    				}/* else{
  		    					Success(data);
  		    				} */
  	        				Success(data);
  		    			}
  	        			$('input[name="token"]').val(strs[1]);
       			}
       			b_ds = true;
       		}, "text");
       	};
       }
       //打赏月票
       function monthlyAjax(obj){
       	if(b_ds){
       		b_ds = false;
       		var rewardMonthly = $("#yp").val();
       		var bookId = $("#bookId").val();
   	    	var token = $('input[name="token"]').val();
  	    		$.post("awardMonthlyAjax.htm", {bookid:bookId,rewardMonthly:rewardMonthly,token:token},function(data) {
  	    			if(data != null && data != ""){
          				var strs = data.split("+");
              			data = strs[0];
              			if(data == -1){
  	   	    				//window.location.href="login.htm?url=" + "chapter/14641643710563.htm"; 
              				window.location.href='http://m.imengxiang.cn:80/login.htm';
  	   	    			} else {
  	   	    				if(data == "恭喜您,打赏成功"){
  	    						// 图书月票
  	    	    				var mn = parseInt($("#monthlyCount").html()) + parseInt(rewardMonthly);
  	    	    				$("#monthlyCount").html( mn );
  	    	    				// 剩余月票
  	    	    				var mTicketNum = parseInt($("#mTicketNum").html()) - rewardMonthly;
  	  							$("#mTicketNum").html(mTicketNum);
	  	  						$(".tab_boxyp").slideUp("slow");
	  	  						$(".tabbox").fadeOut("slow");
  	   	    				}
  	   	    				//$("#yp-box").hide();
  	   	    				Success(data);
  	   	    			};
   	   	    		$('input[name="token"]').val(strs[1]);
  	    			}
        		b_ds = true;
  	    		}, "text");
       	};
       }    
