  <script>
var page=1;
  //asyncCommNum(7583)
  function getPage(){

       
      var pid=$("#pid").val();
        $.ajax({
          url:"ajax-comments.php?id="+pid,
          type:'post',
          data:{ page:page+1 },
          success:function(res){
          if(res==0){
            showBox("没有更多评论了");
          }
              var str='';
              var resdata=eval("("+res+")");
              for(var i=0;i<resdata.length;i++){
                str+='<li class="entry"><div class="info" ><div class="comtit">'+resdata[i].c_address+' 网友<span>'+resdata[i].c_time+'</span></div><div class="commcon" style="font-size:15px">'+resdata[i].c_content+'</div></div></li>';
              }
              $(str).insertAfter($(".entry").last());
              page++;
              //$(".entry").last().css("background","red");
            }
        })

      }

 $("#subbtn").click(function(){
    
      var content=$("#uyan_comment").val();
      var pid=$("#pid").val();
      if(content.length<2 || content.length>100){
        $("#errMsg").html("评论字数应该是2-100个");
      }else{
        $.ajax({
          url:"comments.php",
          type:"post",
          data:{ content: content, sid: 123456,pid:pid },
          beforeSend:function(){
            $("#subbtn").html("正在提交,请稍候");
          },
          success:function(msg){
			  if(msg==-1){
				showBox("评论不能是纯数字和字母");
				$("#subbtn").html("我要发表评论");
				return;
			  }
            var data=eval("("+msg+")");
            var str='<li class="entry"><div class="info"><div class="comtit"  style="background-color:#F7F7F7">'+data.reg+' 网友<span>'+data.time+'</span></div><div class="commcon" style="font-size:15px">'+data.content+'</div></div></li>';
            $(str).insertBefore($(".entry").first());
            $("#uyan_comment").val("");
            $("#errMsg").html("");
            $("#subbtn").html("您的评论已经提交");
            }
          })
        }
      })     
</script>
