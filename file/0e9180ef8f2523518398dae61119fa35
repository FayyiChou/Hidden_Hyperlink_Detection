<script>
	$(document).ready(function(){
		$(".top_praise").click(function(){
			var obj = $(this);
			var zan_cookie = $("#zan_cookie").val();
			var did = $("#hd").val();
			var Num = $(".zan").text();
			Num++;
            if(zan_cookie == 1){
                return false;
            }
            $.ajax({
                type:"post",
                url:"http://yp.xcar.com.cn/wiki/index.php?xcar_category-Zan",
                data:"num="+Num+"&id="+did,
                dataType:"json",
                success:function(msg){
                    obj.after('<em class="zanTag">+1</em>');
                    $(".zanTag").css({'left':30+'px','top':-10+'px'});
                    obj.parent(".plus").children("em").fadeOut("slow");
                    obj.text('已赞('+msg.num+')');
                    $(".zan").text(msg.num);
                    $("#zan_cookie").val(1);
                }
            });
		});
	});	
</script>
<!--浮动导航条的点赞 end-->
<script type="text/javascript">
function startbox(div,box){
	var startPos;
	var topz = $(".top_intro_z");
	$(window).on('scroll',function(e){
		startPos=parseInt($(box).offset().top-70);
		var p = $(window).scrollTop();
		if (startPos < p)
		  {
			$(topz).addClass('sml_fixed')
            $(topz).show();
		  }
		else
		  {
            $(top).removeClass('sml_fixed')
            $(topz).hide();
		  }			
	});		
}

startbox('#smlTitle','#smlBox');

