<script language="javascript">
function epaper_process(myemode){
	if (document.all.E_email.value.length == 0) {
		alert("請輸入您的 E-mail 帳號");
		document.all.E_email.focus();
		return false;
		}

		if (document.all.E_email.value != "")
			if (!REP_Email.test(document.all.E_email.value)){
				alert ("您的電子信箱格式有誤，請重新輸入");
				return false;
				}
				
		myURL = "/epaper/epaper-order.asp?email=" + 	document.all.E_email.value + "&emode=" + myemode;	
		window.open(myURL, '_blank','width=300,height=100');
}

