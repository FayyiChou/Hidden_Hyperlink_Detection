<script language="JavaScript">
var mybannerpath = "/upload/hot/";
var mybanner = new Array('20160130115340-[banner]Threats controls.gif' , '20160201142447-[banner]YOUR CYBERSECURITY .gif' , '20150105134634-企業包班2.gif' , '20120112171211-2013-4C.swf');
var mybannerlink = new Array('https://cybersecurity.isaca.org./csx-threats-and-controls' , 'https://cybersecurity.isaca.org/csx-career-tool' , 'http://www.caa.org.tw/news-detail.asp?id=406' , 'http://www.caa.org.tw/cisa-license.asp');
var mybannercount = "4";
mybannertotal = Math.floor(Math.random() * mybanner.length)
//mybannertotal = 0;
function showbanner(){
	mybannertotal = mybannertotal + 1;
	if (mybannertotal >= mybannercount) mybannertotal = 0;
//	alert("cnt=" + mybannertotal + " array=" + mybanner[mybannertotal]);
	mydiv = "";
	if (mybanner[mybannertotal] .substring((mybanner[mybannertotal] .length - 4), mybanner[mybannertotal] .length) == ".swf"){
		mydiv = mydiv + "<object classid='clsid:D27CDB6E-AE6D-11cf-96B8-444553540000' codebase='http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=6,0,29,0' width=460 height=80>";
		mydiv = mydiv + "<param name='movie' value='" + mybannerpath + mybanner[mybannertotal] + "'>";
		mydiv = mydiv + "<param name='quality' value='high'>";
		mydiv = mydiv + "<embed src='" + mybannerpath + mybanner[mybannertotal] + "' quality='high' pluginspage='http://www.macromedia.com/go/getflashplayer' type='application/x-shockwave-flash' width=460 height=80></embed></object>";
		}
	else{
		if (mybannerlink[mybannertotal] == "")
			mydiv = mydiv + "<img src = '" + mybannerpath + mybanner[mybannertotal] + "' width=460 height=80  border='0' alt='?O'>";
		else{	
			mylink =  mybannerlink[mybannertotal];
			mydiv = mydiv + "<a title='熱門看板' href='" + mylink + "' target='_blank'><img src = '" + mybannerpath + mybanner[mybannertotal] + "' boder=0 width=460 height=80 border='0' alt='?O'></a>";
			}
		}	 
//alert("div=" + mydiv);	
	document.getElementById("banner").innerHTML = mydiv;
	if (mybannercount > 1) setTimeout("showbanner()",13000);  //原8 sec., 2013.04.19 修改為 13 sec.　配合 4C.swf
}

if (mybannercount > 0 ) showbanner();
else document.getElementById("banner").innerHTML = "<img src='" + mybannerpath + "banner_sample.gif' width='460' height='80' border='0' alt='熱門看板'>";
</script>
