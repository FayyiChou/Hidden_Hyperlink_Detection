<script type="text/javascript" language="javascript">
var _NewsID = 35411639;
var _ClassID = 2823;
var _EditID = 504;
var _BbsTid = 7730641
var imgWidth = 500;
var _CtypeID = 0;
var footerClose=!1;
var myScroll,isZoom=!1;
var document_width = $(window).width();
var document_height = $(window).height();
if(document_width > 640) document_width=640;
var height = document_width * 0.21;

function loaddata(){
  var pos = $("#main").attr("pos");if(pos != "foot"){ return false; }$("#main").attr("pos",'');var page=$("#main").attr("page");if(Number(page) > 3){ return true; } var url="http://cgi.voc.com.cn/app/wxhn/news.php?classid="+_ClassID+"&id="+_NewsID+"&page="+page+"&s="+Math.random();$.getJSON(url, function(data){ var string = "";if(data.statecode == 0) return;$.each(data.data, function(i,item){if(Number(item.tnum) > 0){string += '<div class="mod_pic content_more_list"><a href="'+item.Url+'"><h3>'+item.title+'</h3><div><ul>';imglen = 0;for (x in item.tuji) { if(imglen>=3){break;}string += '<li><img src="'+item.tuji[x]+'" border="0"></li>';imglen++;}string += '</ul></div></a></div>';}else{string += '<div class="content_more_list"><a href="'+item.Url+'"><dl><dt><img src="'+item.pic+'" border="0"></dt>';string += '<dd><p>'+item.title+'</p><span>'+item.ClassCn+'</span></dd></dl></a></div>';}});$("#content_more_info").append(string);$(".content_more_list dt").height(height);$(".mod_pic li").height(height);$(".content_more_list dd").height(height);page++;$("#main").attr("page",page).attr("pos",'foot');});
}
function appdownloads(){
  window.location.href = "http://a.app.qq.com/o/simple.jsp?pkgname=com.dingtai.wxhn.activity";
}
function initScroll(){
  myScroll = new IScroll("#wrapper",{zoom:!0,zoomMax:6,scrollX:!0,scrollY:!0,freeScroll:!0,mouseWheel:!0,wheelAction:"zoom",click:iScrollClick()});myScroll.on("zoomStart",function(){isZoom=!0});myScroll.on("zoomEnd",function(){var o=-(window.innerWidth*(this.scale-1)/2),t=-(window.innerHeight*(this.scale-1)/2);myScroll.x=o,myScroll.y=t,$("#scroller").css("transform","matrix("+myScroll.scale+", 0, 0, "+myScroll.scale+", "+o+", "+t+")"),setTimeout(function(){isZoom=!1},300);});
}
function iScrollClick(){
  if(/iPhone|iPad|iPod|Macintosh/i.test(navigator.userAgent))return!0;if(/Chrome/i.test(navigator.userAgent))return/Android/i.test(navigator.userAgent);if(/Silk/i.test(navigator.userAgent))return!1;if(/Android/i.test(navigator.userAgent)){var o=navigator.userAgent.substr(navigator.userAgent.indexOf("Android")+8,3);return!(parseFloat(o[0]+o[3])<44); }
}
