<div class="hq-img-num">
    <div class="hq-img-num-box"> 
        <div id='show_times' class="hq-times"></div>
        <span>张图片展示中……</span>
    </div>
</div>


<script>



$(document).ready(function() {
    
    $('#show_times').html(addCommas(66804538));
    $('#show_times').attr('data-id', 66804538);
    
    setInterval(function() {
        $.ajax({
            type :"post",
            url : '/front/get_show_time',
            success : function (data) {
                if (data > $('#show_times').attr('data-id')) {
                    $('#show_times').html(addCommas(data));
                    $('#show_times').attr('data-id', data);
                
                }
            },
            error : function() {
            }
        });
    }, 5000);
});


function addCommas(nStr)
{
    nStr += '';
    x = nStr.split('.');
    x1 = x[0];
    x2 = x.length > 1 ? '.' + x[1] : '';
    var rgx = /(\d+)(\d{3})/;
    while (rgx.test(x1)) {
        x1 = x1.replace(rgx, '$1' + ',' + '$2');
    }
    return x1 + x2;
}

</script>
