<script>

$(document).ready(function(){
    
    //  通过模块名,控制头部的导航栏的当前页面标示状态
    
    var menu_name = "";
    
    $("[id*='header_']").parent().removeAttr('class');

    if (menu_name != '') {
        if (menu_name == 'header_about') {
            $("#header_about").parent().attr('class', 'link-last active');
        } else {
            $("#header_" + menu_name).parent().attr('class', 'active');
            $("#header_about").parent().attr('class', 'link-last');
        }
    } else {
        $("#header_home").parent().attr('class', 'active');
        $("#header_about").parent().attr('class', 'link-last');
    
    }

});

</script>
