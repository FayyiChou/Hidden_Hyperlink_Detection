       var zan = true;
       function clickAjax(){
       	if(zan){
       		var dataBookId = $("#dataBookId").val();
   	    	$.post("book/clickAjax.htm", {bookid:dataBookId}, function(data) {
   	    		if(data == -1){
   	    			//window.location.href="login.htm?url=" + "chapter/15000091682127.htm"s; 
   	    			window.location.href='http://m.imengxiang.cn:80/login.htm';
   	    		} else {
   	    			zan = false;
   	    			var zn = parseInt($("#zanCount").html()) + parseInt(1);
   	    			$("#zanCount").html(zn);
   	    			$(".zan").addClass("zan-end");
   	    			var zndown = parseInt($("#zandown").html()) + parseInt(1);
   	    			$("#zandown").html(zndown);
   	    			$("#zandown").addClass("zan-end");
   	    		};
   	    	}, "text");
       	}else{
       		Success("您已经赞过了哦！");
       	}
       }    	
