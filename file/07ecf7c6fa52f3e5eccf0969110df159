						alert(data);
					}
				}, "text");
				Success("已加入书架");
			}else{
				$(this).attr("val", 0);
				$.post("delBR.htm", {bookId:bookId}, function(data){
					$("#addBookRack").attr("val", 1);
					if(data == 0) {
						//window.location.href="login.htm?url=" + "chapter/15000091682127.htm";
						window.location.href='http://m.imengxiang.cn:80/login.htm';
					} else if(data == 1){
						$("#addBookRack").attr("val", 0);
						$("#addBookRack").removeClass("on");
					} else {
						alert(data);
					}
				}, "text");
				Success("已移出书架");
			}
