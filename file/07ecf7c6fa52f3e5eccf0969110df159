					$("#addBookRack").attr("val", 0);
					if(data == 0) {
						//window.location.href="login.htm?url=" + "chapter/15000091682127.htm"; 
						window.location.href='http://m.imengxiang.cn:80/login.htm';
					} else if(data == 1){
						$("#addBookRack").attr("val", 1);
						$("#addBookRack").addClass("on");
