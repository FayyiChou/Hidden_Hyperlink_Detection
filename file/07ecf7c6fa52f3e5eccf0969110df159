   	var isVerifyConfig = false;//是否验证过微信分享配置
	function shareBook(type){
		if(!isVerifyConfig){
			$.ajax({
				url : "book/shareBook.htm",
				async : false, // 注意此处需要同步，
				type : "POST",
				dataType :  "json",
				success : function(data) {
					var result = configVerify(data);
					if(result!="config:ok"){
						alert("微信分享验证失败！");
                    	return;
					}
                },
                error:function(){
                	alert("服务器异常，请稍后重试！");
                	return;
                }
			});
		}
		if(type=="QQ"){
			shareQQ();
		}else if(type=="QZone"){
			shareQQ();
		}else if(type=="Timeline"){
			shareTimeline();
		}else if(type=="AppMessage"){
			shareAppMessage();
		}
	}
	//微信分享验证
	function configVerify(data){
		alert(JSON.stringify(data));
		wx.config({
		    debug: false, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
		    appId: data.appId, // 必填，公众号的唯一标识
		    timestamp: data.timestamp, // 必填，生成签名的时间戳
		    nonceStr: data.nonceStr, // 必填，生成签名的随机串
		    signature: data.signature,// 必填，签名，见附录1
		    jsApiList: ['onMenuShareTimeline','onMenuShareAppMessage','onMenuShareQQ','onMenuShareQZone'], // 必填，需要使用的JS接口列表，所有JS接口列表见附录2
		    success:function(result){
		    	return result.errMsg;
		    },
		    fail:function(result){
		    	return result.errMsg;
		    }
		});
	}
	//QQ好友分享
	function shareQQ(){
		wx.onMenuShareQQ({
		    title: '我在看《透视眼》推荐给你看', // 分享标题
		    desc: '梦想书城，海量精品好书与你共享阅读之乐！', // 分享描述
		    link: 'http://m.imengxiang.cn:80/book/15000091678777.htm', // 分享链接
		    imgUrl: '/download/upload/book/15000091678777/20161010101326', // 分享图标
		    success: function () { 
		       // 用户确认分享后执行的回调函数
		    },
		    cancel: function () { 
		       // 用户取消分享后执行的回调函数
		    }
		});
	}
