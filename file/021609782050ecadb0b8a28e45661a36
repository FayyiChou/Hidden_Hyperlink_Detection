                        function tabClick(){

                                if($(this).hasClass('activeTab')) 

                                        return;

                                $('.hd ul li').removeClass('activeTab');

                                $(this).addClass('activeTab');

                                var tabId = $(this).attr('tabId');

                                $('#content > div').hide();

                                $('#' + tabId).show();

                        }

