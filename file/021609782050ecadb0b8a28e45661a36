  <script>
$(function(){
	$(window).scroll(function(){
		if($(document).scrollTop()>130){
			$('#left-detail').css('top','0px');
		} else {
			$("#left-detail").css("top","");
		}
	
	})
	$(".titbox").mouseover(function(){
		$(".left_cont").addClass("detail_left");
		$(this).next("div").removeClass("detail_left");
	})
	$(".votebut").click(function(){
		$.post("/article/votepost",$("#votepost").serialize(),function(data){
			alert(data.result);
			if(data.status!='false'){
			var time=new Date();
			$("#votepost").load("/article/voteview/19066/2?t="+time.getTime());
			}
		},"json");
	})
	$(".commontmore").click(function(){
		var thpage=Number($(this).attr('rel'));
		var newpage=thpage+10;
		var allnum=0;
		$(this).attr('rel',newpage);
		$(this).html("加载中,请稍后");
		$.get("/article/commontshow/19066/"+thpage,function(data){
			$(".commontmore").before(data);
			$(".commontmore").html("查看下10条");
			if(thpage/10>=allnum){
				$(".commontmore").remove();
			}
		})
	})
	$("#commontpost").submit(function(){
			if($("#articleCommont").val()==''){
				alert("评论内容不能为空！");
				return false;
			}
			
		})
	$("#article_content img").toggle(function(){
			if($(this).hasClass("faceimg")){
				return false;
			}else{
				$(this).css('max-height','10000px');
			}
		},function(){
			if($(this).hasClass("faceimg")){
				return false;
			}else{
				$(this).css('max-height','200px');
			}
		})
	
	$('.weiborepost').toggle(function(){
			var thwbid=$(this).attr("rel");
			var reposthtml='<div class="repostbox"><textarea name="" rows="" cols=""></textarea><br/><input class="postbut" type="button" value="转发微博" onclick=""></div>';
			$(this).parents("dl").append(reposthtml);
		},function(){
			$(".repostbox").remove();
		})
})
</script> 
