function vote(vote_id) {
	if ( ( new Date().getTime() - $.cookie('mood_time'+contentid) ) > 1000*30 ) {
		$.getJSON(APP_URL+"?app=mood&controller=index&action=vote&contentid="+contentid+"&voteid="+vote_id+"&jsoncallback=?", function(json){
