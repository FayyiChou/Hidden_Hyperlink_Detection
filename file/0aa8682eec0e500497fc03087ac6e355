            e.preventDefault();
            hideLayer();
            var oParent = $(this).parent();
            $('.more_list',oParent).fadeIn();
            e.stopPropagation();
        });

        $('.btn_share').bind('click',function(e){
            e.preventDefault();
            hideLayer();
            $('#J_share_widget').addClass('show');
            e.stopPropagation();
        })

        $('body').on('click',function(){
            hideLayer();
        });

        $('#J_share_widget .btn_cancel_share').on('click',function(){
            $('#J_share_widget').removeClass('show');
        });

        $(window).on('scroll',function(){
            var scrollTop = document.documentElement.scrollTop || document.body.scrollTop;
            if(parseInt(scrollTop) > 0){

                if($('#J_down_app')[0]){
                    $('#J_down_app .btn_close').click();
                }
                if($('#J_down_guide')[0]){
                    $('#J_down_guide .btn_close').click();
                }
                $('.sub_header').addClass('posi_fixed');
            }else{
                $('.sub_header').removeClass('posi_fixed');
            }
        });

        function hideLayer(){
            $('.more_list, .manage_more').hide();
            $('#J_share_widget').removeClass('show');
        }

    })

