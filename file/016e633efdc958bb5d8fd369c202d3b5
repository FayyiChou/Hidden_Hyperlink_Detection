		<script type="text/javascript">
$(document).ready(function (){
	$("#loginname").focus();
	if (!$.support.leadingWhitespace) {
		$(".inputbox").each(function(){
		 var thisVal=$(this).val();
		 //判断文本框的值是否为空，有值的情况就隐藏提示语，没有值就显示
		 if(thisVal != ""){
		   $(this).siblings(".input_text").hide();
		  }else{
		   $(this).siblings(".input_text").show();
		  }
		  $(this).keyup(function(){
		   var val=$(this).val();
			if(val ==""){
			 $(this).siblings(".input_text").show();
			}else{
			 $(this).siblings(".input_text").hide();
			}
		  }).blur(function(){
			var val=$(this).val();
			if(val ==""){
			 $(this).siblings(".input_text").show();
			}else{
			 $(this).siblings(".input_text").hide();
			}
		   })
		 });
		$(".login_input").hover(function(){
			$(this).addClass("login_input_focus")
		},function(){
			$(this).removeClass("login_input_focus")
		})
	}else{
		$(".input_text").hide();
	}
});

	this.clearText=function(){
		$("#loginname").val("");
		$("#password").val("");	
		$("#verifcode").val("");
	}
	this.tochange=function()
	{
	    $("#validataimg").attr("src","/codeimg?rnd=" + new Date().getTime());
	} 


this.CheckUserName=function()
{	 
    if ($('#loginname').val() != "") {
        if ($('#password').val() != "") { 
            if ($('#verifcode').val().length==4) {
            	jQuery.ajax({
        			url : "/private/doLogin",
        			data : jQuery("#form1").serialize(),
					type:"POST",
        			success : function (res) {
        				if (res == "true") {
        					window.location.href="/private/index";
        				} else {
        					Dialog.alert(res);
        					//$('#verifcode').val("");
        					tochange();
        				}
        				return false;
        			},
        			fail : function(res) {
        				Dialog.alert("系统错误?!");
        			}
        		});
            } else {
                Dialog.alert("请输入四位验证码！");
                
                //$('#verifcode').focus();
                return false;
            }
        } else {
            Dialog.alert("密码不能为空！");
            //$('#password').focus();
            return false;
        }

    } else {
        Dialog.alert("用户名不能为空！");
        //$('#loginname').focus();
        return false;
    }
}


$(document).ready(function(){
	$(document).bind("keypress", "return", function (ev) { 
		  CheckUserName(); 		
		});
});
</script>
