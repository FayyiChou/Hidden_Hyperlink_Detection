<input type="hidden" value="/jzShow/gacs/getList" name="getListUrl" id="getListUrl"><input type="hidden" value="1" name="type" id="type"><input type="hidden" value="http://guangai.dayoo.com/" name="baseUrl" id="baseUrl"><script type="text/javascript">
	getItemList(1);
	var params='';
	var objParams = {};
	var re = new RegExp("[0-9\-]+","g");

	function getItemList(pageGo)
	{
		
		//获取表单
		var objForm = $('form')[0];
		
		var requestUrl = $("#getListUrl").val();
		//设置分页地址
		var max = $("#maxPage").html() == null || isNaN($("#maxPage").html()) ||  parseInt($("#maxPage").html()) == 0 ? pageGo : parseInt($("#maxPage").html());
		if (pageGo > 0 && pageGo <= max){
			var requestUrl = requestUrl.indexOf('?') == -1 ? requestUrl+'?page='+pageGo : requestUrl+'&page='+pageGo;
			
		}else{
			 $("#pageGo").val(1);
			
			return false;
		}
		var requestUrl = requestUrl.indexOf('?') == -1 ? requestUrl+'?type='+$("#type").val() : requestUrl+'&type='+$("#type").val();
		//异步请求数据
		getRequestData(requestUrl, objParams, 'get', dataToHtml);
	}

	//异步请求数据
	function getRequestData(url, params, method, handle)
	{
		
		$.ajax({
			type : method,
			url : url,
			data : params,
			dataType : 'json',
			success : function(data) {
				handle(data)
			}
		});
	}

//格式化分页信息
	function pageToHtml(page)
	{
		if( page.count <=1){
			return;
		}
		pageContent = '';

		
		if (page.current > 1){
			pageContent += '<a class="page-prev" onclick="getItemList('+(page.current-1)+')">上一页</a>';
		} 
		var pageLength = 5;
		for(var i=1; i<=page.count; i++) {
			if (page.current>Math.floor(pageLength/2) && page.current<page.count-Math.floor(pageLength/2) && (i<page.current-Math.floor(pageLength/2) || i>page.current+Math.floor(pageLength/2))){
				continue;
			} 
			if (page.current<Math.ceil(pageLength/2) && i>pageLength){
				continue;
			}
			if (page.current>page.count-Math.ceil(pageLength/2) && i<=page.count-pageLength){
				continue;
			}
			if (page.current == i ){
				pageContent += '<span class="active">'+i+'</span>';
			} else {
				pageContent += '<a  onclick="getItemList('+i+')" >'+i+'</a>';
			}
		}		
		if(page.count!=page.current){
			pageContent += '<a class="page-next" onclick="getItemList('+(page.current+1)+')" >下一页</a>	';	
		}

		
		
		$('.pages-bar').html(pageContent);
	}
	//格式化搜索列表
	function dataToHtml(response)
	{

		var tableContent = '';

		if (response.data && response.data.length > 0){
			for(var i=0; i<response.data.length; i++) {
				tableContent += '<li>';
				if(response.data[i].img){
					tableContent += '<div class="img-area">';
					tableContent += '<a href="'+response.data[i].viewUrl+'" target="_blank" class="img"><img src="'+$("#baseUrl").val()+response.data[i].img+'" alt="" /></a>';
					tableContent += '	<div class="txt">';
					tableContent += '	<strong><a href="'+response.data[i].viewUrl+'" target="_blank">'+response.data[i].name+'</a></strong>';
					tableContent += '<div class="doc">'+response.data[i].title+'</div>';
					tableContent += '</div>';
					tableContent += '	</div>';
					tableContent += '<div class="btn-area">';
					tableContent += '<a href="'+response.data[i].viewUrl+'" target="_blank" class="btn btn-g">我要捐款</a>';
					tableContent += '</div>';						
				}else{
					tableContent += '<div class="txt-area">';
					tableContent += '	<strong><a href="'+response.data[i].viewUrl+'" target="_blank">'+response.data[i].name+'</a></strong>';
					tableContent += '	<div class="doc">'+response.data[i].title+'</div>';
					tableContent += '</div>';
					tableContent += '<div class="btn-area">';
					tableContent += '<a href="'+response.data[i].viewUrl+'" target="_blank" class="btn btn-g"    >我要捐款</a>';
					tableContent += '</div>';	
				
				}
				tableContent += '</li>';
			}
		}
		
		pageToHtml(response.page);
		// alert(tableContent);
		$('#Listcontent').html(tableContent);
	}
