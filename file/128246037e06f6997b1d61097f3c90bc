function cover(h){
	$("#pop-up-hd").html(h[0]);
	$("#pop-up-bd").html(h[1]);
	$("#pop-up-cover").removeClass("hidden");
	$("#pop-up-box").removeClass("hidden");
	var top1 = $(window).height();
	var top2 = $("#pop-up-box").height();
	var top = top1<top2?40:top1-top2;
	$("#pop-up-box").css({left:($(window).width()-$("#pop-up-box").width())/2+'px',top:(top)/2+'px'})
}
$(function(){
	$("#close-btn").bind('click',function(){
		$("#pop-up-cover").addClass("hidden");$("#pop-up-box").addClass("hidden");
	})
})

