<script>
    $(window).resize(function () {
        var winH = $(window).width();
        var heig = $("#imgheight").height();
        //alert(winH)
        if (winH >= 926) {
            $(".main_image span").each(function () {
                $(this).find("img").hide();
                $(".slidesjs-container,.slidesjs-control,#slides").height(427);
                var url = $(this).attr("data-big-img");
                $(this).css("background-image", "url(" + url + ")");
            })
            $("#slides").slidesjs({ width: '100%', height: '427', start: 1, navigation: { active: false, effect: "fade" }, play: { active: false, effect: "fade"} });
        }
        //
        if (winH < 925) {
            $(".main_image span").find("img").show();
            $(".slidesjs-container,.slidesjs-control,#slides").height(heig);
            $("#slides").slidesjs({
                width: '100%',
                height: heig,
                start: 1,
                navigation: { active: false, effect: "fade" },
                play: { active: false, effect: "fade" }
            });
        }
    })

</script>
