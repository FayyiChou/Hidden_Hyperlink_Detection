  <script type="text/javascript">
//返回顶部
function scrollTop(){
    var scrollTop=0;
    var bodytop=$("#top").offset().top;
    var sidew = $(".in-side").width();
    var sideh = $(".in-side").height();
    var texth = $(".text").height();
    var bodybottom=$(document).height()-$(window).height();
    $("#scrollTop").bind("click",function(){window.scrollTo(0,0);});
    window.onscroll=function(){
    scrollTop=document.documentElement.scrollTop||document.body.scrollTop;
    if((sideh-texth)<=0){
    	 if((bodytop-scrollTop)<=0){
    			 $("#top").attr("style","position:fixed;top:0;margin-top:0;width:"+sidew+"px");
    		}else{
    			 $("#top").attr("style","");
    		} 
    	 if ($(document).scrollTop() >= ($(document).height() - $(window).height()-30)) {
            $("#top").css({"position":"absolute","top":"auto","bottom":"0"});
        }	
    }else{
    	
    }
    if(scrollTop<500){
   		 $("#scrollTop").css({display:"none"});
  	}else{
   		 $("#scrollTop").css({display:"block"});
   	}

    };
    if($.browser.msie&&($.browser.version == "6.0")&&!$.support.style){
    $("#scrollTop").css("position:absolute;");
        window.onscroll = function (){      
      scrollTop=document.documentElement.scrollTop||document.body.scrollTop;
      if(scrollTop<500){
        $("#scrollTop").css({display:"none"});
      }else{
        $("#scrollTop").css({display:"block"});
      }
        }
    }
};
//返回顶部
scrollTop();
</script> 
