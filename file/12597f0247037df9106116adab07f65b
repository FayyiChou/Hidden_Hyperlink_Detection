     <hgroup> 
      <h1>\&quot;互联网+\&quot;时代 网络安全需求催生千亿市场</h1> 
     </hgroup> 
     <script>
			    var str="\&quot;互联网+\&quot;时代 网络安全需求催生千亿市场";
			    var num=str.length;
			    if(num<=19)
			       {$("h1").attr("class","f_size1");}
			    else if(num<=23 && num>19)
			     {$("h1").attr("class","f_size2");}
			    else if(num<=27 && num >23){$("h1").attr("class","f_size3");}
