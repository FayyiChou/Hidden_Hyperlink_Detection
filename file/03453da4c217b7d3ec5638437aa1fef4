    <script type="text/javascript">
   function tab(id_num,num){
 for(var i = 0;i <= 9;i++){
  if(GetObj("tab_Menu_" + id_num + i)){GetObj("tab_Menu_" + id_num + i).className = '';}
  if(GetObj("tab_box_" + id_num + i)){GetObj("tab_box_" + id_num + i).style.display = 'none';}
 }
 if(GetObj("tab_Menu_" + id_num + num)){GetObj("tab_Menu_" + id_num + num).className = 'hover';}
 if(GetObj("tab_box_" + id_num + num)){GetObj("tab_box_" + id_num + num).style.display = 'block';}
}
function GetObj(objName){
 if(document.getElementById){
  return eval('document.getElementById("' + objName + '")');
 }else{
  return eval('document.all.' + objName);
 }
}
 function tab1(id_num,num){
 for(var i = 0;i <= 9;i++){
  if(GetObj("tab1_Menu_" + id_num + i)){GetObj("tab1_Menu_" + id_num + i).className = '';}
  if(GetObj("tab1_box_" + id_num + i)){GetObj("tab1_box_" + id_num + i).style.display = 'none';}
 }
 if(GetObj("tab1_Menu_" + id_num + num)){GetObj("tab1_Menu_" + id_num + num).className = 'hover';}
 if(GetObj("tab1_box_" + id_num + num)){GetObj("tab1_box_" + id_num + num).style.display = 'block';}
}
function GetObj(objName){
 if(document.getElementById){
  return eval('document.getElementById("' + objName + '")');
 }else{
  return eval('document.all.' + objName);
 }
}
    </script>
    <script type="text/javascript">
  var Marquee = function(id){
    try{document.execCommand("BackgroundImageCache", false, true);}catch(e){};
    var container = document.getElementById(id),
    slide = document.getElementById("link_content"),
    speed = arguments[1] || 30;
    slide.innerHTML += slide.innerHTML;
    var item = slide.getElementsByTagName("li"),
    critical = item[item.length/2].offsetLeft,//临界值
    delta = 0;
    var rolling = function(){
      delta == -critical ? delta = 0 : delta--;
      slide.style.left = delta + "px";
    }
    var timer = setInterval(rolling,speed)//设置定时器
    container.onmouseover=function() {clearInterval(timer)}//鼠标移到marquee上时，清除定时器，停止滚动
    container.onmouseout=function() {timer=setInterval(rolling,speed)}//鼠标移开时重设定时器
  }
  window.onload = function(){
    Marquee("link_marquee");
  }
    </script>
<!--end component HTML组件(主页脚本)-->

