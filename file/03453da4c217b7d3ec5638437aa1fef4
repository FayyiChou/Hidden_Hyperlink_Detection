<script>
function CurentTime(){ 
var now = new Date();
var year = now.getFullYear(); //年
var month = now.getMonth() + 1; //月
var day = now.getDate(); //日
var hh = now.getHours(); //时
var mm = now.getMinutes(); //分
var clock = year + "年";
if(month < 10) clock += "0";
clock += month + "月";
if(day < 10) clock += "0";
clock += day + "日";
return(clock); 
} 
</script>
