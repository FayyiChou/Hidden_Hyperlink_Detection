        $(function () {
            $(document).on('scroll', function () {
                var _top = $(document).scrollTop();
                if (_top > 0) {
                    $('#movetop').show();
                } else {
                    $('#movetop').hide();
                }
            });
            $('#movetop').off('click').on('click', function () {
                $('body').animate({ 'scrollTop': '0px' }, 400);
            });
