<!-- Placed at the end of the document so the pages load faster -->
<script src="js/jquery-2.1.1.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/jquery.mousewheel.min.js"></script>
<!-- <script src="js/smoothbox.js"></script> -->
<script src="js/imagebox.js"></script>
<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
<script src="js/ie10-viewport-bug-workaround.js"></script>
<script type="text/javascript">
	var address=window.location.href;
    var titleAndpos=[];
    $(document).ready(function(){
        var nextBtn = $('#page_next').find('a');
        var preBtn = $('#page_pre').find('a');
        //获取各页的页头所在位置
        function getPos(){
            $("section").each(function(i){
                var $el = $(this);
                var id = $el.attr("id");
                var top = $el.offset().top;
                titleAndpos[i] = {name: id, pos: top };
            });
        }


        $(document).mousewheel(function(event, delta) {
            getPos();
            var pageY = $(document).scrollTop()+$(window).height();//页面底端Y坐标
            if(delta < 0) {//向下滚动
                for(var i = 0; i < titleAndpos.length; i ++){
                    if((pageY > titleAndpos[i].pos + 120) && (pageY < titleAndpos[i].pos + $(window).height()/2)){
                        event.preventDefault();
                        $("html,body").stop(true);
                        var section = $("#"+titleAndpos[i].name);
                        var header = section.find(".page-header");
                        //标题先设为不可见，等滚动到目标位置再可见，并加动画效果
                        header.css({"visibility":"hidden"});
                        //内容部分渐现效果
                        section.addClass("animated fadeInUp");

                        header.css({"visibility":"visible"});
                        //header.addClass("animated bounceInDown");
                        //2s后去掉效果class,方便再次效果
                        setTimeout(function(){
                           // header.removeClass("bounceInDown");
                            section.removeClass("fadeInUp");
                        }, 2000);
                        
                        $("html,body").animate({scrollTop: titleAndpos[i].pos}, 500, function(){
                        });
                    }
                }

            }
        });

        $(window).scroll( function() {
            if($(document).scrollTop() > $(window).height()-100){
                $(".navbar").css({'-webkit-transform':'translateY(0px)', '-moz-transform':'translateY(0px)', '-ms-transform':'translateY(0px)' , '-o-transform':'translateY(0px)' ,'transform':'translateY(0px)'});
                $(".totop").show();
            }
            else {
                $(".totop").hide();
                $(".navbar").css({'-webkit-transform':'translateY(-50px)', '-moz-transform':'translateY(-50px)', '-mos-transform':'translateY(-50px)' , '-o-transform':'translateY(-50px)' ,'transform':'translateY(-50px)'});
            }
        });

        // 点击 next、pre 按钮获取相应文章列表
        nextBtn.on('click', function(){
             getNews(1);
        });

        preBtn.on('click', function(){
             getNews(0);
        });

        $('section').on('touchstart', function(){
            var button = $('.navbar-toggle');
            if (button.css('display') == 'none') {
                return false;
            }

            if (button.attr('aria-expanded') == 'true') {
                button.click();
            }
        });

        checkAddress();
        getPhoto();
        getNews();
        getJoin();
    });
    
    //检查address变量，如果含有"#"字符，则将将#后的字符串去掉
	function checkAddress(){
		if(address.indexOf("#")>0){//点击过头部标题中的aboutus、news等，再刷新页面时，url会存在相应的锚点的字符串，要去掉
			var newurl=address.split('#');
			//alert(newurl[0]);
			address=newurl[0];
		}
	}
  	//首页读取相册
	function getPhoto(){ 
		$.ajax({				
			   type:"Get",
               // url: address + "/photo"
			   url: "photo",
		
			   contentType:"application/json;charset=utf-8",
			   success: function(json){
				   //alert(json);
				   /* alert(JSON.stringify(json));  */
				   //$("#photojson").val(JSON.stringify(json));
				   if(!typeof(json.errmsg)==='undefined'){
					   $("#titleR").html(json.errmsg);
				   } else {
					   
					   for(var i=0;i<json.length;i++){
						  /*一个json对象的格式
						   {
						        "day": "22",
						        "groupId": 3,
						        "groupName": "相册4",
						        "month": "05",
						        "photoPath": "dataimages/1432266676319.jpg",
						        "photoUrl": "http://localhost:8080/Lunjar/dataimages/1432266676319.jpg",
						        "photos": [ //photos里面可以有多个对象。
						            {
						                "groupId": 3,
						                "id": 28,
						                "photoNote": "第一滩",
						                "photoUrl": "http://localhost:8080/Lunjar/dataimages/1432266676319.jpg"
						            }
						        ]
						    }*/
						    /* <div class="col-sm-6 col-md-3 col-lg-4">
			                <a href="images/123.jpg" class="thumbnail imagebox" data-urls="images/code.png, images/aboutus-title.png" data-titles="标题1标题1标题1, 标题2"  title="泰国溜达">
			                    <img src="images/123.jpg" alt="泰国溜达~">
			                    <span>泰国溜达~</span>
			                    <div class="date-view">
			                        <div class="date-view-day">15</div>
			                        <div class="date-view-month">5月</div>
			                    </div>
			                </a>
			            	</div> */
							//var photoUrl=json[i].photoUrl;
			            	//var groupId=json[i].groupId;
			            	var groupName=json[i].groupName;
			            	var month=json[i].month;
			            	var day=json[i].day;
			            	var photoPath=json[i].photoPath;
			            	var photos=json[i].photos;
							var photoUrlList="";//用于保存data-urls的值
							var photoTitleList="";//用于保存data-titles的值
			            	for(var j=0;j<photos.length;j++){
								 photoUrlList+=photos[j].photoPath;
								 photoTitleList+=photos[j].photoNote;
								 if(j<photos.length-1){
									 photoUrlList+=",";
									 photoTitleList+=",";
								 }
							}
			            	/* var  htmlList = '<div class="col-sm-6 col-md-3 col-lg-4">';
			            	htmlList=htmlList+'<a href="'+photoUrl+'"  class="thumbnail imagebox" data-urls="'+photoUrlList+'" data-titles="'+photoTitleList+'"  title="'+groupName+'">';
			            	htmlList=htmlList+'<img src="'+photoUrl+'" alt="'+groupName+'"><span>'+groupName+'</span>';
						   htmlList=htmlList+'<div class="date-view">';
						   htmlList=htmlList+'<div class="date-view-day">'+day+'</div>';
						   htmlList=htmlList+'<div class="date-view-month">'+month+'月</div>';
						   htmlList=htmlList+'</div></a>';
						   htmlList=htmlList+'</div>';
						   $("#albums").append(htmlList); */
			            	var albumsTempDiv=$("#albums_templete");
							var newDiv = albumsTempDiv.clone(true);
							newDiv.removeAttr("id");
							newDiv.find(".imagebox").attr("href",photoPath);
							newDiv.find(".imagebox").attr("data-urls",photoUrlList);
							newDiv.find(".imagebox").attr("data-titles",photoTitleList);
							newDiv.find(".imagebox").attr("title",groupName);
							newDiv.find(".thumd_img").attr("src",photoPath);
							newDiv.find(".thumd_img").attr("alt",groupName);
							newDiv.find("span").html(groupName);
							newDiv.find(".date-view-day").html(day);
							newDiv.find(".date-view-month").html(month+"月");
							newDiv.show();//取消从模板中带过来的“隐藏”设置
							$("#albums").append(newDiv);
						   
					   }
					   //$("#albums").append('<script src="js/zoom.min.js"><\/script>')
				   }
			   },error: function(XMLHttpRequest, textStatus, errorThrown) {
                   alert("fail-->status:"+XMLHttpRequest.status+",\nreadyState:"+XMLHttpRequest.readyState+",\ntextStatus:"+textStatus);
               }
		});
		return false;
	}
  	
  	//首页获取动态新闻列表
  	var newsListContent = [];
  	function getNews(act){
  		
//   		alert($("#news_templete").find("#news_title_link").attr("href"));
//   		$("#news_templete").find("#news_title_link").attr("onclick","javascript:showNewsDetail(1);");

  		//var reqUrl=address+"/readnew?1=1&act=list&pageSize=5";
  		var reqUrl= "readnew?1=1&act=list&pageSize=5";
  		if(0==act){//点击上一页
  			nextNum=parseInt($("#currentPage").val())-1;
  			reqUrl=reqUrl+"&currentPage="+nextNum;
  		}else if(1==act){ //点击下一页
  			nextNum=parseInt($("#currentPage").val())+1;
  			reqUrl=reqUrl+"&currentPage="+nextNum;
  		}
  		$.ajax({				
			   type:"Get",
			   url:reqUrl,
		
			   contentType:"application/json;charset=utf-8",
			   success: function(json){
				   //alert(JSON.stringify(json));
				   /* <div class="divider"></div>
			        <div class="media">
			            边框效果
			            <div class="blink-dot-top"></div>
			            <div class="blink-dot-bottom"></div>
			            <div class="blink-dot-right"></div>
			            <div class="blink-dot-left"></div>
			            <div class="media-left">
			                <a href="#">
			                    <img class="media-object" src="images/123.JPG" alt="...">
			                </a>
			            </div>
			            <div class="media-body">
			                <h4 class="media-heading"><a href="#" data-toggle="modal" data-target=".bs-example-modal-lg">
			                    三大运营商困局：前有微信堵截 后有苹果追击</a></h4>
			                <h4 class="media-heading">
			                    <small>2015/05/15</small>
			                </h4>
			                Cras sit amet nibh libero, in gravida nulla. Nulla vel metus scelerisque ante sollicitudin commodo. Cras
			                purus odio, vestibulum in vulputate at, tempus viverra turpis. Fusce condimentum nunc ac nisi vulputate
			                fringilla. Donec lacinia congue felis in faucibus.

			            </div>
			        </div> */
			     //加载数据前，清空原有数据
			     $("#news_list").empty();
			     newsListContent=[];
			   	 var newsJson=json.newsList;
				 for(var i = 0 ; i < newsJson.length; i++){ 					

					   var newTitle = newsJson[i].title;
					   var newContent = newsJson[i].content; 
					   var newPicUrl=newsJson[i].picUrl;
					   if(null==newPicUrl||""==newPicUrl){
						   newPicUrl="images/123.JPG";
					   }
					   newsListContent.push(newContent);//储存起来，点展开时显示内容
					   var newContentFormatted = formatContent(newContent);
					   if(newContent.length>150){
						   newContentFormatted+='...';
					   }
					   var newTime="";
					   if(newsJson[i].time != null){
						   newTime = dateTotime(newsJson[i].time);
					   }else{
						   newTime = "";
					   }
					   //var newSource = newsJson[i].source;
					   //console.log(json[i].title);
// 					   var  htmlList = '<div class="divider"></div><div class="media"><div class="blink-dot-top"></div><div class="blink-dot-bottom"></div><div class="blink-dot-right"></div><div class="blink-dot-left"></div>';
// 				       htmlList=htmlList+'<div class="media-left"><a href="#"><img class="media-object" src="'+newPicUrl+'" alt="..."></a></div>';
// 				       htmlList=htmlList+'<div class="media-body"><h4 class="media-heading">';
// 				       htmlList=htmlList+'<a href="#" onclick="javascript:showNewsDetail('+i+');" data-toggle="modal" data-target=".bs-example-modal-lg">'+newTitle+'</a></h4>';
// 				       htmlList=htmlList+'<h4 class="media-heading"><small>'+newTime+'</small></h4>';
// 				       htmlList=htmlList+newContentFormatted+'</div></div>';
// 				       $("#news_list").append(htmlList);
					   var new_temp_div=$("#news_templete");
					   var newDiv = new_temp_div.clone(true);
					   newDiv.removeAttr("id");
					   newDiv.find(".news_thumd_img").attr({
                           "src":newPicUrl,
                           "data-index": i
                       }).on("click", function(){
                            showNewsDetail($(this).attr("data-index"));
                       });
					   newDiv.find(".news_title_link").attr("onclick","javascript:showNewsDetail("+i+");");
					   newDiv.find(".news_title_link").html(newTitle);
					   newDiv.find(".news_time").html("<small>"+newTime+"<small>");
					   newDiv.find(".news_body")
                           .html(newContentFormatted)
                           .attr("data-index", i)
                           .on("click", function(){
                               showNewsDetail($(this).attr("data-index"));
                           });;
					   newDiv.show();//取消从模板中带过来的“隐藏”设置
					   $("#news_list").append(newDiv);
				   }
				   //alert(htmlList);
				   if(json.isHasPre==true){
					   $("#page_pre").show();
				   }else{
					   $("#page_pre").hide();
				   }
				   
				   if(json.isHasNext==true){
					   $("#page_next").show();
				   }else{
					   $("#page_next").hide();
				   }
				   
				   $("#currentPage").val(JSON.stringify(json.currentPage));
				   					
			   },error: function(XMLHttpRequest, textStatus, errorThrown) {
                alert("fail-->status:"+XMLHttpRequest.status+",\nreadyState:"+XMLHttpRequest.readyState+",\ntextStatus:"+textStatus);
            }
		});
		
		return false;
  	}
  	
  	
  //抽取部分内容作为摘要显示，去掉html标签
	function formatContent(content){
		var str = content.replace(/<[^>]+>/g,"");//去掉所有的html标记
		 if(str.length > 150) {
			 str = str.substring(0, 150);
		 }
		return str;
	}
	//将时间戳转换为字符串
	function dateTotime(date_time){
			 var timestr = new Date(parseInt(date_time) * 1000);
		 var datetime = timestr.toLocaleString().replace(/年|月/g, "-").replace(/日/g, " ");
		 return datetime;
	}
	
	//展示动态新闻详情
	function showNewsDetail(idx){
		var content=newsListContent[idx];
		 $("#newsDetail").empty();  
		 $("#newsDetail").append(content);
		 //alert($("#newsDetail"));
	}

    // 模态窗口出现时禁止页面滚动
    $('#newsModal').on('show.bs.modal', function() {
        $('body').css('overflow', 'hidden');
    });
    // 模态窗口关闭时允许页面滚动
    $('#newsModal').on('hide.bs.modal', function() {
        $('body').css('overflow', 'auto');
    });
	
