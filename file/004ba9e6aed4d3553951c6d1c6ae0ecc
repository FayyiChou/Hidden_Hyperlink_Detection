<script>
var topicSlider = new Swipe(document.getElementById('slider'), {auto:0, callback:sliderSwipe});

function sliderSwipe()
{
	var es = document.getElementById('imgs_ind').childNodes;
	for(var i = 0; i < es.length; i++)
	{
		es.item(i).style.backgroundColor = "#99CCCC";
	}
	es.item(topicSlider.getPos()).style.backgroundColor = "#CC0000";
	
	if(topicSlider.getPos() == 0)
	{
		document.getElementById('arrow_left').style.display = "none";
	}
	else
	{
		document.getElementById('arrow_left').style.display = "block";
	}
	if(topicSlider.getPos() == es.length - 1)
	{
		document.getElementById('arrow_right').style.display = "none";
	}
	else
	{
		document.getElementById('arrow_right').style.display = "block";
	}
}

sliderSwipe();
</script>



