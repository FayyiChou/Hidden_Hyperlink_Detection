<script src="http://static.sdg-china.com/mir2/js/jquery-1.7.2.min.js" type="text/javascript"></script>
<script type="text/javascript">
$(function(){
	//存储坐标
	var cor = [];
	$(".nav dd").each(function(){
		cor.push({top:$(this).css("top"),left:$(this).css("left")})							
	});
		   
	//页面页签
	$(".nav dd a").click(function(){				  
		var _this = $(this);
		var hrefShow = _this.attr("href");
		$(".nav dd").each(function(){
			$(this).animate({top:"50px",left:"404px"},300,function(){
   				$(".nav").hide();
				$(".content").fadeIn();
				
				var href= _this.attr('href');
				$(".conBase").hide();
				$(".subNav dd a").find("em").css({width:0});
				$(".subNav dd a").removeClass("current");
				$(".subNav dd a[href="+href+"]").addClass("current");
				$(".subNav dd a[href="+href+"]").find("em").css({width:"196px"});
				$(href).show();
				
			}
			)						  
		})
		return false;
	});
	
	//弹层页签
	$(".subNav dd a:lt(7)").click(function(){
		if(!$(this).hasClass("current")){
			$(".subNav dd a").removeClass("current");
			$(this).addClass("current");
			$(".subNav dd a").find("em").animate({width:0},200);
			
			$(this).find("em").animate({width:"196px"},200);
			
			$(".conBase").hide();
			$($(this).attr("href")).show();
		}
		
		return false;
	});
	$(".subNav dd a:eq(7)").click(function(){
		$(".content").fadeOut();
		$(".nav").show();
		$(".nav dd").show().each(function(i){
			$(this).animate({top:cor[i].top,left:cor[i].left},600)						  
		})
		return false;					   
	});
	
	
		   
})
</script>

