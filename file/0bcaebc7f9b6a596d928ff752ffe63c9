		}
	}
	if (navigator.userAgent.toLocaleLowerCase().indexOf("iphone") >= 0) {
		$(".app-download").attr("href", "https://at.umeng.com/S5r4ry");
        $("#detail_download_bottom").attr("href", "https://at.umeng.com/y89Dye");
	}
	var back_index = location.search;
	back_index = back_index.replace('?', '');
	if($("#go-back-button").length>0&&back_index=='backIndex') {
		$("#go-back-button").attr("data-url", "/");
	}
    function showDetailPop(){
        if($.cookie("mbook_detail_pop") == null){
            $.cookie("mbook_detail_pop", "1", {expires:30});
            setTimeout("$('#downloading_pop').bookPopup('show');", 2000);
            cc('ck_m_download_app');
        }

    }
