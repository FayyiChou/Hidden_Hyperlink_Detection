<script type="text/javascript">
//99click会员跟踪ID参数
var  _ozuid ='';
$(function() {
	getCustIdByAjax();
});
/**
为99click获取会员ID参数
**/
function getCustIdByAjax(){
	$.ajax({
			url : '/communal/getCustId',
			type:'post',
			dataType:'text',
			success : function(data) {
			if(data !=='null' && data !== "" && data !== 'undefined'){
				$("#sessionValues").val(data);
				 _ozuid=data;
			}else{
			}
			},
			error:function(){
			},
			});
}

//99click统计会员(此处为第二次赋值，避免第一次ajax出错未统计到)
var custId =$("#sessionValues").val();
	if(custId !=='null' && custId !== "" &&custId !== 'undefined'  ){
		  _ozuid=custId;
		}else{
		}
</script>


 



    
