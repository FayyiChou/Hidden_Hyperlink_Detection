var _ozprm="CID=WDDB";
$(function(){
	//屏幕滑动事件
	var s_pageX=0 , s_pageY=0;
	var e_pageX=0 , e_pageY=0;
	var index_type=0;
	document.getElementById('test').ontouchstart = function(ev){
		s_pageX = ev.touches[0].pageX;
		s_pageY = ev.touches[0].pageY;
	}
	document.getElementById('test').ontouchend = function(ev){
		if( index_type != 0 ) return ;
		index_type=1;
		e_pageX = ev.changedTouches[0].pageX ;
		e_pageY = ev.changedTouches[0].pageY ;
		var dx = e_pageX - s_pageX;
		var dy = e_pageY - s_pageY;
		//如果滑动距离太短
	  if (Math.abs(dx) < 2 && Math.abs(dy) < 2) {
	  	index_type=0;
	    return ;
	  }
		if( Math.abs(dy) >= Math.abs(dx)){
			index_type=0;
			return ;
		}
		//计算移动的角度
	  var angle = Math.atan2(dy, dx) * 180 / Math.PI;
	  var now_d = $("#itemsTitle").find("li.hover.middle");
		//向左
		if ((angle >= 135 && angle <= 180) || (angle >= -180 && angle < -135)) {
			if(now_d.index() !=0 )
				now_d.prev().click();
	  }
		//向右
		else if (angle >= -45 && angle < 45) {
	    if(now_d.index() < 4 )
				now_d.next().click();
	  }
		index_type=0;
	}
	$(".guige ul li").on("click",function(){
		$(this).addClass("active").siblings().removeClass("active");	
	})
	//是否出现继续滑动的DIV
	var body_hight = $("body").height();
	var content_height = $(".productdetail").height()+$(".pro_detail_text").height()+$(".pro_detail_guige").height()+$(".jixu").height();
	if(content_height <= body_hight){
		$(".jixu").show();
		
	}else{
		$(".jixu").hide();
		//$("#detail").hide();
		//$("#descript").load("descrip.html");
		//$("body").addClass("padT75");	
 
		 window.onscroll = function (e) {
			if (window.pageYOffset >= content_height) {	
			 $(".des_header").css("position","fixed");
			 $(".des_header").css("top","0");
			 $(".des_content_text").css("marginTop","75px");
			} else if (window.pageYOffset < content_height) {
			 $(".des_header").css("position","relative");
			 $(".des_content_text").css("marginTop","15px");
			}
		 }
	}
	//头部
	$(".des_header ul li").on("click",function(){
		var left_zhi = 100/$(".des_header ul li").size()*$(this).index()+"%";
		$(this).addClass("active").siblings().removeClass("active");
		$(".des_header .moving_bg").stop().animate({left:left_zhi}, {duration: 300});
		$(".des_content_text:eq("+$(this).index()+")").show().siblings(".des_content_text").hide();	
	});
	//头部跟下面内容绑定
	$("des_header ul li").each(function(i){
		$(this).click(function(){
			$(".des_content_text:eq("+i+")").show().siblings(".des_content_text").hide();
		});
	 });
	//返回顶部
	$(".gotop").on("click",function(){
		$(document).scrollTop(0);	
