      <script>
          //添加cookie 
          addCookie("login_page_img_name", "" ,1 ,"/", ".sinosig.com");
          function addCookie(name,value,expires,path,domain){  
           var str=name+"="+escape(value);  if(expires!=""){
            var date=new Date();
            date.setTime(date.getTime()+expires*24*3600*1000);//expires单位为天   
            str+=";expires="+date.toGMTString();
          }
           if(path!=""){
            str+=";path="+path;//指定可访问cookie的目录  
            }
           if(domain!=""){
            str+=";domain="+domain;//指定可访问cookie的域  
            }
           document.cookie=str;
           }
      </script>
	  <script>
	  function getData(data) {
			if (data.isLogin) {
				$("#hello").hide();
		  		$("#hello1").show();
		  		$("#hello2").show();
				if (data.name != "" && data.name !='undefined') {
					$("#myName").html(data.name); 
				}
			}
		}
	  $(function() {
			getJSONP("http://auth.sinosig.com/auth/login_retriveCustInfo.action", {
				type : "jscallback",
				callback : getData
			});
		});
		function getJSONP(url, options) {
			var defaultOptions = {
				objId : "",
				needWrapTag : false,
				type : "htmlcallback", // [jscallback,htmlcallback]
				getRegexp : "",
				getRegexpType : "i", //[i]或空
				removeRegexp : {},
				removeRegexpType : "i", //[i,g,ig]或空
				callback : "",
				data : "{}"
			}
			options = $.extend(defaultOptions, options);
			if (url != "") {
				var randomNum;
				var randomId;
				if (options.type == "htmlcallback" && options.objId == "") {
					randomNum = Math.floor(Math.random() * 100000);
					randomId = "jsonpRandomId" + randomNum;
					document.write("<div id=\"" + randomId + "\"></div>");
				}
				$.ajax({
					url : url,
					type : "GET",
					cache : false,
					dataType : "jsonp",
					jsonp : options.type,
					// jsonpCallback: "getHtml",
					success : function(data) {
						if (options.type == "jscallback") {
							if (options.callback != "") {
								options.callback(data, options.data);
							}
						} else if (options.type == "htmlcallback") {
							if (options.removeRegexp != null) {
								var regexp;
								for ( var i = 0; i < options.removeRegexp.length; i++) {
									regexp = new RegExp(options.removeRegexp[i], options.removeRegexpType);
									data.html = data.html.replace(regexp, "");
								}
							}
							if (options.getRegexp != "") {
								var regexp = new RegExp(options.getRegexp, options.getRegexpType);
								var regexpObj = data.html.match(regexp);
								if (regexpObj != null) {
									data.html = regexpObj.join();
								}
							}
							if (!options.needWrapTag) {
								var regexp1 = new RegExp("<!DOCTYPE[^>]*>", "i");
								var regexp2 = new RegExp("<html[^>]*>", "i");
								var regexp3 = new RegExp("</html[^>]*>", "i");
								var regexp4 = new RegExp("<body[^>]*>", "i");
								var regexp5 = new RegExp("</body[^>]*>", "i");
								var regexp6 = new RegExp("<head[^>]*>", "i");
								var regexp7 = new RegExp("</head[^>]*>", "i");
								var regexp8 = new RegExp("<title[^>]*>.*</title[^>]*>", "i");
								var regexp9 = new RegExp("<meta[^>]*>", "ig");
								var regexp10 = new RegExp("</meta[^>]*>", "ig");
								data.html = data.html.replace(regexp1, "").replace(regexp2, "").replace(regexp3, "").replace(regexp4, "").replace(
										regexp5, "").replace(regexp6, "").replace(regexp7, "").replace(regexp8, "").replace(regexp9, "").replace(
										regexp10, "");
							}
							var regexp11 = new RegExp("#DYH#", "g");
							var regexp12 = new RegExp("#HC#", "g");
							data.html = data.html.replace(regexp11, "'").replace(regexp12, "\n");
							if (options.callback != "") {
								options.callback(data, options.data);
							} else {
								if (options.objId == "") {
									$("#" + randomId).after(data.html);
									$("#" + randomId).remove();
								} else {
									$("#" + options.objId).html(data.html);
								}
							}
						}
					}
				});
			}
		}
	  </script>
	  
