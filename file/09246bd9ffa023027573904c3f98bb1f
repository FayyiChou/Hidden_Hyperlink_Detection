<script type="text/javascript" src="/js/login.js?v=201702241253"></script>
<script type="text/javascript">
    $(function(){
        $('#Register_username').on('change', function() {
            var email = $(this).val();
            $('.errorSummary').remove();
            $.ajax({
                url: "/login/pwdtips.html",
                dataType: 'json',
                cache: false,
                type:"POST",
                data:'email='+email,
                success: function(data) {
                    if (data.update_pwd == 'should' || data.update_pwd == 'must') {
                        var error = '<div class="errorSummary">'+data.tips+'</div>';
                        $('#user-login-form').prepend(error);
                    }
                }
            });
        });


        $('#rememberMe').on('ifChecked ifUnchecked', function(event) {
            if (event.type == 'ifChecked') {
              $('input[name="Register[rememberMe]"]').val(1);
              $('.label-check').css('color','#fff');
            } else {
              $('input[name="Register[rememberMe]"]').val(0);
              $('.label-check').css('color','#afb0b2');
            }
        });
        $('input').placeholder();
        if($('.loginBox-verify').length > 0){
            $('.loginBox-rememberPassword').css('margin-bottom','20px');
        }

        jQuery(document).on('click', '#captche_0', function(){
            jQuery.ajax({
                url: "/login/captcha.html?refresh=1",
                dataType: 'json',
                cache: false,
                success: function(data) {
                    jQuery('#captche_0').attr('src', data['url']);
                    jQuery('body').data('captcha.hash', [data['hash1'], data['hash2']]);
                    $('#verify_oauth_0').val('');
                }
            });
            return false;
        });

        jQuery(document).on('click', '#captche_1', function(){
            jQuery.ajax({
                url: "/login/captcha.html?refresh=1",
                dataType: 'json',
                cache: false,
                success: function(data) {
                    jQuery('#captche_1').attr('src', data['url']);
                    jQuery('body').data('captcha.hash', [data['hash1'], data['hash2']]);
                    $('#verify_oauth_1').val('');
                }
            });
            return false;
        });

        jQuery(document).on('click', '#captche_2', function(){
            jQuery.ajax({
                url: "/login/captcha.html?refresh=1",
                dataType: 'json',
                cache: false,
                success: function(data) {
                    jQuery('#captche_2').attr('src', data['url']);
                    jQuery('body').data('captcha.hash', [data['hash1'], data['hash2']]);
                    $('#verify_oauth_2').val('');
                }
            });
            return false;
        });

        $(document).on('click', '.withoutAccount_tab', function(){
            $('.withoutAccountBind').empty();
            var c = '<img id="captche_0" src="/login/captcha.html?v=58e03e253e92a" alt="" />';
            $('.withoutAccountBind').append(c);
        });

        $(document).on('click', '.withAccount_tab', function(){
            $('.withAccountBind').empty();
            var c = '<img id="captche_1" src="/login/captcha.html?v=58e03e253ea5b" alt="" />';
            $('.withAccountBind').append(c);
        });

    });

    jQuery(document).on('click', '#captche', function(){
        jQuery.ajax({
            url: "\/login\/captcha.html?refresh=1",
            dataType: 'json',
            cache: false,
            success: function(data) {
                jQuery('#captche').attr('src', data['url']);
                jQuery('body').data('captcha.hash', [data['hash1'], data['hash2']]);
                $('#Register_verify').val('');
            }
        });
        return false;
    });

    $(function(){
        if($('#vpAccountLogin').height()+47 > 490){
            $('#vpAccountLogin').css('top',50);
        }
    })
    
    $('.btn-bind').on('click',function(){//第三方登录绑定
        var bindType = $(this).attr('data-type');
        var btn = $(this);
        btn.button('loading');
        $.ajax({
            url: "/oauth/bind",
            dataType: 'json',
            type:"POST",
            data:$('#sns-login').serialize()+'&bind_type='+bindType,
            success: function(data) {
                var info = data.data;
                if(data.success == 0){
                    showErrorMsg(data.message,bindType);
                    if (data.error_captcha == 1) {
                        $("#captche_1").trigger("click");
                    }
                }else if(data.success == 200){
                    $('.sns-no-account-error').slideUp();
                    $('.sns-vp-account-error').slideUp();
                    if(info.redirect && info.uuid){
                        var oauth_login = '/login/oauth?redirect='+info.redirect+'&uuid='+info.uuid+'&login_type='+info.login_type;
                        window.location.href = oauth_login;
                    }
                }
                btn.button('reset');
            }
        });
    })

    var _t;
    $(".btn-continue").on('click', function() {
        if($('input[name="mobile"]').val() == '')
        {
            showErrorMsg('请输入手机号',0);
            return false;
        }
        if($('input[name="verify_oauth_0"]').val() == '')
        {
            showErrorMsg('请输入正确的图片验证码',0);
            return false;
        }
        $('.sns-no-account-error').slideUp();
        $(this).button('loading');
        var timeout = 60;
        clearInterval(_t);
        _t = setInterval(function() {
            timeout--;
            if (timeout <= 0) {
                clearInterval(_t);
                $(".btn-continue").button('reset');
            }

        var str = $(".btn-continue").text();
        var second = str.replace(/[^0-9]+/g, '');
        var strArr = str.split(second);
        str = strArr[0]+timeout+strArr[1];
            $(".btn-continue").text(str);

        }, 1000);
        $.post($(this).attr('href'), 'name=' + $('input[name="mobile"]').val()+'&verify_oauth='+$('input[name="verify_oauth_0"]').val()+'&type=sms', function(json) {
            if (json.status === 200) {
                // $(".password").show();
                if(json.exist === 0){
                   $(".sns-login-pwd").slideDown();
                }else{
                   $(".sns-login-pwd").slideUp();
                }
            } else {
                showErrorMsg(json.message,0);
                clearInterval(_t);
                $(".btn-continue").button('reset');
                if (json.error_captcha == 1) {
                    $("#captche_0").trigger("click");
                }
            }
        }, 'json');
        return false;
    });
    function showErrorMsg(msg,type){
        if(type == 0){
            $('.no-account-error').text(msg);
            $('.sns-no-account-error').slideDown();
        }else if(type == 1){
            $('.vp-account-error').text(msg);
            $('.sns-vp-account-error').slideDown();
        }      
    }
</script>            <div id="footer">
