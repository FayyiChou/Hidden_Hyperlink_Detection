$(document).ready(function () {
    $('#aboutme').click(function(event) {
        event.stopPropagation();
        $('#search_content').hide();

        $('#aboutme_content').fadeToggle('slow');
        return false;
    });
    $('#search').click(function(event) {
        event.stopPropagation();
        $('#aboutme_content').hide();

        $('#search_content').fadeToggle('slow');
        return false;
    });
    $(".jumppage").each(function(){
        var uri = location.href;
        var p = $(this).attr('href').match(/page=(\d+)/)[1];
        if (uri.indexOf('?') >= 0) {
            if (/^.*\page=\d+/.test(uri)) {
                $(this).attr('href', uri.replace(/page=\d+/, 'page=' + p));
            } else {
                $(this).attr('href', uri + '&page=' + p);
            }
        } else {
            $(this).attr('href', uri + '?page=' + p);
        }
        
    });
});
</script>

