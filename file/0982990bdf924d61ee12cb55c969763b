			<script>
			var isCheck = false;
			var submit = function() {
				var form = document.login;
				//检查账号示例
				if(form.user.value == '') {
					submit.outError('请输入帐号');
					form.user.focus();
					return;
				}
				if(form.pass.value == '') {
					submit.outError('请输入密码');
					form.pass.focus();
					return;
				}
				
				var args = {
					userName: form.user.value,
					password: form.pass.value,
					isAutoLogin: true,
					isCode: form.isCode.value
				};
				
				if(form.isCode.value == 1) {
					if(form.verificationCode.value == '') {
						submit.outError('请输入验证码');
						form.verificationCode.focus();
						return;
					} else {
						args.verificationCode = form.verificationCode.value;
					}
				} 
				//Jsonp
				Q.jsonp('http://passport.17k.com/login?s=4', args, function(json) {
					document.querySelector('#verificationCode').onclick();
					if(json.error_code == 2) {
						//神策统计
						window.sa && sa.track('Login', {
							'task': 'h5',
							'guid': Q.guid,
							'logintype': 'local',
							'status': '验证',
							'errormessage': json['error_message'],
							'account': form['user'].value
						});
						if(form.isCode.value != 1) {
							form.isCode.value = 1;
							document.querySelector('.verificationCode').style.display='-webkit-box';
//							Q.showCode("h5_default", inCode);
//							inCode.style.removeProperty('display');
						}
						submit.outError(json.error_message);
					} else if(json.error_code == 1) {
						//神策统计
						window.sa && sa.track('Login', {
							'task': 'h5',
							'guid': Q.guid,
							'logintype': 'local',
							'status': '否',
							'errormessage': json['error_message'],
							'account': form['user'].value
						});
						submit.outError(json.error_message);
					} else {
						//神策统计
						window.sa && sa.track('Login', {
							'task': 'h5',
							'guid': Q.guid,
							'logintype': 'local',
							'status': '是',
							'userid': Q.userInfo.userId,
							'isauthor': Q.userInfo.isAuthor ? '是' : '否',
							'username': Q.userInfo.nickName
						});
						
						var url = form.back.value;
						if(url == undefined || url == '') {
							url = "http://h5.17k.com";
						}
						window.location = url;
					}
					//如果使用GeeTest验证码则刷新
					/* if(window.GeeTest) {
					 GeeTest[0].refresh();
					 isCheck = false;
					 } */
				});
			};
			//输出错误方法
			submit.outError = function(text) {
				var tag = document.querySelector('p.error');
				tag.style.display = 'block';
				tag.textContent = text;
			};
			
			window.gt_custom_ajax = function(result, id, message) {
				if(result) {
					if(message == 'Success') {
//						window.inCode.style.display = 'none';
						isCheck = true;
						submit();
					}
				}
			};
//			window.inCode.addEventListener('click', function(e) {
//				if(e.target.className == 'gt_wrapper')
//					this.style.display = 'none';
//			}, false);
			//神策埋点
			var sensorsdata = function(type) {
				window.sa && sa.track('Login', {
					'task': 'h5',
					'guid': Q.guid,
					'logintype': type
				});
			}
		</script>
	</form>
