   <script type="text/template" id="tmplNode">
        <div class="node node_ios" id="node_{[= it.sharer.id ]}">
            
            <canvas></canvas>
            
        </div>
    </script> 
   <script type="text/template" id="tmplReader">
        <div class="reader share_from_{[= it.parent_id ]} user user_ios" id="reader_{[= it.id ]}">
            
            {[
                var avatarUrl = "http://7u2f5g.com2.z0.glb.qiniucdn.com/img/noname.png?v=20170217";
                var username = '匿名用户';
                if(it.user){
                    avatarUrl = it.user.avatar;
                    username = it.user.username;
                }
                else if(it.currentUser){
                    username = '我';
                }
            ]}
            <span class="username username_ios">{[= username ]}</span>
            <img class="avatar border" src="{[= avatarUrl ]}">
            {[ if(it.reader_num > 0){ ]}
            <span class="num">{[= it.reader_num ]}</span>
            {[ } ]}
        </div>
    </script> 
