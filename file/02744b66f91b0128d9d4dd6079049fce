<script type="text/javascript">
	$(document).ready(function(){
		$('#bottom-bar .switcher').click(function(event){
			var bar = $('#bottom-bar');
			if(bar.hasClass('closed')){
				bar.removeClass('closed');
			}else{
				bar.addClass('closed');
			}
		});

		// .on('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function(){
		// 	$(this).removeClass('look-at-me');
		// 	console.log('animation class removed');
		// });

		$('#bottom-bar').on('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function(){
			$(this).removeClass('look-at-me');
			// console.log('animation class removed');
		});
		$(document).scroll(function(event){
			var doc = $(document);
			var w = $(window);
			var scrollPosition = doc.scrollTop();
			var bottomScrollEdge = doc.height() - w.height() - 315;
			var bar = $('#bottom-bar');
			if( bottomScrollEdge <= scrollPosition){
				bar.fadeOut();
			}else{
				if(bar.css('display') == 'none')
					bar.fadeIn();
			}
		});
		anim = setInterval(function(){
			var bar = $('#bottom-bar');
			if(bar.hasClass('closed')){
				bar.addClass('look-at-me');
			}
			// console.log('tic');
		}, 7000);
	})
</script>


                    
