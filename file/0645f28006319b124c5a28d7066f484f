  function b() {
    h = $(window).height();
    t = $(document).scrollTop();
    if (t > h-180) {
      $('.topTop').show();
    } else {
      $('.topTop').hide();
    }
  }
  b();

  $(window).scroll(function(e) {
    b();
  });

