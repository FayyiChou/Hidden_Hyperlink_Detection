  function share(website){
    text = "盛大游戏代号X-王道RPG即将公布，大家来一场快乐的冒险！";
    var img = "http://static.sdg-china.com/jijiamobile/pic/dqx/web1/sharebg.jpg";
    var url,result;
    href = window.location.href;
    url=encodeURIComponent(href);
    result=encodeURIComponent(text);
    switch(website){
      case "sina":
        window.open("http://v.t.sina.com.cn/share/share.php?url="+url+"&title="+result+"&pic="+img);
        break;
      case "qzone":
          window.open("http://sns.qzone.qq.com/cgi-bin/qzshare/cgi_qzshare_onekey?url="+url+"&title="+result+"&pics="+img);
          break;
      case "baidu":
          window.open("http://cang.baidu.com/do/add?iu="+url+"&it="+result+"&dc="+result);
          break;
      case "teng":
          window.open('http://v.t.qq.com/share/share.php?title='+result+'&url='+url+ "&pic=" + img);
          break;
    }
  }

  var getOs = function(){
  var OsObject = "";
  if( navigator.userAgent.indexOf("MSIE 6.0")>0) {
  OsObject = "ie6";
  }else if( navigator.userAgent.indexOf("MSIE 7.0")>0) {
  OsObject = "ie7";
  }else if( navigator.userAgent.indexOf("MSIE 8.0")>0) {
  OsObject = "ie8";
  }
  return OsObject;
  }
  function isThisOs(os){
  var thisOs = getOs();
  if(thisOs != ''){
   var hasThisOs = os.indexOf(thisOs);
   return hasThisOs != -1;
  }
  }
