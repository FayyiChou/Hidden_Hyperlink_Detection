	function playVideo(_flv,_tit){
		var _width='868';
		var _height='488';
		var video_html='<object id="video_player" type="application/x-shockwave-flash" data="'+_flv+'&adss=0&bv=0&pv=0&auto=1&fu=1" width="'+_width+'" height="'+_height+'">';
