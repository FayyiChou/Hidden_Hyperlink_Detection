  function playMusic(){
      var musicFlag = true;
      $('#musicbtn').click(function(ev){
        var _audio = document.getElementById('audioAuto');
          if(musicFlag){
              _audio.pause();
              $(this).addClass('gbnon');
              musicFlag = false;
          }else{
              _audio.play();
              $(this).removeClass('gbnon');
              musicFlag = true;
          }
      });
  }
  playMusic();


