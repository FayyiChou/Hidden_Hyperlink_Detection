  //验证手机号
  function checkANDsubmit(){
    var reg = /^1([0-9][0-9])\d{8}$/g,
        phone=document.getElementById("phone"),
        phone_val=phone.value,
        Website="dq_pc/web1";
        function getUrlKey(name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i"),r = window.location.search.substr(1).match(reg);
            if (r != null){return unescape(r[2]);}
            return null;
        }
         var suf=getUrlKey('channel');
         if(suf){
             Website+=suf;
         }
      if(isNaN(phone_val)){alert("手机号码必须为数字，请正确填写！");phone.focus();}
      else if (phone_val.length < 11) {alert("手机号码不足11位，请正确填写！");phone.focus();}
      else if(!reg.test(phone_val)){alert("手机号码有误，请正确填写！");phone.focus();}
      else{
          var para = "GameCode=Dq&type=1&Channel="+Website+"&Mobile="+encodeURIComponent(phone_val)+"&MobileSystem=iOS&MobileStyle=iphoneAndroid"+"&callback=handleyuyuefn";
          submitPhoneNumber(para);
      }
  }
  //提交手机号预约
  function submitPhoneNumber(para){
      var url = "http://api.act.sdo.com/mass/Reserve?"+para;
      var t=document.createElement("script")
      t.src=url,t.type="text/javascript",t.async=!0
      document.getElementsByTagName("head")[0].appendChild(t);
      t.onload=function(){document.getElementsByTagName("head")[0].removeChild(t);}
  }
  //预约回调函数
  function handleyuyuefn(data){
    if (data.Code==0) {
      $(".t1").fadeOut(300);
      $(".t2").fadeIn(300);
    }else if(data.Code == "2002") {
      alert('此手机号已经提交过啦，请等待好消息吧！');
    }
    else{
      alert(data.Message);
    }
  }


  //获取接口json数据
  function loadData(_url,data,fn){
      //var url = "http://act.wz.sdo.com/project/app_20130515/wz_newslist.ashx?category_code=5608,5609,5610&callback=HandleNewsListData";
      var url = _url+"?"+data+"&callback="+fn;
      var t=document.createElement("script")//,
      //n=document.getElementsByTagName("script")[0];
      //document.getElementsByTagName("head")[0].appendChild(t);
      t.src=url,t.type="text/javascript",t.async=!0//,n.parentNode.insertBefore(t,n)
      document.getElementsByTagName("head")[0].appendChild(t);
      t.onload=function(){document.getElementsByTagName("head")[0].removeChild(t);}
  }

  //大新闻==================

  loadData('http://api.act.sdo.com/UnionNews/List','gameCode=ma&category=6453,6454,6455,6456&pageIndex=0&pageSize=5','handleNewsData0');
  loadData('http://api.act.sdo.com/UnionNews/List','gameCode=ma&category=6454&pageIndex=0&pageSize=5','handleNewsData1');
  loadData('http://api.act.sdo.com/UnionNews/List','gameCode=ma&category=6455&pageIndex=0&pageSize=5','handleNewsData2');
  loadData('http://api.act.sdo.com/UnionNews/List','gameCode=ma&category=6456&pageIndex=0&pageSize=5','handleNewsData3');

  function handleNewsData0(data){


      if(data.Code=="0"){
      var html='',temp=null,cateTit='【新闻】',clsNa="",html2='',len=5;

      for(var i=0;i<len;i++){

          temp=data.Data[i];
          if(temp.CategoryCode=="6455"){cateTit='【公告】';clsNa="n_blue";}
          else if(temp.CategoryCode=="6456"){cateTit='【活动】';clsNa="n_yel";}
          else{cateTit='【新闻】';clsNa="n_red";}

          if(i==4){
              html+='<li class="last '+clsNa+'">';
          }else{
              html+='<li class="'+clsNa+'">';
          }

          var timestring = temp.PublishDate.substring(0,temp.PublishDate.indexOf(" "));
          function timeset(str){
              var ary=str.split("/");
              if(ary[1].length==1){ary[1]="0"+ary[1]}
              if(ary[2].length==1){ary[2]="0"+ary[2]}
              return ary.join("/");
          }
          var timegesi = timeset(timestring);
          html+='<a href="'+((temp.OutLink=='')?'news.html?id='+temp.Id:temp.OutLink)+'" target="_blank"><span class="tit">'+cateTit+'</span><span class="bit '+ temp.TitleClass +'">'+temp.Title+'</span><span class="tim">'+timegesi+'</span></a></li>';
      }

      $(".listCon ul").eq(0).html(html);

      }
  }

  function handleNewsData1(data){
      if(data.Code=="0"){
          var html='',temp=null;
          for(var i=0;i<data.Data.length;i++){
              temp=data.Data[i];

              if(i==4){
                  html+='<li class="last n_red">';
              }else{
                  html+='<li class="n_red">';
              }

          var timestring = temp.PublishDate.substring(0,temp.PublishDate.indexOf(" "));
          function timeset(str){
              var ary=str.split("/");
              if(ary[1].length==1){ary[1]="0"+ary[1]}
              if(ary[2].length==1){ary[2]="0"+ary[2]}
              return ary.join("/");
          }
          var timegesi = timeset(timestring);

              html+='<a href="'+((temp.OutLink=='')?'news.html?id='+temp.Id:temp.OutLink)+'" target="_blank"><span class="tit">【新闻】</span><span class="bit '+ temp.TitleClass +'">'+temp.Title+'</span><span class="tim">'+timegesi+'</span></a></li>';
          }

          $(".listCon ul").eq(1).html(html);
      }
  }

