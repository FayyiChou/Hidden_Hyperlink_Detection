  $('.listNav li').click(function(){
      var _index = $(this).index();
      if(_index != 4){
          $(this).addClass('on').siblings().removeClass('on');
          $('.listCon ul').eq(_index).addClass('dis').siblings().removeClass('dis');
      }
  });


  //大眼睛banner start
  loadData('http://api.act.sdo.com/UnionNews/List','gameCode=ma&category=6479&pageIndex=0&pageSize=10','handleBannerData');
    function handleBannerData(data){
      //console.log(JSON.stringify(data));
      if(data.Code=='0'&&data.TotalCount>0){
        var html='';
        for(var i=0;i<data.TotalCount;i++){
            if(i==0){
                html+='<li class="dis">';
            }else{
                html+='<li class="">';
            }
                html+='<a href="'+data.Data[i].OutLink+'" target="_blank"><img src="'+data.Data[i].HomeImagePath+'" width="420" height="255"></a></li>';
        }
        $("#lundiv").html(html);
        smLunbo();
      }
    }
    //大眼睛banner end

    //小轮播==================
    function smLunbo(){
      //小轮播滚动
      var len=$("#lundiv li").length;
      var index=1;
      var int;

      for(i=0;i<len;i++){
         $("<li></li>").appendTo("#lunsrol");
      }
      $("#lunsrol li:first").addClass("on");

      function showSys(num){
          $("#lunsrol li").removeClass().eq(num).addClass("on").siblings().removeClass("on");
          $("#lundiv li").removeClass().eq(num).fadeIn().siblings().fadeOut();
      }

      function ziDong(){
          if(index==len){
              index=0;
          }
          showSys( index);
          index=index+1;
          //console.log(index)
          int=setTimeout(ziDong, 3000);
      }
      int=setTimeout(ziDong, 3000);

      $("#lunsrol li").hover(function(){
          clearTimeout(int);
          index=$(this).index();
          if(index==len){
              index=0;
          }
          showSys( index);
          index=index+1;
      });
      $("#lundiv").hover(function(){
          clearTimeout(int);

      },function(){
         int=setTimeout(ziDong, 1500);
      });

    }
    var t=$('.nav').height()-5;
    $('.toplist').css({'top':t});
    $('.nav li.game_buy').hover(function(){
      $('.toplist').slideDown(200);
    },function(){
      $('.toplist').slideUp(200);
    })
</script>
<script type="text/javascript">
  // 媒体滚动
  mediaMove();
  function mediaMove(){
    var oDiv=document.getElementById('wrap_box');
  	var oUl=document.getElementById('media_list');
  	var aLi=oUl.getElementsByTagName('li');
  	oUl.innerHTML+=oUl.innerHTML;

  	oUl.style.width=aLi.length*aLi[0].offsetWidth+'px';

  	var timer=setInterval(function (){
  		oUl.style.left=oUl.offsetLeft-2+'px';

  		if(oUl.offsetLeft<=-oUl.offsetWidth/2)
  		{
  			oUl.style.left='0';
  		}
  		else if(oUl.offsetLeft>=0)
  		{
  			oUl.style.left=-oUl.offsetWidth/2+'px';
  		}
  	}, 30);
  	oDiv.onmouseover=function(){clearInterval(timer);};
  	oDiv.onmouseout=function(){
  		timer=setInterval(function (){
  		oUl.style.left=oUl.offsetLeft-2+'px';

  		if(oUl.offsetLeft<=-oUl.offsetWidth/2)
  		{
  			oUl.style.left='0';
  		}
  		else if(oUl.offsetLeft>=0)
  		{
  			oUl.style.left=-oUl.offsetWidth/2+'px';
  		}
  	}, 30);
  	};
  }
</script>
