            var text = $(this).html();
            $(this).attr('href', 'http://vr.17173.com/search?q='+text);
        });
        if ($('.js-nav').length > 0) {
            $('.js-nav').each(function() {
                $('.tab:eq(0)', $(this)).tabs($('.tab-pn:eq(0) > div', $(this)), { tabs: 'a', event: 'mouseover' });
            });
        }
    }
</script> 
