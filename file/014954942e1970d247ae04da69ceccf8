  <script>
$(function(){
	$('#btnkeywordstation').click(function(){
		var _val = $('#txtkeywordstation').val();
		if(!_val){
			//return;
		}
		window.location.href = '/Recruit/Index/p3/mzkeyword/mz/key/p3-'+_val;
	});
	
	$('#txtkeywordstation').keydown(function(Event){
		if(Event.keyCode === 13){
			var _val = $('#txtkeywordstation').val();
			if(!_val){
				//return;
			}
			window.location.href = '/Recruit/Index/p3/mzkeyword/mz/key/p3-'+_val;
		}
	});
	
	$('#btnmsgclose').click(function(){
		$('#mz_message_list').remove();	
	});
	
	
});

var navicatHref = function(){
	$('.navLi a').removeClass('indxActvLk');
	
	var $pathname = window.location.pathname;
	
	if($pathname.indexOf('/recruit/slist') !== -1){
		$('#txtrecruitslist').addClass('indxActvLk');
	}else if($pathname.indexOf('/recruit/issue') !== -1){
		$('#txtrecruitissue').addClass('indxActvLk');
	}else if($pathname.indexOf('/myresume/mylist') !== -1){
		$('#txtmyresumemylist').addClass('indxActvLk');
	}else if($pathname.indexOf('/myresume/jianli') !== -1){
		$('#txtrecruitissue2').addClass('indxActvLk');
	}else if($pathname === '/'){
		$('#txtindexmz').addClass('indxActvLk');
	}
};
navicatHref();
</script> 
