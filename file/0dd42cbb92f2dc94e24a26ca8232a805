    <script type="text/javascript">

$(document).ready(function(){

	$(".list_lm a").click(function(){
		$(this).addClass("on");
		$(this).siblings().removeClass("on");
		var sliderId=$(this).index();
		$("#slider"+sliderId).css("display","block");
		$("#slider"+sliderId).siblings(".slider").css("display","none");
		if(sliderId==4){
			loadorder();
		}
	});

	$(".list_lanmu li").each(function(){
		 $(this).mouseover(function(){
			$(this).children(".li_prompt").css("display","");
		 });
		 $(this).mouseout(function(){
			$(this).children(".li_prompt").css("display","none");
		 });
	});

  $("#cl_login").click(function(){
		$("#cl_login").css({ "border-bottom": "2px solid #00a5eb","cursor": "pointer","font-weight": "bold"});
		$("#cl_zhuce").removeAttr("style");
		$("#cl_zhuce").css({ "cursor": "pointer","font-weight": "bold"});
  })
  
  $("#cl_zhuce").click(function(){
		$("#cl_zhuce").css({ "border-bottom": "2px solid #00a5eb","cursor": "pointer","font-weight": "bold"});
		$("#cl_login").removeAttr("style");
		$("#cl_login").css({ "cursor": "pointer","font-weight": "bold"});
		$('#pp_login').hide();
		show_login = false ;
		registerwdsshow();
  })

  $('#cl_login').click(function() {
      if (show_login){
          show_login = false ;
          $('#pp_login').hide();
      }else{
          show_login = true ;
          $('#pp_login').fadeIn();
      }
      show_zhuce = false;
      $('#pp_zhuce').hide();
  });

  if(document.getElementById('annexCode') != null){
    document.getElementById('annexCode').src = '/www/RandomPicture?'+new Date().getTime();$('#dynCode').val('');
  }

  $("#dynCode").blur();
  
});

<!--nodeid:25599,channelID:25953-->
var show_login = false;
var show_zhuce = false;

function changcor(id){
  $("#node"+id).css({ background: "#b7a15a" });
}

var showFind = false;
function findPassword(){
   if(!showFind){
         $("#findPassword").css('display','block');	
         showFind = true;
   }else{
         $("#findPassword").css('display','none');
         showFind = false;
  }  
}
function getPsw(){
	var password = $("#getPsw").val();
        var reg = /^([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+\.[a-zA-Z]{2,3}$/;         
        if(!reg.test(password)){
        		$("#findPwd").leanModal({closeButton: ".modal_close",title:'错误提示',content:'您输入的邮箱格式错误！'});
	    			return;
        }else{
           
	    $.ajax({
                type: "post",
                url: "/www/findPassword.msp",
                data: "email=" + password,
                timeout: 30000,
                dataType: "text",
                success: function (data) {
                 
                      if(data == "empty"){
                      	$("#findPwd").leanModal({closeButton: ".modal_close",title:'错误提示',content:'您输入的邮箱不存在！'});
                      }else if(data == "error"){
	                        $("#findPwd").leanModal({closeButton: ".modal_close",title:'错误提示',content:'您输入的邮箱不存在！'});
                      }else if(data == "success"){
                          $("#findPwd").leanModal({closeButton: ".modal_close",title:'提示',content:'邮件发送成功，请注意查收！'});
                      }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                   $("#findPwd").leanModal({closeButton: ".modal_close",title:'错误提示',content:'对不起，系统忙，请稍后再试！'});
               }  
              });   
        }
}
</script>
