                 document.getElementById("aq_commt").removeChild(document.getElementById("news_aski"));
                 $(window).unbind('.infscr');
            }
            if(document.getElementById("commtid") == null){
                $("#aq_commt").append(html);
            }
          }
    }); 
  });
  
  
