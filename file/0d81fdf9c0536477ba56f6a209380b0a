<script type="text/javascript">
    var ok1 = true;
    var ok2 = true;
    var currentMenu = $("#bm_0");
    function ClickBookClass(id) {
        currentMenu.hide();
        currentMenu = $("#bm_" + id);
        currentMenu.fadeIn('fast');
        
    }

    $("[target ='box']").each(function (i) {
            var id = $($("[target ='box']")[i]).attr("id");
            if (id != null) {

                $($("[target ='box']")[i]).wBox({
                    target: "/Home/WebInfoSelect/" + id,
                    drag: false,
                    opacity: 0.4,
                    noTitle: true,
                    top: 200,
                    autoMove: true,
                    requestType: "iframe",
                    effect: false
                });
            }
        })
        var bmenu_i = 0;
        timer_bmenu = setTimeout('BM_Auto()', 4000);
        function BM_Auto() {
            bmenu_i++;
            if (bmenu_i > 2) bmenu_i = 0;
            ClickBookClass(bmenu_i);
            timer_bmenu = setTimeout('BM_Auto()', 4000);
        }
        
</script>
