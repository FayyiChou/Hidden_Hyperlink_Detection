    <script>
        (function () {
            //播放函数
            var playing = function ($imgs, $txts, index) {
                $imgs.fadeOut(300).eq(index).fadeIn(300);
                $txts.hide().eq(index).show();
            }
            //初始化播放器
            var initWrap = function ($wrap) {
                var $txts = $wrap.find('.indexTitlePanel').hide();
                $txts.eq(0).fadeIn(300);
                var $imgs = $wrap.find('p img').hide().css({ 'position': 'absolute', left: 0, top: 0 });
                $imgs.eq(0).show();
                var count = $txts.length;
                var currIndex = 0;
                $txts.bind('click', function (t) {
                    var $t = $(t.target);
                    if ($t.hasClass('btn-n')) {
                        currIndex = ++currIndex % count;
                        playing($imgs, $txts, currIndex);
                        return false;
                    } else if ($t.hasClass('btn-p')) {
                        currIndex = --currIndex % count;
                        playing($imgs, $txts, currIndex);
                        return false;
                    }
                });
            }
            //初始化播放器
            var initWrap2 = function ($wrap) {
                var $txts = $wrap.find('.xcPanelBox').hide();
                $txts.eq(0).fadeIn(300);
                var $imgs = $wrap.find('.xcPanelBox p img').hide().css({ 'position': 'absolute', left: 0, top: 0 });
                $imgs.eq(0).show();
                var count = $txts.length;
                var currIndex = 0;
                $txts.bind('click', function (t) {
                    var $t = $(t.target);
                    if ($t.hasClass('btn-n')) {
                        currIndex = ++currIndex % count;
                        playing($imgs, $txts, currIndex);
                        return false;
                    } else if ($t.hasClass('btn-p')) {
                        currIndex = --currIndex % count;
                        playing($imgs, $txts, currIndex);
                        return false;
                    }

                });
            }
            //首屏
            initWrap($('#box-0'));
            //2屏
            initWrap2($('#box-1'));


            var $ul = $('#scroller-wrap ul');
            var $li = $ul.find('li');
            var length = $li.length;
            var ulPage = 0;
            if (length > 4) {
                $ul.css('width', length * 250);
                $('.youl').bind('click', function () {
                    if (ulPage > 0) {
                        ulPage--;
                    }
                    $ul.animate({ 'margin-left': -ulPage * 250 }, 300);
                });
                $('.your').bind('click', function () {
                    if (ulPage < (length - 4)) {
                        ulPage++;
                    }
                    $ul.animate({ 'margin-left': -ulPage * 250 }, 300);
                });

            }

        })();


    </script>
