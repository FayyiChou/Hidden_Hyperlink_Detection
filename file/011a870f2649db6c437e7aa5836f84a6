    <script type="text/javascript">

    $(function () {

        $(".sidebar li").hover(
            function () {
                var $this = $(this);
                if ($this.hasClass("column")) {
                    var cid = $this.attr("cid");
                    $(".columns").hide();
                    $("#MainImage_" + cid).show();
                }
                var sb= $(this).find(".sub-menu");
                sb.css({top:-sb.height()/2+10});
                $(this).find(">span").stop().animate({
                    width: "100%",
                    opacity: "1",
                }, 600, function() {
                    // Animation complete.
                    // Show Navigation

                });
            }, function () {
                $(this).find(">span").stop().animate({
                    width: "0%",
                    opacity: "0",
                }, 600, function() {
                    // Animation complete.
                    // Show Navigation
                });
            }
        );
        var year =2017;
        var items = "";
        for (var i = year; i >= 1978; i--) {

            if (i == year) {
                items += "<li class='yearli sel' year='"+i+"'><a class='yearli' href='javascript:void(0);'>" + i + "</a></li>";
            } else {
                items += "<li  class='yearli'  year='"+i+"'><a href='javascript:void(0);'>" + i + "</a></li>";
            }
        }

        $("#pic").html(items);

        var appCount = $("#timeline li").length;
        var conWidth = appCount * 60;
        $("#timeline ul").width(conWidth);
        var _scrollTimeObj;
        $("#timeline .carousel-control.left").mousedown(function () {
            _scrollTimeObj = setInterval(function(){
                $("#timeline .scrollCon").scrollLeft( $("#timeline .scrollCon").scrollLeft() - 30 );
            }, 100)
        });
        $("#timeline .carousel-control.right").mousedown(function () {
            _scrollTimeObj = setInterval(function(){
                $("#timeline .scrollCon").scrollLeft($("#timeline .scrollCon").scrollLeft() + 30 );
            }, 100)
        });

        $("#timeline .carousel-control").mouseup(function () {
            clearInterval(_scrollTimeObj);
        });

        var dragging = false;
        var iX;sleft=0;
        $("#timeline .scrollCon").mousedown(function(e) {
            dragging = true;

            ix= e.clientX-sleft;
            this.setCapture && this.setCapture();
            return false;
        });
        document.onmousemove = function(e) {
            if (dragging) {
                var e = e || window.event;
                var oX = e.clientX-ix;

                if(-oX>conWidth){
                    oX=-conWidth;
                }
                if(oX>=0){
                    oX=0;
                }

                $("#timeline .scrollCon").scrollLeft(-oX);
                sleft=oX;
                console.log(oX);
                return false;
            }
        };
        $(document).mouseup(function(e) {
            dragging = false;
            e.cancelBubble = true;
        });

        $(".yearli").on("click",function() {
            if (!$(this).hasClass("sel")) {
                $("#pic").find("li").removeClass("sel");
                $(this).addClass("sel");
                var y = $(this).attr("year");
                var url = "/Home/Month" + "?year=" + y;

                $("#jsMonth").load(url);
            }

        });
        var maxheight = 168;
        $("#jsWebSite").find(".table").each(function() {
            if ($(this).height() > maxheight) {
                maxheight = $(this).height();
            }
        });
        $("#jsWebSite").find(".table").each(function() {
            $(this).height(maxheight);
        });
        $("#jsWebSiteUl").find("li").hover(function() {
            $(this).find("a").click();

        }, function() {

        });
    })
</script>

