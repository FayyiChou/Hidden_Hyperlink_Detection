    <script type="text/javascript">
        function loadme() { window.location.href = '/Weixin/WxUser/Me'; }
        function loadfollow() { window.location.href = '/Weixin/Follow'; }
        try { wx.error(function (res) { $.post('/Weixin/Logger/WriteWxJsSDKErrorLog', { url: encodeURI(window.location.href), message: JSON.stringify(res) }, function () { }); }); } catch (ex) { console.log(ex); }
        function master_getMemberMsg() { $.get('/Weixin/WxUser/GetWaitReadMsg', function (data) { if (data.returncode === -1) { console.log(data); } else { var $waitReadMsgCount = $("div[data-type='_waitReadMsgCount']"); if (data.result.WaitReadCount !== 0) { $waitReadMsgCount.html('<span class="messnum">' + data.result.WaitReadCount + '</span>'); } else { $waitReadMsgCount.html(""); } } }); };
        function subscribe_hint() { if (!autohome.common.isWeiXinBrowser()) { return; } $.get('/Weixin/WxUser/GetSubscribeStatus', function(data) { if (data.returncode === -1) { console.log(data); } else { if (data.result.status === 0) { $("div[data-type='_subscribeHintBar']").removeClass("fn-hide"); } } }); }
        $(function () { $('[data-role="close"]').on('click', function () { var target = $(this).data('target'); $(target).addClass('fn-hide'); }); $("div[data-type='_subscribeHintBar'] span").click(function () { $("div[data-type='_subscribeDialog']").removeClass("fn-hide"); }); });
        $(function () { master_getMemberMsg(); subscribe_hint(); });
    </script>
    
    
    <script type="text/javascript">
    $.Pay = {
        orderRet: null,
        page: 1,
        canLoad: true,
        coupon: null
    };

    $(document).scroll(function () {
        if ($(window).scrollTop() + $(window).height() == $(document).height()) {
            if (!$.Pay.canLoad)
                return;
            $.Pay.canLoad = false;

            if ($.Pay.page != -1) {
                $("#loading").css("visibility", "visible");
                $.Pay.page = $.Pay.page + 1;
                var getdata = { id: $("#toMemberId").val(), page: $.Pay.page };
                $.post('/Weixin/WxUser/MoreAnswer', getdata, function (ret) {
                    //alert($.trim(ret).length);
                    if ($.trim(ret).length == 0)
                        $.Pay.page = -1;
                    ret = autohome.common.changeUserUrlForLoad(ret);
                    $("#answerList").append(ret);
                    $("#loading").css("visibility", "hidden");
                    $.Pay.canLoad = true;
                })
            }
            else {
                $.Pay.canLoad = true;
            }
        }
    });

    $('#answerList').on('click', "#answerList li", function (ev) {
        if (ev.srcElement.tagName === 'IMG') {
            return;
        }

        var url = '/Weixin/Topic/IndexNew/' + $(this).attr('ref-uuid');
        window.location.href = url;
    });

    $("img[data-type='_headImg']").click(function () {
        var $headImgBigShow = $("section[data-type='_headImgBigShow']");
        $headImgBigShow.show();
        var $img = $headImgBigShow.find("img");
        $img.attr("src", $(this).attr("data-bigUrl"));
        $headImgBigShow.click(function () {
            $(this).hide();
        });
    });

    if (autohome.loginUser.isLogin || autohome.common.isWeiXinBrowser()) {

        if (autohome.common.isWeiXinBrowser()) {
            wx.config({"debug":false,"appId":"wxecaee25a0c95fbc5","timestamp":1491068554,"nonceStr":"nlemGoTCQlHkhGY","signature":"d0a6f8f605068b1395f0783b3169a6882472e9e1","jsApiList":["chooseWXPay","onMenuShareTimeline","onMenuShareAppMessage"]});
        }

        $(document).ready(function () {

            $("#btnAsk").click(function () {
                ask();
            });

            getFollowInfo();
            $("span[data-type ='_follow']").click(function (e) {
                e.preventDefault();
                follow();
            });

            function ask() {
                var askContent = $("#askContent").val();
                if (askContent.length == 0) {
                    //弹出录音时间到层，3秒自动消失。
                    autohome.common.showToast("问题不能为空", 3000, function () { });
                    return;
                }

                askContent = encodeURI(askContent);
                var askUrl = '/Weixin/Topic/Ask';
                var price = $("#price").val();
                var toMemberId = $("#toMemberId").val();
                var askData = { content: askContent, price: price, toMemberId: toMemberId };

                $.ajax({
                    type: 'POST',
                    url: askUrl,
                    data: askData,
                    dataType: 'json',
                    success: function (askRet) {
                        if (askRet.returncode == 0) {
                            if (price == '0') {
                                // 微信支付成功 跳到详情页
                                var detailUrl = '/Weixin/Topic/IndexNew/' + askRet.result;
                                window.location.href = detailUrl;
                                return;
                            }
                            checkPrice(function () {
                                location.href = '/Weixin/Checkout/Index'
                                    + '?goodid=1&topicuuid='
                                    + askRet.result + '&backurl='
                                    + encodeURI('http://payqa.autohome.com.cn/Weixin/Topic/IndexNew/' + askRet.result);
                            });
                        } else {
                            autohome.common.showToast(askRet.message, 3000, function () { });
                        }
                    },
                    error: function (xhr, type) {
                        autohome.common.showConfirm("请求支付失败", "可系统故障或网络无服务，请稍后再试", {
                            text: "取消",
                            onclick: function () { }
                        },
                            {
                                text: "重试",
                                onclick: function () {
                                    ask();
                                }
                            });
                    }
                });
            }

            function getFollowInfo() {
                $.ajax({
                    type: 'POST',
                    url: '/Weixin/Follow/GetFollowInfo',
                    data: { uuid: '387650bc-9aef-4f55-8ad7-c2f4986e89fe' },
                    dataType: 'json',
                    success: function (ret) {
                        if (ret.returncode == 0) {
                            var result = ret.result;
                            var $followspan = $("span[data-type ='_follow']");
                            var $followCountStrong = $("strong[data-type='_followCount']");
                            $followCountStrong.text(result.toFollowCnt);
                            if (result.isFollow) {
                                $followspan.removeClass("add").addClass("hadadd");
                                $followspan.text("已关注");
                            } else {
                                $followspan.removeClass("hadadd").addClass("add");
                                $followspan.text("+ 关注");
                            }
                        } else {
                            //autohome.common.showToast(ret.message, 3000, function () { });
                        }
                    },
                    error: function (xhr, type) { }
                });
            }

            function follow() {
                $.ajax({
                    type: 'POST',
                    url: '/Weixin/Follow/Follow',
                    data: { uuid: '387650bc-9aef-4f55-8ad7-c2f4986e89fe' },
                    dataType: 'json',
                    success: function (ret) {
                        if (ret.returncode == 0) {
                            getFollowInfo();
                        } else {
                            autohome.common.showToast(ret.message, 3000, function () { });
                        }
                    },
                    error: function (xhr, type) { }
                });
            }

            function checkPrice(onNext) {
                var price = $("#price").val();
                var toMemberId = $("#toMemberId").val();
                $.ajax({
                    type: 'POST',
                    url: '/Weixin/Topic/GetCurrPrice',
                    data: { id: toMemberId },
                    dataType: 'json',
                    success: function (data) {
                        if (data.returncode === -1)
                            autohome.common.showToast(data.message, 3000);
                        else {
                            if (parseInt(price) === parseInt(data.result.price)) {
                                if (onNext)
                                    onNext();
                            } else {
                                var msg = '<p>刚刚答主已将回答价格由 <dfn>&yen</dfn> ' + parseFloat(price) / 100 +
                                    ' 调整为 <span style = "color:red;" ><dfn>&yen</dfn> ' + parseFloat(data.result
                                        .price) / 100 + '</span> </p>';
                                autohome.common.showConfirm('价格变更提示', msg,
                                    {
                                        text: '取消',
                                        onclick: function () {
                                            location.reload();
                                        }
                                    },
                                    {
                                        text: '继续提问',
                                        onclick: function () {
                                            if (onNext)
                                                onNext(parseInt(data.result.price));
                                        }
                                    });
                            }
                        }
                    },
                    error: function (xhr, type) {
                        autohome.common.showToast('获取最新价格失败', 3000);
                    }
                });
            }
        });
    }
    else {
        if (autohome.common.isAutohomeApp()) {
            $("#askContent").on('click', function () {
                window.location.href = '/Weixin/WxUser/AutohomeAppLogin';
            })
            $("#btnAsk").click(function () {
                window.location.href = '/Weixin/WxUser/AutohomeAppLogin';
            });
            $("span[data-type ='_follow']").click(function (e) {
                e.preventDefault();
                window.location.href = '/Weixin/WxUser/AutohomeAppLogin';
            });
        }
        else {
            $("#askContent").on('click', function () {
                window.location.href = "http://account.autohome.com.cn/login?backurl=" + window.location.href;
            })
            $("#btnAsk").click(function () {
                window.location.href = "http://account.autohome.com.cn/login?backurl=" + window.location.href;
                //window.location.href = "http://account.m.autohome.com.cn?rt=1";
            });
            $("span[data-type ='_follow']").click(function (e) {
                e.preventDefault();
                window.location.href = "http://account.autohome.com.cn/login?backurl=" + window.location.href;
                //window.location.href = "http://account.m.autohome.com.cn?rt=1";
            });
        }
    }


    </script>

