<script type="text/javascript">
    $(function() {
        
    });

    //获取wx配置并注册事件。
    function _getWxConfigAndRegister() {
        $.ajax({
            type: 'POST',
            url: '/Weixin/Ajax/GetWxConfig',
            data: { url: encodeURI('/Weixin/WxUser/Index/387650bc-9aef-4f55-8ad7-c2f4986e89fe'), jsapis: 'onMenuShareTimeline,onMenuShareAppMessage' },
            dataType: 'json',
            success: function(data) {
                if (data.returncode === -1) {
                    autohome.common.showToast(data.message, 3000);
                } else {
                    wx.config(JSON.parse(data.message));
                    console.log("wx config ok");
                }
            },
            error: function(xhr, type) {
                //autohome.common.showToast(JSON.stringify(xhr), 3000);
            }
        });
    }

    //注册分享事件，当wxconfig执行完后执行该回调。
    wx.ready(function () {
        _onMenuShareTimeline();
        _onMenuShareAppMessage();
    });

    //朋友圈分享。
    function _onMenuShareTimeline() {
        var data = {"title":"呃取什么名字能...，马路杀手，在老司机等你来问","link":"http://payqa.autohome.com.cn/Weixin/WxUser/Index/387650bc-9aef-4f55-8ad7-c2f4986e89fe","imgUrl":"https://wx.qlogo.cn/mmopen/EfrueysCm38ib0KA4C6l10iaTeJC4fJCIibVG2Z1JdrnlnMUr9icoGwfIlcfgYyM3AqENyAA6uHmH0deLph6Cd3rspA15xt9BVWn/0"};
        if (!data)
            return;
        data.success = function () {
            autohome.common.showToast("分享成功", 3000);
        }
        data.cancel = function () {
            autohome.common.showToast("您取消了分享", 3000);
        }
        wx.onMenuShareTimeline(data);
    }

    //发送给朋友。
    function _onMenuShareAppMessage() {
        var data = {"title":"呃取什么名字能...，马路杀手，等你来问","desc":"老司机|值得付费的汽车问答","link":"http://payqa.autohome.com.cn/Weixin/WxUser/Index/387650bc-9aef-4f55-8ad7-c2f4986e89fe","imgUrl":"https://wx.qlogo.cn/mmopen/EfrueysCm38ib0KA4C6l10iaTeJC4fJCIibVG2Z1JdrnlnMUr9icoGwfIlcfgYyM3AqENyAA6uHmH0deLph6Cd3rspA15xt9BVWn/0","type":"link","dataUrl":""};
        if (!data)
            return;
        data.success = function () {
            autohome.common.showToast("给朋友发送成功", 3000);
        }
        data.cancel = function () {
            autohome.common.showToast("您取消了发送", 3000);
        }
        wx.onMenuShareAppMessage(data);
    }
</script>

