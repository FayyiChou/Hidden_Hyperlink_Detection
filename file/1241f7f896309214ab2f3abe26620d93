<script type="text/javascript">
$(function(){
$("#keyword").bigAutocomplete({
	url:"/getSearchAjax.jhtml",
	callback : function(data){
        querySubmit();
    }
});
$('#keyword').bind('keyup change', function(ev) {
        var v = $(this).val();
        $('body').removeHighlight();
        if (v) {
            $('body').highlight(v);
        }
    });
})
function setQueryWay(v){
	$('#queryWay').val(v);
	$('#keyword').focus();
	querySubmit();
}
function querySubmit(){
	var keyword=$.trim(deleteHtmlTag($('#keyword').val()));
	if(keyword ==""){
		$('#keyword').focus();
		return;
	}
	var queryWay=$('#queryWay').val();
	if(queryWay=="0"){
    	window.location.href="/query.jhtml?keyword="+keyword;
	}
	if(queryWay=="1"){
    	window.open("https://www.heanbian.com/open/view/artNew.jsp?keyword="+keyword);
	}
	if(queryWay=="2"){
		window.open("http://zhannei.baidu.com/cse/site?cc=www.heanbian.com&q="+keyword);
	}
}
</script></div>
