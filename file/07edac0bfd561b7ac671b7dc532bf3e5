function imgsize(objImg){
var img = new Image();
img.src = objImg.src;

var w = img.width;
var h = img.height;

var Ratio= w/h;
if (Ratio>1){
	if(w>500){
objImg.width = 500;  //如果图片宽度大于高度，控制宽度，高度自适应缩放
	};
}else{
	if(h>500){
objImg.height = 500; //如果图片高度大于宽度，控制高度，宽度自适应缩放
	
	}
	
}

}


</script> 
