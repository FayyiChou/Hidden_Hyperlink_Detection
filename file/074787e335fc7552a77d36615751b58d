      if (_ua.Tablet || _ua.Mobile) {
        $(window).on('load', function(){
          $('.lead--hdlogo').removeClass('hover');

          var mb_transformProp = '<style type="text/css">.lead--hdlogo:hover {-webkit-transform: scale(1.1, 1.1);-moz-transform: scale(1.1, 1.1);-ms-transform: scale(1.1, 1.1);-o-transform: scale(1.1, 1.1);transform: scale(1.1, 1.1);}</style>';
          $('head').append(mb_transformProp);
        });

        $('.lead--hdlogo').on('touchstart', function(){
          console.log($(this));
          $(this).addClass('hover');
        }).on('touchend', function(){
          $(this).removeClass('hover');
        });

      } else {
        $(window).on('load', function(){
          var pc_transformProp = '<style type="text/css">.lead--hdlogo:hover {-webkit-transform: scale(1.1, 1.1);-moz-transform: scale(1.1, 1.1);-ms-transform: scale(1.1, 1.1);-o-transform: scale(1.1, 1.1);transform: scale(1.1, 1.1);}</style>';
