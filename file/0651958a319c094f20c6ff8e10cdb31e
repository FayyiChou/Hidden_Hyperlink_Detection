            function setone() {
                var t = setTimeout(function () {
                    show(1);
                    clearTimeout(t);
                    settwo();
                }, 3000);
            }
            function settwo() {
                var t = setTimeout(function () {
                    show(0);
                    clearTimeout(t);
                    setone();
                }, 4000);
            }
            setone();
