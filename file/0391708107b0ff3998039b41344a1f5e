<script type="text/javascript">

function Flash() {
    if($(".flash .img").length <2){
        $(".flash .dot").hide();
        return;
    }else{
        $(".flash .dot").show();
    }
    var bn_id = 0,
        bn_id2 = 1,
        speed = 8000,
        rand = false,
        show_id = 0,
        MyMar;
    $(".flash .img").hide();
    $(".flash .img").eq(0).fadeIn("slow");

    function Marquee() {
        bn_id2 = bn_id + 1;
        if (bn_id2 > $(".flash .img").length - 1) {
            bn_id2 = 0;
        }
        $(".flash .img").eq(bn_id).css("z-index", "2");
        $(".flash .img").eq(bn_id2).css("z-index", "1");
        $(".flash .img").eq(bn_id2).show();
        $(".flash .img").eq(bn_id).fadeOut("slow");
        bn_id = bn_id2;
    }

    function RandMarquee() {
        next_id = Math.ceil(Math.random() * $(".flash .img").length) - 1;
        if(next_id == show_id){
            next_id++;
            if(next_id > $(".flash .img").length - 1){
                next_id = 0;
            }
        }
        $(".flash .img").css("z-index", "2");
        $(".flash .img").eq(next_id).css("z-index", "1");
        $(".flash .img").eq(next_id).show();
        $(".flash .img").eq(show_id).fadeOut("slow");
        show_id = next_id;
    }
    if(rand){
        MyMar = setInterval(RandMarquee, speed);
    }else{
        MyMar = setInterval(Marquee, speed);
    }

    $(".flaseLeft").click(function() {
        bn_id2 = bn_id - 1;
        if (bn_id == 0) {
            bn_id2 = $(".flash .img").length - 1;
        }
        $(".flash .img").eq(bn_id).css("z-index", "2");
        $(".flash .img").eq(bn_id2).css("z-index", "1");
        $(".flash .img").eq(bn_id2).show();
        $(".flash .img").eq(bn_id).fadeOut("slow");
        bn_id = bn_id2;
    });

    $(".flaseRight").click(function() {
        Marquee();
    });
};

$(function() {
    //Flash();
    setInterval(function(){
        $('.register').css({
            'top':'382px',
            'margin-top':'-' + ($('.register').outerHeight() /2) + 'px'
        });
    },10);

    //=============顶部切换二维码=============
    // $('.right span').click(function(){
    //     var $this=$(this);
    //         $id=$this.data('id');
    //     $this.siblings('p').remove();
    //     $this.after('<p class="'+$id+'"><img src="/images/web/'+$id+'.jpg"></p>');
    //     setTimeout(function(){
    //         $('.right').find('p').remove();
    //     },5000);
    // });

    //=============二维码动画=============
    var $imgbg=$('.barcode .img'),
        $imgimg=$('.barcode .img').find('img'),
        $sao=$('.sao');

    function go(){
        $imgimg.stop().animate({
            marginLeft: '15px'
        },1000);
        $sao.stop().animate({
            opacity: '1'
        },1000);
    };

    function out(){
        $imgimg.stop().animate({
            marginLeft: '83px'
        },1000);
        $sao.stop().animate({
            opacity: '0'
        },1000);
    };

    $imgbg.hover(function(){
        go();
    },function(){
        out();
    });

    hadeleHover();

    function hadeleHover() {
        $('#handle').hover(function() {
            go();
        }, function() {
            out();
        });
    }
    
    //=============普通登录=============
    var verify=$('.verify');

    function showDrag(){
        $('#login-submit').attr('disabled','disabled');
        verify.text('为了你的账户安全，请拖动滑块完成验证').show();
        $('#drag').html('').show();
        $('#drag').drag({
            success: function(){
                $('#login-submit').removeAttr('disabled');
                dologin();
            }
        });
    }
    $('#login-username').change(function(){
        $.post("http://my2.xizi.com/api/member/login-check", {"username": $('#login-username').val(),u:$("#__jsInput").val()}, function (res) {
            if (res.code != 200) {
                showDrag()
            }
        })
    });

    function dologin(){
        var $username = $('#login-username').val();
        var $password = $('#login-password').val();
        $('#login-submit').attr('disabled','disabled').css('color','#EEE').html('登录中...');
        $.post("http://my2.xizi.com/api/member/login", {"username": $username, "password": $password}, function (res) {
            if (res.code == 200) { //登录成功
                $('#login-submit').removeAttr('disabled').css('color','#FFF').html("登录成功");
                setTimeout(function () {
                    location.href = res.data.referer;//跳转
                }, 500);
            } else if (res.code == 10001) { //这个是密码错误的，需要提示框，还有提示重置密码，链接为 res.data.reset_link
                verify.html(res.err + ' <a href="' + res.data.reset_link + '">找回密码</a>').show();
                $('#login-submit').removeAttr('disabled').css('color', '#FFF').html("登录");
            } else if (res.code == 10003){
                showDrag()
            } else {//失败
                verify.text(res.err).show(); //其他错误
                $('#login-submit').removeAttr('disabled').css('color','#FFF').html("登录");
            }
        });
    }

    $('#login-submit').on('click',function(){
        var $username = $('#login-username').val();
        var $password = $('#login-password').val();
        if($username == ''){
            verify.text('用户名不能为空').show();
            $('#login-username').focus();
            return false;
        } else if ($password =='') {
            verify.text('密码不能为空').show();
            $('#login-password').focus();
            return false;
        }

        $.post("http://my2.xizi.com/api/member/login-check", {"username": $username,u:$("#__jsInput").val()}, function (res) {
            if (res.code == 200) {
                $.getJSON('/api/safety/analyze',{s:$("#__jsInput").val()},function(res){
                    if(res.code == 200){
                        dologin()
                    }else{
                        showDrag()
                    }
                });
            } else { //显示验证码
                showDrag()
            }
        })
    });

    $('#login-password').on('keyup', function(event) {
        if (event.keyCode == "13") {
            $('#login-submit').click();
        }
    });

    //=============扫码登录=============
    var qr_listen,
        tip=0;
    $('#qr-login, .succeed-back, .lose-button').on('click',function(){

        // 进入扫码状态
        $('.login').hide();
        $('.barcode').show();
        $('.open').show();

        // 返回扫码状态
        $('#dimension').show();
        $('#succeed').hide();

        // 失效状态
        $('.lose').hide();

        //二维码加载中，需要个覆盖层
        $('.load').show();

        //图层恢复到8px
        $('#dimension .img').css({
            paddingTop: '8px'
        });

        hadeleHover();

        $.getJSON('http://my2.xizi.com/qr-login/qr-code',function(ret){
            $('#qr-img').attr('src',ret.base64_img);
            $('.load').hide();//二维码加载完毕，去掉覆盖层
            qr_scan(ret.uuid);
        });
    });

    $('.barcode-topright').click(function(){
        if(qr_listen){
            qr_listen.abort();
            qr_listen = null;
            tip = 0;
        }
        $('.barcode').hide();
        $('.login').show();
    });

    function qr_scan(uuid){
        if(qr_listen || $('.barcode').is(':hidden'))
            return;
        qr_listen = $.getJSON('http://my2.xizi.com/qr-login/login',{uuid:uuid,tip:tip},function(res){
            if(res.code == 201){ //等待确认
                $('#dimension').hide();
                $('#succeed').show();
                tip = 1;
            }else if(res.code == 200){ //等待确认
                setTimeout(function () {
                    location.href = res.referer;//跳转
                }, 500);
                return;
            }else if(res.code == 403){
                //tips('您取消了登录！'); //取消登录
                qr_listen.abort();
                qr_listen = null;
                tip = 0;
                $('#dimension, .lose').show();
                $('#succeed, .open').hide();
                $('#dimension .img').css({
                    paddingTop: '25px'
                });
                $('#handle').unbind();
                return;
            }
            qr_listen = null;
            qr_scan(uuid);
        })
    }
  
    $('.wechat').on('click',function(){
        iframe = '<iframe src="https://open.weixin.qq.com/connect/qrconnect?appid=wx772545355056a212&scope=snsapi_login&redirect_uri=http%3A%2F%2Fmy.xizi.com%2Fmy2%2Fuser%2Fcallback%3Ftype%3Dwx&state=FB400DF8-56A6-EF2B-D476-EE2CEC5ADAAB&login_type=jssdk&href=https://my2.xizi.com/css/wxlogin.css" frameborder="0" scrolling="no" width="350px" height="350px"></iframe>';

        $('#wxlogin_container').html(iframe + '<div class="wechat-back">返回西子登录</div>');
        $('.barcode').hide();
        $('.login').hide();
        $('.wxqrcode').show();
        $('.wechat-back').click(function(){
            $('.wxqrcode').hide();
            $('.login').show();
        });
    });
    });
</script>    <script src="/js/style.js"></script><input id="__jsInput" value="" type="hidden">    <span style="display:none;">
