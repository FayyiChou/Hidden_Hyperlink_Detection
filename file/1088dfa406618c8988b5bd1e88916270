    }
});
//删除
function article_comment_delete(id){
    if(confirm('确认要删除吗？')){
        if(id){
            $.post('/articles/article_comment_delete/',{'id':id},function(msg){
                if(msg.succ == 1){
                //$('div#normal').load('/articles/article_reply/' + article_id + '.html');
                $("div#box_contant_"+id).remove();
                } else { 
                 alert('删除失败,系统繁忙');
                }
            },"json");
        }else{
            alert('删除失败,系统繁忙');
        }
    }else{
        return false;
    } 
}
</script> 
     </div> 
    </div> 
   </div> 
