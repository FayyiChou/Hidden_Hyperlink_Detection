  <script language="javascript" type="text/javascript">
$(function(){
    $("#august_div").live('click',function(){
        var css_status = $("#div_hide").css('display');
        if(css_status == 'none'){
            $("#div_hide").css("display","block");
            $(this).addClass("xz");
            $(".test").removeClass("xz");
            $(document).scrollTop($(document).height());
        }else{
            $("#div_hide").css("display","none");
            $(this).removeClass("xz");
        }
    })
})
