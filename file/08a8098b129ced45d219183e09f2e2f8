  <script type="text/javascript">jQuery(document).ready(function () {
    // 评论列表的展示/隐藏
    $(document).on("click", "a[name='btn_open_comment']", function() {
        var _this = $(this);
        var id = _this.attr("id");
        var book_id = "100719";
        var d = _this.parents('.w1000').next('.readingComments');
        if ($.trim(d.html()) == '') {
            $.ajax({
                type: 'post',
                url: '/read/get-chap-comments',
                data: {chap_id: id, book_id: book_id},
                success: function (data) {
                    d.html(data);
                }
            });
        } else {
            d.toggle();
        }
    });

    //提交评论内容
    $(document).on('click', 'a[name=btn_comment]', function () {
        var commentForm = $(this).parent().parent().parent();
        var formData = $(commentForm).serialize();

        $.ajax({
            type : "POST",
            dataType : "json",
            data : formData,
            url : "/comment/commit",
            success : function(data) {
                if( data.code==200 ){
                    $.MsgBox.Alert(data.content);
                    
                    var chap_id = commentForm.find('input[name=chapter_id]').val();
                    var book_id = commentForm.find('input[name=book_id]').val();

                    $.ajax({
                        type: 'post',
                        url: '/read/get-chap-comments',
                        data: {chap_id: chap_id, book_id: book_id},
                        success: function (data) {
                            commentForm.parents('.readingComments').html(data);
                        }
                    });
                }else if( data.code==403 ){
                    $.MsgBox.Alert(data.reason, function(){
                        window.location.href='/user/login';
                    });
                }else{
                    $.MsgBox.Alert(data.reason);
                }
            }
        });
    });
    
    $(document).on('click', 'input[name=btn_sumbit_comment_reply]', function(){
        var _this = $(this);
        var comment_id = _this.data('comment-id'),
            content = _this.prev('input[name=content]').val();

        $.ajax({
            type : "POST",
            dataType : "json",
            data : 'comment_id='+comment_id+'&content='+content,
            url : "/comment/add-reply",
            success : function(data) {
                if( data.code==200 ){
                    $.MsgBox.Alert(data.content);

                    var chap_id = _this.siblings('input[name=chapter_id]').val();
                    var book_id = _this.siblings('input[name=book_id]').val();

                    $.ajax({
                        type: 'post',
                        url: '/read/get-chap-comments',
                        data: {chap_id: chap_id, book_id: book_id},
                        success: function (data) {
                            _this.parents('.readingComments').html(data);
                        }
                    });
                }else if( data.code==403 ){
                    $.MsgBox.Alert(data.reason, function(){
                        window.location.href='/user/login';
                    });
                }else{
                    $.MsgBox.Alert(data.reason);
                }
            }
        });
    });

    $(document).on('click', 'a[name=btn_comment_reply]', function () {
        var _this = $(this);
        _this.parents('dl').next('.over').toggle();
    });

    $(document).on('click', 'a[name=btn_reward]', function () {
        var obj = $(this);  
        //打赏层
        var parent = $(this).parent();
        var _layerHidden = $(parent).prev(".column"); 
        _layerHidden.show();
        
        var btnClose = _layerHidden.find("a[name='btn_close']");
        $(btnClose).bind("click", function(){
            _layerHidden.hide();
        });
        
        var _btnRewardType = _layerHidden.find("a[name='btn_reward_type']");
        var praise_type = 0;
        _btnRewardType.bind("click", function() {
            var _this = $(this);
            praise_type = _this.data('money');
            _this.find("img").removeClass('css_img_reward_type_on');  
            _this.find("img").addClass("css_img_reward_type_on");
        });

        var _btnSubmit = _layerHidden.find("a[name='btn_submit']");
        _btnSubmit.bind("click", function(){
            // if (!praise_type) {
            //     $.MsgBox.Alert('请选择奖励类型');
            //     return false;
            // }
            var num = $("input[name=btn_reward_type]:checked").val();

            $.MsgBox.Confirm("是否确定打赏?", function(){
                var book_id = '100719';
                    // num = num;
                $.ajax({
                    type : "POST",
                    dataType : "json",
                    data : 'book_id='+book_id+'&num='+num,
                    async:true,
                    url : "/book/reward",
                    success : function(data) {
                        if( data.code==200 ){
                            $.MsgBox.Alert(data.content);
                        }else if( data.code==403 ){
                            $.MsgBox.Alert(data.reason, function(){
                                window.location.href='/user/login';
                            });
                        }else{
                            $.MsgBox.Alert(data.reason);
                        }
                    }
                });
            });
        }); 
    });
    
    document.body.ondragstart = document.body.oncopy = document.body.oncut = document.body.oncontextmenu = function () { return false };
    
    $(window).scroll(function() {
        if ($(window).scrollTop() + $(window).height() >= $(document).height()) {
            if (!isLoading) {
                isLoading = true;
                nextChapter();
            }
        }
    });
    var t=$("#js-showrecord"),n=$("#js-showrecord-content");
    $("#js-showrecord,#js-showrecord-content").on("mouseenter",function(e){
        n.is(":visible")||(t.addClass("dropdown-toggle-open"),n.show());
    });
    $("#js-showrecord,#js-showrecord-content").on("mouseleave",function(e){
        n.is(":visible")&&(t.removeClass("dropdown-toggle-open"),n.hide())
    });

            // image lazyload
            $("img.lazy").lazyload({
                threshold : 200
            });


            // 收藏
            $('#add-favorite').on('click', function () {
                var url = window.href,
                    title = '顺网小说';
                try {
                    window.external.AddFavorite(url, title);
                } catch(e) {
                    try {
                        window.sidebar.addPanel(title, url, "");
                    } catch(e){
                        alert("抱歉，您所使用的浏览器无法完成此操作。加入收藏失败，请使用Ctrl+D进行添加");
                    }
                }
            });
    
