  <script type="text/javascript">
    var isLoading = false;
    
    var book_id = 100719;
    function doTop() {
        $(document.documentElement).animate({
            scrollTop : 0
        }, 200);
        //支持chrome
        $(document.body).animate({
            scrollTop : 0
        }, 200);
    }

    function nextChapter() {
        var nextId = $("#maincontent").attr('nextId');
        if (nextId == null || parseInt(nextId) < 1) {
            $.MsgBox.Alert("已经是最后一章");
            $("#loading").hide();
            return ;
        }

        var url = "/read/next/";

        $.ajax({
            type : "POST",
            dataType : "json",
            data : 'nextId='+nextId,
            async:true,
            url : url,
            success : function(data) {
                if( data.code==302 ){
                    if( data.content.errorMsg=='qsLogin' ){
                        window.location.href = '/user/login';
                        return false;
                    }else{
                        window.location.href="/read/"+nextId+".html";
                        // window.location.href = '/read/buy?balance='+data.content.balance+'&fee='+data.content.fee+
                                // '&book_name='+data.content.book_name+'&book_id='+book_id+'&chapter_id='+nextId;
                        return false;
                    }
                }else if( data.code==403 ){
                    window.location.href='/recharge/index';
                    return false;
                }else{
                    var read = data.content;
                }


                $('#curId').val(nextId);
                if( !read ){
                    $.MsgBox.Alert("已经是最后一章");
                    $("#loading").hide();
                    return ;
                }
                $("#clickNextChapter").remove();
                var str_author_words = '';
                if( read.author_words ){
                    str_author_words =  '<div class="author-say pos_r"><div class="says"><p><span class="red">'+ read.author_name +'</span> 说：</p><p>'+read.author_words+'</p></div><p class="ft-sj"></p></div>';
                }


                var praise_pop = '<div class="column columns" style="display:none;bottom: 150px;">';
                praise_pop += $('.column').html();
                praise_pop += '</div>';

                var html = '<div class="w1000 rd-ct pos_r"><div class="read-font f14"><h1 class="ac">'+read.name+'</h1>'+
                    '<div class="time ac f12">作者：'+ read.author_name +' | 发布时间 | '+ read.release_time +' | 字数：'+ read.word_size +'</div>'+
                    '<div class="read-ft" style="line-height:200%;font-size:16px;">'+ read.content +'</div>' +
                    str_author_words +
                    praise_pop +
                    '<div class="rd-bt pos_r">'+
                    '<a href="javascript:void(0);" class="zan1 zan2 fr" name="btn_open_comment" id="'+ nextId +'">评论（<strong class="yellow">'+ read.reviews_num +'</strong>）</a>'+
                    '<a href="javascript:void(0);" class="zan3" name="btn_reward" id="'+ nextId +'"></a>' +
                    '</div>'+
                    '</div>'+
                    '<div id="clickNextChapter" onclick="nextChapter()" class="ac f16 zjz" style="cursor: pointer;"> <a>点击获取下一章</a></div></div>' +
                    '<div class="readingComments change_comment"></div>';

                $("#maincontent").append(html);
                $("#maincontent").attr('nextId', read.nextChapterId);
                $("#loading").hide();
                isLoading = false;
//                initBtnReward();
//                initBtnPraise();
//                initBtnOpenComment();
            }
        });
    }

    //开灯
    function doSwitch() {
        var maincontentCss = $("#maincontent").attr("class");
        if (maincontentCss == null || maincontentCss == "") {
            $("#maincontent").addClass("readd-bg");
        } else {
            $("#maincontent").removeClass("readd-bg");
        }
    }

    //投票
    function doGolden() {
        $.MsgBox.Confirm("是否确定进行投票", function() {
            $.ajax({
                type : "POST",
                dataType : "json",
                data : 'book_id='+book_id,
                async:true,
                url : "/read/golden",
                success : function(data) {
                    if( data.code==200 ){
                        $.MsgBox.Alert(data.content);
                        window.location.reload();
                    }else if( data.code==403 ){
                        $.MsgBox.Alert(data.reason);
                    }else{
                        $.MsgBox.Alert(data.reason);
                    }
                }
            });
        });
    }

