<script>
	$(function(){
		$('.js-focus').each(function(){
			var _this = $(this);
			var num = _this.find('li').size();
			new Swiper(_this,{
				//autoplay:5000,
				slidesPerView :1,
			   // visibilityFullFit : true,
				pagination: _this.find('.swiper-nav'),
				prevButton:_this.find('.btn-prev-arrow'),
				nextButton:_this.find('.btn-next-arrow'),
				onSlideChangeEnd: function(swiper){
					var i = swiper.activeIndex;
					_this.find('.swiper-num .cur').text(i+1);
				}
			});
			_this.find('.swiper-num .total').text(num);
		});
		$('.js-channel').each(function(){
			var _this = $(this),channelNav = $('.js-channel .swiper-channel'),
			channelContent = $('.js-channel .player-swiper')
			var swiperNav = new Swiper(channelNav,{
				 freeMode : true,
				slidesPerView : 'auto'
			});
			var swiperCont = new Swiper(channelContent,{
				onSlideChangeEnd: function(swiper){
					var i = swiper.activeIndex;
					$('.js-channel .swiper-channel .swiper-slide').eq(i).addClass('active').siblings().removeClass('active');
					swiperNav.slideTo(i);
				}
			});
			$('.js-channel .swiper-channel .swiper-slide:eq(0)').addClass('active');
			$('.js-channel .swiper-channel .swiper-slide').click(function(){
				var _this = $(this)
				if(_this.hasClass('active')){
					return;
				}
				_this.addClass('active').siblings().removeClass('active');
				swiperCont.slideTo(_this.index(), 300, false);
			});

		});
		$('.js-scroll').each(function(){
			var _this = $(this);
			new Swiper(_this,{
				pagination: _this.find('.swiper-nav'),
				slidesPerView:2,
		        slidesPerGroup : 2,
		        paginationClickable: true
			});
		});
		$('.js-scroll-ex').each(function(){
			var _this = $(this);
			new Swiper(_this,{
		       slidesPerView:'auto'
			});
		});
		$('.js-tab').each(function(){
			var _this = $(this),
				tab_item = _this.find('.tab a');
			var tab_swiper = new Swiper(_this.find('.swiper-container'),{
				pagination: _this.find('.swiper-nav'),
				onSlideChangeStart: function(){
					_this.find('.tab .active').removeClass('active');
					tab_item.eq(tab_swiper.activeIndex).addClass('active');
				}
			});
			tab_item.on('touchstart mousedown',function(e){
				e.preventDefault();
				_this.find('.tab .active').removeClass('active');
				$(this).addClass('active');
				tab_swiper.slideTo($(this).index());
			});

			tab_item.click(function(e){
				e.preventDefault();
			});
		});

		$('.comm-hd .btn-toggle-arrow').on('click',function(){
			var _this = $(this)
			if (!_this.hasClass('hide')) {
				_this.addClass('hide').parents('section').find('.comm-bd').hide();
			}else{
				_this.removeClass('hide').parents('section').find('.comm-bd').show();
			};
			
		});
		$('.js-more').each(function() {
			var _this = $(this),
				p =_this.find('.active');
				var $moreItems = p.nextAll();
				$moreItems.hide();
			p.click(function() {
				if(p.hasClass('active')){
					$moreItems.show();
					p.appendTo(_this);
					p.removeClass('active');	
					p.find('a').text('收起')
				} else{
					$moreItems.hide();
					p.find('a').text('更多');
					p.addClass('active');	
				}
			});
		});
		$(window).scroll(function(){
			if($(window).scrollTop()>$('.js-focus').scrollTop()){
				$('.btn-gotop-arrow').fadeIn();
			}else{
				$('.btn-gotop-arrow').fadeOut();
			}
		});
		$('.btn-gotop-arrow').click(function(){
			$(document).scrollTop(0);
		})
	});
</script>
<script type="text/javascript">
var fixedNav = function(){
       var y = $(window).scrollTop(),
        h_header = $('.topbar').height();
    if(y > h_header){
        $('.nav').addClass('fixed');   
    }else{
        $('.nav').removeClass('fixed');   
    }
}
var goTop = function(){
	if($(window).scrollTop()>$('.js-focus').scrollTop()){
			$('.btn-gotop-arrow').fadeIn();
		}else{
			$('.btn-gotop-arrow').fadeOut();
		}
}
$(window).scroll(function(){
		fixedNav();
		goTop();
	});
$('.btn-gotop-arrow').click(function(){
	$(document).scrollTop(0);
});

</script>
