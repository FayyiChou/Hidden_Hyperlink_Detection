    'content' : jQuery('#data').html(),
    'beforeClose' : function(){
      setTimeout(function(){jQuery.cookie('signup_dismissed', 1, {
        expires: 182, path: '/' // expires after 6 months day
      });}, 0);
    }
  });  
    
          }, 2000);
              
      } else {
          visited++; // increase counter of visits
          // set new cookie value to match visits
          jQuery.cookie('signup_visited', visited, {
              expires: 182, path: '/' // expires after 6 months day
          });
      }          
    }
    
  //jQuery("a#inline").fancybox({
	//	'hideOnContentClick': true
