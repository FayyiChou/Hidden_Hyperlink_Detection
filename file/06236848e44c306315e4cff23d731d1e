<script type="text/javascript">
function searchclick() {
  if (jQuery(".sb-search").data('shown') == '1') {
    if (jQuery('#edit-search-block-form-1').val() == "") {
      jQuery(".sb-search").css('min-width','1px');
      jQuery(".sb-search").data('shown', "0");
    } else {
      jQuery('#search-block-form').submit();
    }
  } else {
    jQuery(".sb-search").css('min-width','240px');
    jQuery(".sb-search").data('shown', "1");
    var position = jQuery("#search_li").position();
    jQuery(".sb-search").css('top',position.top-2);
    jQuery(".sb-search").css('left',position.left - 220);
    //alert(position.left);
    
    jQuery('#edit-search-block-form-1').focus();
  }
}

jQuery(document).ready(function() {
  jQuery(".sb-icon-search" ).click(function() {
    searchclick();
  });
  jQuery(".sb-word-search" ).click(function() {
    searchclick();
  });
  jQuery("#exh-forth-link").click(function() {
    jQuery("#exh-forth-wrap").addClass("exh-tab-active");
    jQuery("#exh-forth-wrap").removeClass("exh-tab-inactive");
    jQuery("#exh-prev-wrap").addClass("exh-tab-inactive");
    jQuery("#exh-prev-wrap").removeClass("exh-tab-active");
    jQuery(".exh-forthcoming").css('display','block');
    jQuery(".exh-previous").css('display','none');
    return false;
  });
  jQuery("#exh-prev-link").click(function() {
    jQuery("#exh-prev-wrap").addClass("exh-tab-active");
    jQuery("#exh-prev-wrap").removeClass("exh-tab-inactive");
    jQuery("#exh-forth-wrap").addClass("exh-tab-inactive");
    jQuery("#exh-forth-wrap").removeClass("exh-tab-active");
    jQuery(".exh-forthcoming").css('display','none');
    jQuery(".exh-previous").css('display','block');
    return false;
  });
});

</script>
