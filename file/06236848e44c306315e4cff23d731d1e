      jQuery('.tab-hover').removeClass('tab-hover');
    }
    
    var visited = jQuery.cookie('signup_visited'); // visited = 0
    if (isNaN(visited)) {
      visited = 0;
    }
    var dismissed = jQuery.cookie('signup_dismissed');
    if (isNaN(dismissed)) {
      dismissed = 0;
    }
    
    if (dismissed == 0) {
    
//      if (visited >= 2) {
      if (true) {
          // open fancybox after 2 secs on 4th visit or further on the same day
          setTimeout(function () {
