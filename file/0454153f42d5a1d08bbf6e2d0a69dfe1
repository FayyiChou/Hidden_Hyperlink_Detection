        function  commentPage(){
            $(".comment-more").hide();
            $(".notice").text("数据加载中···");
            $thread_id = "20090442";
            $object_id = "138902";
            page++;
            $.ajax({
                type: 'get',
                url:  '/wap/comment/list',
                data: { thread_id : $thread_id,object_id :$object_id,page : page },
                dataType: "json",
                success: function(data) {
                    if(data['code'] == 1 && data['data']['stateCode'] == 1){
                        list = data['data']['returnData']['commentList'];
                        var html="";
                        html += '<ul class="comic-comment-list   list_'+page+'">'
                        for(var i=0;i<list.length;i++) {
                            if(list[i]['content_filter']){
                                html += '<li>'
                                html += '<div class="photo-box">'
                                html += '<img src="'+list[i]['face']+'">'
                                html += '</div>'
                                html += '<div class="ccl-name-box">'
                                html += ' <span class="ccl-name">'+list[i]['nickname']+'</span>'
                                if(list[i]['group_user'] == 1 || list[i]['group_author'] == 1){
                                    html += '<span class="tag-vip">'+list[i]['level']['level']+'</span>'
                                }
                                html += '</div>'
                                html += '<div class="comment-info">'+list[i]['content_filter']+'</div>'
                                html += '<div class="comment-time">'+list[i]['create_date']+'</div>'
                                html += '</li>'
                            }
                        }
                        html += '</ul>'
                        if(page == 1){
                            $(".comic-comment-list").append(html);
                            a=0;
                        }else{
                            $count= page-1;
                            $(".list_"+$count).append(html);
                            a=0;
                        }
                        $(".notice").text("");
                        $(".comment-more").show();
                        if(data['data']['returnData']['over'] == 'Y'){
                            $(".comment-more").hide();
                        }
                    }

                },
                error: function(data) {
                    alert("网路请求异常");
                }
            });

            tongji(147);

        }
        //收藏
