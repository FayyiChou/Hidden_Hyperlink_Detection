        function comicInfo_setSVGSize() {
            var comicCover = $('.comic-cover'),
                    svgSize = {
                        w: comicCover.width(),
                        h: comicCover.height()
                    },
                    svgDoms = [
                        document.getElementById('comic-cover'),
                        document.getElementById('svg_rect'),
                        document.getElementById('svg_feImage')
                    ],
                    svgOffset = [
                        0, 0, 50
                    ];
            svgDoms.forEach(function (dom, index) {
                dom.setAttribute('width', String(svgSize.w + svgOffset[index]));
                dom.setAttribute('height', String(svgSize.h + svgOffset[index]));
            });
        }
