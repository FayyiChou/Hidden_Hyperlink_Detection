        <script type="text/javascript">
            //滚动监听
            function ftab() {
                var _top = $(".f-tab-cot").offset().top;
                var stop = $(window).scrollTop();
                if (stop > _top) {
                    $("#f-tab").addClass("f-fixed");
                } else {
                    $("#f-tab").removeClass("f-fixed");
                }
            }

            $(function () {
                $(window).scroll(function () {
                    ftab();
                });
                $("#f-tab").find("span").click(function () {
                    var index = $(this).index();
                    $("#f-tab").find("span").removeClass("current").eq(index).addClass("current");
                    $(".tabcot").hide().eq(index).show();
                    $(window).scrollTop($(".f-tab-cot").offset().top)
                });
            });   
        </script>
