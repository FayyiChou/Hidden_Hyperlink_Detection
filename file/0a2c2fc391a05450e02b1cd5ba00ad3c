$(document).ready(function(){
var floatcon = '<div class="newsfix" id="newsfix" style="display:;"><h4>百科快讯</h4><iframe scrolling="no" frameborder="0" marginwidth="0" marginheight="0" width="330" height="81" src="http://www.baike.com/newtop/bknews.html"></iframe><a class="close" onclick="$(\'#newsfix\').hide()">关闭</a></div>';

    var stylecon = '<style type="text/css">.newsfix h4,.newsfix .close{background: url(http://www.huimg.cn/xiaobaike/images/public/pop_information.png) no-repeat;_background: url(http://www.huimg.cn/xiaobaike/images/public/pop_information.gif) no-repeat;}.newsfix{width: 330px;height: 81px;border:#f7d7ac solid 1px;background: #fff9e7;position: fixed;bottom:0;left:50%;margin-left:-208px;z-index: 99;padding-left:42px;}html .newsfix{_position: absolute;_top:expression(eval(document.documentElement.scrollTop+document.documentElement.clientHeight-this.offsetHeight-(parseInt(this.currentStyle.marginTop,10)||0)-(parseInt(this.currentStyle.marginBottom,10)||0)))}.newsfix h4{background-position:0 0;width: 37px;height: 83px;position: absolute;left:-7px;top:-1px;line-height: 99em;overflow: hidden;}.newsfix .close{background-position: -38px 0;width: 38px;height: 83px;display: block;overflow: hidden;position: absolute;right: -38px;top:0px;line-height: 99em;overflow: hidden;}</style>';
    
$("body").append(stylecon + floatcon);
})
</script>


