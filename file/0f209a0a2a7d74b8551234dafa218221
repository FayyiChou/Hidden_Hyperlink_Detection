<script type="text/javascript">
    //限制textArea的长度
    function LimitMaxLength(obj){
         var leng= obj.value.length;
         var len=parseInt($(obj).attr('maxlength'));
         if(leng>len){
             obj.value=obj.value.substr(0,len);
         }
     }
