<script type="text/javascript"  defer="defer">

setInterval(function(){
	var Hbox=$(".h_right .box").height()*0.02;
	var Hbox1=$(".h_right .box").height()*0.04;
	var Hb=$(".b_news").height()+Hbox+Hbox1;
	$(".h_right .box").css({"padding-top":Hbox+"px","padding-bottom":Hbox1+"px"})
	$(".b_about").css({"height":Hb+"px","overflow":"hidden"})
	
},1000);

$(window).resize(function(){
	var Hbox=$(".h_right .box").height()*0.02;
	var Hbox1=$(".h_right .box").height()*0.04;
	var Hb=$(".b_news").height()+Hbox+Hbox1;
	$(".h_right .box").css({"padding-top":Hbox+"px","padding-bottom":Hbox1+"px"})
	$(".b_about").css({"height":Hb+"px","overflow":"hidden"})
})

window.onload=function(){
	var Hbox=$(".h_right .box").height()*0.02;
	var Hbox1=$(".h_right .box").height()*0.04;
	var Hb=$(".b_news").height()+Hbox+Hbox1;
	
	$(".h_right .box").css({"padding-top":Hbox+"px","padding-bottom":Hbox1+"px"})
	$(".b_about").css({"height":Hb+"px","overflow":"hidden"})
	}
</script>
