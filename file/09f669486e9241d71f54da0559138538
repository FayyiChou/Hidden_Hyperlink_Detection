	$(function() {
		$('.article-content a').each(function(i,a){
			var $a = $(a);
			if(!$a.attr('target')) 
			{
				$a.attr('target','_blank');
			}
		});
		$('#zeroclipboard').attr('data-clipboard-text', location.href)
	});
	</script> 
