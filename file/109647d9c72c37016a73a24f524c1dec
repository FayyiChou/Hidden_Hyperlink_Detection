                    $(this).removeClass('sanjiao-up');
                    $(".sanjiao-down").css({"top":"210px","bottom":"auto"});
                    $("#left-bank-list-box").css("height","230px");

                }else{
                    $(this).addClass('sanjiao-up');
                    $(".sanjiao-down").css({"top":"auto","bottom":"0"});
                    $("#left-bank-list-box").css("height","auto");
                }
            })
        })
        
    </script>
    <script type="text/javascript">
        $(function() {
            $('.succesny').olvSlides({
                thumb: true,
                thumbPage: true,
                thumbDirection: "Y",
                effect: 'fade'
            });
        })
    </script>
    <script type="text/javascript">

        $(function(){
            $(".thumbPrev").hide();
            $(".thumbWrap").each(function(k,v){
                var len=$(v).find(".thumbCont").find('ul').find('li').length;
                if(len<=3){
                    $(v).find(".thumbPrev").hide();
                    $(v).find(".thumbNext").hide();
                }
                var fun = function(){
                    var oul = $(v).find(".thumbCont ul").position().top;
                    if(oul==0){
                        $(v).find(".thumbPrev").hide();
                    }else{
                        $(v).find(".thumbPrev").show();
                    }
                    var heightbr = $(v).find(".thumbCont ul").height();
                    var aa = heightbr-80;

                    if(-oul>=aa){
                        $(v).find(".thumbNext").hide();
                    }else{
                        $(v).find(".thumbNext").show();
                    }
                }
                $(v).find(".thumbPrev").on("click",function(){
                    fun();
                });
                $(v).find(".thumbNext").on("click",function(){
                    fun();
                });
            })
        });

    </script>
    

