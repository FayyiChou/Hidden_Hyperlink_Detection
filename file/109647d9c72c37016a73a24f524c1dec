<script type="text/javascript">
var get_ra_first_apply=0;
window.get_ra=function()
{
    var ra_pid = "4d998545e2fac9363384aa4c0bb454d3";
    if ($('#ra_pid').length > 0)
    {
        ra_pid = $('#ra_pid').val();
    }
    var url = "%2Fcredit%2Fcard%2F55342206f011252731f06feb518bfa05";
    var rf = encodeURIComponent(document.referrer);
    var host = "https%3A%2F%2Fwww.rong360.com";
    var abclass = $.cookie('abclass').split('_');
    if(abclass.length > 1)
    {
        abclass = abclass[1];
    }
    else
    {
        abclass = abclass[0];
    }
    
    var ext_str = '';                                            
    
    var page_name = '';
                page_name += '&page_name=credit_card_detail';
                var contrl_name = "card";
    var action_name = "view";
    if(contrl_name == "youhui" && action_name == "index"){
        action_name = "list";
    }
    var u_img='//g.rong360.com/u.gif?rid=' + ra_gc('RONGID') + '&access_id=2ts0a1eh5nftmh1eq97rdorl02' + '&ca='+contrl_name+'/'+action_name+'&tpl=/www/credit/view/card/view.tpl&url=' + url + '&rf=' + rf + '&host=' + host + '&city=beijing&pid=' + ra_pid + '&uf=o_cdb2788873f452cfc003596ea879ac76&abclass=' + abclass + '&ga_csr=&ga_ccn=&ga_cmd=&ga_ctr=&rtm=' + ra_gc('__rtm');
    if(get_ra_first_apply==0){ 
        u_img+='&ext=';
        u_img+=encodeURIComponent(ext_str);
        u_img+='&page_name=';
        u_img+=encodeURIComponent(page_name);
        u_img+='&channel=credit';
    }
    get_ra_first_apply++;
    return u_img;
}    
</script>
