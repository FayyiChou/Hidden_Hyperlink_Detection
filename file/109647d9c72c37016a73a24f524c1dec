    <script>
    $(function(){
        var fenqi = {
            '0':['3', '2.25'],
            '1':['6', '3.9'],
            '2':['12', '7.8'],
            '3':['18', '12.06'],
            '4':['24', '16.08']
        };
        var amount = 1;
        var index = 2;
        var calc = function(){
            var feeRate = parseFloat(fenqi[index][1])/100;
            var count = parseInt(fenqi[index][0]);
            var monthAmount = amount*(1+feeRate)/count*10000;
            var totalFee = amount*feeRate*10000;
            var dayFee = totalFee/(count*30);
            $("#calc-amount").text(amount);
            $("#calc-qishu").text(count);
            $("#calc-month-amount").text(monthAmount.toFixed(2));
            $("#calc-total-fee").text(totalFee.toFixed(2));
            $("#calc-day-fee").text(dayFee.toFixed(2));
            $(".qishu").css("visibility","hidden");
            $(".qishu"+index*6).css("visibility","visible");
            $(".jine").css("visibility","hidden");
            $(".jine"+amount).css("visibility","visible");
        };
        $( "#slider-jine" ).slider({
            value:1,
            min: 0,
            max: 10,
            step: 1,
            slide: function( event, ui ) {
                amount = ui.value;
                calc();
            }
        });
        $( "#slider-qishu" ).slider({
            value:2,
            min: 0,
            max: 4,
            step: 1,
            slide: function( event, ui ) {
                index = ui.value;
                calc();
            }
        });

        $.fn.zscroll = function(opts){
            return this.each(function(){
                var self = this;
                var me = { };
                me.opts = $.extend({
                    step:1,
                    interval:3000,
                    loop:true,
                    screenItems:3
                }, opts);
                me.$scroller = $(opts.scroller, this);
                me.$scrollItems = $(opts.scrollItem, this);
                me.maxIndex = me.$scrollItems.length-1;
                me.prevIndex = 0;
                me.index = 0;
                me.nextIndex = 0;
                me.animates = { };
                me.step = me.opts.step;
                me.itemWidth = me.opts.itemWidth||me.$scrollItems.width();
                me.screenItems = me.opts.screenItems;
                me.loop = me.opts.loop;
                me.interval = me.opts.interval;
                me.timer = null;

                me.$prev = $(me.opts.prev, this);
                me.$next = $(me.opts.next, this);

                me.init = ('function' == typeof me.opts.init)?me.opts.init:function(){
                    me.$scroller.css({ 'position':'absolute' });
                };
                me.init();

                me.scroll = opts.scroll||function(){
                    me.$scroller.animate(me.animates);
                };

                me.scrollTo = function(index){
                    this.prevIndex = this.index;
                    this.index = index;
                    var left = -this.index * me.itemWidth;
                    me.animates.left = left;
                    this.opts.beforeScroll && this.opts.beforeScroll.call(this);
                    me.scroll();
                    this.opts.afterScroll && this.opts.afterScroll.call(this);
                };
                me.prev = function(){
                    var prev = me.index-me.step>-1?me.index-me.step:(me.loop?me.maxIndex-me.screenItems:0);
                    prev = prev<0?0:prev;
                    if(!me.loop && prev==me.index){
                        return false;
                    }
                    me.scrollTo(prev);
                };
                me.next = function(){
                    var next = (me.index+me.step>(me.maxIndex-me.screenItems+1))?(me.loop?0:me.maxIndex-me.screenItems+1): me.index+me.step;
                    next = next<0?0:next;
                    if(!me.loop && next==me.index){
                        return false;
                    }
                    me.scrollTo(next);
                };
                me.$prev.length && me.$prev.click(function(){
                    me.prev();
                });
                me.$next.length && me.$next.click(function(){
                    me.next();
                });
            });
        };
        $('.gundong').zscroll({
            scroller:'ul',
            scrollItem:'li',
            prev:'.prev',
            next:'.next',
            itemWidth: 210,
            step:3,
            loop:false
        });

        $('span[data-toggle="tooltip"]').tooltip({
            container: 'body',
            placement: 'top'
        });
    });


