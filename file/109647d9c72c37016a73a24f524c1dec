<script type="text/javascript">
$(function(){
    $('[ra-click=apply]').click(function(){
        var url = $(this).attr('href')?$(this).attr('href'):"";
        var rf = "%2Fcredit%2Fcard%2F55342206f011252731f06feb518bfa05";
        var pageName=$(this).attr("data-pagename");
        var imgSrc = "";
        if(rf == '')
        {
            rf = window.location.href;
        }
        if(url !== undefined)
        {
            imgSrc = get_ra() + "&ca=card/apply&tpl=&url=" + url + "&rf=" + rf+"&page_name=";
        }
        if(pageName){
            imgSrc += encodeURIComponent('&page_name='+pageName);
        }else{
            imgSrc += encodeURIComponent('&page_name=credit_card_apply_guanwang');
        }
        img.src = imgSrc;
    });
});
</script>



