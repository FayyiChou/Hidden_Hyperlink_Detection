    <script>

        addfixed();
        //添加固定定位
        function addfixed(){
            var $menu=$(".bank-tab");
            var $loan_t=$(".loan_t");
            var menu_top=$menu.offset().top;
            $(window).on("scroll",function(){

                if($(this).scrollTop()>menu_top){
                    $menu.css("position","fixed");
                    $menu.css("top","0");

                }else{
                    $menu.css("position","relative");
                }
            });
        }
        $(function(){
            $(".bank-tab>ul>li>a").eq(0).addClass("high");
            $(".but").on("click",function(e){
                //给当前li添加高亮，其他li移除高亮
                $(this).addClass("high").siblings().removeClass("high");
                $("html,body").animate({
                    scrollTop:$($(this).attr("href")).offset().top}, 500);

        });

        })
    </script>
