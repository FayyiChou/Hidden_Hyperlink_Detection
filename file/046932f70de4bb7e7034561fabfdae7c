	<script type="text/javascript">
    var min= 0,max=2, count;
    $(document).ready(function(){
        count=$(".about-award-list .col-md-3").length;
        if(count>3){
            for(var i=count;i>3 ;i--){
                $(".about-award-list .col-md-3").eq(i-1).hide();
            }
        }
    $("#award_prev").click(function(){
            if(min>0  &&  count>3) {
            	$(".about-award-list .col-md-3").eq(min+2).hide();
                $(".about-award-list .col-md-3").eq(min-1).show();
                min = min -1;
                max = max -1;
            }
        });
        $("#award_next").click(function(){
            if(max<count-1  &&  count>3) {
            	$(".about-award-list .col-md-3").eq(max-2).hide();
                $(".about-award-list .col-md-3").eq(max+1).show();
                min = min +1;
                max = max +1;
            }
        });
    });

</script>

