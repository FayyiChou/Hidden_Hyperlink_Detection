    <script type="text/javascript">
        //浏览器原生支持placeholder?
        function isplaceholder() {
            return 'placeholder' in document.createElement('input')
        };

        function getCookie(name) {
            var arr,
                reg = new RegExp("(^| )" + name + "=([^;]*)(;|$)");

            if (arr = document.cookie.match(reg))

                return unescape(arr[2]);
            else
                return null;
        }

        function setCookie(c_name, value, expiredays) {
            var exdate = new Date();
            exdate.setDate(exdate.getDate() + expiredays);
            document.cookie = c_name + "=" + escape(value) +
                ((expiredays == null) ? "" : ";path=/;domain=.safetree.com.cn;expires=" + exdate.toGMTString());
        }

        $(function () {
            if (!isplaceholder()) {
                document.getElementById("PassWord1").style.display = "block";
                document.getElementById("PassWord").style.display = "none";
                document.getElementById("UName").style.color = "Gray";
                document.getElementById("checkcode").style.color = "Gray";
                $('.input_test,.inputc').bind({
                    focus: function () {
                        if (this.value == this.defaultValue) {
                            if (this.id == "PassWord1") {
                                document.getElementById("PassWord1").style.display = "none";
                                document.getElementById("PassWord").style.display = "block";
                                $("#PassWord").focus();
                            }
                            this.value = "";
                            this.style.color = "black";
                        }
                    },
                    blur: function () {
                        if (this.value == "") {

                            if (this.id == "PassWord") {
                                document.getElementById("PassWord1").style.display = "block";
                                document.getElementById("PassWord").style.display = "none";
                            }
                            this.value = this.defaultValue;
                            this.style.color = "Gray";
                        }
                    }
                });
            }
            else {
                $("#UName").val("");
                $("#checkcode").val("");
            }

            $("#LoginButton").click(function () {
                LoginFunc();
            })

            //输入用户名之后回车判断 如果用户名为空，提示输入用户名 否则密码框获取焦点
            $("#UName").keydown(function (e) {
                if (e.keyCode == 13) {
                    if ($.trim($("#UName").val()) == "") {
                        $("#UName").focus();
                        alert("请输入账号");
                    } else {
                        $(".user_nameul").hide();
                        $("#PassWord").focus();
                    }
                }
            })

            $("#PassWord,#checkcode").keydown(function (e) {
                if (e.keyCode == 13) {
                    $("#LoginButton").click();
                }
            })




        })

        //重新指定验证码url
        var codeUrl = switchUrl(window.location.host);

        //登录方法
        function LoginFunc() {
            var t;
            var UName = $("#UName").val();
            var PassWord = $("#PassWord").val();
            var checkcode = $("#checkcode").val(); //验证码相关 
            if ($.trim(UName).length <= 0) {
                $("#UName").focus();
                alert("请输入帐号");
                return;
            }
            else if ($.trim(PassWord).length <= 0) {
                $("#PassWord").focus();
                alert("请输入密码");
                return;
            }
            //验证码相关
            else if ($.trim(checkcode).length <= 0 && parseInt(getCookie("ErrorNum")) > 2) {
                $("#checkcode").focus();
                alert("请输入验证码");
                return;
            }


            $(".checkcodeerror").attr("style", "display:none");

            $("#LoginButton").unbind(); //移除登录事件
            $("#LoginButton").text('登录中');
            t = setTimeout("CheckData()", 15000);
            /*此处想要验证验证码  将 checkcode:1 ->1 该成用户输入的验证码即可*/
            $.getJSON(codeUrl + "/LoginHandler.ashx?jsoncallback=?", { userName: $.trim(UName), password: PassWord, checkcode: checkcode, type: 'login', loginType: '1', r: Math.random() }, function (json) {
                if (json.ret == 1) {
                    setCookie("ErrorNum", 0, 1);
                    clearTimeout(t);
                    var returnurl = "";
                    if (json.data.CardPwd == "-1") {//如果该帐号被重置过密码,则跳转修改密码页面
                        returnurl = $.trim(json.data.EplatformUrl) + "/MainPage.html";
                    }
                    else if (json.data.CardPwd == "-3") { //如果该帐号为新导入的,则跳往修改帐号密码页面
                        returnurl = $.trim(json.data.EplatformUrl) + "/MainPage.html";
                    }
                    else {
                        var Data = json.data;
                        if (Data != null && Data != undefined) {
                            if (Data.regionalAuthority == '0' && Data.UserType == '0')
                                returnurl = $.trim(json.data.EplatformUrl) + "/MainPage.html";
                            else
                                returnurl = $.trim(json.data.EplatformUrl) + "/MainPage.html";
                        }
                        else
                            returnurl = $.trim(json.data.EplatformUrl) + "/MainPage.html";
                    }
                    showPasswordEdit(UName, PassWord, parseInt(json.data.regionalAuthority), returnurl);
                }
                else if (json.ret == -1 && json.msg) {
                    $("#LoginButton").click(function () {
                        LoginFunc();
                    })
                    $(".pwderror").attr("style", "display:block");
                    $(".checkcodeerror").attr("style", "display:none");
                    $("#LoginButton").text("登录");
                    clearTimeout(t);
                    if (parseInt(json.Enum) > 2) {
                        setCookie("ErrorNum", json.Enum, 1);
                        $("#code").show();
                        nextcheckcode(); //验证码相关
                    }
                    return;
                }
                else if (json.ret == -2) {
                    $("#LoginButton").click(function () {
                        LoginFunc();
                    });
                    $(".checkcodeerror").attr("style", "display:block");
                    $(".pwderror").attr("style", "display:none");
                    $("#LoginButton").text("登录");
                    clearTimeout(t);
                    if (parseInt(json.Enum) > 2) {
                        setCookie("ErrorNum", json.Enum, 1);
                        $("#code").show();
                        nextcheckcode(); //验证码相关
                    }
                    return;
                }
            });
        }



        function CheckData() {
            alert("登录超时,请刷新页面后重新尝试!");
            window.location.href = "/login.html";
            return;
        }

        //轮播图
        function SlideImg() {
            if ($("YSample").length > 0) {
                YAO.YTabs({
                    tabs: YAO.getEl('YSIndex').getElementsByTagName('a'),
                    contents: YAO.getElByClassName('YSample', 'p', 'YSlide'),
                    defaultIndex: 0,
                    auto: true,
                    fadeUp: true
                });
            }
        }

        //收藏页面
        function SavePage() {
            var title = document.title
            var url = document.location.href
            if (window.sidebar) {
                window.sidebar.addPanel(title, url, "");
            }
            else {
                window.external.AddFavorite(url, title);
            }
        }

        function setnav(name, cursel, n) {
            for (i = 1; i <= n; i++) {
                var menu = document.getElementById(name + i);
                var con = document.getElementById(name + "_" + i);
                if (i == cursel) {
                    $(menu).show();
                    $(menu).attr("class", "active");
                    $(con).show();
                }
                else {
                    $(menu).attr("class", "");
                    $(con).hide();
                }
            }
            if (cursel == 2) {
                $("[name='more']").attr("href", "/HelpSystem/HelpEplat.aspx?CID=74");
            } else {
                if ($("#setpic_1 li").length > 0) {
                    $("[name='more']").attr("href", "/HelpSystem/AdmAnnounce.aspx");
                }
                else {
                    $("[name='more']").attr("href", "/HelpSystem/HelpEplat.aspx?CID=74");
                }
            }
        }
        //验证码相关,点击看不清,换一张   跟换验证码
        function nextcheckcode() {
            $(".checkcode").attr({ "src": codeUrl + "/checkcode.aspx?codetype=1&r=" + Math.random() });
        }
    </script>
</head>
