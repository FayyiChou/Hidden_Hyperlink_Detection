       var showMsg = function (msg) {
            $('.ajaxDialog').show().find('.resText').text(msg);
            setTimeout(function () {
                $('.ajaxDialog').fadeOut();
            }, 1500);
        };
        function favorites(){
            $.ajax({
                url: 'http://m.wdzj.com/news/favorites',
                type: 'POST',
                dataType: 'json',
                data:{newsId:73646},
                success: function(data){
                    if(data.error_code == 0){
                       $('#favorites').attr('onclick',"deletefavorites();");
                       $('#favorites img').attr("src","http://m.wdzj.com/static/wap/images/remark-icon4-sus.png");
                       showMsg(data.msg);
                    }else if(data.error_code == -1){
                       window.location.href='http://passport.wdzj.com/user/login';
                    }else{
                       showMsg(data.msg);
                    }
            }})
        }

        function deletefavorites(){
            $.ajax({
                url: 'http://m.wdzj.com/news/deletefavorites',
                type: 'POST',
                dataType: 'json',
                data:{newsId:73646},
                success: function(data){
                    if(data.error_code == 0){
                       $('#favorites').attr('onclick',"favorites();");
                       $('#favorites img').attr("src","http://m.wdzj.com/static/wap/images/remark-icon4.png");
                       showMsg(data.msg);
                    }else{
                        showMsg(data.msg);
                    }
            }})
        }

</script>
