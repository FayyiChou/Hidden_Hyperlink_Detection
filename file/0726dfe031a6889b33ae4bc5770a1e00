    var _getAd = function(url, callback) {
        var head = document.getElementsByTagName('head')[0];
        var addAd = document.createElement('script');
        addAd.setAttribute('type', 'text/javascript');
        addAd.setAttribute('src', url);
        addAd.setAttribute('data-innerjs', "gga");
        head.appendChild(addAd);
        var callbackFn = function() {
            if (typeof callback === 'function') {
                callback();
            }
        };
        addAd.onload = function() {
            callbackFn();
        }
    };
    if (Zepto) {
        $.getAd = _getAd;
