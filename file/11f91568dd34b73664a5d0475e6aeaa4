<script type="text/javascript">

	function checkcodes(url){
		var search=url.substr(url.indexOf("?")+1);
		url=url.substr(0,url.indexOf("?")+1);
	
		//非法字符集
		var codes = '<>/\$@#%;"()'; 
		//非法字符数组 
		var codearray = codes.split(''); 
		//循环替换非法字符 
		for (var i = 0; i < codearray.length; i++) { 
			while (search.indexOf(codearray[i]) != -1) { 
				search = search.replace(codearray[i], ''); 
			} 
		}
		return url+search;
	}

	function updateLocation(loc){
	   var lat=loc.coords.latitude;
	   var lng=loc.coords.longitude;
	   var url= "?x_x="+lng+"&y_y="+lat;
	   var idVal = $("#lonVal").attr("idVal");
	   document.getElementsByName("searchForm")[0].action="/Channel/"+idVal +checkcodes(url);
	   document.getElementsByName("searchForm")[0].submit();
	   //document.write("你所在的位置：经度"+lng+",纬度"+lat);
	}
	function handleLocationError(locErr)
	{
		alert(locErrs);
	}
	function loadDemo() {
		if(navigator.geolocation) {
			navigator.geolocation.getCurrentPosition(updateLocation, handleLocationError, null);
		}
	}
</script>

