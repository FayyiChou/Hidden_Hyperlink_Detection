	<section class="section">
		<div class="section_top">
			<h1>建国第一刑事大案 第一杀手白宝山杀人纪实</h1>
			<!-- 标题下 -->
			<script type="text/javascript">
			var cpro_id="u2792459";
			(window["cproStyleApi"] = window["cproStyleApi"] || {})[cpro_id]={at:"3",hn:"1",wn:"2",imgRatio:"1.7",scale:"20.6",pat:"6",tn:"template_inlay_all_mobile_lu_native",rss1:"#FFFFFF",adp:"1",ptt:"0",titFF:"%E5%BE%AE%E8%BD%AF%E9%9B%85%E9%BB%91",titFS:"14",rss2:"#FFFFFF",titSU:"0",ptbg:"70",ptp:"1"}
			</script>
			<script src="http://cpro.baidustatic.com/cpro/ui/cm.js" type="text/javascript"></script><div id="BAIDU_SSP__wrapper_u2792459_0" style="box-sizing: content-box; text-align: center; display: block; font-size: 0px; width: 100%; height: 96px; "><div style="box-sizing: content-box;width:320px;height:96px;position:relative;margin:0 auto;"><iframe id="iframeu2792459_0" src="http://pos.baidu.com/rckm?sz=320x96&amp;rdid=2792459&amp;dc=3&amp;di=u2792459&amp;dri=0&amp;dis=4&amp;dai=1&amp;ps=671x6&amp;coa=at%3D3%26hn%3D1%26wn%3D2%26imgRatio%3D1.7%26scale%3D20.6%26pat%3D6%26tn%3Dtemplate_inlay_all_mobile_lu_native%26rss1%3D%2523FFFFFF%26adp%3D1%26ptt%3D0%26titFF%3D%2525E5%2525BE%2525AE%2525E8%2525BD%2525AF%2525E9%25259B%252585%2525E9%2525BB%252591%26titFS%3D14%26rss2%3D%2523FFFFFF%26titSU%3D0%26ptbg%3D70%26ptp%3D1&amp;dcb=___adblockplus&amp;dtm=HTML_POST&amp;dvi=0.0&amp;dci=-1&amp;dpt=none&amp;tsr=0&amp;tpr=1491047727960&amp;ti=%E5%BB%BA%E5%9B%BD%E7%AC%AC%E4%B8%80%E5%88%91%E4%BA%8B%E5%A4%A7%E6%A1%88%20%E7%AC%AC%E4%B8%80%E6%9D%80%E6%89%8B%E7%99%BD%E5%AE%9D%E5%B1%B1%E6%9D%80%E4%BA%BA%E7%BA%AA%E5%AE%9E_&amp;ari=2&amp;dbv=2&amp;drs=1&amp;pcs=0x0&amp;pss=18x681&amp;cfv=0&amp;cpl=0&amp;chi=1&amp;cce=true&amp;cec=GBK&amp;tlm=1476928906&amp;rw=320&amp;ltu=http%3A%2F%2Fm.huopao.com%2Flishi%2F20150601%2F1433128638_26870700.html&amp;ecd=1&amp;uc=0x0&amp;pis=-1x-1&amp;ccd=0&amp;cja=false&amp;cmi=0&amp;col=en-US&amp;cdo=-1&amp;sr=0x0&amp;tcn=1491047728&amp;qn=91bad3bbe4c20728&amp;tt=1491047727928.34.412.413" width="320" height="96" align="center,center" vspace="0" hspace="0" marginwidth="0" marginheight="0" scrolling="no" frameborder="0" style="border:0;vertical-align:bottom;margin:0;width:320px;height:96px" allowtransparency="true"></iframe></div></div>
			<div class="section_top_top">
				<p class="p"><i>06月01日</i>&nbsp; <span>11:17</span></p>
