<script>
	var content = String();
	var arr = Array();
	content = $("#content").html();
	arr = content.split('#p#标题2#e#');
	var key=0;
	var page=1;
	if(arr.length>0){
		$("#content").html(arr[key]);
		$("#totalpage").html((page)+"/"+arr.length+"页");
	}
	function next(){
		key = key+1;
		page = page+1;
		if(page > arr.length){
			location.href='';
			return false;
		}
		$("#content").html(arr[key]);
		$("#totalpage").html((page)+"/"+arr.length+"页");
		if(document.documentElement.scrollTop){
			document.documentElement.scrollTop=0;
		}else{
			document.body.scrollTop=0;
		}
	};
	function prev(){
		key = key-1;
		//page = page-1;
		page = (page-1<1)?1:page-1;
		$("#content").html(arr[key]);
		$("#totalpage").html((page)+"/"+arr.length+"页");
		$(document).scrollTop(0)
		if(document.documentElement.scrollTop){
			document.documentElement.scrollTop=0;
		}else{
			document.body.scrollTop=0;
		}
	};
</script>

