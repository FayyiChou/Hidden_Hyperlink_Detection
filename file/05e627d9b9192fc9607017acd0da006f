            return false;
        });

        $(".article_detail .au a").click(function () {
            return false;
        });
        $('video').removeAttr("poster");
        var $video = $(".video");
        var ua = window.navigator.userAgent.toLocaleLowerCase();
        var desktop = !(ua.indexOf("android") > -1 || ua.indexOf("iphone") > -1);
        if ($video.length) {
//            if (!(ua.indexOf("android") > -1 || ua.indexOf("iphone") > -1)) {
            $video.each(function (i, v) {
                v = $(v);
                var src = v.children("video").attr('src');
                var youku = src.match(/http:\/\/v\.youku\.com\/player\/getRealM3U8\/vid\/([^\/]*)\//i);
                if (youku) {
                    var theId = youku[1];
                    v.attr("id", theId);

                    if (-1 == ua.indexOf("mobile")) {
                        v.height(380);
                    }
                    showVideo(theId, youku[1]);

                    return;
                }
                if (desktop) {
                    $.getJSON('/video/swf/' + v.attr('vid') + ".json", function (r) {
                        if (r && r.result) {
                            var htm = '<div class="videoPlayerWrapper">' +
                                    '<object class="videoPlayer">' +
                                    '<param name="allowScriptAccess" value="always"/>' +
                                    '<param name="wmode" value="transparent">' +
                                    '<embed pluginspage="http://www.macromedia.com/go/getflashplayer" ' +
                                    'src="' + r.result + '" ' +
                                    'type="application/x-shockwave-flash" class="videoPlayer" ' +
                                    'allowFullScreen="true" allowScriptAccess="always" wmode="transparent">' +
                                    '</embed>' +
                                    '</object>' +
                                    '</div>';
                            v.html(htm);
                        }
                    });

                }
            });
//            }
        }

        if (!desktop) {
            $(".down_link").html('<div class="dl">下载</div>');
        }
        $("#setup_btn").on("click", function (event) {
            //来自微信朋友圈 (区分来自于微信扫一扫还是朋友圈)
            var osVersion = getOS();
            if (osVersion.indexOf("iOS") != -1 && osVersion != "iOS10." && osVersion != "iOS11." && osVersion != "iOS12." && osVersion < "iOS5.0") {
                alert("iOS版本" + osVersion + "过低，请更新到最新版本");
                event.preventDefault();
                return;
            } else if (osVersion.indexOf("Android") != -1 && osVersion < "Android2.3") {
                if (window.confirm("您的手机操作系统版本过低，安装应用后可能体验不佳。确定要下载吗？")) {
                } else {
                    event.preventDefault();
                    return;
                }
            }

            if (wx && rf.indexOf("?") == -1) {
//                event.preventDefault();
//                $(this).attr("href","javascript:;");
                var $body = $("body");
                $body.scrollTop(0);
                $body.on('touchmove', function (e) {
                    e.preventDefault();
                });
                $('#wx_mask').show(); //('如果没有正常下载，请点击屏幕右上角的按钮，选择“在Safari中打开”或 “在浏览器中打开”');
//                return;
            }
        });
    });

