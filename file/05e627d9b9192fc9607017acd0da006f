<script type="text/javascript">
    var ua = navigator.userAgent;
    var wx = ua.match(/MicroMessenger\/(.+)/i);
    var rf = document.referrer;

    function showVideo(domid, vid) {
        var player = new YKU.Player(domid, {
            client_id: 'c5aa49b861990ad3',
            vid: vid,
            show_related: false
        });
    }

    function getOS() {
        //ios or android or unknow
        var userOS;
        // use Number(userOSver) to convert
        var userOSver;
        //get os version

        var uaindex;

        // determine OS
        if (ua.match(/iPad/i) || ua.match(/iPhone/i)) {
            userOS = 'iOS';
            uaindex = ua.indexOf('OS ');
        }
        else if (ua.match(/Android/i)) {
            userOS = 'Android';
            uaindex = ua.indexOf('Android ');
            $("#change").html('“在浏览器中打开”');
        }
        else {
            userOS = 'unknown';
        }

        // determine version
        if (userOS === 'iOS' && uaindex > -1) {
            userOSver = ua.substr(uaindex + 3, 3).replace('_', '.');
            return "iOS" + userOSver;
        }
        else if (userOS === 'Android' && uaindex > -1) {
            userOSver = ua.substr(uaindex + 8, 3);
            return "Android" + userOSver;
        }
        else {
            return "unKnow";
        }
    }


    $(function () {
        $('.comment_item .comment_l img').height($('.comment_item').eq(1).find('.comment_l img').width());
