            function checkLogin(){
                var account = $("#account").val();
                var pwd = $("#password").val();
                if(! account.trim()){
                    $(".account-error").html("用户名不为空");
                    return false;
                }else{
                    $(".account-error").html("");
                }
                if(! pwd.trim()){
                    $(".password-error").html("密码不为空");
                    return false;
                }else{
                    $(".password-error").html("");
                }
                return true;
            }
