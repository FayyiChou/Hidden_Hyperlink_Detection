                            var gtcallback = (function() {
                                var status = 0, result, apiFail;
                                return function(r) {
                                    status += 1;
                                    if (r) {
                                        result = r;
                                        setTimeout(function() {
                                            if (!window.Geetest) {
                                                apiFail = true;
                                                gtFailbackFrontInitial(result)
                                            }
                                        }, 1000)
                                    }
                                    else if (apiFail) {
                                        return
                                    }
                                    if (status == 2) {
                                        loadGeetest(result);
                                    }
                                }
                            })()

                            $.ajax({
