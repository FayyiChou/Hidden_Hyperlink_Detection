});
$(function() {
    var span = $(".w_search2_div1 span");
    var ulli = $(".w_search2_div1 ul li");
    span.click(function() {
        if ($(this).next().is(':hidden')) {
            span.next().hide();
            span.parent().css("z-index","99");
            $(this).next().slideDown(100);
            $(this).parent().css("z-index","999");
        } else{
            $(this).next().slideUp(10);
            $(this).parent().css("z-index","99");
            span.parent().css("z-index","99");
        };
    });
    ulli.click(function() {
        $(this).parent().prev().find("em").html($(this).html());
        $(this).parent().slideUp(10);
    });
}); 

$(".w_text2 ").focus(function(){
