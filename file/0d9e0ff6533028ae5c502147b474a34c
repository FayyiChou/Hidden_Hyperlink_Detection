<script type="text/javascript">
$(function  () {
    $(".form textarea").focus(function  () {
        var val=$(this).val();
        if (val==="请输入提问内容") {
            $(this).val("");
            $(this).css("color","#333");
        };
    });
    $(".form textarea").blur(function  () {
        var val=$(this).val();
        if (val==="") {
            $(this).val("请输入提问内容");
            $(this).css("color","#999");
        };
    });
    $("#que-button").click(function (){
        window.open('http://www.120ask.com/ask?fromurl=yp_yongyaoxinde&title='+ $(".form textarea").val());
    });
    $(".youLike a:even").css("margin-right",9);
});  

