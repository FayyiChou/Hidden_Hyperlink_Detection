<script>
    $('.footer-msg-tool').click(function() {
		check_login();
		var _tid=$(this).attr('tid');
		var _rid=$(this).attr('rid');
		var _floor=$(this).attr('floor');
		var _quote_rid_path=$(this).attr('quote_rid_path');
		var _nick_name=$(this).attr('nick_name');
		var _user_id=$(this).attr('user_id');
		var _login_user=$(this).attr('login_user');

		$('.tool-email').attr('href','/index.php?c=user/index&m=message&user_id='+_user_id+'&tid='+_tid);
		$('.tool-reward').attr('href','/index.php?c=user/index&m=reward&user_id='+_user_id+'&tid='+_tid+'&rid='+_rid);
		$('.tool-report').attr('href','/index.php?c=user/index&m=jubao&tid='+_tid+'&rid='+_rid+'&floor=0'+_floor);
		$('.tool-relpy').attr('onclick','reply('+_rid+','+_quote_rid_path+','+_floor+',"'+_nick_name+'")');
		$('.tool-relpy').attr('id','tool-relpy-'+_rid);
		if(_login_user==_user_id){
			$('.footer-msg-tool-div').append('<a class="tool-del"  title="删除" onclick="del('+_rid+')" href="javascript:void(0);">删除</a>');
		}


        $('.kds_dark').show();
        $('.footer-msg-tool-div').show();

        $('.footer-msg-tool-div,.kds_dark').click(function(){
		  $('.kds_dark').hide();
          $('.footer-msg-tool-div').hide();
        })
    })
</script>
<script>

function check_login(){
	if(!is_empty($.cookie('sid'))){
		return true;
	}else{
		var goto_url = encodeURI(window.location.href);
		window.location="https://passport.kdslife.com/?wap=1&goto="+goto_url;
		return false;
	}
}

$('.thumbs-zan, .thumbs-lv, .thumbs-zan-up, .thumbs-lv-up').on('click', function(){
	var login = check_login();
	if(login){
		var _have_set =$(this).parent('div').attr('have_set');
		var _class_name = $(this).attr('class');
		var _obj=$(this).children('i');
		var _tid=$(this).parent('div').attr('tid');
		var _rid=$(this).parent('div').attr('rid');
		var _floor=$(this).parent('div').attr('floor');
		var _user_id=$(this).parent('div').attr('user_id');
		var _login_user=$(this).parent('div').attr('login_user');
		if(_user_id==_login_user){
			alert("不能给自己点赞或点绿！");return;
		}
		if(_have_set=="zan"){

			if(_class_name =="thumbs-lv"){
				alert("请勿重复操作！");return;
			}

			if(_class_name =="thumbs-zan"){
				$(this).attr('class','thumbs-zan-up');
				_obj.text(parseInt(_obj.text())+1);
				var _num = 1;
			}
			if(_class_name =="thumbs-zan-up"){
				$(this).attr('class','thumbs-zan');
				_obj.text(parseInt(_obj.text())-1);
				$(this).parent('div').attr('have_set','0');
				var _num = -1;
			}
			var _thumbs_type = 'zan';

		}else if(_have_set=="lv"){
			if(_class_name =="thumbs-zan"){
				alert("请勿重复操作！");return;
			}

			if(_class_name =="thumbs-lv"){
				$(this).attr('class','thumbs-lv-up');
				_obj.text(parseInt(_obj.text())+1);
				var _num = 1;
			}
			if(_class_name =="thumbs-lv-up"){
				$(this).attr('class','thumbs-lv');
				_obj.text(parseInt(_obj.text())-1);
				$(this).parent('div').attr('have_set','0');
				var _num = -1;
			}
			var _thumbs_type = 'lv';
		}else{
			$(this).attr('class',_class_name+'-up');
			if(_class_name =="thumbs-lv"){
				$(this).parent('div').attr('have_set','lv');
				var _num = 1;
				var _thumbs_type = 'lv';
			}
			if(_class_name =="thumbs-zan"){
				$(this).parent('div').attr('have_set','zan');
				var _num = 1;
				var _thumbs_type = 'zan';
			}
			_obj.text(parseInt(_obj.text())+1);
		}
		$.ajax({
				type: "POST",
				url: "/index.php?c=topic/index&m=reply_thumbs&tid="+_tid+"&rid="+_rid+"&thumbs_type="+_thumbs_type+"&num="+_num+"&floor="+_floor,
				cache: true,
				dataType: "JSON",
				success:function(data){
					if(data.msg!='success'){
						alert("操作失败,请刷新页面!");
					}

				}
			});
	}

	});

    //引用
    function reply(rid,rid_path,floor,name) {
		check_login();
//        var con = $.trim($('.clearfix_'+rid).html());
        var con = $.trim($('#yy_'+rid).html());
        var str = '';
        if(floor=='0'){
            floor = '楼主';
        }else{
            floor = floor+'楼';
        }
        str = '引用'+ floor +'@<span>'+ name +'</span>发表的:';
        $('#quote').html($.trim(str));
        $('#quote_content').html($.trim(con));
        $('.kds_quite').attr('style','display:block');
        $('#quote_rid').val(rid);
        $('#quote_rid_path').val(rid_path);

        var h = $(document).height()-$(window).height();
        $(document).scrollTop(h);
    }

    //取消引用
    $('.button-close').click(function() {
        $('#quote').html('');
        $('#quote_content').html('');
        $('.kds_quite').attr('style','display:none');
    });

    //提交
    $('#send_blue').click(function() {
        $.ajax({
            url     : "/index.php?c=topic/index&m=check_post_state",
            type    : "POST",
            dataType: "JSON",
            success : function(res){
                if(res.status == '200'){
                    var tid = $("input[name='tid']").val();
                    var fid = $("input[name='fid']").val();
                    var quote_rid = $("input[name='quote_rid']").val();
                    var quote_rid_path = $("input[name='quote_rid_path']").val();
                    var message = $("#msg_data").val();
                    if(message.length<1){
                        alert('请填写内容');
                        $("#msg_data").focus();
                        return false;
                    }else if(message.length>8000){
                        alert('内容过长');
                        $("#msg_data").focus();
                        return false;
                    }
                    var arr = [];

                    $(".img_data").each(function(){
                        arr.push($(this).val());
                    });

                    var postStr = "tid="+tid+"&fid="+fid+"&quote_rid="+quote_rid+"&quote_rid_path="+quote_rid_path+"&message="+message+"&arr="+arr;
                    $.ajax({
                        url     : "/index.php?c=topic/index&m=reply_topic",
                        data    : postStr,
                        type    : "POST",
                        dataType: "JSON",
                        success : function(res){
                            if(res.status == '200' || !res.status){
                                alert('回复成功');
                                window.location="/index.php?c=topic/index&m=topic_detail&tid=" + 9027849;
                            }else{
                                if(window.confirm(res.msg)){
                                    //alert("确定");
            //                        window.location="https://passport.kdslife.com/?wap=1";
                                }else{
                                    //alert("取消");
                                    return false;
                                }
                            }
                        }
                    })
                }else{
                    alert('请先登录');
                    window.location="https://passport.kdslife.com/?wap=1";
                }
            }
        })

    });

    /*
     ** 添加图片
     ** showPreview（this）添加图片本身val
     ** FileReader HTML5
     **
     ** 全局变量 imgIndex
     ** 每添加一张图片加一 imgIndex++
     */

    var imgIndex = 0;
    function showPreview(source) {
		imgIndex++;
        var file = source.files[0];
        if (window.FileReader) {
            var fr = new FileReader();
            fr.onloadend = function(e) {
                 /*if (!/image\/\w+/.test(file.type)) {
                    alert("请确保文件为图像类型");
                    return false;
                }*/

				if(!/\.(gif|jpg|jpeg|png|GIF|JPG|PNG)$/.test(file.name)){
				  alert("上传失败,只支持gif,jpeg,jpg,png");
				  return false;
				}

                if (file.size >= 10485760) {
                    alert("您选择的图片已超过10MB，太大了无法上传成功哦");
                    return false;
                }else {
                    $(".addImg").before('<li ><figure><img id="upload_index_'+imgIndex+'" src="/ui/img/loading2.gif"></figure><i data-num="' + imgIndex + '">+</i></li>');
                    $(".punlish-img").slideDown(120);
                    $("#pushInput").append('<input type="hidden" name="imgname[]" id="imgname' + imgIndex + '" value="' + this.result + '">');
                    var str = this.result.replace(/\+/g, '%2B');
                    var postStr = "img="+str+"&num="+imgIndex+"&fid="+15;
                    $.ajax({
                        url     : "/index.php?c=topic/index&m=upload_img_file",
                        data    : postStr,
                        type    : "POST",
                        dataType: "JSON",
                        success : function(res){
                            $("#upload_index_"+imgIndex).attr('src',res.data.img_url);
								var img_str = '<input type="hidden" name="img_data[]" class="img_data" id="img_data'+ imgIndex + '" value="'+ res.data.img_url + '">';
								$("#imgname"+imgIndex).append(img_str);
                        }
                    })
                }
            };
            fr.readAsDataURL(file);
        }
        else {
            alert("对不起！您的浏览器不支持图片上传");
        }
    }

    $(function() {
        //删除动态添加的图片元素 并去除相对应的隐藏域
        $("#pushImg").on("click", "i", function() {
            var tindex = $(this).attr("data-num");
            $(this).parent().remove();
            $("#pushInput").children().remove("#imgname" + tindex);
            $("#pushInput").children().remove("#img_data" + tindex);
        });
    });

    //验证是否在小黑屋
    $('#post_topic').click(function() {
        $.ajax({
            url     : "/index.php?c=topic/index&m=check_post_state",
            type    : "POST",
            dataType: "JSON",
            success : function(res){
                if(res.status == '200'){
                    window.location="/index.php?c=topic/index&m=post_topic";
                }else{
                    window.location="/index.php?c=topic/index&m=topic_detail&tid="+ 9027849;
                }
            }
        })
    });

    //收藏帖子
    $('#fav').click(function() {
		check_login();
        var postStr = "tid="+9027849;
        if(2==1){
            var action = 'del_favorite'
        }else{
            var action = 'add_favorite'
        }
        $.ajax({
            url     : "/index.php?c=topic/index&m="+action,
            data    : postStr,
            type    : "POST",
            dataType: "JSON",
            success : function(res){
                if(res.status == '200'){
                    alert(res.msg);
                    window.location="/index.php?c=topic/index&m=topic_detail&tid="+ 9027849;
                }else{
                    alert(res.msg);
                    window.location="/index.php?c=topic/index&m=topic_detail&tid="+ 9027849;
                }
            }
        })
    });

    //管理员删回复楼层
    function del(rid){
        var postStr = "tid="+9027849+"&rid="+rid;
        $.ajax({
            url     : "/index.php?c=topic/index&m=del_topic",
            data    : postStr,
            type    : "POST",
            dataType: "JSON",
            success : function(res){
                if(res.status == '200'){
                    alert(res.msg);
                    window.location="/index.php?c=topic/index&m=topic_detail&tid=" + 9027849;
                }else{
                    alert(res.msg);
                }
            }
        })
    }

    $('#msg_data').keyup(function(){
        var len = $("#msg_data").val().length;
        if(len>22){
            $('#msg_data').attr('style','height:60px');
        }
        if(len>44){
            $('#msg_data').attr('style','height:100px');
        }
    })

</script>
