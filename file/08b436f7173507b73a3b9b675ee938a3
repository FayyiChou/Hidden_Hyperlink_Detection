<script type="text/javascript">
    var skey;
$(document).ready(function(){
 $(".search").focus(function(){
 
   var navwidth = 1280;
  var liwidth = navwidth/6;
  var liwidth = 208;
  var liwidth = 180;
  var liwidth2 = 250;
  
  $(this).stop(true,false).animate({width:""+liwidth2+"px"},"slow");
  $(this).addClass('search_result');
  $(this).siblings(".delete").attr("style", "display:inline-block;");
 
  // var liwidth = 260;
  $("ul.nav li.nav_txt").animate({width:"180px"},"slow");
   $(this).val(skey);
    $(this).siblings(".delete").bind("click",function(event){
    	   $(this).val("");
    	    event.stopImmediatePropagation();
    });
 })
  
 .blur(function(){
   $(this).stop(true,false).animate({width:"169px"},"slow");
  //$(this).animate({width:"50px"},"slow");
  $(this).removeClass('search_result');
  $(this).siblings(".delete").attr("style", "display:none");
  var navwidth = 1280;
  var liwidth = navwidth/6;
  var liwidth = 260;
  var liwidth = 208;
  $("ul.nav li.nav_txt").animate({width:"208px"},"slow");
   skey=$(this).val();
    $(this).val("");
 });
  
  
 // $(".search").attr("style", "width:"+liwidth+"px;");
 
 
 
 //动态生成导航栏目的宽度

  
});
</script>

