<script>

function sharebaidu(){
	$("#show_tips_bg").css({
		display:"block",height:$(document).height()
	});
	w=($(window).width()-550)/2;
	$("#bdsharebuttonbox").css({
		 
		top:($(window).height()-$("#bdsharebuttonbox").height())/2+$(window).scrollTop()+"px",
		left:w+"px"
			 
	});
 
	$("#bdsharebuttonbox").fadeIn("slow")
 
}
$(function(){
 	$("#show_tips_bg").on("click",function(e) {
		show_tips_close();
		$("#bdsharebuttonbox").fadeOut("slow")
	});
});

function praise(id,type){
		show_loading();
			$.ajax({
				type: "get",
				url: "praise.php?id="+id+"&type="+type,
				dataType: "json",
				success: function(data,textStatus) {
				 	show_loading_close();
					if(data.status==10001){	
						$("#praise_count_"+id).html(data.praise_count)
						alert("点赞成功！")
						
						 
					}else if(data.status==10002){	
						alert("您已点赞，不可重复！")
					}else
					{
	 
					  alert("失败！")
					}
					 // localStorage.setItem(i,i);
				},
				error: function(XMLHttpRequest, textStatus, errorThrown) {
                        
                       
						alert("status:"+XMLHttpRequest.status);
 
                }
			})	
}
h=$(window).height();
var x=$(".footer").offset();
//top=x.top;
s=$("#footer").offset().top
if((h-s)>70){
	tmp=h-77
	  $("#footer").offset({top:tmp});
}
function qocde_display_1(){
	$("#qcode").fadeOut()
	$("#qcode_on").fadeIn()
}
function qocde_display_2(){
	$("#qcode_on").fadeOut()
	$("#qcode").fadeIn()
}
