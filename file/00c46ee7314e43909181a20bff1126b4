<script type='text/javascript' src='http://www.hepcomotion.com.cn/wp-includes/js/wp-embed.min.js?ver=4.5.3'></script>
 

<script type="text/javascript" src="http://www.hepcomotion.com.cn/wp-content/themes/hepco_cn/js/slick.min.js"></script>
<script type="text/javascript" src="http://www.hepcomotion.com.cn/wp-content/themes/hepco_cn/js/jquery.matchHeight.js"></script>
<script type="text/javascript" src="http://www.hepcomotion.com.cn/wp-content/themes/hepco_cn/js/jquery.fancybox.pack.js"></script>
<script type="text/javascript" src="http://www.hepcomotion.com.cn/wp-content/themes/hepco_cn/js/jquery.fancybox-media.js"></script>
<script type="text/javascript" src="http://www.hepcomotion.com.cn/wp-content/themes/hepco_cn/js/modernizr.js"></script>

<script type="text/javascript">
jQuery(document).ready(function($) {
	
	var timer;
	$('#menu ul li').on('mouseover', function() {		
		if ( $(this).hasClass('menu-item-has-children') ) {
			clearTimeout(timer);
			$('.sub-menu').removeClass('open');
			$(this).children('.sub-menu').addClass('open');
		} else {
			clearTimeout(timer);
			$('.sub-menu').removeClass('open');
		}		
	}).on('mouseleave', function() {
		if ( !$(this).hasClass('menu-item-has-children') ) {		
			closeSubmenu;
		} else {
			timer = setTimeout(
				closeSubmenu
			, 1000);
		}
	});	
	function closeSubmenu() {
	  $('.sub-menu').removeClass('open');
	}
	
	$('.col.model, .box.ho, .main, .sidebar, .tabscontent .sldr .slide, .ltstslds .slide, .col.hero .slide-txt .txt').matchHeight();	
	
	$('li.menu-item-object-product_cats').parent().parent().addClass('products');

	$('ul.fltrs li.top > a').click(function(e){
		e.preventDefault();
		e.stopPropagation();
	  	$(this).parent().toggleClass('active');				
		$(this).parent().siblings().removeClass('active');
		$(this).parent().find('ul').slideToggle('slow', function() {
			$('.main, .sidebar').matchHeight();	
	  	});
		$(this).parent().siblings().find('ul').slideUp();		
		return false;
	});
	
		$('.single-item').slick({
   		autoplay: true,
  		autoplaySpeed: 6000,
     	speed: 700,
     	rtl: true,
      	asNavFor: '.txt-wrap'
	});
	$('.txt-wrap').slick({
    	arrows: false,
   		fade: true,
   		speed: 0,
     	asNavFor: '.single-item'
   	});
		
	$('a.scrllmr').click(function(e) {										
		e.preventDefault();		
		$('html, body').animate({
			scrollTop: $('.scrlpnt').offset().top - 105
		});	
		return false;
	});		

	$('a[href$="jpg"], a[href$="png"], a[href$="jpeg"], .rqust, .eform, .dwnvly, .dwnldbtn, .vwbtn, .ordrbtn, .yesdtls, .gallery-item .gallery-icon a, .cadpop, li.cadpopup a').fancybox({	
		padding: 0,
		helpers: {
			overlay: {
		  		locked: false
			},
			media : {}
	  	}
	});
	if ( Modernizr.mq('(max-width: 1392px)') && !Modernizr.mq('(max-width: 768px)') ) {
		$('.dwnldspop').width( $(document).width() - 200 );
	} else if ( Modernizr.mq('(max-width: 768px)') ) {
		$('.dwnldspop').width( $(document).width() - 40 );
	}
	$('.dwnwp').fancybox({	
		padding: 0,
		//minWidth: dWidth,
		afterShow: function () {
			if ($('#whitepapers').length){
				$('.fancybox-inner').animate({
					scrollTop: $('#whitepapers').offset().top
				}, 'slow');
			}
        },
		helpers: {
			overlay: {
		  		locked: false
			},
			media : {}
	  	}
	});
		
	$('iframe[src*="youku.com"], embed[src*="youku.com"]').not('.tabscontent .video iframe').each(function() {
        var url = $(this).attr("src");	
		$(this).wrap('<a href="'+url+'" class="iframe-wrap vpop fancybox.iframe"></a>').after('<div class="vcover"></div>');		
		if ( $(this).parent().parent().hasClass('slide') ) {
			$(this).height( $('.slides').height() );
		}		
    }); 	
		
		$(".vpop").fancybox({
		padding: 0,
		helpers: {
			overlay: {
				locked: false
			},
			media : {}
		}
	});
		
	$('.darken-bg').fadeTo(0,0);		
				
	$('a.langdd').click(function(e) {										
		e.preventDefault();		
		if (!$('.lang-dropd').hasClass('visible')){
			$('.lang-dropd').addClass('visible').show();
			var totalWidth = 0;
			$('.lang-dropd').children().each(function() {
				  totalWidth = totalWidth + $(this).width();			 
			});		
			$('.lang-dropd').width(totalWidth); 	
			$('.darken-bg').stop(true).css({'z-index': '78'}).fadeTo("normal",1);
		} else {
			$('.lang-dropd').removeClass('visible').hide();
			$('.darken-bg').fadeTo("normal",0).css({'z-index': '-1'});				
		}
		return false;
	});	
		
	$('a.search').click(function(e) {							
		e.preventDefault();		
		if (!$('.searchbar').hasClass('visible')){
			$('.searchbar').addClass('visible').show();
			$('.darken-bg').stop(true).css({'z-index': '76'}).fadeTo("normal",1);
		} else {
			$('.searchbar').removeClass('visible').hide();
			$('.darken-bg').fadeTo("normal",0).css({'z-index': '-1'});				
		}
		return false;
	});	
		
	$('body').click(function(e) {
		if ($('.lang-dropd').hasClass('visible')){
			if ($(e.target).hasClass('ldd')) {
				return false;
			} else {
				$('.lang-dropd').removeClass('visible').hide();
				$('.darken-bg').fadeTo("normal",0).css({'z-index': '-1'});
			}	
		}
		if ($('.searchbar').hasClass('visible')){
			if ($(e.target).hasClass('sb')) {
				return false;
			} else {
				$('.searchbar').removeClass('visible').hide();
				$('.darken-bg').fadeTo("normal",0).css({'z-index': '-1'});
			}	
		}			
	});
					
	$('#menu ul').mouseover( function () {
		$('.darken-bg').stop(true).css({'z-index': '76'}).fadeTo("normal",1);
	})
	.mouseleave(function() {
		$('.darken-bg').fadeTo("normal",0).css({'z-index': '-1'});
	});			
	
	$(window).scroll(function(){
		if( $(window).scrollTop() > 58 ) {
			$('#header-wrap header').addClass('fixed').css({height: '105'});
			$('#header-wrap header .inner').css({top: '0'});
			$('#header-wrap .topbar').css({display: 'none'});
			$('#header_placeholder').css({display: 'block'});					
			if ($('.lang-dropd').hasClass('visible')){
				$('.lang-dropd').removeClass('visible').hide();
				$('.darken-bg').fadeTo("normal",0).css({'z-index': '-1'});				
			}						
			if ($('.searchbar').hasClass('visible')){					
				$('.searchbar').removeClass('visible').hide();
				$('.darken-bg').fadeTo("normal",0).css({'z-index': '-1'});				
			}			
		} else {
			$('#header-wrap header').removeClass('fixed');  
			$('#header-wrap header .inner').removeAttr('style');
			$('#header-wrap header').removeAttr('style').removeAttr('class');
			$('#header-wrap .topbar').css({display: 'block'});
			$('#header_placeholder').css({display: 'none'});
		}
	});		
	
	if ( !Modernizr.csscalc ) {
		$('.col.product img, .col.box img').addClass('nocc');	
	}
	
	if ( Modernizr.mq('(max-height: 780px)') ) {
		$('#menu ul li.products ul.sub-menu').find('ul').each(function () {
			var pth = $(this).parent().parent().height();
			//console.log(pth);
			var ofst = pth - ( $(this).parent().index() * 71 );			
			//console.log( ofst );			   
			$(this).css('max-height',ofst);
		});		
	}
	
	if ($('.slides').length) {
		$('.slide iframe').height( $('.slide img:first').height() );
	}
	
	var addMobmenu = function() {
		if ( Modernizr.mq('(max-width: 1248px)') && !$("header .inner").find('#mobmenu').length ) {									
			var options = '';	
			$('nav#menu').removeAttr('style');				
			$('nav#menu').find('ul:not(.sub-menu)').each(function () {
				var imenu = $(this).html();			
				options += '<ul>' + imenu + '</ul>';
			});				
			$('.topbar').find('.tright').each(function () {						  
				var imenu = $(this).html();			
				options += '<div class="subitems">' + imenu + '</div>';
			});							
									
			$('<nav id="mobmenu" />').append(options).appendTo('header .inner');
			$('<a class="toggleMenu" href="#"></a>').appendTo('header .inner');
			$("#mobmenu ul li a").each(function() {
				if ($(this).next().length > 0) {
					$(this).addClass("parent");
				};
			});		
			$("#mobmenu .subitems a").each(function() {
				if ( $(this).hasClass('search') ) {
					$('.searchbar').clone().insertAfter(this);
				}	
			});				
			$(".toggleMenu").click(function(e) {
				e.preventDefault();
				$(this).toggleClass("active");
				$("#mobmenu").toggle();
			});	
		}		
	};		
	addMobmenu();
	$(window).on('resize', function() { addMobmenu(); });	
	adjustMenu();	
	
	
});

$(window).bind('resize orientationchange', function() {	
	adjustMenu();	
	if ( Modernizr.mq('(max-width: 1392px)') && !Modernizr.mq('(max-width: 768px)') ) {
		$('.dwnldspop').width( $(document).width() - 200 );
	} else if ( Modernizr.mq('(max-width: 768px)') ) {
		$('.dwnldspop').width( $(document).width() - 40 );
	} else {
		$('.dwnldspop').css('width','');
	}			
	if ($('.slides').length) {
		$('.slide iframe').height( $('.slide img:first').height() );
	}
});

var adjustMenu = function() {
	if (Modernizr.mq('(max-width: 1248px)')) {
		$(".toggleMenu").css("display", "inline-block");
		if (!$(".toggleMenu").hasClass("active")) {
			$("#mobmenu").hide();
		} else {
			$("#mobmenu").show();
		}								
		$("#mobmenu li").unbind('mouseenter mouseleave');
		$("#mobmenu li a.parent").unbind('click').bind('click', function(e) {
			e.preventDefault();
			$(this).parent("li").toggleClass("hover");
		});	
		$(".subitems .btn.search").unbind('click').bind('click', function(e) {
			e.preventDefault();
			$('.subitems .searchbar').toggleClass("active");
		});		
	} else {
		$(".toggleMenu").css("display", "none");		
		$(".toggleMenu, #mobmenu").remove();					
		$("#mobmenu li").removeClass("hover");
		$(".subitems .searchbar").removeClass("active");
		$("#mobmenu li a, .subitems .btn.search").unbind('click');
		$("#mobmenu li").unbind('mouseenter mouseleave').bind('mouseenter mouseleave', function() {
			$(this).toggleClass('hover');
		});		
		
	}
} 			

$(window).load(function() {
	$('#status').fadeOut();
	$('#preloader').delay(350).fadeOut('slow');
	$('body').delay(350).css({'overflow':'visible'});
	$('.col.banner .slide-txt .txt').height( $('.banner').height() );	 
});
</script>

</body>
</html>