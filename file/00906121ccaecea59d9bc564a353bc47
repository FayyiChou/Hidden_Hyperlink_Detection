<script type="text/javascript" data-main="/js/default/v2/main.js" src="/js/default/v2/require.js"></script>
<script type="text/javascript">
	              
var index = 0,
    interval = 3000,
    timer = 3000;
    
$(function(){

	timer = setInterval(
        function () {
        	change();
        }, interval
    );
});


function change() {
	// 當圖片跑到第五張時，重回第一張輪播
    // 20150410 改成為有課程或會議就只輪播這二種
		    if(index > 4)
        {
        index = 0;
    }
	
	var _text = $('#slides-nav').find('a.classy').eq(index).attr('data-text'),
	    _backgroung = $('#slides-nav').find('a.classy').eq(index).attr('data-background'),
	    _image = $('#slides-nav').find('a.classy').eq(index).attr('data-slide');
        _slideImages = $('#slide-images');

	// Update text
	$('#slide-text').html(_text);	
	
	// Update background-color
	$('#slides').css({'background-color': _backgroung});

	// Update current slide
	_slideImages.find('.current').removeClass('current');
	_slideImages.find('a:eq('+ (_image - 1) +') img').addClass('current');
	
	index++;

}
$('#slides-nav').hover(function(){
	// 當滑鼠移入時, 停止計時器
	clearTimeout(timer);
}, function(){
	// 當滑鼠移出時, 啟動計時器
	timer = setInterval(
	        function () {
	        	change();
	        }, interval
	    );
});
</script> <footer id="main-footer">
