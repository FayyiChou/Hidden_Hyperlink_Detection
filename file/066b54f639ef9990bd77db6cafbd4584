function initialize() {

	var stylez = [
	{
		featureType: 'landscape',
		elementType: 'all',
		stylers: [
		{ hue: '#f3dabe' },
		{ saturation: 57 },
		{ lightness: -5 },
		{ visibility: 'on' }
		]
	},{
		featureType: 'landscape.natural',
		elementType: 'all',
		stylers: [
		{ hue: '#f3dabe' },
		{ saturation: 63 },
		{ lightness: -11 },
		{ visibility: 'on' }
		]
	},{
		featureType: 'road',
		elementType: 'labels',
		stylers: [
		{ hue: '#bba38f' },
		{ saturation: -76 },
		{ lightness: 2 },
		{ visibility: 'on' }
		]
	},{
		featureType: 'poi',
		elementType: 'all',
		stylers: [
		{ hue: '#ecd2b9' },
		{ saturation: 25 },
		{ lightness: 21 },
		{ visibility: 'on' }
		]
	},{
		featureType: 'road',
		elementType: 'all',
		stylers: [
		{ hue: '#cdb9a6' },
		{ saturation: -72 },
		{ lightness: 24 },
		{ visibility: 'on' }
		]
	},{
		featureType: 'poi',
		elementType: 'all',
		stylers: [
		{ hue: '#ffffff' },
		{ saturation: 30 },
		{ lightness: 15 },
		{ visibility: 'off' }
		]
	},{
		featureType: 'landscape',
		elementType: 'labels',
		stylers: [
		{ hue: '#ffffff' },
		{ saturation: -100 },
		{ lightness: 100 },
		{ visibility: 'off' }
		]
	},{
		featureType: 'administrative',
		elementType: 'labels',
		stylers: [
		{ hue: '#e2c8b4' },
		{ saturation: 44 },
		{ lightness: 58 },
		{ visibility: 'off' }
		]
	},
    {
      featureType: 'water',
      elementType: 'all',
      stylers: [
        { color: '#abbcca' },
        { visibility: 'on' }
      ]
    }
	];


    var styledMap = new google.maps.StyledMapType(stylez, {
        name: "Styled Map"
    });
         var myLatlng = new google.maps.LatLng(, );
    var mapOptions = {
        scrollwheel: false,
        scaleControl: true,
        center: myLatlng,
        zoom: 6,
       	scrollwheel: false,
       	draggable: true,
        mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    var mapCorp = new google.maps.Map(document.getElementById("map-canvas"), mapOptions, stylez);
    google.maps.event.addDomListener(window, "resize", function () {
        var center = myLatlng;
        google.maps.event.trigger(map, "resize");
        map.setCenter(center);
    });
    mapCorp.mapTypes.set('map_style', styledMap);
    mapCorp.setMapTypeId('map_style');
    var image = 'http://www.millionmiracles.org/wp-content/themes/millionmiracles/images/pin.png';
    var marker = new google.maps.Marker({
        position: myLatlng,
        map: mapCorp,
        title: "Tanzania",
        icon: image,
        url: "http://www.millionmiracles.org/location/tanzania/"
    })
	
	function addInfoWindow(marker, content) {
	    var infoWindow = new google.maps.InfoWindow({
	        content: content
	    });
	
	    google.maps.event.addListener(marker, 'click', function () {
	        infoWindow.open(marker.content);
	    });
	}
	
	 	
}

/* start the map */
initialize();

