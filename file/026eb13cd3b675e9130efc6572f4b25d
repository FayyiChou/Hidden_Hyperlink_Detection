<script type="text/javascript">
(function() {
	


    var slider = new fz.Scroll('#slider', {
        role: 'slider',
        indicator: true,
        autoplay: true,
        interval: 3000
    });
    var tab = new fz.Scroll('#tab', {
        role: 'tab',
        autoplay: false,
        interval: 3000
    });
    /* 滑动开始前 */
    tab.on('beforeScrollStart', function(fromIndex, toIndex) {
        console.log(fromIndex, toIndex); // from 为当前页，to 为下一页
    });
    //js控制手机品牌展示区大小（利于自适应）
    $('.listview td').height($('.listview td').width());
    $('.ui-slider-content li').click(function() {
        if ($(this).data('link')) {
            location.href = $(this).data('link');
        }
    });
    //浏览 手机型号 可以加参数 然后跳转相应的维修页面
    $('.listimg').click(function() {
        if ($(this).data('link')) {
            location.href = $(this).data('link');
        }
    });
    //浏览 最新推荐  可以加参数  然后跳转到相应的维修页面
    $('.ui-grid-halve-img').click(function() {
        if ($(this).data('link')) {
            location.href = $(this).data('link');
        }
    });
    //个人中心跳转  实际应用可归纳到一个js文件中
    $('.personbtn').click(function() {
        if ($(this).data('link')) {
            location.href = $(this).data('link');
        }
    });
    //维修跳转操作  实际应用可归纳到一个js文件中
    $('.repairbtn').click(function() {
        if ($(this).data('link')) {
            location.href = $(this).data('link');
        }
    });
    
   
    
})();
</script>

