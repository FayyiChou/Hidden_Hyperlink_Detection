//刷新验证码
function loadCaptcha(){
	jQuery.ajax({
		url: "https://sso.hc360.com/LoginTicket.jsp",
		async:true,
		dataType:"jsonp",
		jsonp: "callback",
		jsonpCallback:"success_jsonpCallback",
		success:  function(json){
			if(json!=null){
		
				jQuery("#valicode").val("");
				
			  	jQuery('#ctoken').val(json.key);
			  	jQuery('#validimg').attr("src","https://sso.hc360.com/ValidImage.jsp?seed="+json.value);
			  	ctoken = json.key;
			}
		}
	});
}
//第一次初始化验证码
jQuery(document).ready(function(){
	loadCaptcha();
});

//发送短信验证码
jQuery("#sendValidation").off(".my").on("click.my",function(){
	var phone = jQuery("#phone").val();
	var imagecode = jQuery("#valicode").val();
	var exp = phone.match(/^[1][0-9]{10}$/);
	var icexp = imagecode.match(/^[0-9]{4}$/);
	if (!exp) { 
		jQuery(".alertPrompt").html("请输入正确的手机号").show(300).delay(2400).hide(300);  
		return;
	}
	if(!icexp){
		jQuery(".alertPrompt").html("请输入正确的图形验证码").show(300).delay(2400).hide(300);  
		return;
	}
	var url= "https://mlogin.hc360.com/int/sendMessage";
	var phone = jQuery("#phone");
	var imageCode = jQuery("#valicode").val()
	//防止重复点击
	jQuery("#sendValidation").attr("disabled","disabled");
	jQuery.post(url,
	  {
		phone:phone.val(),
		ctoken:ctoken,
		valicode:imageCode
	  },
	  function(data,status){
		  	//发送成功
		  	if(data=="4"){
		  		jQuery(".alertPrompt").html("短信发送成功。").show(300).delay(2400).hide(300); 
					var timeNum=60;
					var that=jQuery("#sendValidation");
					var cc=setInterval(function(){
						timeNum-=1;				
						that.text(timeNum+"秒后可重试");
					},1000);
					
					var c=setTimeout(function(){
						that.removeAttr("disabled");
						clearInterval(cc);
						that.text("获取验证码");
					},60000);
		  	}else if(data=="1"){
		  		jQuery("#sendValidation").removeAttr("disabled");
		  		jQuery(".alertPrompt").html("手机号格式不正确 请重新输入!").show(300).delay(2400).hide(300); 
		  	}else if(data=="2"){
		  		jQuery("#sendValidation").removeAttr("disabled");
		  		jQuery(".alertPrompt").html("请输入正确的图形验证码!").show(300).delay(2400).hide(300);
		  		loadCaptcha();
		  	}else if(data=="3"){
		  		jQuery("#sendValidation").removeAttr("disabled");
		  		jQuery(".alertPrompt").html("手机号码已被绑定 请重新输入!").show(300).delay(2400).hide(300); 
		  		loadCaptcha();
		  	}else{
		  		jQuery("#sendValidation").removeAttr("disabled");
		  		jQuery(".alertPrompt").html(data).show(300).delay(2400).hide(300);
		  		loadCaptcha();
		  	}
	  }); 
	
})
//表单提交
function regform(){
		var exp = jQuery("#phone").val().match(/^[1][0-9]{10}$/);
		var cexp = jQuery("#code").val().match(/^[0-9]{6}$/);
		var icexp = jQuery("#valicode").val().match(/^[0-9]{4}$/);
		if(exp && cexp && icexp){
			if(checkPassword()){
				jQuery("#regform").submit();
				//防止重复点击
				jQuery(".mBtnLogin").attr("disabled","disabled");
			}
		}else{
			jQuery(".alertPrompt").html("请输入正确的手机号和验证码").show(300).delay(2400).hide(300);  
		}
		
	}

/* 验证密码 */
function checkPassword() {
	var passwd1 = jQuery("#password").val();
	var phone = jQuery("#phone").val();
	if(phone!=""){
		if(phone==passwd1){
		jQuery(".alertPrompt").html("密码不能和手机号相同").show(300).delay(2400).hide(300);
		return false;
		}
		if("1q2w3e"==passwd1.toLowerCase()){
			jQuery(".alertPrompt").html("密码过于简单").show(300).delay(2400).hide(300);
			return false;
		}
	}
	
	var A=passwd1.replace(/[0-9]/g,""); 
	var B=passwd1.replace(/[a-zA-Z]/g,"");
	var C=passwd1.replace(/[0-9a-zA-Z]/g,""); 
	if(passwd1==""||passwd1.replace(/^\s+|\s+$/g,"")==""){
		if(passwd1.indexOf(" ") >= 0){
			jQuery(".alertPrompt").html("密码不能包含空格。").show(300).delay(2400).hide(300);
		}else{
			jQuery(".alertPrompt").html("请输入密码。").show(300).delay(2400).hide(300);
		}		
		return false;
	}else if(passwd1.length<6 || passwd1.length>20){
		jQuery(".alertPrompt").html("密码长度为6-20位。").show(300).delay(2400).hide(300);
		return false;
	}else if(passwd1.length>=6){
		/* 9位以下纯数字 */
		if(A.length == 0 && passwd1.length < 9) {
			jQuery(".alertPrompt").html("密码不能是纯数字。").show(300).delay(2400).hide(300);
			return false;
		}
		if(B.length == 0 ) {
			jQuery(".alertPrompt").html("不能是纯字母。").show(300).delay(2400).hide(300);
			return false;
		}
		if(passwd1.indexOf(" ") >= 0){
			jQuery(".alertPrompt").html("密码不能包含空格。").show(300).delay(2400).hide(300);
			return false;
		}
		
		/* 验证是否连续 0:不连续 1：连续 2 ：有问题 3:正确
 		 *  4:数字连续 5：字符连续 6; 输入位数不够*/
		var v = chckNumLink(passwd1,9);
		// 0:不同 1：相同
		if(v==4 || v==5) {
			var same = isSimpleNum(passwd1, 6);
			if(same == 1 || v==5 || passwd1.length>=9) {
				jQuery(".alertPrompt").html("密码不能使用连续/相同的字符。").show(300).delay(2400).hide(300);
				return false;
			}else{
				jQuery(".alertPrompt").html("密码不能是9位以下纯数字。").show(300).delay(2400).hide(300);
				return false;
			}			
		}
		if(v==0||v==1) {
			jQuery(".alertPrompt").html("密码不能使用连续/相同的字符。").show(300).delay(2400).hide(300);
			return false;
		}
	}else if(A.length==0||B.length==0||passwd1.length==C.length){
		jQuery(".alertPrompt").html("密码长度为6-20位。").show(300).delay(2400).hide(300);
		return false;
	}
	
	//验证密码不在数组的密码中
	if(passwordsArray.indexOf(passwd1.toLowerCase())>-1){
		jQuery(".alertPrompt").html("密码过于简单，为安全起见，请重新设置").show(300).delay(2400).hide(300);
		return false;
	}
	return true;
}
</script>
