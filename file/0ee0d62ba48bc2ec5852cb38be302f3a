		}
	});
}
function logins()
{
	var wx = is_weixin();
	var wb = is_weibo();
	var uid=$.cookie("uid");
	
    if(wx && (uid==null || uid=="" || uid==0)){
		 window.location = '/user/wxauto';
    }
	if(wb && (uid==null || uid=="" || uid==0)){
		window.location = '/user/weibologin';
	}
}
var userid = $.cookie("userid");
if(userid ==null || userid=="" || userid==0){
	$.cookie("loginret",window.location.href, {path: "/", expires: 7,domain: ".nxstory.com"});
}
window.setTimeout("logins();",5000);
