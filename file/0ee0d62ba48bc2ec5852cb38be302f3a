   <script type="text/javascript">
	$(function(){
		
		$('.wx_list').click(function(e){
			var t = $(this).toggleClass('toggle');
			var show_h = $(document).height();
			if(t.hasClass('toggle')){
				$('.wx_ul_list').show();
				$('#showDiv').css({height:show_h}).show();
			}else{
				$('.wx_ul_list').hide();
				$('#showDiv').css({height:show_h}).hide();
			}
			e.stopPropagation();		
		});
		$('.wx_ul_list li').click(function(e){
			$('.wx_ul_list').hide();
			e.stopPropagation();
		});
		$('#showDiv').on('touchstart click',function(event){  
			$('.wx_ul_list').hide();
			$('#showDiv').hide(); 
			$('.wx_list').removeClass('toggle');
			
			
			
			
			
			event.stopPropagation(); 
		});
		
	});
</script> 
