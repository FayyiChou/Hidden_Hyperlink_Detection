	 	var sitePath = '';
		$(function() {
			
			$('body > *:not(".wrapper") ').remove();
			
			var min=9; 	
			var max=18;	
			var reset = parseInt($('.intro').css('fontSize'));
			var _bg = $('body').css('background');
			var elm = $('.intro');
			var fontSize=$.cookie("fontSize");
			var size = reset;
			$('.intro').css("font-size",fontSize+"px");
			$('a.fontSizePlus').click(function() {
				if (size<=max) {
					size++;
					$.cookie("fontSize",size, {path: "/", expires: 7,domain: ".nxstory.com"});
					elm.css({'fontSize' : size});
				}
				return false;	
			});
		
			$('a.fontSizeMinus').click(function() {
				if (size>=min) {
					size--;
					$.cookie("fontSize",size, {path: "/", expires: 7,domain: ".nxstory.com"});
					elm.css({'fontSize' : size});
				}
				return false;	
			});
			var fontBulb = $.cookie("fontBulb");
			if(fontBulb == 'changBg'){
				$('#css').attr('href','http:\/\/res.nxstory.com/css/chapter_black.css');
			}else{
				$('#css').attr('href','http:\/\/res.nxstory.com/css/chapter_red.css');
			}
			$('a.fontBulb').click(function () {
				var _changColor=$('a.fontBulb');
				$('a.fontBulb').toggleClass('changColor');
				if(_changColor.hasClass('changColor')){
					$('#css').attr('href','http:\/\/res.nxstory.com/css/chapter_black.css');
