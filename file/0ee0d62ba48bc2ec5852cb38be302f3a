function getPromote(){
	var pageUrl = "/ajax/promote/3?t=1";
	$.ajax({
		type:"get",
		url:pageUrl,
		dataType:'html',
		success:function(result){
			$('#content_end').html(result);
		}
	});
	pageUrl = "/ajax/promote/4?t=1";
	$.ajax({
		type:"get",
		url:pageUrl,
		dataType:'html',
		success:function(result){
			$('#read_end').html(result);
		}
	});
	var wxchannel = getUrlParam('c');
	var wxchannel1="";
	if(wxchannel!=null  && wxchannel.length >0){
		wxchannel1=wxchannel.substr(0,1);
	}else{
		wxchannel = $.cookie('channel');
		if(wxchannel!= null && wxchannel.length >0){
			wxchannel1=wxchannel.substr(0,1);
		}
	}
	if(wxchannel == 'b1151'){
		wxchannel1 = '';
	}
	if(wxchannel1 != 'b' && wxchannel1 != 'c'){
		pageUrl = "/ajax/activity";
		$.ajax({
			type:"get",
			url:pageUrl,
			dataType:'json',
			success:function(result){
				var len = result.length;
				var rand = Math.floor(Math.random()*len);
				var html = '<a href="/act/static/'+result[rand].id+'.shtml?t='+cateid+'"><span style="color:red">'+result[rand].title+'</span><span style="color:blue">'+result[rand].title2+'</span></a>';
				$('#content_head').html(html);
			}
		});
	}

};



var bookId	=	$('#bookId').val();
var cid = $('#chapterId').val();
var cateid = $('#bookcategory').val();
var readNum	=	$.cookie('readNum');
var readCid	=	$.cookie('readCid');
var readBid = $.cookie('readBid');
var wx	=	is_weixin();
if(wx){
	var wxchannel = getUrlParam('c');
	var wxchannel1="";
	if(wxchannel!=null  && wxchannel.length >0){
		wxchannel1=wxchannel.substr(0,1);
	}else{
		wxchannel = $.cookie('channel');
		if(wxchannel!= null && wxchannel.length >0){
			wxchannel1=wxchannel.substr(0,1);
		}
	}
	if(wxchannel == 'b1151'){
		wxchannel1 = '';
	} 
	
	if(wxchannel1 != 'a' && wxchannel1 != 'b' && wxchannel1 != 'c'){
		if(!readNum || readNum==0){
			if(readCid!=cid){
				$.cookie("readNum",1, {path: "/", expires: 7,domain: ".nxstory.com"});
				$.cookie("readCid",cid, {path: "/", expires: 7,domain: ".nxstory.com"});
				$.cookie("readBid",bookId, {path: "/", expires: 7,domain: ".nxstory.com"});

			}
	
		}else if(readNum<5 && readCid!=cid && readBid==bookId){
			
			$.cookie("readCid",cid, {path: "/", expires: 7,domain: ".nxstory.com"});
			$.cookie("readNum",Number(readNum)+1, {path: "/", expires: 7,domain: ".nxstory.com"});
			$.cookie("readBid",bookId, {path: "/", expires: 7,domain: ".nxstory.com"});
		
		}else if(readNum==5 && readCid!=cid && readBid==bookId){
			$.cookie("readNum",5, {path: "/", expires: 7,domain: ".nxstory.com"});
			$.cookie("readCid",cid, {path: "/", expires: 7,domain: ".nxstory.com"});
			$.ajax({
				url:'/read/qrcode?t='+cateid,
				type:'GET',
				dataType:'json',
		        success: function(data) {

					var channel2 = $.cookie('channel2');
					if(channel2 == 'mfjf'){
						$('#codeimg').css('display','none');
						$('#codeimg1').attr("src", data.imageUrl);
						$('#qrcode1').css('display','none');
						$('#qrcode2').css('display','none');
						$('#qrcode3').css('display','none');
					}else{
						$('#codeimg').css('display','block');
						$('#codeimg1').attr("src", data.imageUrl);
						$('#qrcode1').css('display','none');
						$('#qrcode2').css('display','none');
						$('#qrcode3').css('display','none');
					}
					
					
	            }
			}); 
		}else{
			$.cookie("readNum",1, {path: "/", expires: 7,domain: ".nxstory.com"});
			$.cookie("readCid",cid, {path: "/", expires: 7,domain: ".nxstory.com"});
			$.cookie("readBid",bookId, {path: "/", expires: 7,domain: ".nxstory.com"});
		}

	}
}
function checkanzhi(){
	var wxchannel = getUrlParam('c');
	if(wxchannel==null  || wxchannel.length ==0){
		wxchannel = $.cookie('channel2');
	}else{
		if(wxchannel != '0001az'){
			wxchannel = $.cookie('channel2');
		}
	}
	if(wxchannel == '0001az'){
		$('#content_to_book').attr("href", '/book/'+bookId+'.shtml');
	}
	
}
function checkmfjf(){
	var wxchannel = getUrlParam('c');
	var channel2 = "";
	if(wxchannel && wxchannel.length==8){
		var mfjf = wxchannel.substr(0,4);
		if(mfjf == 'mfjf'){
			channel2 = 'mfjf';
		}
	}
	if(wxchannel==null  || wxchannel.length ==0){
		channel2 = $.cookie('channel2');
	}
	if(channel2 == 'mfjf'){
		$('#content_head').css('display','none');
		$('#content_end').css('display','none');
		$('#read_end').css('display','none');
		$('#how_getbook').css('display','none');
		$('#codeimg').css('display','none');
		var next = $('.next').attr("href");
		$('.next').attr("href",next.replace('_a',''));
	}
}
