function showImg(index){
        var adHeight = $(".ad").height();
		$(".slider").stop(true,false).animate({top : -adHeight*index},1000);
		$(".num li").removeClass("on")
			.eq(index).addClass("on");
}


        $(function () {
            $.cookie("web_id", "0");
            $("#city").click(function(){
                $("#bmdate").text($("#city option:selected").attr("t"));
            });
            $("#message").click(function(){
                $("#sub").text($("#message option:selected").attr("s"));
                $(".pass-box li").eq($("#message option:selected").index()).show().siblings().hide();

            });
            $("#submi").click(function() {
                var userName = $("#tell").val();
                var pwd = randPassword();
                saveRegisterInfo(userName,pwd);
            });

        });
        function randPassword() 
        { 
            var text=['abcdefghijklmnopqrstuvwxyz','ABCDEFGHIJKLMNOPQRSTUVWXYZ','1234567890'];
            var rand = function(min, max) { return Math.floor(Math.max(min, Math.random() * (max + 1))); };
            var len = rand(6, 8); // 长度为6-8 
            var pw = ''; 
            for(i=0; i<len; ++i) 
            { 
                var strpos = rand(0, 2); 
                pw += text[strpos].charAt(rand(0, text[strpos].length)); 
            } 
            return pw; 
        } 
