<SCRIPT type=text/javascript>
	var intControlsindexNewsSysWordingCheckId;
    var intNewsSpeed = 5000;
    var intNewsTimerId;
    var intNewsId = 0;
    var strNews_Date = new Array;
    var strNews_Content = new Array;
    var strNews_Link = new Array;
	var cookie_name = "";
    
	intControlsindexNewsSysWordingCheckId = setInterval("controlsindexNewsSysWordingCheck()", intSysWordingCheckSpeed);

    function controlsindexNewsSysWordingCheck() {
        if (sysWordingRead) {
            $("#news_area span:first").html($("NewsTitle", sysWording).text() + " ");
            getNews();
            clearTimeout(intControlsindexNewsSysWordingCheckId);
        }
    }

    function getNews() {
    	XML_Reader("News_index.aspx", "indexNews");
    }
    
    function indexNews(xml) {
        $("News", xml).each(function(e) {
            strNews_Date[e] = date_format($("News_Date", this).text(), $("DateFormat", sysWording).text());
            strNews_Content[e] = $("News_Title", this).text();
            strNews_Link[e] = $("News_Link", this).text();
        });

        get_news();
        intNewsId = intNewsId + 1;
        intNewsTimerId = setInterval("news_timer()", intNewsSpeed);
    }

    function news_timer(){
        reset_news();
        $("#news").fadeOut("slow", function() {
            get_news();
            $("#news").fadeIn("slow", function() {
                intNewsId = intNewsId + 1;
            });
        });
    }
    
    function reset_news(){
        if(intNewsId == strNews_Date.length){
            intNewsId = 0;
        }
    }
    
    function get_news(){
//		if(strNews_Date[intNewsId]=='NaN/Na/Na')
//            $("#new_date").html('');
//		else
//            $("#new_date").html(strNews_Date[intNewsId]);
		$("#newtitle").html(strNews_Content[intNewsId]);
        $("#newtitle").attr({href:strNews_Link[intNewsId]});
    }

    function Next_News(){
        clearTimeout(intNewsTimerId);
        if(intNewsId > strNews_Date.length - 1){
            intNewsId = 0;
        }
        news_timer();
        intNewsTimerId = setInterval("news_timer()",intNewsSpeed);
    }
    
    function Previous_News(){
        clearTimeout(intNewsTimerId);
        intNewsId = intNewsId - 2;
        if(intNewsId < 0){
            intNewsId = strNews_Date.length -1;
        }
        news_timer();
        intNewsTimerId = setInterval("news_timer()",intNewsSpeed);
    }

	function resetA() {
		$("a").focus(function() {
			$(this).blur();
		});
		$("input").focus(function(){
			if($(this).attr("type")=="image"){
				$(this).blur();
			}
		});
	}

    resetA();
    $(document).ready(function() {
        $("#ctl00_localcss").attr("href", "include\css_script\local.css");
        if (isMultipleLanguageWebsite() && getcookiedata('Lang') == '') {
            $("#LangSelection").click();
        }
    });
</SCRIPT>
