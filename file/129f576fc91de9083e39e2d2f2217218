            $(function(){
                if($(".ask-question").length>0){
                    $(".ask-question").click(function(){
                        var keyWord=$(this).attr("data-keyword");
                        $.ajax({
                            type : "post",
                            url : smzdm_post+"/ajax_check_login",
                            data : {article_id:$("#articleID").val()},
                            dataType : "json",
                            async: true,
                            cache: false,
                            success : function(back){
                                if(back.error_code==0){//已经登录
                                    $('#textareaComment').val(keyWord).focus();
                                }else if(back.error_code==5){//没有登录
                                    //已登录用户信息处理
                                    if(zhiyou_open) {
                                        zhiyou_relate.popup_login_show();
                                    } else {
                                        //已登录用户信息处理
                                        requestUserInfo();
                                    }
                                }
                            },
                            error : function(){

                            }
                        });
                    });
                }
