<script type="text/javascript">
	var label = document.querySelectorAll(".tab label");
	for(var i = 0; i < label.length; i++) {
		label[i].addEventListener('click', function() {
			for(var i = 0; i < label.length; i++) {
				label[i].className = '';
				document.querySelector("." + label[i].getAttribute('rel')).style.display = 'none';
			}
			this.className = 'now';
			var showBar = this.getAttribute('rel');
			document.querySelector("." + showBar).style.display = 'block';
		});
	}
</script>


