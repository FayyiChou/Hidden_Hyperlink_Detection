<!--评论相关js-->
<script type="text/javascript">
	var comment = function() {
		var getDate = function(otime) {
			var ctime = new Date().getTime() - otime;
			if(ctime < (1000 * 60))
				return "刚刚";
			if(ctime < (1000 * 60 * 60))
				return Math.ceil(ctime / 1000 / 60) + "分钟前";
			if(ctime < (1000 * 60 * 60 * 24))
				return Math.ceil(ctime / 1000 / 60 / 60) + "小时前";
			/* 	if(ctime<(1000*60*60*24*1))
			 return "昨天 "+time.format("hh:mm");
			 if(ctime<(1000*60*60*24*2))
			 return "前天 "+time.format("hh:mm"); */
			else {
				var d = new Date(otime);
				return d.toISOString().substr(0, 10) + ' ' + d.toTimeString().substr(0, 5);
				//return time.format("yyyy-MM-dd hh:mm");
			}
		};
		var pageIndex = 1;
		var pagesize = 20;
		var moreBar = document.querySelector(".more dd");
		var commentBar = document.querySelector(".commentList");
		var comment_content = document.querySelector("#comment_content");
		var isCode = document.querySelector("#isCode");
		var loadComment = function(reStart) {
			var url = "http://comment.17k.com/topic_list";
			if(reStart) {
				pageIndex = 1;
				commentBar.innerHTML = "";
			}
			moreBar.className = "loading";
			Q.jsonp(url, {"bookId": 2123770, "page": pageIndex, "pagesize": pagesize, "r": new Date().getTime()}, function(data) {
				var page = data.page;
				var comments = page.result;
				var html = [];
				var topic;
				for(var i = 0; i < comments.length; i++) {
					topic = comments[i];
					if(topic.isTop == 1)
						continue;
					html.push("<dl>");
					html.push("<dd><a href='/user/" + topic.marks.userId + "'><img class='icon' src='" + topic.marks.headImgUrl + "' alt='" + topic.marks.nikeName + "' /></a></dd>");
					html.push("<dd>");
					html.push("<div class='name'><span><a class='red' href='/user/" + topic.marks.userId + "'>" + topic.marks.nikeName + "</a></span><span>" + getDate(topic['creationDate']) + "</span></div>");
					var content = topic.summary.replace(/<\/?[^>]*>/g, '');
					if(content.length > 80)
						content = content.substring(0, 60) + "……";
					html.push("<p><a href='/reply/" + topic.id + "'>" + content + "</a></p>");
					html.push("<div class='toolbar'>");
					//if(Q.isLogin()&&Q.userInfo.userId==topic.marks.userId)
					//html.push("<a class='red' href=\"javascript:;\" onclick=\"manager('delete_truncate','"+topic.id+"');\">删除</a>");
					var replyCount = '';
					if(topic.replyCount > 0)
						replyCount = topic.replyCount
					html.push("<a href='/reply/" + topic.id + "'>回复 " + replyCount + "</a>");
					html.push("</div>");
					html.push("</dd>");
					html.push("</dl>");
				}
				commentBar.innerHTML += html.join('');
				pageIndex++;
				moreBar.className = "";
//				if(comments.length == pagesize)
//					moreBar.style.display = 'block';
//				else
//					moreBar.style.display = 'none';
			});
		};
		loadComment();
		var pushComment = function() {
			if(!Q.isLogin()) {
				window.open("http://passport.17k.com/m/?url=" + document.URL, "_self");
				return;
			}
			var url = "/h5/comment/do_topic";
			var text = comment_content.value;

			if(!text || text.length == 0) {
				alert("写点干货吧");
				return;
			}
			var pama = {"bookId": 2123770, "content": text, "isCode": isCode.value, "r": new Date().getTime()};
			if(isCode.value == 1) {
				pama.verificationCode = document.getElementsByName("verificationCode")[0].value;
				if(pama.verificationCode == '') {
					window.inCode.style.removeProperty('display');
					return;
				}
			}
			Q.ajax(url, pama, function(data) {
				document.querySelector('.imgcode').onclick();
				if(data.status == 1) {
					if(isCode.value != 1) {
						isCode.value = 1;
						window.inCode.style.removeProperty('display');
					} else {
						window.inCode.style.removeProperty('display');
					}
				} else {
					var msg = data.msg;
					if(msg == '评论成功!') {
						comment_content.value = '';
						document.getElementsByName("verificationCode")[0].value='';
					}
					alert(msg);
					loadComment(true);
				}
			}, 'json');
		};
		return {
			load: loadComment,
			push: pushComment
		}
	}();

</script>

