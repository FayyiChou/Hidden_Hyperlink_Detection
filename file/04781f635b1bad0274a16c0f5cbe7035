                $(this).closest('fieldset').find('.eventsearch').toggle(!this.checked);
            });
        });
	 
	  $(function() {
            $('input[type="checkbox"]').on('change', function() {
                $(this).closest('fieldset').find('.jobsearch').toggle(!this.checked);
            });
        });
    </script>
		
		
<script type="text/javascript">
			function append_search() {
			var term = document.getElementById('search').value;  
	    	if(term){
				var terms = term+"/"; 
				var final = encodeURI(terms);
			window.location = "http://www.princeandprincessofwaleshospice.org.uk/search/" + final;
				};
			if(!term){
				document.getElementById('search').style.backgroundColor = "#FF9F9F";

				}
		}
	</script>


<script type="text/javascript">
function getSectionNav(id){
	switch(id) {
    case 1:
		$('#menu-hospice').css("height","auto");
		$('#menu-hospice').css("overflow","visible");
		$('#menu-charity').css("height","0");
		$('#menu-charity').css("overflow","hidden");
		$('#menu-new-hospice').css("height","0");
		$('#menu-new-hospice').css("overflow","hidden");
        break;
    case 2:
		$('#menu-charity').css("height","auto");
		$('#menu-charity').css("overflow","visible");
		$('#menu-hospice').css("height","0");
		$('#menu-hospice').css("overflow","hidden");
		$('#menu-new-hospice').css("height","0");
		$('#menu-new-hospice').css("overflow","hidden");
        break;
		case 3:
		$('#menu-new-hospice').css("height","auto");
		$('#menu-new-hospice').css("overflow","visible");
		$('#menu-hospice').css("height","0");
		$('#menu-hospice').css("overflow","hidden");
		$('#menu-charity').css("height","0");
		$('#menu-charity').css("overflow","hidden");
        break;
	}
};

