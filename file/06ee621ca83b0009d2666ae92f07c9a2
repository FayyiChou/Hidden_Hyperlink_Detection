documentTitle = documentTitle.replace(/\'/g,'\\\'').replace(/[&#039;]/g,'\\\'').replace(/\"/g,'&quot;').replace(/</g,'&lt;').replace(/>/g,'&gt;');

if(windowLocation.indexOf("find_password.php") == -1 && windowLocation.indexOf("login.php") == -1 && windowLocation.indexOf("register.php") == -1 && windowLocation.indexOf("registered.php") == -1 && windowLocation.indexOf("logout.php") == -1){
    var userLoginForReferer = "https://login.kongfz.com/member/login.php?returnUrl="+encodeURIComponent(window.location);
    var userRegisterForReferer = "https://user.kongfz.com/member/register.php?returnUrl="+encodeURIComponent(window.location);
