    function headerLogoutResponse(result)
    {
        var item = result.ajaxResponse[0].item[0];
        if(item.data == true)
        {
            document.getElementById("loginInfo").innerHTML=result.ajaxResponse[0].item[1].data;
        } else{
            alert('退出不成功，请重新尝试退出！');
            location.reload();
        }
    }
