}

function showNav()
{
    try{
        document.getElementById("kfzNav").style.display = "";
    }catch(err){}

    try
    {
        if(document.getElementById("kfziframe"))
        {
            document.getElementById("kfziframe").style.display = "";
        }
        else
        {
            var iframe = document.createElement('iframe');
            iframe.id = "kfziframe";
            iframe.style.width = "160px";
            iframe.style.padding = "0";
            iframe.className = "subMenu-Nav";
            iframe.style.left = "5px";
            iframe.style.border = "none";
            iframe.style.zIndex = "10000";
            iframe.src=userSite+"blank.html";
            document.getElementById("kfzNav").parentNode.appendChild(iframe);
        }
    }
    catch(err){}

    try{
        document.getElementById("kfziframe").style.height = (document.getElementById("kfzNav").offsetHeight) +'px';
        document.getElementById("aover3").className = "top-right-nav-aon";
        document.getElementById("b-nav3").className = "b-hover";
    }catch(err){}
}

function hideNav()
{
    try{
        document.getElementById("kfzNav").style.display = "none";
        document.getElementById("kfziframe").style.display = "none";
        document.getElementById("aover3").className = "top-right-nav-a";
        document.getElementById("b-nav3").className = "b-normal";
    }catch(err){}
}


if(isLogin == 'true')
{
    var logoutStr = "&nbsp;&nbsp;&nbsp;&nbsp;<a id='loginOutHref' href='"+userSite+"member/logout.php'>[安全退出]</a>";

    document.getElementById("welcomeSpan").innerHTML = "您好，";
    document.getElementById("loginMsg").innerHTML = "<a href='"+userSite+userId+"/' target='_blank'>"+nickname+"</a>"+logoutStr;
    document.getElementById("loginMsg").style.display="";

    if(isAuctioneer == 'true' || isAuctioneer == 'yes')
        {
            document.getElementById("applyAuctionSrc").style.display = 'none';
            document.getElementById("manageAuctionSrc").style.display = 'block';
            document.getElementById("manageTradeSrc").style.display = 'block';
            document.getElementById("manageBiddingGoodsSrc").style.display = 'block';
        }

    if(isShopkeeper == 'true' || isShopkeeper == 'yes')
        {
            document.getElementById("shopManageSrc").style.display = 'none';
            document.getElementById("addItemSrc").style.display = 'block';
            document.getElementById("manageItemSrc").style.display = 'block';
            document.getElementById("manageOrderSrc").style.display = 'block';
        }

    try
    {
        document.getElementById("loginOutHref").href = userLoginOutForReferer;
    }
    catch (e) {}

    document.getElementById("showSellerSpan").style.display = '';
    document.getElementById("showBuyerSpan").style.display = '';
    document.getElementById("showCenterSpan").style.display = '';
    document.getElementById("showShopCartSpan").style.display = '';
    document.getElementById("showMsgNumSpan").style.display = '';
}
else
{
    try
    {
        document.getElementById("loginHref").href  = userLoginForReferer;
        document.getElementById("registerHref").href = userRegisterForReferer;
        document.getElementById("loginMsg").style.display="";
    }
    catch (e){}

    document.getElementById("manageAuctionSrc").innerHTML="申请拍卖会员";
    document.getElementById("manageAuctionSrc").href=auctionSite+"member/auction_admin/manage_auctioneer_info.php?act=apply";
    document.getElementById("shopManageSrc").innerHTML="申请开店";
    document.getElementById("shopManageSrc").href=shopSite+"apply_shop.php?act=apply";
    document.getElementById("bookstallManageSrc").innerHTML="免费开通书摊";
    document.getElementById("bookstallManageSrc").href=bookstallSite+"apply_shop.php?act=apply";

    document.getElementById("showSellerSpan").style.display = '';
    document.getElementById("showBuyerSpan").style.display = '';
    document.getElementById("showCenterSpan").style.display = '';
    document.getElementById("showShopCartSpan").style.display = '';
    document.getElementById("showMsgNumSpan").style.display = 'none';
}

document.getElementById("cartNumSpan").innerHTML = cartNum;

if(cartNum <= 0){
    document.getElementById("cartNumContainerSpan").style.display = 'none';
}else{
    document.getElementById("cartNumContainerSpan").style.display = '';
}
