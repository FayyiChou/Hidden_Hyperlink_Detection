    var userLoginOutForReferer = "https://user.kongfz.com/member/logout.php";
}

function showUserCenter()
{
    try{
        document.getElementById("userCenter").style.display = "";
    }catch(err){}

    try{
        if(document.getElementById("kfziframeus")){
            document.getElementById("kfziframeus").style.display = "";
        }else{
            var iframe = document.createElement('iframe');
            iframe.id = "kfziframeus";
            iframe.style.padding = "0";
            iframe.className = "subMenu";
            iframe.style.left = "5px";
            iframe.style.border = "none";
            iframe.style.zIndex = "10000";
            iframe.src=userSite+"blank.html";
            document.getElementById("userCenter").parentNode.appendChild(iframe);
        }
    }
    catch(err){}

    try{
        document.getElementById("kfziframeus").style.height = (document.getElementById("userCenter").offsetHeight) +'px';
        document.getElementById("kfziframeus").style.width = (document.getElementById("userCenter").offsetWidth) +'px';
        document.getElementById("aover").className = "top-right-nav-aon";
        document.getElementById("b-nav0").className = "b-hover";
    }catch(err){}
}

function hideUserCenter()
{
    try{
        document.getElementById("userCenter").style.display = "none";
        document.getElementById("kfziframeus").style.display = "none";
        document.getElementById("aover").className = "top-right-nav-a";
        document.getElementById("b-nav0").className = "b-normal";
    }catch(err){}
}

function showSeller()
{
    try{
        document.getElementById("kfzSeller").style.display = "";
        document.getElementById("aover1").className = "top-right-nav-aon";
        document.getElementById("b-nav1").className = "b-hover";
    }catch(err){}
}

function hideSeller()
{
    try{
        document.getElementById("kfzSeller").style.display = "none";
        document.getElementById("aover1").className = "top-right-nav-a";
        document.getElementById("b-nav1").className = "b-normal";
    }catch(err){}
}

function showBuyer()
{
    try{
        document.getElementById("kfzBuyer").style.display = "";
    }catch(err){}

    try
    {
        if(document.getElementById("kfziframebuyer"))
        {
            document.getElementById("kfziframebuyer").style.display = "";
        }
        else
        {
            var iframe = document.createElement('iframe');
            iframe.id = "kfziframebuyer";
            iframe.style.width = "80px";
            iframe.style.padding = "0";
            iframe.className = "subMenu";
            iframe.style.left = "5px";
            iframe.style.border = "none";
            iframe.style.zIndex = "10000";
            iframe.src=userSite+"blank.html";
            document.getElementById("kfzBuyer").parentNode.appendChild(iframe);
        }
    }
    catch(err){}

    try{
        document.getElementById("kfziframebuyer").style.height = (document.getElementById("kfzBuyer").offsetHeight - 1) +'px';
        document.getElementById("aover2").className = "top-right-nav-aon";
        document.getElementById("b-nav2").className = "b-hover";
    }catch(err){}
}

function hideBuyer()
