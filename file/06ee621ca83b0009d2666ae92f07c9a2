    }

    function headerLoginResponse(result)
    {
        if(result.ajaxResponse[0].isLogin){
            var isLogin = result.ajaxResponse[0].isLogin[0].data;
        }else{
            var isLogin = 'fail';
        }

        if(result.ajaxResponse[0].reason){
            var reason = result.ajaxResponse[0].reason[0].data;
        }else{
            var reason = '';
        }

        if(result.ajaxResponse[0].failDesc){
            var failDesc = result.ajaxResponse[0].failDesc[0].data;
        }else{
            var failDesc = '';
        }

        if(result.ajaxResponse[0].headerStr){
            var headerStr = result.ajaxResponse[0].headerStr[0].data;
        }else{
            var headerStr = '';
        }

        if(isLogin == "yes"){
            document.getElementById("loginInfo").innerHTML = headerStr;
        } else {
            alert(reason ? reason : '登录服务器没有响应，请稍候再试');

            if(failDesc == 'user_must_edit_info'){
                window.location=(g_site_user+'member/tmp_must_change_info2.php');
            }else{
                window.location=(g_site_login+'member/login.php');
            }
        }

    }

    function userLogout()
