    function userLogin()
    {
        var v = new Validator();
        var usernameHeader = document.getElementById("usernameHeader").value;
        var passwordHeader = document.getElementById("passwordHeader").value;
        var msg = "";
        if(!v.checkStr("usernameHeader",true,1,60,"请正确填写用户名！")){
            v.showErrMsg('errMsg');
            document.getElementById("usernameHeader").focus();
