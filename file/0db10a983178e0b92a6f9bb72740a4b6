<script type="text/javascript">$(function(){var $aside=$('#J-aside');var $hs=$aside.find('.head span');var $new=$aside.find('.new-list');var $li=$new.find('li');$li.on('mouseenter',function(){var index=$(this).index();$li.removeClass('hover').eq(index).addClass('hover')});tab(0);$hs.on('mouseenter',function(){var index=$(this).index();tab(index)});function tab(index){$li=$new.eq(index).find('li');$hs.removeClass('hover').eq(index).addClass('hover');$new.addClass('none').eq(index).removeClass('none')}});
$(function(){var pathName=window.location.pathname,pnSplit=pathName.split('/'),$nav=$('.nav a'),navName=['news','guide'];if(pathName=='/dhfate/'){$nav.removeClass('hover').first().addClass('hover')}else{for(var i=0;i<pnSplit.length;i++){if(pnSplit[i]==""||typeof(pnSplit[i])=="undefined"){pnSplit.splice(i,1);i=i-1}if(pnSplit[i]==navName[0]){$nav.removeClass('hover').eq(1).addClass('hover');break}else if(pnSplit[i]==navName[1]){$nav.removeClass('hover').eq(2).addClass('hover');break}}}});
/*
 * aside字符截取
 * */
var asideLi=$(".new-list ul li");
$.each(asideLi,function(index,value){
    var asideStr=$(this).find("span").text();
    var lastStr=strsplic(asideStr,18);
    $(this).find("span").text(lastStr);

});

//截取字符封装函数
function strsplic(str,num){
    str=str.substr(0,num);
    return str;
};
