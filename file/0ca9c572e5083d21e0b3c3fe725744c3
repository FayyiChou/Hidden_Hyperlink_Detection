<script>
(function($,D){
	if(D.length){
		var gurl="http://partners.fh21.com.cn/partners/showcodejsonp?callback=?";
		var placeholders={};
		D.forEach(function(item){
			placeholders[item.position_id]=item.placeholder;
			delete item.placeholder;
			item.keyword=encodeURIComponent(item.keyword);
		});
		console.log(D);
		$.getJSON(gurl,"condition="+JSON.stringify(D),function(resp){
		//console.log(resp);
		if(resp.errno === 0){
			var ads= JSON.parse(resp.result),
				defaults=[];
			
			$.each(ads, function(posID,adHtmlStr) {
				if(adHtmlStr){
					if(placeholders[posID]){
						$(placeholders[posID]).html(adHtmlStr)
					}else{
						defaults.push(adHtmlStr);
					}
				}
			});
			$("body").append(defaults.join("")); 
		}else{
			console.log("ad api error");
		}
		});
	}
})($,typeof AD_REQ_DATA === "undefined"?[]:AD_REQ_DATA);
</script>

