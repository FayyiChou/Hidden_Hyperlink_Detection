	var relatedDisesBlock=$("#relatedDisesBlock");
	$("#relatedDisesTags").on("click","li",function(){
		var currEle=$(this),
			diseid=currEle.attr("data-diseid"),
			gurl=FHUrls.dise+"/article/linkdisease?diseid="+diseid;
		currEle.addClass("curr").siblings().removeClass("curr");
		$("#relatedDisesContent").find("dise").text(currEle.text())
			.parent().attr("href",diseid);
		$.get(gurl,function(res){
			if(res.errno==0){
				var data=res.result;
				$("#relatedDisesBlock").find(".departStr").text(data.department_list)
					.end().find(".checkStr").text(data.symptom_list)
					.end().find(".symStr").text(data.checking_list);
			}
		});
	});
