    <script>
    function xdjdCheckSearch() {
        if (jQuery.trim(jQuery("#xdjdsearch").val()) == "") {
            jQuery("#popupSearch").popup("close");
            return false;
        }
        return true;
    }

    function xdjdToSearch() {
        jQuery("#popupSearch").popup("open", {
            positionTo: "window",
            transition: "slideup"
        });

        setTimeout(function () { jQuery("#xdjdsearch").focus(); }, 1000);

    }
</script> 
