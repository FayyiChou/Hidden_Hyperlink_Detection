	<script type="text/javascript">
	newsdata=new Array();
		$('.topnav').ready(function() {
			$('.nav li a').eq(0).addClass('active');
		})
		var banintval;
		function chbanner(baindex) {
			var baleft = '-' + (baindex) + '00%';
			$(".balsit li").eq(baindex).siblings().removeClass('cur');
			$(".balsit li").eq(baindex).addClass('cur');
			$(".bainner").animate({
				left : baleft
			}, 1300);
		}
		var m = 0;
		banintval = setInterval(function() {
			m = parseInt($(".balsit .cur").attr('name'));
			if (m == 3) {
				m = 0;
			} else {
				m = m + 1;
			}
			chbanner(m);
		}, 2000)
		$("#banner").hover(function() {
			clearInterval(banintval);
		}, function() {
			banintval = setInterval(function() {
				m = parseInt($(".balsit .cur").attr('name'));
				if (m == 3) {
					m = 0;
				} else {
					m = m + 1;
				}
				chbanner(m);
			}, 2000)
		});
		$(".balsit li").click(function() {
			m = $(this).index();
			chbanner(m);
		});
		$(".prev").click(function() {
			if (m == 0) {
				m = 3;
			} else {
				m = m - 1;
			}
			chbanner(m);
		});
		$(".next").click(function() {
			if (m == 3) {
				m = 0;
			} else {
				m = m + 1;
			}
			chbanner(m);
		});
		var z = 11;
		$('.softsm').hover(function() {
					var smi = $(this).index() - 1;
					$('.scenimg').children('img').eq(smi).siblings().css('display', 'none');
					$('.scenimg').children('img').eq(smi).css('display','block');
				}, function() {})
		$('.neslist').hover(function() {
			var x = $(this).index() - 1;
			$(this).siblings().removeClass('nescur');
			$(this).addClass('nescur');
			$('.nelist').eq(x).siblings().fadeOut('fast');
			$('.nelist').eq(x).fadeIn('fast');
		}, function() {});
		$('.cbutton button').click(function() {
							var name = $('.ictext').eq(0).val();
							var tel = $('.ictext').eq(1).val();
							var mail = $('.ictext').eq(2).val();
							var remark = $('#remark').val();
							var type = $("input[name='conet']:checked").val();
							if (name == '') {
								$('.ictext').eq(0).parent('p')
										.addClass('error');
								$('.ictext').eq(0).siblings('.errin').css(
										'display', '');
								return;
							} else {
								if (tel == ''|| tel.match(/^(((13[0-9]{1})|159|153)+\d{8})$/)) {
									$('.ictext').eq(1).parent('p').addClass(
											'error');
									$('.ictext').eq(1).siblings('.errin').css(
											'display', '');
									return;
								} else {
									if (mail == ''|| !mail.match(/^\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$/)) {
										$('.ictext').eq(2).parent('p')
												.addClass('error');
										$('.ictext').eq(2).siblings('.errin')
												.css('display', '');
										return;
									} else {
										if (type == undefined) {
											$('.errintype').css('display', '');
											return;
										} else {
											$.post("postMsg", {
												name : name,
												tel : tel,
												mail : mail,
												remark : remark,
												type : type
											}, function(data) {
												$('.ictext').eq(0).val('');
												$('.ictext').eq(1).val('');
												$('.ictext').eq(2).val('');
												$('#remark').val();
											})
										};
									};
								};

							};

						});
		$('.ictext').focus(function() {
			$(this).parent('p').removeClass('error');
			$(this).siblings('.errin').css('display', 'none');
		});
		$(':radio').click(function() {
			$('.errintype').css('display', 'none');
		});
		$('.nemain').ready(
				function() {
					$.post("loadNews", {
						page : 1,
						size : 5,
						type : 0
					}, function(data) {
						var result = JSON.parse(data);
						if (result != null && result.status == 1) {
							$('.neimg').html('<img src="res/upload/'+result.datas[0].fengmian+'.jpg">');
							$('.netitle').html(result.datas[0].title);
							$('.nesummary').html(result.datas[0].summary);
							var len = result.datas.length;
							for (var i = 0; i < len; i++) {
								newsdata[i]=result.datas[i];
							$('.nelist').html($('.nelist').html()+'<div class="nesmall" onmouseover="newson('+i+')"><img src="res/upload/'+result.datas[i].fengmian+'.jpg"></div>');	
							}
						}
					})
				})
			function newson(n){
			$('.neimg').html('<img src="res/upload/'+newsdata[n].fengmian+'.jpg">');
			$('.netitle').html(newsdata[n].title);
			$('.nesummary').html(newsdata[n].summary);
			
		}
	</script>
</body>
