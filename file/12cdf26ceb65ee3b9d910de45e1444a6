    function showChaoGuJia(){
        if('' == 'ycjcsand4g'){
            $(".g-bgf").prev(".h").show();
            $(".g-bgf").prev(".h").prev(".adBox").show();
        }
    }
	function showStockIndex(){
		$.ajax({
        type: "get",
        dataType: "json",
        url:"/index.php?m=&c=Index&a=stockIndex",
        data : {},
        success: function (data) {
          $(data).each(function(index) {
          	var val = data[index];
          	var key = val.key;
          	$('#'+key).removeClass().addClass(val.state);
          	$('#'+key).find('.name').html(val.name);
          	$('#'+key).find('.dot').html(val.dot);
          	$('#'+key).find('.nowPic').html(val.nowPic);
          	$('#'+key).find('.rate').html(val.rate+'<i>%</i>');

          });
        }
      });
	}
	
    function commentUp(){
        $(".m-list4 .bot .zan").each(function(){
            $(this).click(function(){
                upOrDown($(this),"up");
            });
        });
    }

    function commentDown(){
        $(".m-list4 .bot .cai").each(function(){
            $(this).click(function(){
                upOrDown($(this),"down");
            });
        });
    }
    
    function upOrDown(self,project){
        var articleId = self.closest("li").find(".articleId").val();
        var blogType = self.closest("li").find(".blogType").val();
        var type = (blogType == 1)?3:2;
        var num =self.text();
        if (('4g'=='4g') && (window.loginType == '-1')){
            goToLogin4g();
        }else{
            $.ajax({
                type: "get",
                dataType: "json",
                url:"/index.php?m=&c=Index&a=upOrDown",
                data : {
                    'commentId' : articleId,
                    'project' : project,
                    'type' : type
                },
                success : function(data){
                    if(data.code == 0 && data.msg == "success"){
                        self.addClass("on");
                        self.text(parseInt(num)+1);
                    }else{
	                    swal({
							title: "",
							text: data.msg,
							customClass: "tycjSweetAlert",
							imageSize: "60x60",
							confirmButtonColor: "#DD6B55",
							confirmButtonText: "好"
						});
                    }
                }
            });
        }
    }

    function goToLogin4g (argument) {
        var currentUrl = window.location.href ;
        if (window.isAndroid){
            clientOperator.toAndroidActivity("LoginAndRegisterActivity",{"url":""});
        }else if(window.isIpad || window.isIphoneOs){
            clientOperator.LoginAndRegister (function(response) {
                        ;},
                    {"action":"LoginAndRegister","params":{"url":""}});
        }
    }
