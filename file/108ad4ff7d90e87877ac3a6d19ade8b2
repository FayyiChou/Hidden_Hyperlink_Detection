                    jqApp.controller('otherCtrl', function($scope, $timeout) {
                        $timeout(function() {
                            var banner = $('.fullwidthabnner').bxSlider({
                                pager: false,
                                nextSelector: '#slider-next',
                                prevSelector: '#slider-prev',
                            });

                            $("#slider-next").click(function() {
                                banner.goToNextSlide();
                            });
                            $("#slider-prev").click(function() {
                                banner.goToPrevSlide();
                            });
                            // var newsSlider = $('.newsSlider').bxSlider({
                            //     controls: false,
                            // });
                            $(".bs-tooltip").tooltip();
                            var w = $(".imglist .imgitem a").width();
                            $(".imglist .imgitem a").height(w * 0.66);
                        });
                    });
