<script>
function mobileTopUpCheckForm()
{
	if(checkOpenemail($('input[name="VipPayForm[openemail]"]')) && checkOpenemailRepeat($('input[name="VipPayForm[openemailRepeat]"]')) && checkMobile($('input[name="VipPayForm[mobile]"]')))
	{
		$('#onlinepay-form').submit();
	}
}

function checkOpenemail(_this)
{
	var myreg = /^([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+\.[a-zA-Z]{2,3}$/;
	
	if(!myreg.test(_this.val()))
	{
		var errorTishi = '* 请输入有效的邮箱';

		var returnVal = false;
	}
	else
	{
		var errorTishi = '';

		var returnVal = true;
	}
	
	$('#mobile-top-up-errors').text(errorTishi);

	return returnVal;
	
}

function checkOpenemailRepeat(_this)
{
	if(_this.val() != $('input[name="VipPayForm[openemail]"]').val())
	{
		var errorTishi = '* 确认邮箱不一致';
		
		var returnVal = false;
	}
	else
	{
		var errorTishi = '';

		var returnVal = true;
	}
	
	$('#mobile-top-up-errors').text(errorTishi);

	return returnVal;
}

function checkMobile(_this)
{
	var myreg = /^((13[0-9]{1})|159|153)+\d{8}$/;
	
	if(!myreg.test(_this.val()))
	{
		var errorTishi = '* 请输入有效的移动手机号';

		var returnVal = false;
	}
	else
	{
		var errorTishi = '';

		var returnVal = true;
	}
	
	$('#mobile-top-up-errors').text(errorTishi);

	return returnVal;
}

jQuery(function($){

	$("#onlinepay-form").keydown(function(e){
		if(e.keyCode == 13)
		{
			mobileTopUpCheckForm();
		}
	});
	
	$('input[name="VipPayForm[openemail]"]').blur(function(){
		checkOpenemail($(this));
	});
	
	$('input[name="VipPayForm[openemailRepeat]"]').blur(function(){
		checkOpenemailRepeat($(this));
	});

	$('input[name="VipPayForm[mobile]"]').blur(function(){
		checkMobile($(this));
	});
});
</script>
<script>
 
function makeVipSlide(divid)
{
	var id="#"+divid, li=id + " .pic-page1>li", lia=li + " a", last=1, current=2, total=$(li).length;
	
	if(total<=1)
	{
		return false;
	}
	var showItem = function(){
			if(last == current)
			{
				return true;
			}
			$("#li-pic-" + last).fadeOut();
			$("#li-pic-" + current).show();
			$("#li-p-" + last).fadeOut();
			$("#li-p-" + current).show();
			$("#li-icon-" + last + " > a").removeClass("on");
			$("#li-icon-" + current + " > a").addClass("on");
		},
		setTimer = function(){
			var t = setInterval(function(){
					showItem();
					if(++current > total)
					{
						current = 1;
					}
					if(++last > total)
					{
						last = 1;
					}
				}, 5000);
			return t;
		},
		timer = setTimer();
	$(li).hover(function(){clearInterval(timer); current = $(this).attr("data-idx");showItem();last=current; if(++current>total){current=1;}}, function(){timer = setTimer();});
}
makeVipSlide("pic-slide");

function addVipActivityClickCountById(isOk,id)
{
	if(isOk != 'Y')
	{
		return false;
	}

	$.ajax({
		type:'post',
		async:false,
		url:'/home/addVipActivityClickCountById',
		data:'id='+id,
		success:function(msg){
			var pss = parseInt($('p[activityid="'+id+'"]').text().match(/[0-9]+/))+1;
			
			$('p[activityid="'+id+'"]').text('已有'+pss+'位爸妈想参加');
		}
	});
	window.open($('p[activityid="'+id+'"]').attr('recommend_href'));
}
