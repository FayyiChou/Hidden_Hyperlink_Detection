<script>
    $('.list1 li a p').css({opacity:0});
    $('.list1 li a').hover(function(){
        $(this).find('p').stop().css({opacity:1});	
        $(this).siblings('.price').stop().css({color:'#603016'});		 
            }, function(){
        $(this).find('p').stop().css({opacity:0});		
        $(this).siblings('.price').stop().css({color:'#e58e12'});			 
    })
    $('.thumb-pad0 a').hover(function(){
        $(this).siblings('p').stop().css({color:'#e58e12'});		 
            }, function(){	
        $(this).siblings('p').stop().css({color:'#603016'});			 
    })
    $('.thumb-pad1 a').hover(function(){
        $(this).siblings('p, time').stop().css({color:'#603016'});	
        $(this).parent().siblings('.badge').stop().css({'background':'#603016'});
        $(this).parent().siblings('.badge').find('em').stop().css({'background':'#3a1a09'});	 
            }, function(){	
        $(this).siblings('p, time').stop().css({color:'#d06f00'});	
        $(this).parent().siblings('.badge').stop().css({'background':'#e58e12'});
        $(this).parent().siblings('.badge').find('em').stop().css({'background':'#d06f00'});		 
    })
    if($.browser.msie && $.browser.version == 8){    
        $('.list1 li figure > img').css({'display':'none'});
    }
    if($.browser.mozilla){    
        $('.thumb-pad1 .thumbnail .badge').css({'margin-bottom':'4px'});
    }
    if($.browser.opera){    
        $('.thumb-pad1 .thumbnail .badge').css({'margin-bottom':'4px'});
    }
</script>
