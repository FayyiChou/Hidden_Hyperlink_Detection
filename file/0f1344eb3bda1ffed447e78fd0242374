     <script type="text/javascript">
                    function sug_load_more(obj){
                        var num = $(obj).attr("data-num");
                        var p = $(obj).attr("data-page");
                        var id = $(obj).attr("data-id");
                        if(num < 9){
                            return false;
                        }else{
                            $.post("/ajax_new/ajax_action.php?p="+p+"&id="+id+"&action=sug_load_more",function(res){
                                //console.log(res);
                                if(res.is_error == 0){
                                    if(res.count == 0){
                                        $(obj).html("没有更多内容了");
                                        $(obj).removeAttr("onClick");
                                    }else{
                                        var new_list = $(res.data).hide();
                                        $("#suggest").append(new_list);
                                        new_list.slideDown();
                                        $(obj).attr("data-page",parseInt(p)+1);
                                    }
                                }else{
                                    $(obj).html("没有更多内容了");
                                    $(obj).removeAttr("onClick");
                                }
                            },"json");
                        }

                        $('section').scrollTop(sctop) 
                    }
                </script> 
