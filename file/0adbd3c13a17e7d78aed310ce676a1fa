document.onkeydown=keypage;
var prevpage="10039155.html"
var nextpage="10039157.html"
var index_page = "/files/article/html/32/32102/"
function keypage() {
	if (event.keyCode==37) location=prevpage
	if (event.keyCode==39) location=nextpage
	if (event.keyCode == 13) document.location=index_page
}
lastread.set('32102', '10039156', '重生之将星传奇', ' 52第52章集结号', '豫西山人', '其他小说');
</script>  
