(function($){$(function () {
    var bartop = $('#fthread').offset().top,
        h2_con=$('#fthread').find("h2 a").text();
    function changeBar(){
        var st = $(window).scrollTop();
        if( st > bartop){
            $('#fthread').addClass('thread_fixed');
        }else{
            $('#fthread').removeClass('thread_fixed');
        }
    }
    $(window).scroll( function(){
        changeBar();
    })
})
})(jQuery)

