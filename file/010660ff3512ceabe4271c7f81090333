		$(this).parent('p').remove();
		len = $('#popMsgContent').find('p.tips_list').length;
		if (len<1) $('#popMsg').animate({bottom:'-300px'},'slow');
		// 直接调用Ajax
		if (a.substr(0,11)=='javascript:') { // 在一个新页面执行JS
			jsData = a.substr(11);
			var regexp = /(.*)\((.*)\)[;]+/;
			var rs = jsData.match(regexp);
			fun = rs[1];
			tj  = rs[2];
			if (fun == 'getTiwenDialog') { // 提问
				url = "/?mod=student_zuoye_reply&read=yes&type=zuoye_tiwen&id="+tj;
				Ajax.call(url,'',null,"GET","TEXT",false);
			} else if (fun == 'get_shiti_CG_TiwenDialog') {
				url = "/?mod=teach_student_tongji_cgst_dialog&read=yes&&cg_id="+tj;
				Ajax.call(url,'',null,"GET","TEXT",false);
			} else if (fun == 'getStudentHelpDialog') {
				tj_data = tj.split(',');
				student_id = tj_data[0];
				shiti_id = tj_data[1];
				url = '/?mod=ass_getStudentHelpDialog&read=yes&type=student_help_'+student_id+'_'+shiti_id+'&shiti_id='+shiti_id+'&student_id='+student_id;
				Ajax.call(url,'',null,"GET","TEXT",false);
			}
		} else {
			Ajax.call(a,'',null,"GET","TEXT",false);
		}
	}
});
</script> 
