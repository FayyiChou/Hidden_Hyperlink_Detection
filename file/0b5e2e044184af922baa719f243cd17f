  <div class="g-toolsbox"> 
   <!-- 页内锚点导航 --> 
   <script src="http://www.wyzxwk.com/skin/wywk/js/jquery.nav.js"></script> 
   <!-- 返回顶部底部及微信订阅 --> 
   <ul class="m-toolsbox" id="j-toolsbox"> 
    <li class="u-gotop" style="display:none;"><a id="j-gotop" href="#anchor-top"></a></li> 
    <li class="u-comment" id="j-comment"><a href="#anchor-comment"></a></li> 
    <li class="u-gobottom"><a id="j-gobottom" href="#anchor-bottom"></a></li> 
   </ul> 
  </div> 
  <script type="text/javascript">
    $(document).ready(function () {
        $(window).scroll(function () {
            var windowheight = $(window).height(); //获取屏幕高度
            var windowTop = $(this).scrollTop(); //获取屏幕顶端到滚动条顶部的高度
            var footerTop = $('footer').offset().top;
            var scrollbottom = windowheight + windowTop - 100;
            $('#j-toolsbox .u-gobottom').stop().animate({top: scrollbottom}, 0); //使div停留在屏幕的位置
            if (footerTop - windowTop > windowheight) {
                $('#j-toolsbox .u-gobottom').css('display', 'block');
            } else {
                $('#j-toolsbox .u-gobottom').css('display', 'none');
            }

            if (windowTop > 50) {
                $('#j-toolsbox .u-gotop').fadeIn(800);
            } else {
                $('#j-toolsbox .u-gotop').fadeOut(800);
            }
        });
        $("#j-gotop").click(function () {
            $('body,html').animate({
                scrollTop: 0
            },
            800);
            return false;
        });
        $('#j-gobottom').click(function () {
            $('html,body').animate({scrollTop: $('footer').offset().top}, 800);
        });
        $('#j-comment').click(function () {
            $('html,body').animate({scrollTop: $('#anchor-comment').offset().top}, 800);
        });        
    });
</script> 
