<area  onMouseOver="toolTip('<img src=/zjkd/images/tps_map.png>')" onMouseOut="toolTip()" onclick="display(12)"  shape="poly" coords="299,73,303,74,302,80,300,82,291,82,286,87,288,89,292,89,293,93,292,95,285,96,286,102,282,106,284,111,291,116,288,129,285,132,285,137,283,139,262,139,255,141,252,144,249,152,241,150,230,151,226,153,225,158,222,161,202,161,207,159,207,153,210,150,208,142,212,141,215,138,217,132,226,130,229,127,218,112,209,106,198,102,194,98,199,93,207,92,211,96,223,96,231,90,238,88,247,88,251,93,258,95,264,87,269,87,273,90,284,78,294,79,299,73" />

