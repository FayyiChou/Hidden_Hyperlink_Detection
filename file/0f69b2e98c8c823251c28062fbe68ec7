	$('.ct:gt(0)').hide();
	var hdw = $('.box ul li');
		hdw.hover(function(){
		$(this).addClass('two')
				.siblings().removeClass('two');
		});
	hdw.hover(function(){
		$(this).addClass('one')
				.siblings().removeClass('one');
				
	var hdw_index = hdw	.index(this);
	$('.ct').eq(hdw	.index(this)).show()
			.siblings().hide();		
		});
	});
