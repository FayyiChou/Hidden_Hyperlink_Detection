<script type="text/javascript">
/* UEFA Players Slider */
$(document).ready(function(){
	var movetime=500;	
	var maxw=361;
	var avgw= parseInt((1230-maxw-2)/11);	
	var index;
	var t=false; //延时执行
	var _this;

	//标记当前
	function cur(ele){		
		ele=$(ele)? $(ele):ele;
		ele.addClass("cur").siblings().removeClass("cur");	
	};
	
	$("#picon li:eq(0)").addClass("cur").animate({"width":maxw+"px"});
	
	$("#picon").find("li").mouseover(function(){									  
		_this=$(this);		
		index=$( "#picon li" ).index( $(this)[0] );
		var act=function (){
			_this.siblings("li").removeClass("cur");
			_this.animate({"width":maxw+"px"},{duration:movetime,easing:"easeOutQuart",complete:function(){cur(_this)}}).siblings("li").animate({"width":avgw+"px"},{duration:movetime})
		}
		t=setTimeout(act,200);			
		return false;			
	}).mouseout(function(){
		if(t){
			clearTimeout(t);
		}
	});

})
</script>

<script type="text/javascript">
//ACC
$(function(){
	var index=0;
	$("dl.ac dt").eq(index).css("width","710px");
	$("dl.ac dd").eq(index).css("backgroundPosition",(-35)*index+"px -200px");
	$("dl.ac dd").mouseover(function(){
		if($("dl.ac dt").eq(index).css("width")!="710px")return false;
		i=$("dl.ac dd").index(this);
		if(i==index)return false;
		$("dl.ac dd").eq(index).css("backgroundPosition",(-35)*index+"px 0px");
		$(this).css("backgroundPosition",(-35)*i+"px -200px");
		$("dl.ac dt").eq(index).animate({width:0},200); 
		$(this).next().animate({width:710},200); 
		index=i;
	});
	
	/*MyTime =setInterval(function(){
		$("dl.ac dd").eq(index).trigger("mouseover");
	 }, 100);*/
	 
});
 function display(n){

				for(var i=1;i<=22;i++){
			if (i==n){			
				document.getElementById('xz_'+i).style.display='block';

			} else {

				document.getElementById('xz_'+i).style.display='none';
			}
}

  }
  function disappear(n){
				document.getElementById('xz_'+n).style.display='none';
  }
</script>
