		}
	else if(nCurrIndex == (_nPageCount-1)){
		document.write("<a target='_self' style='font-size:10.5pt;color:#007355;text-decoration:none;' href=\""+_sPageName+"_" + (nCurrIndex-1) + "."+_sPageExt+"\">【上一页】</a>&nbsp;");
