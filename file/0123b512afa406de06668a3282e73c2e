<script language="javascript">
function searchFocus(obj) 
	{
		if (obj.value == '请输入关键字') 
		{
			obj.value = '';
		}
	}

	function searchBlur(obj) 
	{
		if (obj.value == '')
		 {
			obj.value = '请输入关键字';
		}
	}

</script>
