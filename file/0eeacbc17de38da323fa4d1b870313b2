	<script>
	
		$(function() {
		
			// Init fancybox for language popup //
			$('.fancybox-countries').fancybox({
				helpers : { 
					overlay: {
						opacity: 0.9 
					}
				}
			});
		
		    // Init country popup //
			$('#popup-countries a').bind( 'click', function() {
				parent.$.fancybox.close();
			})

		    // Init page links //
			$('a.page-link').bind( 'click', function() {
				var page_link = $(this).attr('data-page-link');

				// Toggle button phone version //
				if ( $('button.navbar-toggle').attr('aria-expanded') == 'true' )
				{
					//console.log( 'Toggle button phone version' );
					$('button.navbar-toggle').click();
				}
				
				// Check if menu item is already active //
				if ( $('#navbar-menu li.'+page_link).hasClass('active') )
				{
					// OK: Menu item is already active //
					//console.log( 'Menu item is already active' );
					return;
				}
				
				// Activate menu item //
				$('#navbar-menu li').removeClass('active');
				$('#navbar-menu li.'+page_link).addClass('active');
				
				// Activate page content //
				$('#block-body .page-container').addClass('hide');
				$('#'+page_link).removeClass('hide');
			})
			
			// Init current year //
			$('.current-year').html( function() {
				var cur_date = new Date();
				var cur_year = cur_date.getFullYear();
				return cur_year;
			});
		
		});
		
	</script>
	
