<script type="text/javascript" src="http://assets.dxycdn.com/core/jquery/1.7.2-min.js"></script>
<script type="text/javascript">
jQuery(function($) {
    var overload = document.getElementById('overload');
	//var imgs = document.getElementsByTagName('img');
	var imgs = $(".page-content img");

    for(var i = 0, len = imgs.length; i < len; i++) {
        (function() {
            var tmp = $(imgs[i]);
            tmp.click(function(e) {
                var src = tmp.attr('rel');
                if (!src) {
                    src = tmp.attr('src');
					if(src.indexOf('/image/201') != -1) {
						src = src.replace('/image/','/image/big/');
					}
                }

                changeImg(src);
                overload.style.display = 'block';
                return false;
            });
        })();
    };
	
	function initImage(thisImage) {
        var src = thisImage.getAttribute('rel');
        if (!src) {
            src = thisImage.getAttribute('src');
        }
        changeImg(src);
        overload.style.display = 'block';
        return false;
    };

    function hidemask() {
        overload.style.display = 'none';
    };
    overload.onmousedown = hidemask;

    function changeImg(imgSrc) {
        var box = document.getElementById('overload-src');
        var img = new Image();

        img.onload = function() {
            var parent = this.parentNode;
            var offset = (overload.clientHeight / 2) - (parent.clientHeight / 2);
            parent.style.marginTop = offset + 'px';
        };

        box.innerHTML = "";
        box.appendChild(img);

        box.focus();
        img.src = imgSrc;
    };
    
    window.initImage = initImage;
});
</script>

