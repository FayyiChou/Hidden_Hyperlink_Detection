<script>

	$( document ).ready(function() {
		$('div.controlSeo').html("Показать текст »");

	});
	$('div.controlSeo').bind('click', function(){
		if ($('div.controlSeo').html() == "Показать текст »"){
	        $('div.seoTextShowHide').css('height','auto');
			$('.text_block-overlay').css('display','none');
			$('div.controlSeo').html('Скрыть »');
		}
		else{
			$('div.seoTextShowHide').css('height','170px');
			$('.text_block-overlay').css('display','block');
			$('div.controlSeo').html('Показать текст »');
		}
	});
</script>
