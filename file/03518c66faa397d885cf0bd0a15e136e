            e.preventDefault();
            var parent = $(this).parent(),
                data = {
                    quantity: parent.find('input[name*=quantity]').attr('value'),
                    id: parent.find('input[name*=id]').attr('value'),
                    actionADD2BASKET: 'В корзину',
                    action: "BUY"
                };
            $.ajax({
                type: "POST",
                data: data,
                dataType: "html",
                success: function (out) {
                    BX.onCustomEvent('OnBasketChange');
                }
            });
        });


