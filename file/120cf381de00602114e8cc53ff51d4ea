  <script language="javascript" type="text/javascript">
$(function(){
	});
function goods_cut(){
	var num_val=document.getElementById('number');
	var new_num=num_val.value;
	var Num = parseInt(new_num);
	if(Num>1)Num=Num-1;
	num_val.value=Num;
	changePrice();
}
function goods_add(){
	var num_val=document.getElementById('number');
	var new_num=num_val.value;
	var Num = parseInt(new_num);
	Num=Num+1;
	num_val.value=Num;
	changePrice();
}
var goods_id = 276533;
var goodsattr_style = 1;
var gmt_end_time = 0;
var day = "天";
var hour = "小时";
var minute = "分钟";
var second = "秒";
var end = "结束";
