<span id="tips" style="margin-top: -294px; ">目前京东微联APP只支持Android和IOS<br>其他系统暂不支持</span>
<script type="text/javascript">
    var txt_box = document.getElementById("extend");
    var txt_btn = document.getElementById("btn_extend");
    var img_roll = document.getElementById("img_roll");
    var btn_prev = document.getElementById("btn_prev");
    var btn_next = document.getElementById("btn_next");
    var img_roll_li = img_roll.getElementsByTagName("li");
    var img_idx = 0;
    var mask = document.getElementById("mask");
    var tips = document.getElementById("tips");

    img_roll.style.width = window.innerWidth * img_roll_li.length + "px";
    for(i=0; i<img_roll_li.length; i++){
        img_roll_li[i].style.width = window.innerWidth + "px";
    }

    for(i=0; i<img_roll_li.length; i++){
        img_roll_li[i].style.width = window.innerWidth + "px";
        var img = img_roll_li[i].getElementsByTagName("img")[0];
        if(img.offsetWidth > window.innerWidth){
            img.style.marginLeft = (0 - (img.offsetWidth - window.innerWidth) / 2) + "px";
        }
    }


    txt_btn.onclick = function(e){
        if(txt_box.className == "extend"){
            txt_box.className = "extend etd_open";
        }
        else{
            txt_box.className = "extend";
        }
    }

    btn_prev.onclick = function(e){
        btn_next.style.display = "block";
        if(img_idx <= 0){
            return;
        }
        else{
            img_idx -= 1;
            if(img_idx <= 0){
                btn_prev.style.display = "none";
            }
            img_roll.style.left = (0 - img_idx * window.innerWidth) + "px";
        }
    }

    btn_next.onclick = function(e){
        btn_prev.style.display = "block";
        if(img_idx >= img_roll_li.length - 1){
            return;
        }
        else{
            img_idx += 1;
            if(img_idx >= img_roll_li.length - 1){
                btn_next.style.display = "none";
            }
            img_roll.style.left = (0 - img_idx * window.innerWidth) + "px";
        }
    }

    mask.style.height = mask.style.lineHeight = document.documentElement.clientHeight + "px";
    tips.style.marginTop = 0 - (tips.offsetHeight / 2) + "px";
</script>



