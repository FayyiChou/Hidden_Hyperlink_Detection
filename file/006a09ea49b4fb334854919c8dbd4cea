    $(document).ready(function() {
      $('#btnYourAccount').click(function(e) {
        e.preventDefault();
        $("#modlogin").modal();
      });
      $('#btnlogin').click(function(e) {
        e.preventDefault();
        $("#frmlogin").find(".alert").addClass('hide');
        $.post(
          'http://www.stellabooks.com/login', 
          //$("#frmlogin").serialize(),
          { 
            "login_email": $("#js-login_email").val(),
            "login_password": $("#js-login_password").val()
          },
          function(data) {
            if (data.success == "true") {
              window.location = window.location;
            } else {
              $("#frmlogin").find(".alert").removeClass('hide');
            }
          }
        );
      });
    });
