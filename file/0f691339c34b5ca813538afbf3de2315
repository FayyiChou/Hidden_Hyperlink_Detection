            _czc.push(['_trackEvent', '2016安全日', "家庭版视频播放", cityname + comefrom.toString(), '1', 'look-btn']);
        }


        function showadDialog(recordSort) {
            if (tcshow(prvCode, cityId, countryId, comefrom, ipArea, recordSort, isshiyanqu)) {
                if (recordSort == 1) {
                    _czc.push(['_trackEvent', '2016年安全日手机报', '显示弹层', cityname + comefrom.toString(), '1', 'wx-sjb']);
                }
            }
        }


