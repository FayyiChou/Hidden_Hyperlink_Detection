                    window.location.href = "/2016SfetyDay_Execution_family.html";
                }
            });
        });



        //签名
        //isFinish  =>0,未完成    1,已完成
        function tijiao(isFinish) {
            //判断用户是否登录 isLogin=>0:未登录;1:已登入
            if (isLogin == 0) {
                //弹登录框 提示登录
                special.showLogin();
            }
            else {
                // 学生
                if (region == 0) {
                    //获取完成状态 
                    try {
                        $("#step1").hide();
                        $("#qming").show();
                        //实验区
                        if (isshiyanqu == 1) {
                            //平台写入数据
                            SpecialSign(function (res2) {
                                if (res2 != null) {
                                    if (res2.Status == "True") {
                                        var cookName1 = getCookie("UserID") + "_2016aqr1";
                                        setCookie(cookName1, 1, 365);
                                        //调用主库
                                        $.getJSON(Asmx + "/SpecialSign?jsoncallback=?", { r: Math.random(), Prv: prvCode, City: cityId, County: countryId, School: schoolid, Grade: grade, Class: classroom, UserType: region, Comefrom: comefrom }, function (res3) {
                                            if (res3 != null) {
                                                if (res3.Status == "True") {
                                                    step1 = 1;
                                                    //设cookies 
                                                    var zkcookName = getCookie("UserID") + "_zk2016aqr1";
                                                    setCookie(zkcookName, 1, 365);
                                                    finishStatus();
                                                    showadDialog(recordSort);
                                                } else if (res3.Msg.length > 0) {

                                                    finishStatus();
                                                    alert(res3.Msg);
                                                }
                                            }
                                            else { finishStatus(); }
                                        });
                                    }
                                    else if (res2.Msg.length > 0) {

                                        finishStatus();
                                        alert(res2.Msg);
                                    }
                                }
                                else {
                                    finishStatus();
                                }
                            });
                        }
                        //非实验区
                        else {
                            $("#step1").hide();
                            $("#qming").show();
                            $.getJSON(Asmx + "/SpecialSign?jsoncallback=?", { r: Math.random(), Prv: prvCode, City: cityId, County: countryId, School: schoolid, Grade: grade, Class: classroom, UserType: region, Comefrom: comefrom }, function (res4) {
                                if (res4 != null && res4.Status == "True") {
                                    step1 = 1;
                                    //设置Cookie 
                                    var zkcookName = getCookie("UserID") + "_zk2016aqr1";
                                    var cookName1 = getCookie("UserID") + "_2016aqr1";
                                    setCookie(cookName1, 1, 365);
                                    setCookie(zkcookName, 1, 365);
                                    finishStatus();
                                    showadDialog(recordSort);
                                }
                                else if (res4.Msg.length > 0) {
                                    alert(res4.Msg);
                                    finishStatus();
                                }
                            });
                        }
                    }
                    catch (e) {
                        finishStatus();
                        alert("网络异常！请稍后尝试");
                    }

                }
                //教师、校级
                else {
                    //显示无权限
                    alert("无法进行操作，您没有此权限");
                }
            }
        }
        function finishStatus() {//0未完成；1已完成
            if (step1 == 1) {
                $("#step1").html("已完成观看，已签名");
                $("#step1").show();
                $("#qming").hide();
                $("#btn1").attr("class", "y-wc");
            }
            if (step2 == 1) {
                $("#btn2").attr("class", "y-wc");
            }
            if (step1 == 0) {
                $("#step1").show();
                $("#qming").hide();
            }
            if (step1 == 1 && step2 == 1 || (isshiyanqu == 1 && step1 == 1 && (grade == 0 || grade == 13 || grade == 14))) {
                $("#student").html("<img src='http://file.safetree.com.cn/special/2016aqr/Styles/images/2016SafetyDay/nav_wc.png' />");
            }
        }

        function vodiePlay() {
            $('#voide').html('<video width="100%" style="width:100%" controls="controls" autoplay="autoplay" loop="loop"><source src="http://file.safetree.com.cn/jyryfbljtb.mp4" type="video/mp4"><object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000"codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=6,0,29,0" width="670" height="550"><param name="movie" value="http://file.safetree.com.cn/flvplayer.swf"><param name="quality" value="high"><param name="allowFullScreen" value="true" /><param name="FlashVars" value="vcastr_file=http://file.safetree.com.cn/jyryfbljtb.flv&IsAutoPlay=1"/><embed src="http://file.safetree.com.cn/flvplayer.swf" allowFullScreen="true" FlashVars="vcastr_file=http://safetree.cbern.com.cn/jyryfbljtb.flv&IsAutoPlay=1" quality="high" pluginspage="http://www.macromedia.com/go/getflashplayer"type="application/x-shockwave-flash" width="670" height="550"></embed>        </object></video>');

            $('#voide-img').hide();
