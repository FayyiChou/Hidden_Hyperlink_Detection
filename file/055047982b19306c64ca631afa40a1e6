<script>
 function onYouTubeIframeAPIReady() {
  var player;
  player = new YT.Player('muteYouTubeVideoPlayer', {
    //videoId:'rnt1MqFYcHc', // YouTube 影片ID
    width: 300,               // 播放器寬度 (px)
    height: 168,              // 播放器高度 (px)
    playerVars: {
	  listType:'playlist',
	  list:'PL0KKLA8OdptqiP_f-65hQj_n5A4W7Anee',
	  autoplay: 1,        // 在讀取時自動播放影片
      controls: 1,        // 在播放器顯示暫停／播放按鈕
      showinfo: 0,        // 隱藏影片標題
      modestbranding: 1,  // 隱藏YouTube Logo
      loop: 1,            // 讓影片循環播放
      fs: 1,              // 隱藏全螢幕按鈕
      cc_load_policty: 0, // 隱藏字幕
      iv_load_policy: 3,  // 隱藏影片註解
      autohide: 1         // 當播放影片時隱藏影片控制列
    },
    events: {
      onReady: function(e) {        
		e.target.setVolume(25);
		e.target.mute();
      }
    }
  });
 }
 // Written by @labnol 
</script>
