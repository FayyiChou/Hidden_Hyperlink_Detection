<script>
 $.noConflict();
 var now = new Date();
jQuery(document).ready(function($) {

//=======================================

   var dates = $('#arrival, #CheckoutDate').datepicker({
    numberOfMonths:1,
    dateFormat: 'dd/mm/yy',
    minDate: now,
    maxDate: '+11M +1D',
    firstDay: 1,
    showOn: 'both',
    buttonImageOnly:' false',
    buttonImage: "images/spacer2.png",
    onSelect: function(selectedDate) {
     var option = this.id == "arrival" ? "minDate" : "maxDate";
     var instance = $(this).data("datepicker");
     var date = $.datepicker.parseDate(instance.settings.dateFormat || $.datepicker._defaults.dateFormat, selectedDate, instance.settings);
     dates.not(this).datepicker("option", option, date);
      if(option == 'minDate') {
       var nextdate = $( '#CheckoutDate' ).datepicker('option','minDate' ,  new Date(date.getFullYear(), date.getMonth(), date.getDate()-0+1,0,0,0) );  
      var nextDay= new Date(date.getFullYear(),date.getMonth(), date.getDate()-0+1,0,0,0);
          var yy = nextDay.getFullYear();
       var mm = nextDay.getMonth()+1;
       var mm2 = ('0' + mm).slice(-2);
       var dd = ('0' + nextDay.getDate()).slice(-2);
                         $("#CheckoutDate").val(dd+"-"+mm2+"-"+yy);   
      }
     }
    });

    $( '#arrival' ).datepicker( 'option', 'dateFormat', 'dd/mm/yy' );
	$('#arrival').datepicker().datepicker('setDate', 'today');
	
//========================================

});
</script>
