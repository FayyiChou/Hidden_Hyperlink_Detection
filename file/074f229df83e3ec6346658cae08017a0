	<script type="text/javascript">
		function right_fix() {
			if (!$('.hot-article')) {
				return;
			}
			var _this = this, rfx = $('.hot-article'), t = 0, h = rfx.offset().top, i = false;
			$(window).bind(
					'scroll',
					function() {
						t = document.documentElement.scrollTop
								|| document.body.scrollTop;
						if (i == false && t > h) {
							rfx.addClass('fixWidget');
							i = true;
						}
						if (i == true && t < h) {
							rfx.removeClass('fixWidget');
							i = false;
						}
					});
		}
		right_fix();
		
		// 关注的，可以删除
		$('#guanzhu').click(function(){
			if(0 < 1){
				window.location.href="http://my.pcauto.com.cn/passport/login.jsp?return="+encodeURI("http://hj.pcauto.com.cn/article/17776.html");
			}
			if($(this).hasClass('following')){
				//取消关注
				$.post("http://hj.pcauto.com.cn/intf/follow/canelPrasie.do",
			        {targetId:44288088}, 
			        function(data) {
			            if(data.code ==0){
			            	$("#guanzhu").removeClass('following');
			            	$("#btn-fensi").html(data.followNum);
			            }
			        });
			}else{
			$.post("http://hj.pcauto.com.cn/intf/follow/prasie.do",
		       {targetId:44288088}, 
		       function(data) {
		           if(data.code ==0){
		           	$("#guanzhu").addClass('following');
		           	$("#btn-fensi").html(data.followNum);
		           }
		       });
			}
