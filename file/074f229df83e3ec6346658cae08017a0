var queue = [{
url: 'http://js.3conline.com/ue/share/auto/bd_share_allin_v3.js'
}
]
var head = document.getElementsByTagName('head')[0];
for(var i = 0,l = queue.length;i<l;i++){
(function(i){
var script = document.createElement('script');
script.charset="GBK";
if(queue[i].callback){
if(script.readyState){
script.onreadystatechange = function(){
if(script.readyState == 'complete' || script.readyState == 'loaded'){
script.onreadystatechange = null;
queue[i].callback();
}
}
}else{
script.onload = queue[i].callback;
}
}
head.appendChild(script);
if(queue[i].params){
var params = queue[i].params;
for(var j in params){
if(params.hasOwnProperty(j)) script.setAttribute(j,queue[i].params[j])
}
}
script.src = queue[i].url;
})(i)
}
</script>
