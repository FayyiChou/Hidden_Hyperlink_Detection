						if(json.minPrice == 0 && json.maxPrice == 0) {
							str = str + '<span class="red">暂无报价</span></a></p>';
						} else if(json.minPrice == 0 && json.maxPrice > 0) {
							str = str + '<span class="red">' + json.maxPrice + '万</span></a></p>';
