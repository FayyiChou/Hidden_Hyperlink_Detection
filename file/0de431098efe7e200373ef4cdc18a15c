<script type="text/javascript">
    jQuery("#btn-ok").click(function () {
        var postData = {};
        postData.user_id = jQuery.trim(jQuery(":text[name=user_id]").val());
        postData.captcha = jQuery.trim(jQuery(":text[name=img-captcha]").val());

        if (!postData.user_id) { alert("请输入账号"); return }
        if (!postData.captcha) { alert("请输入验证码"); return }

        if (!
        (
        jQuery(":text[name=user_id]").attr("pass-valid")
        &&
        jQuery(":text[name=img-captcha]").attr("pass-valid")
        )) {
            jQuery(":text").blur();
            return; //验证不通过不能提交数据
        }

        $('#btn-ok').attr('disabled', "true");
        jQuery.ajax({
            url: "/Pwd/PostForgotPwd",
            type: "POST",
            data: postData,
            success: function (r) {
                if (r.Code == 1) { 
                    var referLink = document.createElement('a');
                    referLink.href = "/Pwd/ForgotPwd2";
                    document.body.appendChild(referLink);
                    referLink.click();
                } else {
                    alert(r.Msg);
                    jQuery(".switch-image").click();
                }
                $('#btn-ok').removeAttr("disabled");
            }, error: function () { $('#btn-ok').removeAttr("disabled"); }
        });

    })

    jQuery(".switch-image").click(function () {
        jQuery.ajax({
            url: "/Home/GetCaptchaUrl",
            type: "POST",
            data: {},
            success: function (r) {
                jQuery("#preview").attr("src", r.Url + "&r=" + Math.random());
                jQuery(".check").show();
            }
        });  
    }).click();
     

</script>

