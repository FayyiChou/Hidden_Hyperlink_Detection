                    slideSpeed: 200,
                    paginationSpeed: 800,
                    rewindSpeed: 1000
                });

                jQuery('.view3d_carousel .owl-carousel').owlCarousel({
                    singleItem: true
                });
            });

            jQuery('.scroll').on('click', function (e) {
                e.preventDefault();

                jQuery('html, body').animate({
                    scrollTop: jQuery(this.hash).offset().top}, 100);

            });

            $('.nav-tabs .nav-a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
            });
            $('.nav-tabs a:first').tab('show');

            $('body').scrollspy({target: '.navbar-collapse', offset: 150});
            $('[data-spy="scroll"]').each(function () {
                $(this).scrollspy('refresh');
            });


        </script>

    </body>
</html>
