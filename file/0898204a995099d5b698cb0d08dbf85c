<script type="text/javascript">
//登录回调
function headerLoginSuccess(j){
onNoticeGetLoginedUser(j);
}
//登出回调
function headerLogoutSuccess(j){
if(j.code == 1){
$("#notice").attr("href", "/uc/login.html");
$("#notice").removeClass("yesnotice").addClass("nonotice");
}
}
//获取登录用户的回调
function onNoticeGetLoginedUser(j){
if(j.code == 1){
$("#notice").attr("href", "/uc/"+j.result.id+".html");
if(j.result.msg > 0 || j.result.notice > 0){
$("#notice").removeClass("nonotice").addClass("yesnotice");
}else{
$("#notice").removeClass("yesnotice").addClass("nonotice");
}
}
}
//高亮当前菜单
function hlNavMenu(){
var url = location.href;
//console.log("==========url:"+url)
$(".mj_nav_scroll li").removeClass("mj_sel");
$(".mj_nav_scroll a").each(function(i,obj){
var href = $(obj).attr("href");
if(href == "/"){//首页
var patt = new RegExp("http://.*\.com(:[0-9]+)?/?$");
if(patt.test(url)){
$(obj).parent().addClass("mj_sel");
return false;
}
}else{
if(url.indexOf(href) != -1){
$(obj).parent().addClass("mj_sel");
return false;
}
}
});
}
$(function(){
hlNavMenu();
var myScroll = new IScroll('#nav_wrapper', {preventDefault: true,preventDefaultException: { tagName: /^(INPUT|TEXTAREA|BUTTON|SELECT|A)$/ }, scrollX: true, scrollY: false, mouseWheel: true,click: false });
//检测登录用户
XCP_UC.addLoginListener(headerLoginSuccess);
XCP_UC.addLogoutListener(headerLogoutSuccess);
XCP_UC.addGetLoginedUserListener(onNoticeGetLoginedUser);
XCP_UC.loadLoginedUser();
//myScroll.scrollTo(-60, 0, 200, true);
});
</script>
