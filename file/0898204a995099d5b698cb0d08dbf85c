function addCollection(){
XCP_UC.getLoginedUser(function(j){
if(j.code == -1 || typeof(j.code) == "undefined" ){
var uri = location.href;
var rUrl = "http://m.xincheping.com/uc/login.html?returl="+uri+"?t="+new Date().getTime()
location.href = rUrl;
}else{
var artId = $("#favorite").attr("dataid");
if(artId=="" || typeof(artId) == "undefined"){
alert("收藏失败");
}else{
var url = "/uc/i/favor/add.do";
var type = "1";
$.post(url, {'objId':artId,'type':type} , function(data){
if(data.code == 1){
alert("收藏成功");
}else{
alert(data.msg);
}
});
}
}
});
}
