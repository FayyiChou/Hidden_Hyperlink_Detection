<script>
var _xcp_cmt_isloadingmore = false;
var _xcp_cmt_nomore = false;
function xcp_cmt_loadmore(){
	if(_xcp_cmt_nomore) return;
	//if(!_xcp_cmt_isloadingmore) {
		_xcp_cmt_isloadingmore = true;
		$("#xcp_cmt_loadmore_btn").hide();
		$("#xcp_cmt_loadingTips").show();
		//setTimeout(function() {
			xcp_cmt_doloadmore();
			//防止加载超时,30秒后放开_xcp_cmt_isloadingmore
			/* setTimeout(function() {
				_xcp_cmt_isloadingmore = false;
			}, 30000); */
		//}, 200);
	//}
}

function xcp_cmt_doloadmore(){
	
	var cmtConfig = {};
	cmtConfig.appendHolderId="xcp_cmt_list_3";
	cmtConfig.loadHolderId = "xcp_cmt_load_holder";
	cmtConfig.loadingTipsId = "xcp_cmt_loadingTips";
	cmtConfig.noMoreTipsId = "xcp_cmt_noMoreTips";
	cmtConfig.targetType="1";
	cmtConfig.targetId="104314";
	cmtConfig.hot="0";
	cmtConfig.cmtHost="";
	XCP_Cmt.loadMore(cmtConfig,function(noMore){
		_xcp_cmt_isloadingmore = false;
		if(noMore){
			_xcp_cmt_nomore = noMore;
			$("#xcp_cmt_loadmore_btn").hide();
			$("#xcp_cmt_loadingTips").hide();
		}else{
			$("#xcp_cmt_loadingTips").hide();
			$("#xcp_cmt_loadmore_btn").show();
		}
	});
}


/* $(function(){
	$(window).scroll(function(){
    	var scrollTop = $(this).scrollTop();
		var scrollHeight = $(document).height();
		var windowHeight = $(this).height();  
		
		if (scrollTop + windowHeight >= scrollHeight) {
			xcp_cmt_loadmore();
		}
    });
}); */
</script>

