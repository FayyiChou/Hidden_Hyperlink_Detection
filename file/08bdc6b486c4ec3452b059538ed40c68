		getImg();
		var hostUrl = window.location.host;
		if (hostUrl.indexOf("m.thepaper.cn") > -1) {
			var nextpageUrl = "http://m.thepaper.cn/load_index.jsp";
		} else if (hostUrl.indexOf("www.thepaper.cn") > -1) {
			var nextpageUrl = "http://www.thepaper.cn/wap/resource/v3/jsp/load_index.jsp";
		} else {
			var nextpageUrl = "http://" + hostUrl
					+ "/wap/resource/v3/jsp/load_index.jsp";
		}

		var g_pageidx = 1;
		function loadnextpage() {
			if ($("#more_bt").attr("data-disabled") == "false") {
				return;
			}
			$("#more_bt").attr("data-disabled", "false");
			var lastTime = $("#loadnextpage").prev(".newspath")
					.attr("lastTime");
			g_pageidx = parseInt($("#loadnextpage").prev(".newspath").attr(
					"pageIndex"));
			var n_pageidx = g_pageidx + 1;
			$("#more_bt").html("加载中...");
			$
					.ajax({
						type : "get",
						url : nextpageUrl,
						data : "nodeids=25949&topCids=1653241,1653284,1653151,1653340,1653265,&pageidx="
								+ n_pageidx
								+ "&lastTime="
								+ lastTime
								+ "&mrd="
								+ Math.random(),
						timeout : 30000,
						dataType : "html",
						success : function(dataHtml) {
							$("#more_bt").attr("data-disabled", "true");
							if (dataHtml.indexOf("t_news") > -1) {
								$("#loadnextpage").before(dataHtml);
								$("#more_bt").html("加载更多…");
								ppstore.setItem("localIndexKeys", $(".list_hp")
										.html());
							} else if (dataHtml.indexOf("newspath") > -1
									&& dataHtml.indexOf("t_news") < 0) {
								$("#more_bt").html("已经到底");
							} else {
								$("#more_bt").html("加载出错，请重新点击加载");
							}

						},
						error : function(XMLHttpRequest, textStatus,
								errorThrown) {
							$("#more_bt").attr("data-disabled", "true");
							$("#more_bt").html("加载失败，请重新点击加载");
						}
					});

			getImg();
		}

		$(function() {
			$.history.init(function(hash) {
				$("#more_bt").attr("data-disabled", "true");
				var timestamp = $("#timestamp").val();
				if (timestamp == ppstore.getItem("indextimestamp")) {
					if (ppstore.getItem("localIndexKeys") != null
							&& ppstore.getItem("localIndexKeys") != "") {
						$(".list_hp").html(ppstore.getItem("localIndexKeys"));
						window.scrollTo(0, ppstore.getItem("indexscrollTop"));
					}
				} else {
					ppstore.setItem("indextimestamp", timestamp);
					ppstore.setItem("localIndexKeys", "");
				}

			});
		});

		var btt = $('#toolBackTop');
		$(window).scroll(
				function() {
					btt.show();
					var stt = $(window).scrollTop()
							|| document.documentElement.scrollTop
							|| document.body.scrollTop;
					if (stt > 100) {
						btt.show();
					} else {
						btt.hide();
					}
					if (stt > 54) {
						$("#chnfloat").addClass("chnfloat");
					} else {
						$("#chnfloat").removeClass("chnfloat");
					}

				});

		$(document).ready(
				function() {
					window.onscroll = function() {
						$("#more_bt").attr("data-disabled", "true");
						var sts = document.documentElement.scrollTop
								|| document.body.scrollTop;
						ppstore.setItem("indexscrollTop", sts);
					}

					getPics = setInterval("getImg()", 2000);

				});
	</script>
