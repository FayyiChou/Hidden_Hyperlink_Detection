  <script type="text/javascript">
$(function(){
	var domTop = $("#rolTop");
	var timer;
	var isHide = true;
	domTop.hide();
	
	var go = function goTop(){     
        var top = $(document).scrollTop();    
        if(top > 100){                          
            var height = $(window).height();     
            domTop.fadeIn(300).css({
                top: height-80
            });
            isHide = false;
        }
        if(top < 100){                            
            domTop.fadeOut(200);
            isHide = true;
        }
    }
    
    $(window).scroll( function() {
    	
    	if(!isHide){
    		domTop.hide();
    	}
    	
    	clearTimeout(timer);
    	
    	timer = setTimeout(go,200)
    })
})
</script> 
