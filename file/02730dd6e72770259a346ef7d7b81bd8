             <script type="text/javascript">
                 var _challenge = '';
                 var vlitype =0;
                 var oImg =2;

                 $(function () {
                     $(".accttab").click(function () {
                         $(this).addClass("actived").siblings().removeClass("actived");
                         var iIndex = $(".accttab").index($(this));
                         $(".switchtabdiv").eq(iIndex).show().siblings(".switchtabdiv").hide();
                         if (iIndex == 0) {
                             $('.errortips').html('请输入帐号、密码');
                         } else {
                             $('.errortips').html('请输入手机号，然后获取手机短信验证码');
                         }
                     });
                 });
                 var defLiginValue = '手机号/邮箱/用户名';
                 var errObj = $('.errortips');

                 $(':input[name=loginName]').focusin(function () {
                     var eThis = $(this);
                     if ($(eThis).val() == defLiginValue) {
                         $(eThis).val('');
                         $(eThis).addClass('blueborder').addClass('loginNameTxtInput').removeClass('loginNameTxt');
                         errObj.html('请输入' + defLiginValue);
                     }
                 }).keypress(function () {
                     var eThis = $(this);
                     if ($(eThis).val() == defLiginValue) {
                         $(eThis).val('');
                     }
                 }).blur(function () {
                     var eThis = $(this);
                     if ($(eThis).val() == '') {
                         $(eThis).val(defLiginValue);
                     }
                 }).focusout(function () {
                     $(this).removeClass('blueborder');
                 }).mailAutoComplete({ emailInput: 'false' });

                 $(':input[name=loginPwd]').focusin(function () {
                     $(this).addClass('blueborder');
                     errObj.html('请输入密码' );
                 }).focusout(
                     function () {
                         $(this).removeClass('blueborder');
                     }
                 ).capsLockTip();

                 $(':input[name=checkCode]').focusin(function () {
                     $(this).addClass('blueborder');
                     errObj.html('请输入验证码');
                 }).focusout(
                    function () {
                        $(this).removeClass('blueborder');
                    }
                );

                 $('#imghref,#imgspan').click(function () {
                     $('#imgspan').attr('src', '../showCode.aspx?rnd=' + Math.random());
                 });
                
                 if (oImg > 0 && vlitype==0 ) {
                     $('div[itemid=showImgCode]').show();
                     setTimeout(function () {
                         $('#imgspan').click();
                     }, 1000);
                 }
                

                 $("body").keydown(function () {
                     if (event.keyCode == "13") {//keyCode=13是回车键
                         $('.loginBtn').click();
                     }
                 });
                 var pcount =0;
                 $('.loginBtn').click(function () {
                     var loginName = $(':input[name=loginName]').val();
                     var loginPwd = $(':input[name=loginPwd]').val();
                     if (loginName == '' || loginName == defLiginValue) {
                         errObj.html('请输入帐号(手机号/邮箱/用户名)');
                         return false;
                     }
                     if ( loginPwd == '') {
                         errObj.html('请输入密码');
                         return false;
                     }
                     if (oImg > 0 && vlitype == 1) {
                         $('#greetestcheck').show();
                         var handler = function (captchaObj) {
                             _captchaObj = captchaObj;
                             // 将验证码加到id为captcha的元素里
                             $("#captcha").html('');
                             captchaObj.appendTo("#captcha");
                            
                             captchaObj.onSuccess(function () {
                                 // 成功回调
                                 $('#greetestcheck').hide();
                                 var geetest_challenge = $('input[name="geetest_challenge"]').val();
                                 var geetest_validate = $('input[name="geetest_validate"]').val();
                                 var geetest_seccode = $('input[name="geetest_seccode"]').val();
                                 doLogin(geetest_challenge, geetest_validate, geetest_seccode);
                             });
                             captchaObj.onRefresh(function () {
                                 var geetest_challenge = captchaObj.config.challenge;
                                 if (_challenge == geetest_challenge) {
                                     Util.Alert('验证码刷新次数过多，请刷新当前页面重试！');
                                 }
                                 _challenge = captchaObj.config.challenge;
                             });
                             captchaObj.getValidate(); // 获取成功后的验证信息，失败是返回false
                         };
                         $.ajax({
                             // 获取id，challenge，success（是否启用failback）
                             url: "Greetest.aspx?rnd="+Math.random(),
                             type: "get",
                             dataType: "json", // 使用jsonp格式
                             success: function (data) {
                                 // 使用initGeetest接口
                                 // 参数1：配置参数，与创建Geetest实例时接受的参数一致
                                 // 参数2：回调，回调的第一个参数验证码对象，之后可以使用它做appendTo之类的事件
                                 initGeetest({
                                     gt: data.gt,
                                     challenge: data.challenge,
                                     product: "embed", // 产品形式
                                     width: "300px",
                                     offline: !data.success
                                 }, handler);
                             }
                         });
                     } else {
                         doLogin();
                     }
                 });

                 function doLogin(geetest_challenge, geetest_validate, geetest_seccode) {

                     var loginName = $(':input[name=loginName]').val();
                     var loginPwd = $(':input[name=loginPwd]').val();
                     var imgcode = $(':input[name=checkCode]').val();
                     var sCookie = $(':input[name=sCookie][checked]').val();
                     var qqCode = $(':input[name=qqCode]').val();
                     qqCode = qqCode ? qqCode : '';
                     pcount++;

                     if (qqCode.length == 0) {
                         if (loginName == '' || loginName == defLiginValue) {
                             errObj.html('请输入帐号(手机号/邮箱/用户名)');
                             return false;
                         }
                         if (loginName == '' || loginPwd == '') {
                             errObj.html('请输入密码');
                             return false;
                         }

                         if (oImg > 0 && vlitype == 0) {
                             if (imgcode == '') {
                                 errObj.html('请输入验证码');
                                 return false;
                             }
                         }
                     }

                     Util.showLoading('正在登录......');
                     $.post("Login.aspx", $.param({ method: 'checkUserLoginData', loginName: loginName, loginPwd: loginPwd, qqCode: qqCode, sCookie: sCookie, imgcode: imgcode, geetest_challenge: geetest_challenge, geetest_validate: geetest_validate, geetest_seccode: geetest_seccode, rnd: Math.random() }), function (rs) {
                         Util.stopLoading();
                       
                         var u = eval('(' + rs + ')');
                         if (parseInt(u.uid) > 0) {
                             myhead.setCookie("name4js", u.uname, sCookie ? 30 : 0);

                             if(u.rs== -9 ){
                                 JQBox.alert({
                                     title: '帐号安全提示', msg: '<div style="text-align:left;">' + u.msg + '<br />上次登录地：' + u.remoteLogin.remoteAddress
                                         +'('+u.remoteLogin.remoteLoginTime.formatTime('yyyy-MM-dd HH:mm')+')' + '<br /> 本次登录地：'+u.localLogin+'<br /> 如果上次登录不是您本人操作，请 <a href="Control.aspx?t=5" target="_blank" class="blue">点击这里修改密码</a>！</div>',
                                     width: 500, height: 130, closeCallBack: function () {
                                         if (r.indexOf('http') > -1) {
                                             location.href = r;
                                             return;
                                         }
                                         if (location.href.indexOf('Login.aspx') > -1) location.href = location.href;
                                     }
                                 });
                                 return;
                             }

                             if (u.isvip == 3 && u.isbd == 1 && /^\d+$/gi.test(loginPwd)) {
                                 JQBox.alert({
                                     title: '友情提示：登录成功', msg: '<div style="text-align:left;">您的登录密码过于简单，安全性低。为了您的帐户安全，建议您立即修改密码！ <a href="/user/Control.aspx?t=5"><font style="color:#f00;">立即修改</font></a></div>'
                                 , closeCallBack: function () {
                                     if (r.indexOf('http') > -1) {
                                         if(r.indexOf('FindPwd')> -1) {
                                             location.href='Control.aspx';
                                         }else{
                                             location.href = r;
                                         }
                                         return;
                                     }
                                     if (location.href.indexOf('Login.aspx') > -1) location.href = location.href;
                                 }
                                 });
                                 return;
                             }

                             if (u.isvip == 3 && u.isbd == 0) {
                                 JQBox.alert({
                                     title: '友情提示：登录成功', msg: '亲，据新闻报道最近有海外黑客攻击网络，请尽快绑定手机号加强账户安全保护，否则可能会给您带来不必要的麻烦。<br /> <a href="/user/Control.aspx?t=6"><font style="color:#f00;">点击这里绑定手机</font></a>'
                                 , closeCallBack: function () {
                                     if (r.indexOf('http') > -1) {
                                         if(r.indexOf('FindPwd')> -1) {
                                             location.href='Control.aspx';
                                         }else{
                                             location.href = r;
                                         }
                                     }
                                     if (location.href.indexOf('Login.aspx') > -1) location.href = location.href;
                                 }
                                 });
                             } else {
                                 if (r.indexOf('http') > -1) {
                                     if(r.indexOf('FindPwd')> -1) {
                                         location.href='Control.aspx';
                                     }else{
                                         location.href = r;
                                     }
                                     return;
                                 }
                                 if (location.href.indexOf('Login.aspx') > -1) location.href = 'Control.aspx';
                             }
                         } else {

                             switch (parseInt(u.rs)) {
                                 case -8:
                                     JQBox.FrameBox({
                                         title: '帐号安全验证', width: 500, height: 280, uri: 'ValidateUser.aspx', closeCallBack: function () {
                                             if (r.indexOf('http') > -1) {
                                                 location.href = r;
                                                 return;
                                             }
                                             myhead.setCookie("name4js", u.uname, sCookie ? 30 : 0);
                                             if (location.href.indexOf('Login.aspx') > -1) location.href = 'Control.aspx';
                                         }
                                     });
                                     $('#imghref').click();
                                     break;
                                 case -10:
                                     errObj.html('验证码过期，请重新操作！');
                                     $('#imghref').click();
                                     break;
                                 case -11:
                                     if(oImg==0  )
                                     {
                                         oImg=2;
                                     }  
                                     if(vlitype==0){
                                         $('div[itemid=showImgCode]').show();
                                         errObj.html('请输入验证码再操作！');
                                         $('#imghref').click();
                                     }else{
                                         if(pcount>2){  
                                             location.reload();
                                             Util.showMsgBox('登录失败，请用重新尝试!');
                                         }
                                         else{
                                             $('.loginBtn').click();
                                         }
                                         return;
                                     }
                                     break;
                                 default:
                                     errObj.html(u.msg);
                                     $('#imghref').click();
                                     break;
                             }
                         }
                     });
                 }

                 if (QC.Login.check() == true) {
                     QC.Login.signOut();
                 }
                 QC.Login({
                     //btnId：插入按钮的节点id，必选
                     btnId: "qqLoginBtn",
                     //用户需要确认的scope授权项，可选，默认all
                     scope: "get_user_info",
                     //按钮尺寸，可用值[A_XL| A_L| A_M| A_S|  B_M| B_S| C_S]，可选，默认B_S
                     size: "A_M"
                 }, function (reqData, opts) {//登录成功
                     QC.Login.getMe(function (openId, accessToken) {
                         checBind(openId, function (rs) {
                             
                             if (rs == "0") {
                                 //您现在可以 <input type=button style="width:80px;height:21px;line-height:21px;" value="直接登录" name="qqLoginOnlybtn" /> 
                                 var sss = '<ul><li style="height:50px; line-height:50px;font-size:14px;padding:5px 0; text-align:center;"><img align="absmiddle" src="' + reqData.figureurl + '" /> ' + QC.String.escHTML(reqData.nickname) + '，欢迎您！ </li><li id="loginarea"></li></ul>';

                                 JQBox.HtmlBox({ title: '登录潇湘书院', content: sss, width: 750, height: 350 }, function () {
                                     showBindTab('#loginarea', reqData, openId, function () {
                                         loginByQQCode(openId, errObj, function () {
                                             if (r.indexOf('http') > -1) {
                                                 location.href = r;
                                                 return;
                                             }
                                             if (location.href.indexOf('Login.aspx') > -1) location.href = location.href;
                                         });
                                     });
                                 });
                             } else {
                                 loginByQQCode(openId, errObj, function () {
                                     if (r.indexOf('http') > -1) {
                                         location.href = r;
                                         return;
                                     }
                                     if (location.href.indexOf('Login.aspx') > -1) location.href = location.href;
                                 });
                             }
                         });

                     });

                 }, function (opts) {//注销成功

                 });
             </script>
            

