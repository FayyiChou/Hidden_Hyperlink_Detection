  <script type="text/javascript">function   formatDate(now)
{     
    var year=now.getFullYear();     
	var month=now.getMonth()+1;     
	var date=now.getDate();     
	var hour=now.getHours();     
	var minute=now.getMinutes();     		   
	return year+"-"+month+"-"+date+"   "+hour+":"+minute;    
}     
//微博评论加载更多
$(function(){
	  var page=2; //从第二条开始加载评论
	
	  $(".column-loading").click(function(){
		     var plHtml='';
			 $(".column-loading").addClass('addloading').text('加载中...');
		     Ajaxme('m.php@s=_2Fm_2Fmwblist_2Fid_2F800010_2Fctime_2F1392790531_2Ftype_2Fhtml_2Fpage_2F'+page,'post',null,10000,function(data){
				   if(data.length!=0)
				   {
					   
					   $.each(data, function(i,item){
							
							plHtml+='<li><div class="tit"><h3><img src="'+item.userAvatar+'/20">'+item.userNick+'</h3><span>'+formatDate(new Date(item.pubTime*1000))+'</span></div><div class="con">'+item.content+'</div></li>';
							 
					   });
					   $(".column-loading").removeClass('addloading').text('点击加载更多');
				   }else
				   {
					 $(".column-loading").removeClass('addloading').text('木有评论了噢!').unbind('click');
					 
				   }
				   page++;
                   $('.pl-list').append($(plHtml));
				   
				 });
				 
		  })
		  
	})
	
</script> 
