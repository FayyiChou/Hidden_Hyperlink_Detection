 	<script type="text/javascript">
      function contxt() //定义函数
      {
        alert("站内搜索功能尚未启用，敬请期待!");
    }
    function contxt1()
   {
  	  alert("链接暂未启用！")
  	  }
		  
	 function display()
	 {
		 var d1=document.getElementById("btn").value;
		 var d2=document.getElementById("mylist");
		 if(d2.style.display=="block")
		 {
			 
			 d2.style.display="none";
		 	document.getElementById("btn").value="展开";
		 	}
		 else
		 {
			 d2.style.display="block";
			 document.getElementById("btn").value="隐藏";
			 }
	 }
	 
function toDou(n)
	{
		if(n>99)
		{
			return ''+n;
			}
			else if(n>9)
			{
			return '0'+n;
				}
				  else
				{
					return '0'+'0'+n;
					}
		}
			
window.onload=function()
{//轮播图_____________________________
	var oRun=document.getElementById('run-img');
	var oRun_ol=oRun.getElementsByTagName('ol')[0];
	var aRun_LiBtn=oRun.getElementsByTagName('ol')[0].getElementsByTagName('li');
	var oRun_ul=oRun.getElementsByTagName('ul')[0];
	var now=0;  //如果忘记定义now 不会一开始就播放   而是要点击一下才自动播放
	for(var i=0;i<aRun_LiBtn.length;i++)
	{
		aRun_LiBtn[i].index=i;
		aRun_LiBtn[i].onclick=function()
		{
			now=this.index;
			run();
		}	
	}
		function run()  // 鼠标点击能移动
		{
			for(var i=0;i<aRun_LiBtn.length;i++)
			{
			aRun_LiBtn[i].className='';
			}
			aRun_LiBtn[now].className='ative';
			//oUl.style.top=-400*this.index+'px';
			startmove(oRun_ul,{top:-400*now});
		}
		function next()    //为了能自动播放设置的函数 以now来循环
	{
		now++;
		if(now==aRun_LiBtn.length)
		{
			now=0;
			}
			run();
		}
	var runtimer=null;
	runtimer=setInterval(next,5000);  //自动播放用到的定时器
	oRun_ol.onmouseover=oRun_ul.onmouseover=function ()     //定位会遮盖某些东西。。导致这里不能用oRun.onmouseover.
	{
		clearInterval(runtimer);
		}
	oRun_ol.onmouseout=oRun_ul.onmouseout=function()
	{
		runtimer=setInterval(next,5000);
		}
		
	//无缝切图——————————————————————————————
	var timer=null;
	var speed=-2;
	var oDiv=document.getElementById('image');
	var oUl=oDiv.getElementsByTagName('ul')[0];
	var aLi=oUl.getElementsByTagName('li');
	oUl.innerHTML=oUl.innerHTML+oUl.innerHTML;
	oUl.style.width=aLi[0].offsetWidth*aLi.length+'px';
	
	function move(){ 
		if(oUl.offsetLeft<-oUl.offsetWidth/2)
		{
			oUl.style.left=0;
			}
		if(oUl.offsetLeft>0)
		{
			oUl.style.left=-oUl.offsetWidth/2+'px';
			}
		oUl.style.left=oUl.offsetLeft+speed+'px';
		
		}
	timer=setInterval(move,30);	
	
	oDiv.onmouseover=function(){
		clearInterval(timer);
		}
		
	oDiv.onmouseout=function(){
		timer=setInterval(move,30);
		}

	document.getElementById('btn1').onclick=function()
	{
		speed-=2;
		if(speed==0)
		{
			speed=-1;
			}
		}		
	document.getElementById('btn2').onclick=function()
	{
		speed+=2;
		if(speed==0)
		{
			speed=1;
			}
		}
	document.getElementById('btn3').onclick=function()
	{
		speed=-2;
		oUl.style.left=0;
		}		

//-----------------------  伪留言板
	var oBtn1=document.getElementById("note_submit");
	var oBtn2=document.getElementById("note_reset");
	var oTxt=document.getElementById("note_area");
	var oOl=document.getElementById("ol1");	

	oBtn1.onclick=function(){

		var oLi=document.createElement('li');
		if(oTxt.value==""){         //禁止留言空白内容
			alert("请输入留言内容！");
			}
		else{
			oLi.innerHTML=oTxt.value;
			oOl.appendChild(oLi);
			oTxt.value="";
			}
		}
	
					
//-----------------------		
		
	var n;var num;
	setInterval(function ()
	   {
		var aImg=document.getElementsByTagName("img");
		var a=aImg.length-17; //后来我也忘记为什么不用a=3了。。
		var mydate=new Date;
		var mymonth=mydate.getMonth()+1;
		var myday=mydate.getDate();
			if((mymonth==1)||(mymonth==3)||(mymonth==5)||(mymonth==7)||(mymonth==8)||(mymonth==10)||(mymonth==12))
				{
					num=31;
					}
			  else if(mymonth==2)
				{
					num=28;	
					}
				else{
						num=30;
						}
			if(myday>4)
			{
				n=myday-4+num*(mymonth-7);
				}
				else
				{
					n=myday+num*(mymonth-7)
					};
					
		var str=toDou(n);
		for(var i=0;i<3;i++)				
			{
			  aImg[i+16].src='img/'+str[i]+'.png';  //这里是重点！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！！
			}				
			},1000);

					
}

</script>
