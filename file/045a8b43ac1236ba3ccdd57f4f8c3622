<script>
    var hamdoreh = jQuery;
    hamdoreh.noConflict();

    /***********************************
     M.M
     ***********************************/
    var accept = 'notaccept';
    function serializeform(idform) {
        return hamdoreh('#' + idform).serialize();
    }
    function sendLoginForm() {
        if ((document.getElementById('loginusername').value == '') || (document.getElementById('loginpassword').value == '')) {
            document.getElementById('msg').innerHTML = 'لطفا اطلاعات را کامل وارد کنید';
        }
        else {
            query = serializeform('loginform');
            hamdoreh.ajax({
                url: "user/public/login.php",
                type: "POST",
                data: query,
                success: function (data) {
                    if (data == 1) {
                        window.location = 'user/index.php?section=profile';
                    }
                    else {
                        document.getElementById('msg').innerHTML = data;
                    }
                }
            });
        }
    }
    function acceptrule() {
        if (accept == 'notaccept') {
            accept = 'accept';
        }
        else if (accept == 'accept') {
            accept = 'notaccept';
        }
    }
    function submitform() {
        if ((document.getElementById('firstname').value == '') || (document.getElementById('lastname').value == '')
            || (document.getElementById('email').value == '') || (document.getElementById('npass').value == '')
            || (document.getElementById('rnpass').value == '')) {
            notify('بروز خطا', 'لطفا اطلاعات را کامل وارد کنید', {vPos: 'top', hPos: 'right'});
            /*hamdoreh.modal.alert('لطفا اطلاعات را کامل وارد کنید');*/
            return false;
        }
        else if (document.getElementById('npass').value.length < 6) {
            notify('بروز خطا', 'طول پسورد کمتر از حد مجاز است', {vPos: 'top', hPos: 'right'});
            /*hamdoreh.modal.alert('طول پسورد کمتر از حد مجاز است');*/
            return false;
        }
        else if (document.getElementById('npass').value != document.getElementById('rnpass').value) {
            notify('بروز خطا', 'پسوردها با هم برابر نیستند', {vPos: 'top', hPos: 'right'});
            /*hamdoreh.modal.alert('پسوردها با هم برابر نیستند');*/
            return false;
        }
        else if (accept == 'notaccept') {
            notify('بروز خطا', 'شما قوانین سایت را نپذیرفته اید', {vPos: 'top', hPos: 'right'});
            /*hamdoreh.modal.alert('شما قوانین سایت را نپذیرفته اید');*/
            return false;
        }
        else {
            hamdoreh.post('user/public/register.php', serializeform('registerform'), function (data) {
                hamdoreh('#show_error').html(data);
            });
        }
    }
    /***********************************
     M.M
     ***********************************/
    hamdoreh(document).ready(function () {
        hamdoreh("#registerform").validationEngine('attach', {
            ajaxFormValidation: true, ajaxFormValidationURL: 'user/public/register.php',
            ajaxFormValidationMethod: 'post',
            onBeforeAjaxFormValidation: function (form, options) {
                show_wait();
            },
            onAjaxFormComplete: function (status, form, errors, options) {
                hide_wait()
                hamdoreh('#show_error').html('<p class="message icon-speech blue-gradient"><span class="block-arrow"><span></span></span>' + errors + '</p>');
            }
        });

        hamdoreh("#loginform").validationEngine();

        /* کد پیغام خطا بروی مرورگر اینترنت اکسپلورر نسخه 9 به پایین */
        hamdoreh("body").iealert({
            support: "ie7",
            title: "آیا می دانید مرورگر تان تاریخ گذشته می باشد ؟",
            text: "برای اینکه بهترین تجربه و لذت را از سایت wishstate ببرید به شما توصیه می کنیم مرورگرتان را با یک مرورگر مدرن تر بروز نمایید. برای دانلود مرورگر جدیدتر بروی دکمۀ ارتقاء کلیک نمایید.",
            upgradeTitle: "ارتقاء",
            upgradeLink: "http://browsehappy.com/",
            overlayClose: false,
            closeBtn: true
        });
        /* کد مشکی کردن صفحۀ نمایش */
        window.onload = function () {
            hamdoreh('#loadingMsg').css('display', 'none');
        };
        /* کد غیر فعال کردن راست کلیک بروی صفحه*/
        /*	hamdoreh(document).ready(function(){
         hamdoreh(document).bind("contextmenu",function(e){
         return false;
         });
         });*/

    });

</script>

</body>
</html>
<script src="user/js/libs/jquery.js"></script>
<script src="Metronic 3-1/jquery.cookie.js"></script>
<script>
    $(document).ready(function () {

        var remember = $.cookie('remember');
        if (remember == 'true') {
            var username = $.cookie('username');
            var password = $.cookie('password');
            // autofill the fields
            $('#username').val(username);
            $('#password').val(password);
            $('#remember').attr('checked', true);
        }


        $("#login").submit(function () {
            if ($('#remember').is(':checked')) {
                var username = $('#username').val();
                var password = $('#password').val();

                // set cookies to expire in 14 days
                $.cookie('username', username, {expires: 14});
                $.cookie('password', password, {expires: 14});
                $.cookie('remember', true, {expires: 14});
            }
            else {
                // reset cookies
                $.cookie('username', null);
                $.cookie('password', null);
                $.cookie('remember', null);
            }
        });
    });
</script>
