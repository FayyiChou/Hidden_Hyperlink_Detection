                                <script>
                                    function change_country(countryid) {
                                        if (countryid == 24) {
                                            $('#city').html('<select name="cityid" id="cityid" class="form-control input-sm"><option>City</option></select>');
                                            send('address/state.php', 'countryid=' + countryid, 'province', true)
                                        } else {
                                            $('#province').html('<input name="stateid" id="stateid" class="form-control input-sm" type="text" placeholder="Province" name="state_name" id="state_name">');
                                            $('#city').html('<input name="cityid" id="cityid" class="form-control input-sm" type="text" placeholder="City" name="city_name" id="city_name">');
                                        }
                                    }
                                    function change_province(stateid) {
                                        $('#cityid').html('<option>City</option>');
                                        send('address/city.php', 'stateid=' + stateid, 'cityid', true);
                                    }
                                </script>
