<script>
    var loginFormBtn = $("#loginForm-btnSubmit");
    function initLoginForm() {

        var loginForm = $("#loginForm").formValidation({
            framework: 'bootstrap',
            icon: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                login_name: {
                    validators: {
                        notEmpty: {
                            message: '请输入登录名'
                        },
                        regexp: {
                            regexp: /^.{6,50}$/,
                            message: '登录名必须6-50位字符'
                        }
                    }
                },
                login_pwd: {
                    validators: {
                        notEmpty: {
                            message: '请输入登录密码'
                        },
                        regexp: {
                            regexp: /^.{6,50}$/,
                            message: '密码必须6-50位字符'
                        }
                    }
                },
                _captcha: {
                    verbose: false,
                    validators: {
                        notEmpty: {
                            message: '校验码不能为空'
                        },
                        regexp: {
                            regexp: /^\d{4}$/,
                            message: '无效的校验码'
                        },
                        remote: {
                            url: '/captcha/',
                            type: 'POST',
                            message: '校验码错误'
                        }
                    }
                }
            },live: 'disabled'
        }).on('success.form.fv', function (e) {
            e.preventDefault();
            var form = $(e.target),
                    fv = $(e.target).data('formValidation');
            loginFormBtn.html("正在登录中...");
            $.ajax({
                url: form.attr('action'),
                type: 'POST',
                data: form.serialize(),
                success: function (response) {
                    if (response.result === true) {
                        $.cookie('loginName',response.login_name,{domain: 'vc265.com'});
                        location.reload();
                        reloadUser(response.login_name);
                    } else {
                        for (var field in response.fields) {
                            fv.updateMessage(field, 'regexp', response.fields[field])
                                    .updateStatus(field, 'INVALID', 'regexp');
                        }
                        loginFormBtn.html("登 录");
                    }
                }
            });
        });
        $('#captcha').click(function () {
            this.src = '/captcha?' + Math.random();
        });
        $('#captchaRetry').click(function () {
            $('#captcha')[0].src = '/captcha?' + Math.random();
        });
    }

    function reloadUser(loginName) {
        $("#welcome").html('<span class="glyphicon glyphicon-home"></span>&nbsp;您好[' + loginName + '],欢迎来到创投汇!&nbsp;');
        $("#loginModal").modal('hide');
    }

    $(".logButton").click(function () {
        $("#loginModal").modal("show");
        $('#captcha').attr('src', '/captcha?' + Math.random());
        return false;
    });

    initLoginForm();

</script>
