<script>
    function Read(NID) {
        $.ajax({
            type: 'POST',
            url: '/News/list.aspx',
            data: 'NID=' + NID,
            error: onError,
            success: function (msg) {
                var Subject = msg.toString().split('Subject:')[1].split(',Date:')[0];
                $("#divSubject").html(Subject);

                var Date = msg.toString().split(',Date:')[1].split(',Content:')[0];
                $("#divDate").html(Date);

                var Content = msg.toString().split(',Content:')[1];
                $("#divContent").html(Content);

                var URL = 'http://www.x2game.com.tw/News/list.aspx' + "?NID=" + NID;
                var divShareContent;
                divShareContent = "分享| <a href=\"#\" class=\"icon\" onclick=\"javascript:FBShare('" + URL + "')\" \"><img src=\"/Images/base/facebook-icon.png\" alt=\"\"></a>&nbsp;";
                divShareContent += "<a href=\"#\" class=\"icon\" onclick=\"javascript:GoogleShare('" + URL + "')\"><img src=\"/Images/base/google-plus-icon.png\" alt=\"\"></a>&nbsp;";

                $("#divShare").html(divShareContent);

                $("div.fb-like").css("display", "none");
                //$("div.gg-like").css("display", "none");
                $("#divfb_" + NID + "").css("display", "block");
                //$("#divgg_" + NID + "").css("display", "block");

                $("#fe_text").html(URL);

                //add hits count
                HitsAdd(3, NID);
            }
        });
    }

    function onError() {
        alert('發生錯誤');
    }

    function FBShare(URL) {
        window.open('http://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(URL) + '', 'fbshare', 'width=600,height=400');
    }

    function GoogleShare(URL) {
        //window.open('https://plus.google.com/share?url={' + encodeURIComponent(URL) + '}', '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600'); //G+改了，此為舊的，新的{}要拿掉
        window.open('https://plus.google.com/share?url=' + encodeURIComponent(URL) + '', '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');
    }

    var l = '';
    $(function () {
        $(window).unload(function () {
            $.ajax({
                url: '/Login/Page.ashx?l=' + l
            });
        });
    });

    function PageLog() {
        $.ajax({
            url: '/Login/Page.ashx',
            success: function (msg) { if (msg != 'OK') { l = msg; } }
        })
    }
    var isCount = false;
    var isCount2 = false;
    function HitsAdd(Type, ID) {        
        $.ajax({
            type: 'POST',
            url: 'index.aspx/HitAdd',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: '{Type:' + Type + ',ID:' + ID + '}',
            error: function(){
                if(Type == 2) isCount = false;                
                if(Type == 5) isCount2 = false;                
            },
            success: function (msg) { 
                if(Type == 2) isCount = true;                
                if(Type == 5) isCount2 = true;   
            }
        });
    }
    //Youtbe api start

    $(function(){    
        if('https://www.youtube.com/embed/XOSqYoLxBTU' != ''){
            var tag = document.createElement('script');
            tag.src = "https://www.youtube.com/iframe_api";
            var firstScriptTag = document.getElementsByTagName('script')[0];
            firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
        }
    });   

    var player;
    function onYouTubeIframeAPIReady() {
        player = new YT.Player('video', {
            height: '300',
            width: '400',
            playerVars: { wmode: 'opaque' },
            events: {
                'onReady': onPlayerReady,
                'onStateChange': onPlayerStateChange
            }
        });
    }

    function onPlayerReady(event) {
        //event.target.playVideo();
        event.target.cueVideoByUrl('https://www.youtube.com/embed/XOSqYoLxBTU');      
    }

    
   
    function onPlayerStateChange(event) {  
        var totalMins = player.getDuration();
        //-1 – unstarted  0 – ended   1 – playing    2 – paused    3 – buffering    5 – video cued
        if (player.getPlayerState() == 1) {
            if(!isCount){                
                HitsAdd(2, 9);                 
            }
        }
        if (player.getPlayerState() == 1 && (player.getCurrentTime() / totalMins) >= 0.9) {
            if(!isCount2){
                HitsAdd(5, 9);                
            }
        }

        if (player.getPlayerState() == 0) {
            //HitsAdd(2, 9);  
            isCount = false;
            isCount2 = false;
        }
    }
   
    //youtube api end

    PageLog();
</script>
    </body>
</html>

