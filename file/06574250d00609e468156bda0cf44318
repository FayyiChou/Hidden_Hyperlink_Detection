    function LoadData() {
        if ($('.member-login')) {
            $.ajax({
                url: '/Login/Login.ashx',
                cache: false,
                success: function (msg) {
                    if (msg == 'true') {
                        $('.member-login').show();
                    } else {
                        $('.guest').show();
                        if ($('.member-login').length > 0) {
                            location.href = 'https://www.x2game.com.tw/login/index.aspx?fromurl=http%3a%2f%2fwww.x2game.com.tw%2findex.aspx';
                        }
                    }
                }
            })
        }
    }
    LoadData();
