<script type="text/javascript" src="http://static.wanmei.com/pay/js/jquery-1.7.2.min.js"></script>
<script type="text/javascript" src="http://static.wanmei.com/pay/dota2/js/jquery.boxy.js"></script>
<script type="text/javascript" src="http://static.wanmei.com/pay/dota2/js/paydota2.js"></script>
<script type="text/javascript" src="http://static.wanmei.com/pay/dota2/js/setIframe.js"></script>
<script type="text/javascript" src="http://static.wanmei.com/pay/dota2/js/bottom-pay.js"></script>
<script type="text/javascript">
	var couponcount = 0
	$('input').on('focus',function(){
		$(this).addClass('active');
	});
	$('input').on('blur',function(){
		$(this).removeClass('active');
	})
	$('.header .user').hover(function(){
		$('.user_cont').show();
	})
	$('.user_cont').hover(function(){
		$(this).show();
	},function(){
		$(this).hide();
	})
	$('.user_cont,.user_cont ul').width($('.header .user').outerWidth()+5);
	$('#account_mode em').each(function(i) {
		$(this).click(function(event){
			$('#account_mode em').removeClass('active');
			$(this).addClass('active');
			//$('.dropdown li input').attr("checked",false);
			if($(this).attr("id")=="payMore"){
				$(this).addClass('open');
				//$('.dropdown').show();
				if($(".dropdown").css("display")=="none"){
					$(".dropdown").show();
				}else{
					$(".dropdown").hide();
					$(this).removeClass('active').removeClass('open');
				}
				event.stopPropagation();
			}else if($(this).attr("id")=="pay1"){
				$('#account_sum,#account_money,#account_coupon').show();
				$('#account_bank,#account_weixin,#num_card .account_item,#account_card,#account_money_phone').hide();
			}else if($(this).attr("id")=="pay2"){
				$('#account_bank').show();
				$('#account_sum,#account_money,#account_coupon').show();
				$('#account_weixin,#num_card .account_item,#account_card,#account_money_phone').hide();
			}else if($(this).attr("id")=="pay3"){
				$('#account_bank,#account_weixin,.num_card_a:eq(0),#account_card,#account_money_phone').hide();
				$('#account_sum,#account_money,#account_coupon').hide();
				$('#num_card .account_item').show();
			}else if($(this).attr("id")=="pay4"){
				$('#account_sum,#account_money,#account_coupon').show();
				$('#account_bank,#num_card .account_item,#account_card,#account_money_phone').hide();
			}
			$('#paytype').val($(this).attr("tip"));
		})
	});

	$('.dropdown li').each(function(i) {
		$(this).click(function(){
			if($(this).attr("id")=="pay9"||$(this).attr("id")=="pay10"||$(this).attr("id")=="pay11"){
				$('#account_bank,#account_weixin').hide();
				$('#account_sum,#account_card,#account_money,#account_money_phone,#account_coupon').hide();
				$('#num_card .account_item,.num_card_a').show();
				if($(this).attr("id")=="pay9"){
					$("#cardurl").attr("href","http://www.wanmei.com/pay/faq_dianhua.shtml");
				} else if($(this).attr("id")=="pay10"){
					$("#cardurl").attr("href","http://www.wanmei.com/pay/faq_shouji.shtml");
				} else if($(this).attr("id")=="pay11"){
					$("#cardurl").attr("href","http://www.wanmei.com/pay/faq_duanxin.shtml");
				}
			}else if($(this).attr("id")=="pay8"){
				$('#account_bank,#account_weixin,#num_card .account_item,#account_money,#account_sum,#account_coupon').hide();
				$('#account_card,#account_money_phone').show();
			} else {
				$('#account_sum,#account_money,#account_coupon').show();
				$('#account_bank,#account_weixin,#num_card .account_item,#account_card,#account_money_phone').hide();
			}
			$('#paytype').val($(this).attr("tip"));
			$('.dropdown li input').attr("checked",false);
			$(this).find('input').attr("checked",true);
			$('#payMore span').text($(this).find('span').text());
			$('.dropdown').hide();
			$('#payMore').removeClass('open');
			$('#payMore').addClass('active');
		})
	});
	function calculatecoupon(rmbmoney) {
		var usercouponcount = 0;
		if(rmbmoney >= 60 && couponcount > 0){
			if(couponcount > 2){
				usercouponcount = 2;
			} else {
				usercouponcount = couponcount;
			}
			rmbmoney = rmbmoney - (usercouponcount*10);
		}
		$('#usecouponcount').val(usercouponcount);
		return rmbmoney;
	}
	$('#account_money em').each(function(i) {
		$(this).click(function(){
			$('#inputmoney').val("");
			$('#account_money em').removeClass('active');
			$(this).addClass('active');
			var money = $(this).text();
			var rmbmoney = money/100;
			$('#chargeamount').val(rmbmoney);
			$('#chargeamountshow').html(calculatecoupon(rmbmoney));
			$("#tip_chargeamount").hide();
		})
	});
	$("#inputmoney").keyup(function() {
		var money = $(this).val();
		$('#chargeamount').val(money/100);
		$('#chargeamountshow').html(calculatecoupon(money/100));
		checkChargeAmount();
	});
	$('#account_money_phone em').each(function(i) {
		$(this).click(function(){
			$('#account_money_phone em').removeClass('active');
			$(this).addClass('active');
			var money = $(this).attr("mony");
			$('#phonecardamount').val(money);
		})
	});
	$('#account_card em').each(function(i) {
		$(this).click(function(){
			if($(this).attr("id")=="payMore"){
				$(this).addClass('open');
			}
			$('#account_card em').removeClass('active');
			$(this).addClass('active');
			$("#smallpaytype").val($(this).attr("tip"));
			$("#tip_card_msg").hide();
		})
	});

	$('#account_money .inp_dmoney').on('focus',function(){
		$('#account_money em').removeClass('active');
		$(this).addClass('active');
	});
	$('#account_money .inp_dmoney').on('blur',function(){
		$(this).removeClass('active');
	})
	//bank
	$('.bankList em').each(function(i){
		$(this).click(function(){
			$('.bankList em').removeClass('active');
			$(this).addClass('active');
			$("#smallpaytype").val($(this).attr("value"));
			$('.bankList em input').attr('checked',false);
			$(this).find('input').attr('checked',true);
		});
	});
	$('.bankList em').hide();
	$('.bankList em:lt(6)').show();
	$('.bankList .more').toggle(function(){
			$('.bankList em').show();
		},function(){
			$('.bankList em').hide();
			$('.bankList em:lt(6)').show();
	});
</script>

</body></html>