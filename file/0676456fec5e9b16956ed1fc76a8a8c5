	<!-- Bootstrap Core JavaScript -->
	<script src="js/bootstrap.min.js"></script>

	<script src="js/bootstrapValidator.min.js"></script>
	
	<script type="text/javascript" src="//yastatic.net/share/share.js" charset="utf-8"></script>

	<script src='https://www.google.com/recaptcha/api.js?hl=ru'></script>

	<!-- Custom Theme JavaScript -->
	<script>

	// Closes the sidebar menu
	$("#menu-close").click(function(e) {
		e.preventDefault();
		$("#sidebar-wrapper").toggleClass("active");
	});

	// Opens the sidebar menu
	$("#menu-toggle").click(function(e) {
		e.preventDefault();
		$("#sidebar-wrapper").toggleClass("active");
	});

	// Scrolls to the selected menu item on the page
	$(function() {
		$('#offer-open').show();
		$('#offer-text').hide();
		$('#offer-close').hide();
		
		$("#learn-more").effect("pulsate", 1000);
	
		$('a[href*=#]:not([href=#])').click(function() {
			if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') || location.hostname == this.hostname) {

				var target = $(this.hash);
				target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
				if (target.length) {
					$('html,body').animate({
						scrollTop: target.offset().top
					}, 1000);
					return false;
				}
			}
		});
		
		$('#offer-open').on('click',function(){
			$('#offer-open').hide('slow');
			$('#offer-text').show('slow');
			$('#offer-close').show('slow');
		});
		
		$('#offer-close').on('click',function(){
			$('#offer-close').hide('slow');
			$('#offer-text').hide('slow');
			$('#offer-open').show('slow');
		});
		
		$('#feedback-form').bootstrapValidator({
			message: 'Неправильное значение!',
			feedbackIcons: {
				valid: 'glyphicon glyphicon-ok',
				invalid: 'glyphicon glyphicon-remove',
				validating: 'glyphicon glyphicon-refresh'
			},
			fields: {
				name: {
					group: '.col-xs-6',
					validators: {
						notEmpty: {
							message: 'Представьтесь, пожалуйста!'
						},
						stringLength: {
							min: 2,
							max: 30,
							message: 'Имя должно быть длиной от 2 до 30 букв!'
						},
						regexp: {
							regexp: /^[а-яА-Я\ -]+$/,
							message: 'Имя может состоять только из букв русского алфавита, тире и пробела!'
						}
					}
				},
				phone: {
					group: '.col-xs-6',
					validators: {
						notEmpty: {
							message: 'Пожалуйста, укажите Ваш контактный телефон!'
						},
						stringLength: {
							min: 11,
							max: 12,
							message: 'Телефон должен состоять из 11 цифр в формате 8XXXXXXXXXX или +7XXXXXXXXXX!'
						},
						phone: {
							message: 'Указан неправильный номер телефона!',
							country: 'RU'
						}
					}
				},
				msg: {
					message: 'The username is not valid',
					validators: {
						notEmpty: {
							message: 'Пожалуйста, напишите сообщение!'
						},
						stringLength: {
							min: 5,
							max: 2048,
							message: 'Сообщение может быть длиной от 5 до 2048 символов!'
						} /*,
						regexp: {
							regexp: /^[a-zA-Z0-9_\.]+$/,
							message: 'The username can only consist of alphabetical, number, dot and underscore'
						}*/
					}
				}
			}
		});
		
		$('#send-msg').on('click',function(){
			var Name = $('#name').val();
			var Phone = $("#phone").val();
			var Msg = $('#msg').val();
			var Captcha = grecaptcha.getResponse();
			if ((Phone != '') && (Msg != '')){
				var Problem = "Обращение через обратную связь с сайта";
				var Descript = "Имя: " + Name + ", телефон: " + Phone + ", обращение: " + Msg;
				var request = $.ajax({
					url: "mt/support/requests.php",
					data: {action: "new", type: "web", phone: Phone, problem: Problem, descript: Descript, recaptcha: Captcha}
				});
				request.done(function(msg) {
					if (msg == "")
						alert('Спасибо! Ваше обращение успешно принято.');
					else {
						alert(msg);
						grecaptcha.reset();
					}
				});
				request.fail(function(jqXHR, textStatus) {
					alert('Произошла ошибка! Попробуйте обновить страницу и повторить.');
				});
			} else {
				alert('Вы заполнили не все обязательные поля!');
				if (Phone == ''){
					$("#phone").focus();
					$("#phone").effect("shake", 500);
				} else {
					$('#msg').focus();
					$("#msg").effect("shake", 500);
				}
			}
			return false;
		});
		
	});
	</script>

</body>

