    <script>
	var $j = jQuery.noConflict();
	
	$j(".tback").on('click',function(){
	
		var popou = $j("#resp");
		$j(this).hide();
	
		if($j("#resp").css("display")=="none")
		{
		
			$j(this).after(popou);
			$j("#resp").css("display","block");
			
			var relid = $j(this).siblings(".rellid").text()
			$j("#rel_id").val(relid);

		
			var addPos = $j(this).siblings(".poss").text();
			$j("#addPos").val(addPos);
		}
		else
		{
			$j("#resp").css("display","none");
		}
	});
	


$j(document).ready(function(){

	$j("#addco").click( function(e){
					e.preventDefault();

					var crid = $j("#crid").val();
					var ccid = $j("#ccid").val();
					var ctype= $j("#ctype").val();
					var ccontent= $j("#ccontent").val();
					var code= $j("#code").val();
					$j.ajax({
							type: "POST",
							url: '/Ypcomment/commentsubmit', 
							data: {rid:crid, cid:ccid, type:ctype, content:ccontent, code:code},
							dataType: "html"
					})
				 .success(function( data ) { 
				 	  $j("#ccontent").val('评论成功提交');
						$j("#ccco").append(data); 
				 	  $j("#ccco").focus(); 
				  });			
					
	
	});

});

function jumpdiv()
{
	
	var ccontent=document.getElementById('ccontent');

		ccontent.focus();
	
}	

