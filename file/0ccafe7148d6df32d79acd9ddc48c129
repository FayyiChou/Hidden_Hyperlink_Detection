function showUserCenter()
{
try{
document.getElementById("userCenter").style.display = "";
}catch(err){}
try{
if(document.getElementById("kfziframeus")){
document.getElementById("kfziframeus").style.display = "";
}else{
var iframe = document.createElement('iframe');
iframe.id = "kfziframeus";
iframe.style.padding = "0";
iframe.className = "subMenu";
iframe.style.left = "5px";
iframe.style.border = "none";
iframe.style.zIndex = "10000";
iframe.src=userSite+"blank.html";
document.getElementById("userCenter").parentNode.appendChild(iframe);
}
}
catch(err){}
try{
document.getElementById("kfziframeus").style.height = (document.getElementById("userCenter").offsetHeight) +'px';
document.getElementById("kfziframeus").style.width = (document.getElementById("userCenter").offsetWidth) +'px';
document.getElementById("aover").className = "top-right-nav-aon";
document.getElementById("b-nav0").className = "b-hover";
}catch(err){}
}
