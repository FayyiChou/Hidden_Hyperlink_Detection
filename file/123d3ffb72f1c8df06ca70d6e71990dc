<script type="text/javascript">

    function toggleAdvancedSearch() {

        if ($('#advanced_search_sleep').is(':visible') === true) {
            $('#typology_id').val('null');
            $('#locality_id').val('null');
        }
        $('#advanced_search_sleep').toggle();
    }

