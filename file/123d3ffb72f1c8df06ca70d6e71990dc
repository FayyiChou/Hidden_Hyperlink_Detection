<script type="text/javascript">

    function changeStyleLangMenu() {

        if ($($('#lang-menu li')[1]).is(':visible')) {
            $('#lang-menu').css('background', 'none');
            $('#lang-menu li').css('background', '#fff');
        } else {
            $('#lang-menu').css('background', '');
            $('#lang-menu li').css('background', '');
        }
    }

    jQuery(document).ready(function () {
        jQuery(document).on('click', 'li.nosel', function () {
            var el = jQuery(this);
            var url = el.attr('url');
            var fli = jQuery('ul#lang-menu li').first();
            fli.replaceWith(el.html());
            window.location = url;
            var ul = jQuery('ul#lang-menu');
            ul.attr('onclick', '');
            jQuery('div.pace').removeClass('pace-inactive').addClass('pace-active');  // loader!!
        });
    });
</script>                    </div>

