<script type="text/javascript">

    function addDays(startDate, numberOfDays) {
        return new Date(startDate.getFullYear(), startDate.getMonth(), startDate.getDate() + numberOfDays, startDate.getHours(), startDate.getMinutes(), startDate.getSeconds());
    }

    function changeMin(date, inst) {
        var arrayDate = date.split('/'); // data selezionata
        var thisDate = new Date(arrayDate[2], (arrayDate[1] - 1), arrayDate[0]);
        var nextDate = null;
        jQuery('#libero_dal').val(arrayDate[2] + '-' + arrayDate[1] + '-' + arrayDate[0]);
        if (jQuery('#datepicker_to').val() != '') {
            var arrayNextDate = jQuery('#datepicker_to').val().split('/');
            nextDate = new Date(arrayNextDate[2], (arrayNextDate[1] - 1), arrayNextDate[0]);
        }
        if (nextDate <= thisDate) {
            console.log(thisDate.getDay());
            if (thisDate.getDay() === 6) {
                nextDate = addDays(thisDate, 7);
            }
            else {
                nextDate = addDays(thisDate, 1);
            }
        }
        var nextForm = jQuery.datepicker.formatDate('dd/mm/yy', nextDate);
        jQuery('#datepicker_to').datepicker('option', 'minDate', nextForm);
        jQuery('#datepicker_to').datepicker('setDate', nextForm); // inutile se la data non era minore...
        jQuery('#libero_al').val(jQuery.datepicker.formatDate('yy-mm-dd', nextDate)); // ...
        jQuery('#datepicker_to').datepicker('refresh');
    }

    function changeMax(date, inst) {
        var arrayDate = date.split('/'); // data selezionata 
        jQuery('#libero_al').val(arrayDate[2] + '-' + arrayDate[1] + '-' + arrayDate[0]);
    }

    jQuery(document).ready(function () {
        //toggle mobile menÃ¹
        $("#mobileMenu").click(function () {
            $("#mainMenuToggle").toggle()
        });
        $.datepicker.setDefaults($.datepicker.regional['en']);
        jQuery('#datepicker_from').datepicker({
            dateFormat: "dd/mm/yy",
            minDate: "13/08/2016",
            //maxDate: "",
            constrainInput: true,
            onSelect: changeMin
        });
        jQuery('#datepicker_to').datepicker({
            dateFormat: "dd/mm/yy",
            minDate: "20/08/2016",
            //maxDate: "",
            constrainInput: true,
            beforeShowDay: function (date) {
                var currentDate = date;
                var fromDate = new Date(Date.now());
                var toDate = addDays(fromDate, 1);
                if (jQuery('#datepicker_from').val() != '') {
                    var arrayFromDate = jQuery('#datepicker_from').val().split('/');
                    fromDate = new Date(arrayFromDate[2], (arrayFromDate[1] - 1), arrayFromDate[0]);
                }
                if (jQuery('#datepicker_to').val() != '') {
                    var arrayToDate = jQuery('#datepicker_to').val().split('/');
                    toDate = new Date(arrayToDate[2], (arrayToDate[1] - 1), arrayToDate[0]);
                }
                var limitDayDate = addDays(fromDate, 10);
                if (currentDate <= limitDayDate) {
                    return [true];
                } else {
                    return [date.getDay() == 6];
                }
            },
            beforeShow: function () {
                if (jQuery('#datepicker_from').val() != '') {
                    var arrayPrevDate = jQuery('#datepicker_from').val().split('/');
                    prevDate = new Date(arrayPrevDate[2], (arrayPrevDate[1] - 1), arrayPrevDate[0]);
                    prevDate = addDays(prevDate, 1);
                    var prevForm = jQuery.datepicker.formatDate('dd/mm/yy', prevDate);
                    jQuery('#datepicker_to').datepicker('option', 'minDate', prevForm);
                    jQuery('#datepicker_to').datepicker('refresh');
                }
            },
            onSelect: changeMax
        });
    });

    function addInCart(id, type, datas) {

        if (type === 'resource') {
            $.ajax({
                url: "/lib/functions.php?op=add_in_cart&type=resource&id=" + id + "&from=" +
                        datas['from'] + "&to=" + datas['to'],
                success: function (data) {
                    //                    $('#cbp-spmenu-s1 div').load('/en/_cart-summary.html', function () {
//                        $('#container_products').scrollTop($('#container_products')[0].scrollHeight);
//                    });
                    openCart();
                    $('#cart_articles_num').text(data);
                }
            })
        } else if (type === 'attraction') {
            $.ajax({
                url: "/lib/functions.php?op=add_in_cart&type=attraction&id=" + id + "&price_id=" +
                        datas['price_id'] + '&' + datas['deals_events_ids'],
                data: $('#price_id_' + datas['price_id'] + ' select').serialize(),
                success: function (data) {
//                    $('#cbp-spmenu-s1 div').load('/en/_cart-summary.html', function () {
//                        $('#container_products').scrollTop($('#container_products')[0].scrollHeight);
//                    });
                    openCart();
                    $('#cart_articles_num').text(data);
                    var price_id = datas['price_id'];
                    var prices_types = new Array(1,2,5,4,6,7);
                    for (var k in prices_types) {
                        var i = prices_types[k];
                        if ($('#price_id_' + price_id + ' #price_' + i).length > 0) {
                            $('#price_id_' + price_id + ' #price_' + i).val('');
                        }
                    }
                }
            })
        }

    }


    function openCart() {

        openPgwModal('/en/_cart-summary.html', 'Your holiday');

    }

    function openPgwModal(url, title, alert_before_close) {

        jQuery.pgwModal({
            maxWidth: 640,
            height: 700,
            url: url,
            loadingContent: '<span style="text-align:center">Loading in progress</span>',
            title: title
        });
        jQuery(document).unbind('PgwModal::beforeClose');
        jQuery(document).bind('PgwModal::beforeClose', function () {
            if (alert_before_close !== undefined) {
                if (confirm(alert_before_close)) {
                    jQuery.pgwModal('close');
                }
            } else {
                jQuery.pgwModal('close');
            }
        })
    }

    function toggleDiv(id) {
        $('#' + id).toggle();
    }


</script>

