    jQuery(document).ready(function () {  // loader submit!
      jQuery(document).on('click', 'form button[type="submit"], form input[type="submit"]', function () {
        //jQuery('div.pace').removeClass('pace-inactive').addClass('pace-active');
      });
      jQuery(document).on('click', 'a', function (ev) {
        var ele = jQuery(this);
        if(!(ele.closest('div.form_login_small_responsive').length > 0) && !(ele.closest('div.logged_box').length > 0)) {  // esclude il LogIn section
          var href = ele.attr('href');
          if (href !== undefined) {
            if (href.match(/html$|php$|\/$/)) {
              //jQuery('div.pace').removeClass('pace-inactive').addClass('pace-active');
            }
          }
        }
      });
      function handler(ev) {
        var target = jQuery(ev.target);
        console.log(target);
        var a = target.closest('a');
        var href = a.attr('href');
        if (href !== undefined) {
          if (href.match(/html$|php$|\/$/)) {
            //jQuery('div.pace').removeClass('pace-inactive').addClass('pace-active');
          }
        }
      }
      jQuery('nav').mousedown(handler);
    });

</script>
