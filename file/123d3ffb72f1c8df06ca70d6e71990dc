<script type="text/javascript">
    jQuery(document).click(function (e) {
        if (jQuery(e.target).closest('a#legendMapLink').length == 0 && jQuery(e.target).closest('div#legendBoxPopUp').length == 0) {
            jQuery('div#legendBoxPopUp').hide();
        }
        if (jQuery(e.target).closest('a#legendMapLink2').length == 0 && jQuery(e.target).closest('div#legendBoxPopUp').length == 0) {
            jQuery('div#legendBoxPopUp').hide();
        }
        if (jQuery(e.target).closest('ul#lang-menu').length == 0) {
            jQuery('li.nosel').hide();
        }
    });</script>
