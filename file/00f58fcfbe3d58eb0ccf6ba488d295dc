					}
					
					if(fs != null){
						var d =  new Date(fs.publish_time);
						$("#impdays").html();
						$("#impdays").html(d.getDate());
						$("#impdates").html();
						$("#impdates").html(d.getFullYear()+'.'+(parseInt(d.getMonth())+parseInt(1)));
						
						$("#imptitles").html();
						$("#imptitles").html("<a href='news_5.html?id="+fs.id+"' title=\""+fs.title+"\">"+cutString(fs.title,40)+"</a>");
						
						
						
						$("#impsummarys").html();
						$("#impsummarys").html(cutString(fs.summary,72));
						$("#impsummarys").attr('title',fs.summary);						
					}
				
					
				}			
				
				
				
			},
			error:function(e){
			
			}
		});
}


function newsCenter(){
	url="/manage-web/cms/newscenter/homePagequeryNewsInfo";
	
		$.ajax({
			url:url,
			data:{category:'1',limit:12},
			type:'GET',
			dataType:'json',
			cache:false,
			async:false,
			success:function(data){
				if(data.retCode == 0){
					$("#newscenter").html("");
					var list = data.retData;
					var ip = data.picIp;
					var htmlArr = [];
					for(var i=0;i<list.length;i++){
					htmlArr.push("<li>");
					htmlArr.push("<div class=\"news-item\">");
					htmlArr.push("<a href='news_1.html?id="+list[i].id+"'>");
					if(list[i].pic_url =="" || list[i].pic_url == null){
//					htmlArr.push("<img height=\"115\" width=\"174\"  src=\""+ip+list[i].pic_url+"\">");
					htmlArr.push("<img height=\"115\" width=\"174\"  src=\""+"pics/default.jpg"+"\">");
					}else{
					htmlArr.push("<img height=\"115\" width=\"174\"  src=\""+ip+list[i].pic_url+"\">");
//					htmlArr.push("<img height=\"115\" width=\"174\"  src=\""+"pics/default.jpg"+"\">");
					}
					htmlArr.push("</a>");
					htmlArr.push("<p class=\"f14\">");
					htmlArr.push("<a href='news_1.html?id="+list[i].id+"' title=\""+list[i].title+"\">"+cutString(list[i].title,24)+"</a>");
					htmlArr.push("</p>");
					htmlArr.push("<p>"+dateformate(list[i].publish_time)+"</p>");
					htmlArr.push("<p title=\""+list[i].summary+"\">"+cutString(list[i].summary,36)+"</p>")
					htmlArr.push("</div>")
					htmlArr.push("</li>");
					}		
					$("#newscenter").append(htmlArr.join(""));				
				}else{
					$("#newscenter").html("");
				}
			},
			error:function(e){
				
			}
		});
}
</script>
<script>
/**参数说明：
	 * 根据长度截取先使用字符串，超长部分追加…
	 * str 对象字符串
	 * len 目标字节长度
	 * 返回值： 处理结果字符串
	 */
	function cutString(str, len) {
		//length属性读出来的汉字长度为1
		if(str.length*2 <= len) {
			return str;
		}
		var strlen = 0;
		var s = "";
		for(var i = 0;i < str.length; i++) {
			s = s + str.charAt(i);
			if (str.charCodeAt(i) > 128) {
				strlen = strlen + 2;
				if(strlen >= len){
					return s.substring(0,s.length-1) + "...";
				}
			} else {
				strlen = strlen + 1;
				if(strlen >= len){
					return s.substring(0,s.length-2) + "...";
				}
			}
		}
		return s;
	}


	function dateformate(time){
	   var d =  new Date(time);
	   var year = d.getFullYear();
	   var mouth = parseInt(d.getMonth())+parseInt(1);
	   var day =  d.getDate();
	   return year+"-"+mouth+"-"+day;
	   
	}
	


</script>




