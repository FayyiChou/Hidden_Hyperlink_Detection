<script type="text/javascript">
	$(function(){
	
		yaoexInfo();
		importantInfo();
		newsCenter();
		$(".flexslider").flexslider({
		    directionNav:false,
		    pauseOnAction:false,
		    slideshowSpeed:3000
		});
	    $("#news-slider").xslider({
	        unitdisplayed:4,
	        movelength:4,
	        unitlen:220,
	        autoscroll:null
	    });
	    $('.plat-item').hover(function(){
			$(this).find('.plat-item-on').stop().animate({'left':'0px'},300);
		},function(){
			$(this).find('.plat-item-on').stop().animate({'left':'-236px'},300);
		});

	    $('.notice li').hover(function(){
	    	$(this).find('.day').addClass('on');
	    },function(){
	    	$(this).find('.day').removeClass('on');
	    });

	});

function yaoexInfo(){
			
	    var url="/manage-web/cms/newscenter/homePagequeryNewsInfo";
		$.ajax({
			url:url,
			data:{category:'3',limit:2},
			type:'GET',
			dataType:'json',
			cache:false,
			async:false,
			success:function(data){
				if(data.retCode == '0'){
				    var list = data.retData;
					var len = list.length;
					var ff ;
					var fs ; 
					
					if(len == 0){
					$("#f1").hide();
					$("#f2").hide();
					$("#f3").hide();
					$("#f4").hide();
					}
					
					
					if( len == 1){
					    ff = list[0];
						$("#f3").hide();
						$("#f4").hide();
					}else if(len == 2 ){
						ff = list[0];
					    fs = list[1];
					}
					
					if(ff != null){							
					    var d =  new Date(ff.publish_time);
						$("#focusdayf").html();
						$("#focusdayf").html(d.getDate());
						$("#focusdatef").html();
						$("#focusdatef").html(d.getFullYear()+'.'+(parseInt(d.getMonth())+parseInt(1)));
						$("#focustitlef").html();
						$("#focustitlef").html("<a href='news_0.html?id="+ff.id+"' title=\""+ff.title+"\">"+cutString(ff.title,40)+"</a>");
						$("#focussummaryf").html();
						$("#focussummaryf").html(cutString(ff.summary,72));
						$("#focussummaryf").attr('title',ff.summary);	
					}
					
					if(fs != null){
						var d =  new Date(fs.publish_time);
						$("#focusdays").html();
						$("#focusdays").html(d.getDate());
						$("#focusdates").html();
						$("#focusdates").html(d.getFullYear()+'.'+(parseInt(d.getMonth())+parseInt(1)));
						
						$("#focustitles").html();
						$("#focustitles").html("<a href='news_0.html?id="+fs.id+"' title=\""+fs.title+"\">"+cutString(fs.title,40)+"</a>");
						$("#focussummarys").html();
						$("#focussummarys").html(cutString(fs.summary,72));
						$("#focussummarys").attr('title',fs.summary);						
					}
				
					
				}
			},
			error:function(e){
			
			}
		});
		
	
		
		
}

function importantInfo(){
	url="/manage-web/cms/newscenter/homePagequeryNewsInfo";
	
		$.ajax({
			url:url,
			data:{category:'2',limit:2},
			type:'GET',
			dataType:'json',
			cache:false,
			async:false,
			success:function(data){
				if(data.retCode == '0'){
				    var list = data.retData;
					var len = list.length;
					var ff ;
					var fs ; 
					if(len == 0){
					$("#im1").hide();
					$("#im2").hide();
					$("#im3").hide();
					$("#im4").hide();
				    }		
					
					
					if( len == 1){
					ff = list[0];
					$("#im3").hide();
					$("#im4").hide();
					
					}else if(len == 2){
						ff = list[0];
					    fs = list[1];
						
						
					}
					
					if(ff != null){							
					    var d =  new Date(ff.publish_time);
						$("#impdayf").html();
						$("#impdayf").html(d.getDate());
						$("#impdatef").html();
						$("#impdatef").html(d.getFullYear()+'.'+(parseInt(d.getMonth())+parseInt(1)));
						
						$("#imptitlef").html();
