	<script type="text/javascript" src="js/functions.js"></script>
	<script>
		$(function() {
			//==========================================
			setInterval(function() {
				$(".icon-angle-right").click();
			},7000); //首頁大圖每5秒輪播一張
			//==========================================
			(function() {
				var supportsOrientationChange = "onorientationchange" in window,
	    			orientationEvent = supportsOrientationChange ? "orientationchange" : "resize";
	    		function resizeIt() {
	    			setTimeout(function() {
						$("#related-portfolio .owl-stage").width($("#related-portfolio .owl-stage-outer").width()+30);
						(function() {
							var maxHeight=0;
							$("#related-portfolio .owl-item").each(function() {
								maxHeight = Math.max(maxHeight,$(this).height());
							});
							$("#related-portfolio .owl-item").height(maxHeight);
						})(); //統一產品高度
					},0);
	    		}
				$(window).resize(function() {
					resizeIt();
				}).resize(); //電腦版縮放視窗大小
				$(window).on("orientationchange",function() {
					resizeIt();
				}); //手機旋轉(模擬器無法模擬)
			})(); //首頁產品無法RWD修正
			//==========================================
			var sid=null;
			$(window).resize(function() {
				if (sid) {
					clearTimeout(sid);
				}
				sid = setTimeout(function() {
					$("#oc-clients>div.owl-stage-outer>div>div").hide();
					setTimeout(function() {
						$("#oc-clients>div.owl-stage-outer>div>div").show();
					},90);
				},90);
			}); //當縮放視窗的時候會重新讓終端客戶的LOGO隱藏後重新顯示避免重疊問題
			//==========================================
		});
	</script>
