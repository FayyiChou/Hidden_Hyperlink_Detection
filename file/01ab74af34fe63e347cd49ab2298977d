<script type="text/javascript">
    var pvareaid;
    $(function () {
        if (!IsPC())
            window.location.href = "https://sj.m.autohome.com.cn/driverrecruit/index";
        pvareaid = getQueryString("pvareaid");
        if (pvareaid == "") {
            pvareaid = 2532101;
            location.href = location.href + "?pvareaid=" + pvareaid;
        }
        $(".triangle_open").click(function () {
            $(".triangle_txt").show()
        });
        $(".triangle_close").click(function () {
            $(".triangle_txt").hide()
        });

    });

    function IsPC() {
        var userAgentInfo = navigator.userAgent;
        var Agents = ["Android", "iPhone",
            "SymbianOS", "Windows Phone",
            "iPad", "iPod"];
        var flag = true;
        for (var v = 0; v < Agents.length; v++) {
            if (userAgentInfo.indexOf(Agents[v]) > 0) {
                flag = false;
                break;
            }
        }
        return flag;
    }
    /**
     * 是否同意
     * @param chkobj
     */
    function isagrre(chkobj) {
        if ($(chkobj).prop('checked'))
            $("#btnsub").removeClass("disabled").attr("disabled", false);
        else
            $("#btnsub").addClass("disabled").attr("disabled", true);
    }


    /**
     * 发送验证码
     */
    var cNum = 60;
    function sendcode() {
        var mobileno = $("#txtmobile").val();
        if ($.trim(mobileno) == "") {
            showerr("请输入手机号！")
        } else {
            if (isMobile(mobileno)) {
                $("#btnsendcode").addClass("disabled").attr("disabled", true);
                var params = "mobileno=" + mobileno + "&type=" + 2;
                params = SignUrl(params);
                $.ajax({
                    type: "post",
                    url: "/drpc/sendcode",
                    data: params,
                    success: function (res) {
                        if (res.returncode == 0) {
                            var TimerHandle;
                            TimerHandle = setInterval(function () {
                                $("#btnsendcode").val(cNum + "秒后重发");
                                if (cNum == 0) {
                                    cNum = 60;
                                    $("#btnsendcode").val("发送验证码").removeClass("disabled").attr("disabled", false);
                                    clearInterval(TimerHandle);
                                    return;
                                }
                                cNum = cNum - 1;
                            }, 1000)
                        } else {
                            $("#btnsendcode").val("发送验证码").removeClass("disabled").attr("disabled", false);
                            showerr(res.message);
                        }
                    }
                })
            } else {
                showerr("手机号格式错误！")
            }
        }
    }


    /**
     * 登陆
     */
    function login() {
        var isagrre = $("#chkagree").prop('checked');
        var mobileno = $("#txtmobile").val();
        var code = $("#txtcode").val();
        if (isagrre) {
            if ($.trim(mobileno) == "") {
                showerr("请输入手机号！");
            } else {
                if (isMobile(mobileno)) {
                    $("#btnsub").addClass("disabled").attr("disabled", true).val("登录中...");
                    setTimeout(function () {
                        if ($.trim(code) != "") {
                            var params = "mobileno=" + mobileno + "&type=" + 2 + "&code=" + code;
                            params = SignUrl(params);
                            $.ajax({
                                type: "post",
                                url: "/drpc/checkcode",
                                data: params,
                                success: function (res) {
                                    $("#btnsub").val("我要成为车主").removeClass("disabled").attr("disabled", false);
                                    if (res.returncode == 0) {
                                        window.location.href = "/drpc/register?pvareaid=" + pvareaid;
                                    } else {
                                        showerr(res.message);
                                    }
                                }
                            })
                        } else {
                            showerr("请输入验证码！")
                        }
                    }, 1500)
                } else {
                    showerr("手机号格式错误！")
                }
            }
        }
    }

    //timeout句柄
    var timerHander;
    function showerr(str) {
        $(".error_box>p").text(str);
        clearTimeout(timerHander);
        timerHander = setTimeout(function () {
            $(".error_box>p").text("");
        }, 2500);
    }


    /**
     * 验证是否为手机号
     * @param mobileno
     * @returns {boolean}
     */
    function isMobile(mobileno) {
        var patrn = /^(13[0-9]|17[0-9]|15[0123456789]|18[0-9]|14[57])[0-9]{8}$/;
        return patrn.test(mobileno);
    }


    function getQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
        var r = window.location.search.substr(1).match(reg);
        if (r != null) return unescape(r[2]);
        return "";
    }

    function SignUrl(urls) {
        var _timestamp;
        var singedrul = "";
        _timestamp = Date.parse(new Date());
        var fields = urls.split("&");
        var _appid = "testdriver";
        fields.push("_timestamp=" + _timestamp);
        fields.push("_appid=" + _appid);
        singedrul = fields.sort().join("&");
        var _sign = hex_md5(singedrul.toLowerCase());
        singedrul = "_sign=" + _sign + "&_timestamp=" + _timestamp + "&_appid=" + _appid;
        var datas = urls + "&" + singedrul;
        return datas;
    }


</script>
