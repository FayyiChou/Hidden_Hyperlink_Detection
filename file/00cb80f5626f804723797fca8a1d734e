   <script type="text/javascript">
var tID=59;
function show_menu(ID){
  if(ID!=tID){
    $('#menu_'+ID).attr('class','nav_on');
    $('#menu_'+tID).attr('class','nav_off');
$('#menu_cont_'+tID).hide();
$('#menu_cont_'+ID).show();
    tID=ID;
  }else{
    $('#menu_'+ID).attr('class','nav_on');
    $('#menu_cont_'+tID).show();
  }
}
show_menu(59);
</script> 
