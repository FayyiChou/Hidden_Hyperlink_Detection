<script>
    $(".loadingWrapper").each(function (index, item) {
        var wrapper = $(item),
                zIndex = wrapper.data("loading-z"),
                height = wrapper.data("loading-height"),
                width = wrapper.data("loading-width");
        wrapper.css("position", "relative").append(
                $("<div/>")
                        .addClass("loading loading-image clearfix")
                        .css(zIndex ? {"zIndex": zIndex} : {})
                        .width(width ? width : "100%")
                        .height(height ? height : "100%")
        );
        height && wrapper.css({
            minHeight: height
        });
    });
    $("#popoverContentFooter").on({
        "mouseenter": function () {
            $("#popoverContentWechat").removeClass("hide");
        },
        "mouseleave": function () {
            setTimeout(function () {
                $("#popoverContentWechat").addClass("hide");
            }, 100);
        }
    });
