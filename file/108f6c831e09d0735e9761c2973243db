            if ($.cookie(C.COOKIE_LOGGED) && $.cookie(C.COOKIE_DISPLAY_NAME)) {
                $("#headerUserName").text($.cookie(C.COOKIE_DISPLAY_NAME));
                $("#headerWelcome").text(F.getPeriod());
                $(".headerLogged").removeClass("hide");
                $("#baoLink").attr("href", "/bao.html");
            } else {
                $(".headerGuest").removeClass("hide");
                $("#baoLink").attr("href", "/introductions/bao.html");
            }

            $("#popoverContentHeader").on({
                "mouseenter": function () {
                    $("#popoverContentWeixin").removeClass("hide");
                },
                "mouseleave": function () {
                    setTimeout(function () {
                        $("#popoverContentWeixin").addClass("hide");
                    }, 100);
                }
            });
        });
