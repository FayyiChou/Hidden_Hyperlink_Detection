<script>
    seajs.use(["ui/modal", "define/site"], function (modal, defineSite) {
        if (defineSite.isProductionEnv && window.location.protocol === "http:" && !G.ignoreUnSecureUrl) {
            $("<img/>").on("load", function (e) {
                if (this.naturalWidth == 1 || e.currentTarget.width == 1) {
                    modal.showModal({
                        content: "为了保护您的隐私和数据安全，懒财网建议您使用 https://www.lancai.cn 访问，是否跳转到安全的网址访问？",
                        button: [{
                            text: "确定",
                            onClick: function () {
                                window.location.href = window.location.href.replace(/http/, "https");
                            }
                        }, {
                            text: "取消",
                            onClick: function () {
                                modal.hideModal();
                            }
                        }]
                    })
                }
            }).attr("src", "https://speedtest.lancai.cn/do_not_delete/noc.gif?r=" + _.random(1e6));
        }
    });

    G.loginAlways.add(function (userInfo) {
        seajs.use(["api/site", "define/site"], function (apiSite, defineSite) {
            var string;
            var requesting = false;
            var url = defineSite.isProductionEnv ? "http://m.lancai.udesk.cn/im_client/"
                : window.location.protocol + "//udesk." + defineSite.domain + "/im_client/";

            function redirectOrigin() {
                requesting = false;
                window.location.href = string ? (url + "?" + string) : url;
            }
            $("body").on("click", ".contactUSUdesk", function () {
                if (userInfo) {
                    if (requesting) return;
                    apiSite.getUserExternalToken({
                        userId: userInfo.key.user_id,
                        success: function (data) {
                            string = data.str;
                            redirectOrigin();
                        },
                        fail: redirectOrigin
                    })
                } else {
                    redirectOrigin();
                }
            });
        });
    })
</script>


<script>
    G.runDep = ["define/constant", "view/bao_amount", "api/general", "api/site", "util/formatter", "model/bao_amount", "other/pingback"];
    G.runCallback = function (C, BaoAmountView, api, apiSite, F, BaoAmountModel, pingback) {
        var sliderImgUrl = "https://static.lancai.cn/web/images/index_banner/";
        var sidebarWrapper = $("#sidebarCustomerService");

        var NumberChange = Backbone.Model.extend({
            defaults: {
                FPS: 24,
                animate: 1e3,
                startNumber: 0,
                digit: 11,
                current: 0
            },
            initialize: function () {
                this.on("change:current", function (model, value) {
                    var str = F.lpad(value, model.get("digit"), "0");
                    model.set("currentString", this.formatString(str));
                });
                this.on("change:endNumber", function (model) {
                    model.set("increasePerFrame", ~~((model.get("endNumber") - model.get("startNumber")) / model.get("count")));
                });
                this.set("interval", 1e3 / this.get("FPS"));
                this.set("count", this.get("animate") / this.get("interval"));
                this.set("increasePerFrame", ~~((this.get("endNumber") - this.get("startNumber")) / this.get("count")));
            },
            run: function () {
                var self = this;
                this.updateCurrent();
                if (this.get("interval")) {
                    this.interval = setInterval(function () {
                        self.updateCurrent();
                    }, this.get("interval"));
                }
            },
            updateCurrent: function () {
                var updatedNumber = this.get("current") + this.get("increasePerFrame");
                if (updatedNumber > this.get("endNumber")) {
                    clearInterval(this.interval);
                }
                this.set("current", Math.min(updatedNumber, this.get("endNumber")));
            },
            formatString: function (str) {
                return str.replace(/(\d)(?=(?:\d{3})+$)/g, '$1' + ",");
            }
        });

        G.loginFail.add(function () {
            $(".baoBtn").attr("href", "/welcome.html?reg");
            $('#headerSlider').homeSlider({
                isNewTab: false,
                images: [
                    sliderImgUrl + "slider-15.png",
                    sliderImgUrl + "slider-13.png",
                    sliderImgUrl + "slider-12.jpg",
                    sliderImgUrl + "slider-6.png",
                    sliderImgUrl + "slider-9.png",
                    sliderImgUrl + "slider-5.png"
                ],
                imageLinks: [
                    "/reports/report.html?m=201701",
                    "/about/notice_detail.html?id=242",
                    "/about/notice_detail.html?id=241",
                    "/about/notice_detail.html?id=52",
                    "/about/notice_detail.html?id=233",
                    "/about/notice_detail.html?id=224"
                ]
            });
        });
        G.loginSuccess.add(function () {
            $(".baoBtn").attr("href", "/bao.html");
            $('#headerSlider').homeSlider({
                isNewTab: false,
                images: [
                    sliderImgUrl + "slider-15.png",
                    sliderImgUrl + "slider-13.png",
                    sliderImgUrl + "slider-9.png",
                    sliderImgUrl + "slider-5.png"
                ],
                imageLinks: [
                    "/reports/report.html?m=201701",
                    "/about/notice_detail.html?id=242",
                    "/about/notice_detail.html?id=233",
                    "/about/notice_detail.html?id=224"
                ]
            });
        });
        function isElementInViewport (el) {
            var rect = el[0].getBoundingClientRect();

            return (
                rect.top >= 0 &&
                rect.left >= 0 &&
                rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                rect.right <= (window.innerWidth || document.documentElement.clientWidth)
            );
        }
        function onVisibilityChange(el, callback) {
            return function () {
                if (isElementInViewport(el)) {
                    _.isFunction(callback) && callback();
                }
            }
        }
        function dataNumberChange(el, value){
            var numberDataChangeAmount = new NumberChange({
                endNumber: value,
                digit: (value + "").length
            });
            numberDataChangeAmount.on("change:currentString", function (model, value) {
                $(el).html(value);
            });
            var isRun = null;
            var dataNumberChange = onVisibilityChange($(el), function() {
                if(!isRun){
                    setTimeout(function(){
                        numberDataChangeAmount.run();
                    }, 100);
                    isRun = true;
                }
            });
            $(window).on('DOMContentLoaded load scroll handleChange', dataNumberChange);
        }
        function baoAmountChange(rate){
            var isRun = null;
            var getCurrentAmount = function (left) {
                var diff = 199e6;
                var leftDiff = 232;
                return Math.round((left * diff / leftDiff + 1e6) / 1e6) * 1e6;
            };
            var getCurrentPeriod = function (top) {
                var diff = 365 - 1;
                var topDiff = 232;
                return Math.round((topDiff - top) * diff / topDiff + 1);
            };
            var userUseCalculatorPingback = _.once(function () {
                pingback.pingback("debug", null, {
                    a: "useBaoCalculator"
                })
            });
            var tooltip = $("#indexCalculatorPrincipleTooltip");
            var periodTooltip = $("#indexCalculatorPeriodTooltip");
            var isSupport3d = (function () {
                var props = ['perspectiveProperty', 'WebkitPerspective', 'MozPerspective', 'OPerspective', 'msPerspective'],
                    i = 0,
                    support = false;
                while (props[i]) {
                    if (props[i] in $("<div/>").get(0).style) {
                        support = true;
                        break;
                    }
                    i++;
                }
                return support;
            })();
            var amount = 5000000;
            var period = 1;
            var updateCurrentInterest = function () {
                var i = amount * Math.pow((1 + rate / C.SECONDS_PER_YEAR), 86400 * period) - amount;
                $("#baoInterestNumber").html("<sub>￥</sub>" + F.formatAmountNoYuan(i));
            };
            var handlerBaoAmount = onVisibilityChange($("#baoAmountT1RateYear"), function() {
                if(!isRun){
                    G.baoAmount = new BaoAmountModel({
                        isAutoRun: true,
                        isAllowFastChange: true
                    });

                    G.baoAmount.on("change:currentString", function (model, value) {
                        var values = value.split(".");
                        $('#baoAmountT1RateYear').html('<sub>￥</sub>' + values[0] + '.<sub>' + values[1] + '</sub>');
                    });
                    G.baoAmount.set("items", [{
                        amount: amount,
                        rate: rate
                    }]);
                    isRun = true;

                    $("#indexCalculatorPeriodAnchor").draggable({
                        axis: "y",
                        cursor: "ns-resize",
                        containment: "parent",
                        start: function () {
                            userUseCalculatorPingback();
                            periodTooltip.removeClass("hide");
                        },
                        drag: function (e, ui) {
                            period = getCurrentPeriod(ui.position.top);
                            periodTooltip.text(period + "天");
                            if (isSupport3d) {
                                periodTooltip.css("transform", "translateY(" + (ui.position.top - 30) + "px)");
                            } else {
                                periodTooltip.css("left", (ui.position.top - 30));
                            }
                        },
                        stop: function(e, ui) {
                            period = getCurrentPeriod(ui.position.top);
                            periodTooltip.addClass("hide");
                            updateCurrentInterest();
                        }
                    });

                    $("#indexCalculatorPrincipleAnchor").draggable({
                        axis: "x",
                        cursor: "ew-resize",
                        containment: "parent",
                        start: function () {
                            userUseCalculatorPingback();
                            tooltip.removeClass("hide");
                        },
                        drag: function (e, ui) {
                            amount = getCurrentAmount(ui.position.left);
                            tooltip.text("￥" + F.formatAmountNoYuan(amount).split(".")[0]);
                            if (isSupport3d) {
                                tooltip.css("transform", "translateX(" + (ui.position.left - 24) + "px)");
                            } else {
                                tooltip.css("left", (ui.position.left - 24));
                            }
                        },
                        stop: function(e, ui) {
                            amount = getCurrentAmount(ui.position.left);
                            tooltip.addClass("hide");
                            G.baoAmount.set("items", [{
                                amount: amount,
                                rate: rate
                            }]);
                            updateCurrentInterest();
                        }
                    });
                }
            });
            $(window).on('scroll handleChange', handlerBaoAmount);
        }

        api.general("site_total_earning", {
            success: function (data) {
                dataNumberChange("#userCount", data["user_count"]);
                dataNumberChange("#totalAmount", parseInt(data["investing"] / 100));
                $(window).trigger("handleChange");
            }
        });
        apiSite.getFinanceList({
            success: function (financeData) {
                var t1RateYear = financeData.t1RateYear;
                var numberValue = t1RateYear.split(".");
                $("#t1RateYear").html(numberValue[0] + ".<sub>" + numberValue[1] + "起</sub>");
                $(".t1RateYear").html(t1RateYear);

                baoAmountChange(financeData.rate);
                $(window).trigger("handleChange");
            }
        });

        $(window).on('scroll', function () {
            if($(window).scrollTop() > 670){
                sidebarWrapper.addClass("index-sidebar-show");
            }
        });

        sidebarWrapper.on({
            "mouseenter": function () {
                sidebarWrapper.addClass("index-sidebar-mouseenter").removeClass("index-sidebar-mouseleave");
            },
            "mouseleave": function () {
                setTimeout(function () {
                    sidebarWrapper.removeClass("index-sidebar-mouseenter").addClass("index-sidebar-mouseleave");
                }, 100);
            }
        });

        setTimeout(function () {
            $("<img/>").attr("src", "https://static.lancai.cn/web/images/index/header-bg-hd.jpg").on("load", function () {
                $(".indexUpdateHeader").addClass("header-bg-hd");
            });
        }, 1000);

    };
</script>
