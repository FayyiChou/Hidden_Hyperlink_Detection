else if (remote_ip_info.province=="香港"){document.write("<a href='bbs/forum.php?mod=forumdisplay&fid=698' target='_blank'>")


}
   </script> 进入<script language="javascript">
					
document.write(remote_ip_info.city) 
   </script>站</span> &gt;&gt; 
