        var speed=15//速度数值越大速度越慢
        var demo_left2=document.getElementById("demo2");
        var demo_left1=document.getElementById("demo1");
        var demo_left=document.getElementById("demo");
        demo_left2.innerHTML=demo_left1.innerHTML
        function Marquee(){
        if(demo_left2.offsetWidth-demo_left.scrollLeft<=0)//offsetWidth 是对象的可见宽度
        demo_left.scrollLeft-=demo_left1.offsetWidth//scrollWidth 是对象的实际内容的宽，不包边线宽度
        else{
        demo_left.scrollLeft++
        }
        }
        var MyMar=setInterval(Marquee,speed)
        demo_left.onmouseover=function() {clearInterval(MyMar)}
        demo_left.onmouseout=function() {MyMar=setInterval(Marquee,speed)}
