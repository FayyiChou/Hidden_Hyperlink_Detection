<script type="text/javascript">
//时间脚本开始
function time()
{
	tmpDate = new Date();
	document.write(tmpDate.getFullYear());
	document.write("年");
	document.write(tmpDate.getMonth() + 1);
	document.write("月");
	document.write(tmpDate.getDate());
	document.write("日 ");
	myArray = new Array(6);
	myArray[0] = "日"
	myArray[1] = "一"
	myArray[2] = "二"
	myArray[3] = "三"
	myArray[4] = "四"
	myArray[5] = "五"
	myArray[6] = "六"
	weekday = tmpDate.getDay();
	document.write("星期" + ((weekday == 0 || weekday == 6)?(myArray[weekday]):(myArray[weekday])));
}
//时间脚本结束
</script>




