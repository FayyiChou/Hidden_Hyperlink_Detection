$(document).ready(function(){
$(".lra li").prepend("<span>.</span>");
$(".lrd li").prepend("<span>></span>");
$(".lra li").eq(2).addClass("liredc");



$(".leftbut").hover(function(){
  $(this).fadeTo("show",0.7);

},function(){
  $(this).fadeTo("show",0.1);
});

$(".rightbut").hover(function(){
  $(this).fadeTo("show",0.7);

},function(){
  $(this).fadeTo("show",0.1);
});
})
</script>

    <script type="text/javascript">
    $(document).ready(function () {

var li_lenght = $(".lrcul").find('li').length-1  ;
var $leftb = $(".leftbut");
var $rightb = $(".rightbut");
var $liwidth = $(".lrcul").find('li').outerWidth(true);
var n = 0;

function srca() {
  n++ 
  if(n>li_lenght) n=0 ;

    $(".lrcul").animate({left:-$liwidth*n},1000);
  }


  function do_src(){
            timerId = setInterval(srca,7000);
        }
        
         do_src();

        $(".lrccon").mouseover(function(){
            clearInterval(timerId)
        }).mouseout(function(){
             do_src()
        })


            $rightb.click(function(){
            n++;
            if(n>li_lenght) n=0;
            $(".lrcul").animate({left:-$liwidth*n},280);
        })
        
        $leftb.click(function(){
            n--;
            if(n<1) n=0;
            $(".lrcul").animate({left:-$liwidth*n},280);
        })  
        
        

})
</script>
