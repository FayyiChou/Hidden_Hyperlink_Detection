        (function () {
            var h = $('.hdcontent').height();
            $('html,body').animate({ scrollTop: h }, 200);
        })();
        var classID = 0;
        $(".talk_tools a.replay").live('click', function () {
            if ($("#uname").val() != "") {
                classID = $(this).parent().parent().find('.zan').attr('hid');
                var tsid = $(this).parent().parent().find(".name")
                var replyto = tsid.text();
                replyto = "回复  " + "[" + replyto + "]\n"
                $("#content_txt").focus().val(replyto);
                $("#huifuser").val(replyto)
                return false;
            }
            else {
                window.location.href = "/login/?reurl=" + window.location.href;
            }
        })

        $("#content_txt").bind("keydown", function () {
            var hfhid = $("#huifuser").val().replace(/(\[.+\]回复)(\s.+)(\[\/url\])/, "回复$2")
            var len = hfhid.length > 0 ? hfhid.length + 1 : 0
            $(this).val($(this).val().substr(0, 200 + len));
            if ($(this).val().length >= 200 + len) {
                tipFun("点评内容最多200字~");
            }
        })
        function checkform() {
            if ($("#uname").val() != "") {
                var hfhid = $("#huifuser").val().replace(/(\[.+\]回复)(\s.+)(\[\/url\])/, "回复$2");
                var dpcon = $(".com_list");
                var contenTxt = $('#content_txt').val().replace($("#huifuser").val(), '').trim();
                if (hfhid.length > 0) {
                    if (contenTxt.indexOf(hfhid) > -1) {
                        if (contenTxt.length - hfhid.length < 4) {
                            tipFun("内容不能少于3字~");
                            $("#content_txt").focus();
                            return false
                        }
                    } else {
                        if (contenTxt.length < 3) {
                            tipFun("内容不能少于3字~");
                            $("#content_txt").focus();
                            return false
                        }
                        $("#huifuser").val("")
                    }
                } else {
                    if (contenTxt.length < 3) {
                        tipFun("内容不能少于3字~");
                        $("#content_txt").focus();
                        return false
                    }
                }
                smAjax({
                    url: "/NewInfo/AddPingLun",
                    type: "post",
                    data: { content_txt: contenTxt, newid: $("#newid").val(), memoId: classID, huifuser: $("#huifuser").val() },
                    success: function (data) {
                        if (data != "") {
                            if (data == "0") {
                                tipFun("发表评论失败,请稍后再试~");
                            }
                            else if (data == "您输入的信息包含非法信息") {
                                tipFun(data);
                            }
                            else {
                                tipFun("发表评论成功~");
                                if (dpcon.html() != "<li>暂无评论!</li>") {
                                    dpcon.html(data + dpcon.html());
                                }
                                else {
                                    dpcon.html == "";
                                    dpcon.html(data);
                                }
                                $("#content_txt").val("");
                            }
                        }
                        else {
                            window.location.href = "/login/?reurl=" + window.location.href;
                        }
                    }
                })
            }
            else {
                window.location.href = "/login/?reurl=" + window.location.href;
            }
        }

        $(".zan").live("click", function () {
            var hid = $(this).attr("hid");
            if (!$(this).children().attr("class")) {
                $(".com_list dl b").remove()
                $(this).before("<b>+1</b>")
                $(this).siblings("b").animate({ top: "-20px", opacity: "0" }, 800)
