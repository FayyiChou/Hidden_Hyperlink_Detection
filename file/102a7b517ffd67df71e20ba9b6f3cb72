<script>
//ヘッダー固定
hdFixed();

$(window).scroll(function(){
	hdFixed();
});

function hdFixed(){
	var scrollTop = $(this).scrollTop();

	if(scrollTop > 36){
		$("body").css("padding-top",134);
		$(".ovf","#header").hide();
		$("#header").addClass("fixed");
		$("h1").css("margin-top",15);
	}else{
		$("body").css("padding-top",0);
		$(".ovf","#header").show();
		$("#header").removeClass("fixed");
		$("h1").css("margin-top",52);
	};
}
</script>
<!-- /footer -->

