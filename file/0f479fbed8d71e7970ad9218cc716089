function setValues(oNode, strAttr, strValue) {
  if (oNode != null){
    if (oNode.length != null){
      for (k=0; k<oNode.length; k++){
        oNode[k].setAttribute(strAttr, strValue);
      }
    }else{
      oNode.setAttribute(strAttr, strValue);
    }
  }
}
