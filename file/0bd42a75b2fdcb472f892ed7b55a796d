        $(window).scroll(function () {
            if ($(window).width() > 640) {
                var p1 = $("#page1").height();
                var p2 = $("#page2").height();
                var p3 = $("#page3").height();
                var p4 = $("#page4").height();


                var h3 = p1 + p2 + 300 ;

                if ($(this).scrollTop()  > h3) {
                    var page3 = $(".in_bb01_t");
                    page3.find("li").stop();
                    page3.find("li").each(function (index) {
                        page3.find("li").eq(index).stop().delay(150*(index + 1)).animate({
                            opacity: 0.5,
                            marginLeft: '10px',
                        },1000).animate({
                            opacity: 1,
                            marginLeft: '0'
                        }, 1000).stop();

                    });
                }



                // var h4 = h3 + p3 - 300;
