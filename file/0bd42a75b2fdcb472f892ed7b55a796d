<script type="text/javascript">
    $(document).ready(function () {
            $dragBln = false;

            $(".main_image").touchSlider({
                flexible: true,
                speed: 200,
                btn_prev: $("#btn_prev"),
                btn_next: $("#btn_next"),

                counter: function (e) {
                    $(".flicking_con a").removeClass("on").eq(e.current - 1).addClass("on");
                }
            });
            $(".main_image").bind("mousedown", function () {
                $dragBln = false;
            })
            $(".main_image").bind("dragstart", function () {
                $dragBln = true;
            })
            $(".main_image a").click(function () {
                if ($dragBln) {
                    return false;
                }
            })
            timer = setInterval(function () { $("#btn_next").click(); }, 3000);
            $(".main_visual").hover(function () {
                clearInterval(timer);
            }, function () {
                timer = setInterval(function () { $("#btn_next").click(); }, 3000);
            })
            $(".main_image").bind("touchstart", function () {
                clearInterval(timer);
            }).bind("touchend", function () {
                timer = setInterval(function () { $("#btn_next").click(); }, 3000);
            })
        });
        //控制焦点图高
        $(window).load(function () {
            BannerImg();
            //BoxPageHeight();
        });
        $(window).resize(function () {
            BannerImg();
            //BoxPageHeight();
        })
        function BannerImg() {
            var IEWidth = $(window).width();
            if (IEWidth < 920) {
                var ImgId = $(".main_image img:eq(0)");
                var img_w = ImgId.width();//图片宽度
                var img_h = ImgId.height();//图片高度
                var height = (IEWidth * img_h) / img_w; //高度等比缩放
                $(".main_image").height(height);//设置缩放后的宽度和高度
                //
                $("#btn_prev,#btn_next").hide();

            }
            else {
                //让背景图隐藏

                $(".main_image").height(513);

                $(".main_visual").hover(function () {
                    $("#btn_prev,#btn_next").fadeIn()
                }, function () {
                    $("#btn_prev,#btn_next").fadeOut()
                })
            }
        }
</script>



