        // 订阅
        $('body').on('click','.scribe-v2-0',function(){
            if(!HRLOO_ISLOGIN){
                location.href=HRLOO_LOGINURL;
                return false;
            }
            var sid = $(this).attr('sid') , me = this;
            $.ajax({
                type:"post",
                cache:false,
                url: 'http://www.hrloo.com/hrloo.php?m=dk4&c=lesson&a=operate',
                data:{'uid':sid,'type':'subscribe'},
                dataType: 'json',
                success: function(data) {
                    if(data.result==0){
                        $(me).off().html('已订阅').removeClass().addClass('scribe-v2-1');
                        wxGuide.init();
                    }else{
                        HR.biz.hshowBubble(me, 2, data.msg, 0, 1000);
                        HR.event.hdoane();
                        return false;
                    }
                },
                error:function(){
                    console.log("ajax error");
                }
            });
        });

        // 取消订阅
        $('body').on('click','.scribe-v2-1',function(){
            if(!HRLOO_ISLOGIN){
                location.href=HRLOO_LOGINURL;
                return false;
            }
            var sid = $(this).attr('sid') , me = this;
            $.ajax({
                type:"post",
                cache:false,
                url: 'http://www.hrloo.com/hrloo.php?m=dk4&c=lesson&a=operate',
                data:{'uid':sid,'type':'subscribe'},
                dataType: 'json',
                success: function(data) {
                    if(data.result==0){
                        $(me).off().html('订阅').removeClass().addClass('scribe-v2-0');
                        HR.event.hdoane();
                        return false;
                    }else{
                        HR.biz.hshowBubble(me, 2, data.msg, 0, 1000);
                        HR.event.hdoane();
                        return false;
                    }
                },
                error:function(){
                    console.log("ajax error");
                }
            });
        });

        // 订阅引导
        showScribeGuideFun();
        
	});
	</script>



