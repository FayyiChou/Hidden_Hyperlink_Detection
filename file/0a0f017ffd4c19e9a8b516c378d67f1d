<script type="text/javascript">
/**
 * [getIsAddqq 用户是否添加班主任QQ]
 * @param  uid 当前登录uid
 * @return null
 */
var POPUP_FOR_ADDQQ = null;
var POPUP_DATA = '';
var IsAddHeadmaster = {
    GetIsAddHeadmaster: function(uid) {
        $.ajax({
            url: '/hrloo.php?m=home&c=index&a=popjsonp',
            type: 'GET',
            data: {
                uid: uid
            },
            dataType: "jsonp",
            success: function(data) {
            	POPUP_DATA = data;
                if (data.isfriends == 0 && data.qq && data.qq != '') {                	
					if ($.cookie('POPUP_FOR_ADDQQ') == undefined) {
						IsAddHeadmaster.showAddType();
					};
                    IsAddHeadmaster.addGiftBox();
                };
                if (data.isfriends == 1) {
                    if($('.giftBox').length>0){
                       $('.giftBox').remove(); 
                    };
                };
            },
            error: function() {}
        });
    },
    showAddType: function() {
    	if (!isNaN(POPUP_DATA.qq)) {
    		qyqq = 'http://wpa.qq.com/msgrd?v=3&uin='+POPUP_DATA.qq+'&site=qq&menu=yes';
    	}else{
    		qyqq = POPUP_DATA.qq
    	};
        $('body').append('<div class="global-poplayer js_gpop_layer"></div><div class="global-popletter js_gpop_letter"><div class="pop-letter-in"><a class="global-poplet-mod" href="'+qyqq+'"  onclick="IsAddHeadmaster.closePopup();" target="_blank"></a><span class="globalpopcls js_pcls" onclick="IsAddHeadmaster.closePopup();">关闭</span></div></div>');
		$('.js_gpop_layer').width($('body').width()).height($('body').height());
		$('.global-popletter').css({'background-image': 'url('+POPUP_DATA.desc+')'});
    },
    addGiftBox: function() {
        var ps = null;
        if ($('#wxcodearea').length>0) {
            ps = parseInt($('#wxcodearea').css('margin-left'));
        }else if ($('#appcodearea').length>0) {
            ps = parseInt($('#appcodearea').css('margin-left'));
        }else{
            ps = 620;
        }
    	if ($('.globalgiftBox').length < 1) {
    		$('<div class="globalgiftBox" style="margin-left:'+ps+'px" onclick="IsAddHeadmaster.showAddType();"></div>').appendTo('body');
    	};        
    },
    showGiftBox : function(){
    	if (HRLOO_ISLOGIN) {
			IsAddHeadmaster.GetIsAddHeadmaster(HRLOO_LOGINUID);
		};
    },
    closePopup: function(){
    	$('.js_gpop_layer,.js_gpop_letter').remove();
    	$.cookie('POPUP_FOR_ADDQQ','1',{expires:365,path:'/',domain:'hrloo.com'});
    }
};
$(function(){
    if ($.cookie == undefined) { //引入jquery.cookie.min.js
        HR.tool.addScript('http://static.hrloo.com/hrloo/global/js/jquery.cookie.min.js',null,IsAddHeadmaster.showGiftBox);
    }else{
        IsAddHeadmaster.showGiftBox();
    };
});
</script>
