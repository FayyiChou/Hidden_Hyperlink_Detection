<script type="text/javascript">

function global_poplogin(data) {
    var otip = $('#poplogintips');
    if (data.result == 0) {
    	if (data.referer) {
    		window.location.href=data.referer;
    	}else{
    		window.location.reload();
    	}
    }else if(data.result == 1){
    	otip.text('用户名不存在！');
    }else if(data.result == 3){
    	if (data.referer) {
    		window.location.href=data.referer;
    	}else{
    		window.location.reload();
    	}
    }else if (data.result == 4) {
    	otip.text('密码错误！');
    };
};

if (!$.hrEmailAutoCompletes) {
    HR.tool.addScript('http://static.hrloo.com/hrloo/global/js/automail.min.js','',bind_popEvet);
};

function popLoginclose(){
	$("#popLoginWrap").hide();
	HR.event.hdoane();
};

function bind_popEvet() {
    function inputprompt(id) {
        $("#" + id).keyup(function() {
            var val = $(this).val();
            val = $.trim(val);
            if (val != '') {
                $(this).css('color', '#333');
                $(this).next().hide();
            } else {
                $(this).css('color', '#999');
                $(this).next().show();
            }
        }).blur(function() {
            var val = $(this).val();
            val = $.trim(val);
            if (val == '') {
                $(this).css('color', '#999');
                $(this).next().show();
            }
        });
    };
    //placeholder提示
    inputprompt('usernamePopup');
    inputprompt('passwordPopup');
    //邮箱提示
    $('#usernamePopup').hrEmailAutoComplete({
        'placeholder': '',
        'nextElem': '#passwordPopup',
        'widthAdjust': 17,
        'topAdjust': 0
    });

    $('#popupLogin p.username,#popupLogin p.passwd').click(function(){
    	$(this).find('input').focus();
    	$(this).find('.placeholder').hide();
    });

    $("#popLoginBtn").click(function() {
        $('#pop_login_form').submit();
    });

    window.document.onkeydown=function(evt){
	    evt=window.event||evt;
	    if(evt.keyCode==13){
	        $('#popLoginBtn').trigger('click');
	    }   
	};
};

</script>
