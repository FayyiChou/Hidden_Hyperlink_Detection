        // 赞赏
        var zs_obj = $(".zsWrapBox").eq(0);
        zs_Model.view({
            viewBox:zs_obj,
            complete:zs_coment,
            zsListUrl:zs_obj.attr("zsListUrl"),
            zsMaxLine:16,
            jstitle:zs_obj.attr("jstitle"),
            moduleid:zs_obj.attr("moduleid"),
            itemid:zs_obj.attr("itemid"),
            toUserImg:zs_obj.attr("toUserImg"),
            toUserNickname:zs_obj.attr("toUserNickname"),
            toUserID:zs_obj.attr("toUserID")
