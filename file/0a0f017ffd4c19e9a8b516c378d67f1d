    // 用户显示引导
    var showScribeGuideFun = function(){
        // 加载cookie插件
        if(!$.cookie){
            HR.tool.addScript('/hrloo/global/js/jquery.cookie.js','jQueryCookiePlugin',showScribeGuideFun);
            return;
        }
        var isShowScribeGuide = $.cookie('isShowScribeGuide');
        var isShowGuideNodes = $('.rztpl-usrinfo .scribe-v2-0');
        if( !isShowScribeGuide && isShowGuideNodes.length > 0 ){
            $('body').css({'height':$(window).height(),'overflow': 'hidden'});
            var POS = isShowGuideNodes.eq(0).offset();
            var MHTML = '<div class="userGuideWrap"><div class="userGuideMengban" style="width:'+$(window).width()+'px;height:'+$(window).height()+'px;"></div><div class="userGuideTip" style="left:'+(POS.left-440)+'px;top:'+(POS.top-165)+'px"><span class="closeTip">关闭</span></div><div class="userGuideClone" style="left:'+POS.left+'px;top:'+POS.top+'px;"></div></div>';
            $('body').append(MHTML);
        }
        // 关闭引导
        $('.userGuideWrap').on('click','.closeTip',function(){
            $('body').css({'height':'auto','overflow': 'auto'});
            $('.userGuideWrap').off().remove();
            $.cookie('isShowScribeGuide',true,{ expires: 365 , path: '/' , domain : 'hrloo.com'});
        });
    }

    // 为赞赏留言
    function zs_coment(msg){
        if(msg){
            $('#hr_reply_main_text').val('#赞赏# '+msg);
            $("#hr_reply_main_submitpl").trigger("click");
            window.setTimeout(function(){
                $('#hr_reply_main_text').val('');
            },1000);
        }else{
            return;
        } 
    }
