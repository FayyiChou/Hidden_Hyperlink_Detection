function checkInfo(){
var s = $('#mysearch').val();
if(s==''||s==$('#mysearchBox li').eq(0).text()||s==$('#mysearchBox li').eq(1).text()||s==$('#mysearchBox li').eq(2).text()){
alert('请输入搜索关键词');
return false;
}else{
 return true;
}
}
