<script language="javascript" type="text/javascript">

function hiddenLangSwitch(){
    try{
			document.getElementById("LangSwitchBtn").style.visibility="hidden";
    }catch(oException){}
}

function menuSubmitSearch(lang) {
	var f=document.getElementById("thm_searchForm");
	var m=document.getElementById("scope");
 	if (validateQuery(lang, f, f.menuSearchInput)) {
	 	f.search.value = trim(f.menuSearchInput.value).substring(0,50);
	 	<!--f.searchString.value = trim(f.menuSearchInput.value).substring(0,50);-->
			var url='/1/2/schi/site-search'+'?searchString='+f.search.value;
			if(m.value==""){
				f.action=url+'&scope=1';
			}else{
				f.action=url+'&scope='+m.value;
			}
		
		f.target='_top';
		f.method='post';

		if (f.pageno)
			f.pageno.value=1;		

		f.submit();
	}
}

function menuSubmitSearchByEnter(lang) {
	var f=document.getElementById("thm_searchForm");
	var m=document.getElementById("scope");
 	if (validateQuery(lang, f, f.menuSearchInput)) {
	 	f.search.value = trim(f.menuSearchInput.value).substring(0,50);
	 	<!--f.searchString.value = trim(f.menuSearchInput.value).substring(0,50);-->
			var url='/1/2/schi/site-search'+'?searchString='+f.search.value;
			if(m.value==""){
				f.action=url+'&scope=1';
			}else{
				f.action=url+'&scope='+m.value;
			}
		
		f.target='_top';
		f.method='post';

		if (f.pageno)
			f.pageno.value=1;		

		f.submit();
	}else{
		return false;
	}
}

function sysmaintsch() {
	var system_schedule_url="/1/2/schi/e-services/personal-ebanking/hk-personal-ebanking/sys-maintenance";
	window.open(system_schedule_url,"sysmaintsch","width=820,height=500,top=0,left=0,status=no,scrollbars=yes,toolbar=no,location=no,menubar=no,resizable=yes");
}

function p2g_card_intlogon(code,cardtype){

	if(!logonWin || logonWin.closed) {
	} else {			
		var flag = confirm("\u9601\u4E0B\u662F\u5426\u786E\u5B9A\u5173\u95ED\u73B0\u6709\u7684e-banking\u89C6\u7A97\u4EE5\u91CD\u65B0\u767B\u5165?");
		if(flag) {
			logonWin.close();				
		} else {
			return;
		}
	}
	
	
	if (cardtype==""){
		url="https://bank.hangseng.com/1/2/schi/personal/interim-logon?targetPage="+code;
	}else{
		url="https://bank.hangseng.com/1/2/schi/personal/interim-logon?targetPage="+code+"&cardType="+cardtype;
	}
	
	
	logonWin=window.open(url,"EBankTopFrame","width=800,height=450,top=0,left=0,status=1,scrollbars=1,toolbar=0,location=0,menubar=0,resizable=1");
}

function p2g_intlogon(code,webTrend){

	if(!logonWin || logonWin.closed) {
	} else {			
		var flag = confirm("\u9601\u4E0B\u662F\u5426\u786E\u5B9A\u5173\u95ED\u73B0\u6709\u7684e-banking\u89C6\u7A97\u4EE5\u91CD\u65B0\u767B\u5165?");
		if(flag) {
			logonWin.close();				
		} else {
			return;
		}
	}
	
	
	if(!webTrend){
		url="https://bank.hangseng.com/1/2/schi/personal/interim-logon?targetPage="+code;
	}else{
		url="https://bank.hangseng.com/1/2/schi/personal/interim-logon?targetPage="+code+"";
	}
	

	logonWin=window.open(url,"EBankTopFrame","width=800,height=450,top=0,left=0,status=1,scrollbars=1,toolbar=0,location=0,menubar=0,resizable=1");
}

