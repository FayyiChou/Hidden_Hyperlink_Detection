<SCRIPT>
  var bdemospeed=40
  bdemo2.innerHTML=bdemo1.innerHTML //innerHTML為設定開始及結束用變數，複製bdemo1為bdemo2
  function bdemoMarquee(){
  	if(bdemo.scrollLeft>=bdemo1.scrollWidth) //scrollLeft 為設定左邊界及可視內容最左端的距離，scrollWidth 為滾動寬度
  		bdemo.scrollLeft=0
  	else{
  		bdemo.scrollLeft++
  	}
  }
  var bdemoMyMar=setInterval(bdemoMarquee,bdemospeed) //設定定時器
  bdemo.onmouseover=function() {clearInterval(bdemoMyMar)} //Mouse 放在內容上時，清除定時器達到滾動停止
  bdemo.onmouseout=function() {bdemoMyMar=setInterval(bdemoMarquee,bdemospeed)} //Mouse移開時重設定時器
</SCRIPT>

