$('#addArticle').popover({container:"body",trigger:'focus',placement:'bottom',html:true,title:'收录文章至专栏<button type="button" class="close js_close"><span>×</span><span class="sr-only">Close</span></button>',content:function(){
		var d = $(this).next();
		return d.html();
	
		
}}).on('shown.bs.popover', function () {
		var that = $(this);
		var id = that.attr('aria-describedby');

		var dom = $('#'+id).on('mousedown touchstart',function(e){
			var d = e.srcElement ? e.srcElement:e.target;
			
			if($(d).parents('.js_close').length>0||$(d).hasClass('js_close')){
				that.attr('ndj','0').popover('hide');
			}else{
			   that.attr('ndj','1')
			}
			
		});
		var dem = that;
		dom.find('.addArticleLis .btn').on('click',function(){
			var that = $(this);
			var id = that.attr('atid');
	    var bn = that.attr('abn');
			if(bn == '0') {
				$.post('/Article/add_to_column',{column_id:id,id:article_id,authorid:authorid},function(ret){
					if(ret.status==100) {
						that.attr('abn',1).removeClass('blue_button').addClass('grey_button').html('已收录');
						var h = dom.find('.popover-content').html();
		                dem.next().html(h);
					} else {
						twt_alert(ret.mess);
					}
				}, 'json');
			}else{
				$.post('/Article/del_from_column',{column_id:id,id:article_id,authorid:authorid},function(ret){
					if(ret.status==100) {
						that.attr('abn',0).removeClass('grey_button').addClass('blue_button').html('收录');
			        var h = dom.find('.popover-content').html();
		            dem.next().html(h);
					} else {
						twt_alert(ret.mess);
					}
				}, 'json');	  
			}
		})
    
}).on('hide.bs.popover', function () {
	if($(this).attr('ndj')=='1'){
	$(this).attr('ndj','0');
	$(this).focus();
    return false;
	}

});

var amcls = $('#aM_commentList');
var fileId = amcls.attr('file_id');
var fn;
$('body').on('click',function(e){
	var d = e.srcElement ? e.srcElement:e.target;
	 if(fn){fn($(d))}
	});	
amcls.on('mousedown touchstart',function(e){

var jsdom = e.srcElement ? e.srcElement:e.target;
jsdom = $(jsdom);

if((jsdom.hasClass('js_huifu')&&jsdom.attr('prjs_bn')!='1')||(jsdom.parents('.js_huifu').length>0&&jsdom.parents('.js_huifu').attr('prjs_bn')!='1')){
	
var box = jsdom.parents('.amcL_item');
var mId = box.attr('mid');
var cId = jsdom.attr('cid');
if(!cId){
	jsdom = jsdom.parents('.js_huifu');
	cId = jsdom.attr('cid');
	}
var cn_lis = box.find('.aM_replyList');

jsdom.attr('prjs_bn','1').popover({viewport:{ selector: '#aM_commentList', padding: 0 },trigger:'focus',container:"#aM_commentList",placement:'bottom',html:true,title:'回复<button type="button" class="close js_close"><span>×</span><span class="sr-only">Close</span></button>',template:'<div class="popover popo_huifu" role="tooltip"><div class="arrow"></div><h3 class="popover-title"></h3><div class="popover-content"></div></div>',content:'<div class="amcF_box"><textarea maxlength="2000" placeholder="写下你的回复…" name="#"></textarea><div><input type="submit" name="#" value="发 表" class="btn btn-success" data-disable-with="提交中..."><span class="erro"></span><span class="hotkey">Ctrl+Enter 发表</span></div></div>'

}).on('shown.bs.popover', function () {
		var that = $(this);
		var id = that.attr('aria-describedby');

		var dom = $('#'+id).on('mousedown touchstart',function(e){
			var d = e.srcElement ? e.srcElement:e.target;
			
			if($(d).parents('.js_close').length>0 ||　$(d).hasClass('js_close')){
				that.attr('ndj','0').popover('hide');
			}
			
		}).on('click',function(){
		  dom.find('.amcF_box textarea').focus();
		});
		var v = $.trim(that.attr('d_val'));
		if(v){
			dom.find('.amcF_box textarea').val(v);
			}
		that.attr('ndj','1');
		
		
		dom.find('.amcF_box textarea').keydown(function(e){
				dom.find('.amcF_box .erro').html('')
        if(e.ctrlKey && (e.which == 13 || e.which == 10)) { 
		fclick();
		}}).change(function(){
			dom.find('.amcF_box .erro').html('')
			})
		dom.find('.amcF_box .btn').on('click',fclick)
		
		function fclick(){
			var val = $.trim(dom.find('.amcF_box textarea').val());
			if(!val){
			dom.find('.amcF_box textarea').focus()
			dom.find('.amcF_box .erro').html('请填写回复后提交！')
			return false
			}
			$.post('/Article/comment_child',{id:fileId,cid:mId,up_cid:cId,content:val},function(data){
				that.attr('d_val','')
			    dom.find('.amcF_box textarea').val('');
				that.attr('ndj','0').popover('hide');
				cn_lis.prepend(data.html).show();
				}, 'json')
			}
    fn = function(e){
		if(e.parents('#'+id).length<1 &&　e.attr('id')!=id &&　e.attr('aria-describedby')!=id){
			that.attr('ndj','0').popover('hide');
			}
		};
}).on('hide.bs.popover', function () {
	var id = $(this).attr('aria-describedby');
    var dom = $('#'+id)
	if($(this).attr('ndj')=='1'){
    return false;
	}else {
		fn='';
		var v = $.trim(dom.find('.amcF_box textarea').val());
		if(v){
	  $(this).attr('d_val',v);
		}
	}

});
}
})


//评论
var pl_dom = $('#aM_commentForm');
$('#amcF_textarea').keydown(function(e){
		$('#aM_commentForm .erro').html('')
        if(e.ctrlKey && (e.which == 13 || e.which == 10)) { 
		fpl();
}}).focus(function(){
		$('#aM_commentForm .erro').html('')
})

$('#amcF_submit').on('click',fpl);
function fpl(){
	var val = $.trim($('#amcF_textarea').val());
			if(!val){
			$('#aM_commentForm .erro').html('请填写回复后提交！')
			return false;
			}
$.post('/Article/comment',{id:fileId,content:val},function(data){
	if(data.status == 100) {
		$('#aM_commentList h3').after(data.html);
		$('#comment_num').text(data.replynum+' 条评论');
		$('#replynum').text('评论 '+data.replynum);
		$('#amcF_textarea').val('');
		$(window).scrollTop(amcls.offset().top-$('body>div.header').height());
	} else {
		twt_alert(data.mess);
	}
}, 'json');
}

$('.js_pinglun').on('click',function(){
	 $(window).scrollTop($('#aM_commentForm').offset().top-$('body>div.header').height()-20);
	})
	
$('.js_ceng').click(function(){
	twt_jubao(this);
	})


})
	
function twt_jubao(n){
	var that = $(n);
	var d = '<div class="h_box">\
<p>感谢您能协助我们一起管理站点，我们会对您的举报尽快处理。</p>\
<textarea class="form-control" placeholder="请填写举报理由" style=" margin-bottom:10px;"></textarea>\
<button type="button" class="btn btn-success">确定</button><span class="erro" style="margin-left:20px;"></span>\
</div>';
	d = $(d);
	d.find('button').click(function(){
	  	var obj={};
		obj['reason']=$.trim(d.find('textarea').val());
		obj['id']= that.attr('fid');
		obj['idtype']= that.attr('idtype');
		if(!obj['reason']){
		d.find('.erro').html('请填写举报理由后，提交');
		}else{
			$.post('/Article/report',obj,function(ret){
				if(ret.status == 100) {
			  	$('#promptLayer').modal('hide')
				} else {
					twt_alert(ret.mess);
				}
			}, 'json')
		}
		
	}).end().find('textarea').focus(function(){
	  d.find('.erro').html('');
	});
	$('#promptLayer').modal('show').find('#myModalLabel').html('举报违规').end().find('.modal-body').html(d);
}
   </script>
