	  if(!is_old){
   $('#articleM_body pre').each(function() {
    var that = $(this);
	var str = '```'+that.find('code').attr('class')+'\r\n'+that.text()+'\r\n```';

   testEditormdView = editormd.markdownToHTML("testEditormdView", {
