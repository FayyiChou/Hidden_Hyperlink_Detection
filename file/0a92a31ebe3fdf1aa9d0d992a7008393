	var article_id = 3252;
	var is_old = 1;
	var authorid = 890;
	get_up_list();
	function up_article(num) {
		$.get('/home/cp.php?ac=click&op=add&clickid=4&idtype=blogid&id='+article_id, function(data){
			if(data.status ==1) {
				num = num +1;
				$('#b_'+article_id).html('已赞同<span class="count">'+num+'</span>');
				$('#zan').text('赞 '+num);
				get_up_list();
			} else {
				twt_alert(data.msg);
			}
		},'json');
	}
	function get_up_list() {
		$.get('/public_admin/article/get_up_list', {'id':article_id}, function(ret) {
			$('.aM_avatarList').html(ret);
			$('.aM_avatarList a').css({'display':'inline-block','margin-right':10});
			$('.aM_avatarList').find("[data-toggle='tooltip']").tooltip();
			
			
		})
	}
	function del_article(){
			$.post('/public_admin/article/delete', {'id':article_id,'t':'article'}, function(ret){
				if(ret.status == 100) {
					location.href="/public_admin/article/message/del";
				} else {
					twt_alert(ret.mess);
				}
			}, 'json');
	 }
	 function del_comment(cid, s){
			$.post('/public_admin/article/delete', {'cid':cid, 't':'comment'}, function(ret){
				if(ret.status == 100) {
					$('#comment_'+s+'_'+cid).remove();
					$('#comment_num').text((parseInt($('#comment_num').text()) - 1) + ' 条评论');
				} else {
					twt_alert(ret.mess);
				}
			}, 'json');
	 }
	function del_article_tip() {
		twt_layer('<p>确认删除这篇文章吗？</p>\
			<button type="button" class="btn btn-default" data-dismiss="modal">否</button>\
			<button type="button" class="btn btn-default remove_article" onclick="del_article()" data-dismiss="modal">是</button>');
	}
	function del_comment_tip(cid, s) {
		twt_layer('<p>确认删除该评论吗？</p>\
			<button type="button" class="btn btn-default" data-dismiss="modal">否</button>\
			<button type="button" class="btn btn-default remove_article" onclick="del_comment('+cid+',\''+s+'\')" data-dismiss="modal">是</button>');
	}
