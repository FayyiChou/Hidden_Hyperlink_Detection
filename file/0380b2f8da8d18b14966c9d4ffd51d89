<script>
	$(document).ready(function(){
		var $slickCompanys = $('#slickCompanys');//外容器
		var $sliderBox = $('.sliding-shaft');//滑动容器
		var $preBtn = $('#preBtn');//前翻按钮
		var $nextBtn = $('#nextBtn');//后翻按钮
		var leftnumber = 0;//为中间初始ul最左一个的编号为0;
		var length = $slickCompanys.find('li').length;//一个ul中包含li的个数

		//初始ul放中间，复制两个同样的ul
		var $ul1 = $slickCompanys.find('ul').eq(0);
		var $ul2 = $ul1.clone();
		var $ul3 = $ul1.clone();

		var liWidth = 225;//宽度px
		var viewLis = 4;//视窗显示li个数
		var ulWidth = liWidth * length;//一个ul的长度

		//一个插入初始ul前边，一个后边
		$ul2.insertBefore($ul1);
		$ul2.css('left',-ulWidth + 'px');
		$ul3.insertAfter($ul1);
		$ul3.css('left',ulWidth + 'px');

		$nextBtn.click(function(){
			setPosition();
			leftnumber += viewLis;
			setTimeout(function(){
				//transition动画执行机制使滑动轴归位时，先消除动画，再加入动画的步骤分离才能将效果分别成功实现而不是合二为一
				$sliderBox.addClass('active');
				$sliderBox.css('left',-leftnumber*liWidth + "px");
			},0);
		});

		$preBtn.click(function(){
			setPosition();
			leftnumber -= viewLis;//移动视野
			setTimeout(function(){
				//transition动画执行机制使滑动轴归位时，先消除动画，再加入动画的步骤分离才能将效果分别成功实现而不是合二为一
				$sliderBox.addClass('active');
				$sliderBox.css('left',-leftnumber*liWidth + "px");
			},0);

		});

		//每次点击前，判断当前是否需要把滑动轴归位到中间的ul（当视窗完全处于两个复制的ul上也就是与初始ul没有任何交集的情况下）
		function setPosition(){
			$sliderBox.removeClass('active');//归位的时候要去除transition动画

			if(leftnumber >= length){
				leftnumber -= length;//右侧超出归位
			}else if(leftnumber + viewLis <= 0){
				leftnumber += length;//左侧超出归位
			}
			$sliderBox.css('left',-leftnumber*liWidth + "px");//归位的位置计算

		}
	})
</script>
<script>
	$(document).ready(function(){

		var $emailOrPhone = $('[name=emailorphone]').on('input propertychange', function(){
			var val = $emailOrPhone.val();
			if(val){
				$signupBtn[0].href = '/regedit#input='+val;
			} else {
				$signupBtn[0].href = '/regedit';
			}
		});
		var $signupBtn = $emailOrPhone.next();

		//整页滚动
		var current = 0;
		var max = 7;
		var $container = $('#container');
		var $footer  = $('#footer');
		var $download  = $('.download-here');
		var $head0 = $('.fixed-head');
		var $navigator = $('#navigator');
		var $navLinks = $navigator.find('a.nav-dot');

		var $head1 = $head0.clone();
		$head1.removeClass('no-bg').insertAfter($head0).hide();

		var $win = $(window);
		var doing;

		function transition(){
			doing = true;
			var top = 0;

			setTimeout(function(){
				var hasBg = current == 0||current == 3||current == 6;
				$head0[hasBg?'fadeIn':'fadeOut'](300);
				$head1[hasBg?'fadeOut':'fadeIn'](300);
				$navigator[current == 0||current == 3?'removeClass':'addClass']('no-bg');
			},400);

			if(current == 0){
				slider.resume();
			} else {
				slider.stop();
			}

			if(current == 1){
				//滚动到第二屏初始化
				$tabs.eq(0).click();
			}

			if(current == max){
				top = (current - 1) * $win.height() + $footer.outerHeight();
			} else {
				top = current * $win.height();
			}

			$navLinks.removeClass('active').eq(current).addClass('active');

			$container.animate({
				top: -top
			}, 1000, $.cubicBezier([0.86, 0, 0.07, 1]), function(){
				doing = false
			})
		}

		$(document).on('mousewheel', function(e){
			e.preventDefault();
			if(doing) return
			doing = true;

			if(e.deltaY > 0){
				current = Math.max(current - 1,0)
			} else {
				current = Math.min(current + 1, max)
			}
			transition();
		});

		$navLinks.each(function(i){
			$(this).click(function(e){
				e.preventDefault();
				current = i;
				transition();
			})
		});

		var timer;
		$win.on('resize', function(){
			clearTimeout(timer);
			timer = setTimeout(transition, 300);
		});

		$('.download-app').click(function(e){
			e.preventDefault();
			current = 6;
			transition();
		})
		$('#scroll-more').click(function(e){
			e.preventDefault();
			current = 1;
			transition();
		});

		var Slider = function($images, $tabs, duration, trigger) {

			duration = duration || 10000;
			trigger = trigger || 'click';

			var timer,
			that = this,
			speed = 500,
			undef;
			this.last = 1;
			this.current = 0;
			this.next = function(to) {
				that.stop();

				if(that.current == to){
					return that.resume();
				}

				that.current = typeof to == "number" ? to : that.current;

				$tabs.removeClass("active")
						.eq(that.current).addClass("active");

				$images.eq(that.current).hide().css('zIndex', 12).fadeIn(speed, function() {
					$images.eq(that.last).css('zIndex', 10);
					$images.eq(that.current).css('zIndex', 11);
					that.last = that.current;

					that.resume();
				})
			};

			this.stop = function() {
				$images.stop(true, true);
				clearTimeout(timer);
				timer = undef;
			};

			this.resume = function() {
				timer = setTimeout(function() {
					that.current = that.current + 1 == $tabs.length ? 0 : that.current + 1;
					that.next();
				}, duration);
			};

			this.reset = function(){
				this.stop();
				this.current = 0;
				$images.eq(that.last).css('zIndex', 10);
				$images.eq(that.current).css('zIndex', 11).show();
				this.resume();
			};

			this.resume();

			$tabs.each(function(i) {
				$(this).on(trigger, function() {
					that.next(i);
					//鼠标在tab上时停止滚动
					if(trigger == 'mouseenter'){
						var tt = setTimeout(function(){
							tt = 0
							clearTimeout(timer);
						},speed + duration / 2);
						$(this).one('mouseleave',function(){
							if (tt){
								clearTimeout(tt);
							} else {
								that.resume();
							}
						})
					}
				})
			});
		};
		//首屏轮播
		var slider = new Slider($('#carousel .item'), $('#carousel-icons li'), 7000);

		$('[data-stop]').on('click focus', function(){
			slider.stop();
		});


		$('[data-stop-hover]').on('mouseenter', function(){
			slider.stop();
		}).on('mouseleave', function(){
			slider.resume();
		});

		//媒体轮播
		new Slider($('.media-content p'), $('.media-list a'), 3000, 'mouseenter');


		var $tabs = $('.tab-item');
		var $tabBlock = $('.tab-block');
		$tabs.each(function(i){
			var $el = $(this);
			var $block = $tabBlock.eq(i);
			var slider = new Slider($block.find('.inner-img img'),$block.find('li'), 5000, 'mouseenter');
			slider.stop();
			$el.on('mouseenter', function(){
				$tabs.removeClass('active');
				$el.addClass('active');
				$tabBlock.hide();
				$block.show();
				slider.next(0);
			})
		});

		$('[data-play]').click(function(e){
			e.preventDefault();
			$('.video-mask').show();
			$('.video-player').html('<iframe src="/js/website/video-js/video.html" allowtransparency="true" frameborder="0" scrolling="no" allowfullscreen="true" width="960" height="540">');

			setTimeout(function(){
				$('.video-player iframe').css({
					width: $(window).width(),
					height: $(window).height()
				})
			},5000)
		})
		$('.video-mask .vico-close').click(function(){
			$('.video-mask').hide();
			$('.video-player').empty();
			slider.resume();
		})
	});
	var from = "";
	$.post("/saveRegeditFrom",{from:from,pageno:'index'},
			function(){
			}
		);
</script>
</body>
</html>