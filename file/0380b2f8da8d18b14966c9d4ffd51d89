<script>
 

    $(document).on('click', '.J-apply', function(e) {
        e.preventDefault();
        var tmpl = $('#apply').html();
        ui.box.show(tmpl, '模拟体验账号');
        $('[placeholder]').placeholder();
        $("#getPicCode").click(function(){
            $("#getPicCode").attr("src","/try/getPicCode?time="+ (+ new Date()));
        });
        var form_getCode = $('#apply-form');
        $("#getCodeBtn").click(function(){
            form_getCode.submit();
        });
        var form_login = $('#doLigin');
        form_login.hide();
        $("#tryLoginBtn").click(function(){
            form_login.submit();
        });
        form_getCode.submit(function(e) {
            e.preventDefault();
            $.ajax({
                url: '/try/getcode',
                data: form_getCode.serialize(),
                type: 'post',
                dataType: 'json',
                success: function(data) {
                    if (data && data.status == 1) {
                        $("#apply-form").hide();
                        $("#doLigin").show();
                        $('[placeholder]').placeholder();
                        $("#mobile").text(data.mobile);
                        $("#mymobile").val(data.mobile);
                    } else {
                        ui.error(data.msg);
                    }
                }
            })
        });
        $("#getcodevoice").click(function(){
        	var mobile =/^1[34578]\d{9}$/;
    	 	if (mobile.test($("#mymobile").val())) {
    			$.ajax({
    				url:      "/try/getcodevoice?mobile="+ $("#mymobile").val(),
    				type:     'post',
    				dataType: "json",
    				success:  function (obj) {
    					if (obj.status == false) {
    						ui.error(obj.msg, 4);
    					} else {
    						ui.success("发送成功！");
    						$("#changevoice").html("请耐心等待，您将会接到400-010-6869语音播报验证码");
    						isChangeMobile = true;
    					}
     				}
    			});

    		} else {
    			ui.error("请输入正确的手机号", 2);
    			return;
    		}
        })
     
       form_login.submit(function(e) {
            e.preventDefault();
            $.ajax({
                url: '/try/doLigin',
                data: form_login.serialize(),
                type: 'post',
                dataType: 'json',
                success: function(data) {
                    if (data && data.status == 1) {
                        window.location.href="/"+data.toUrl;
                    } else {
                        alert(data.msg);
                    }
                }
            })
        });
    });
</script>
