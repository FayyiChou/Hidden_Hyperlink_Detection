     jQuery("#btn-search").click(function() {
      str()
  });
     $(document).keydown(function(event) {

      if (event.keyCode == 13 && isfocus) {
        str();
    }
});
     function str() {
      var keyWord = jQuery("#keyWord").val();

      if (keyWord != "") {
        var reg = new RegExp("^([a-zA-Z0-9_-]|[:：《》??<>+*、/－=!，,.。??]|[ ]|[\\u4E00-\\u9FFF])+$", "g");

        if (!reg.test(keyWord)) {
          alert("您的本次输入包含特殊字符，请再次操作。");
          return false;
      }
  }
  jQuery("#sm_keyWord").val(encodeURI(jQuery("#keyWord").val()));
  document.searchForm.submit();
}
</script>
