<script type="text/javascript">
    $(document).keydown(function(event) {
        if (event.keyCode == 37) {
            if ('677583' == '') {
                alert("已经在第一章了！");
            } else {
                window.location.href = "//read.jd.com/14225/677583.html";
            }

        } else if (event.keyCode == 39) {

            if ('677585' == '') {
                alert("已经是最后一章了！");
            } else {
                window.location.href = "//read.jd.com/14225/677585.html";
            }

        } else if (event.keyCode == 13) {
            window.location.href = "//read.jd.com/14225/index.html";

        }
    });
</script>

