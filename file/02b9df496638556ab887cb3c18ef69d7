    <script>
        flag = true;
        tenflag = true;
        var interval;
        $(function () {

            //鼠标放上去边框
            $(".lottery ul li").hover(function () {
                if ($(this).hasClass("random1") || $(this).hasClass("random2") || $(this).hasClass("random3")) {

                } else {
                    $(this).find("span").addClass("flash");
                }

            }, function () {
                $(this).find("span").removeClass("flash");
            });


            //单次抽奖
            $(".lottery li").click(function () {

                //$(".lottery li a").removeClass("flip");
                if ($(this).hasClass("random1") || $(this).hasClass("random2") || $(this).hasClass("random3")) {

                } else {

                    if (flag) {
                        $(this).parent().children().removeClass("waitclass");
                        var lotcount = 0;
                        var rd1 = $(".lottery  .random1").length;
                        var rd2 = $(".lottery  .random2").length;
                        var rd3 = $(".lottery  .random3").length;
                        lotcount = rd1 + rd2 + rd3;
                        if (lotcount < 3) {
                            var Vitem = $("#itemdetails .active").find("input[name='vitem']").first().val();
                            if (typeof (Vitem) == "undefined") {
                                Vitem = "";
                            }
                            flag = false;
                            openPayCost('1', Vitem);
                            setTimeout(function () {
                                flag = true;
                            }, 1000);
                            $(this).addClass("waitclass");
                        }

                        // GetAwardLogManageAdd('1', $(this));

                    } else {
                        // alert("不能重复");
                    }


                }


            });


            $("#btn-kick").on("click", function () {
                if (tenflag) {
                    var Vitem = $("#itemdetails .active").find("input[name='vitem']").first().val();
                    if (typeof (Vitem) == "undefined") {
                        Vitem = "";
                    }
                    tenflag = false;
                    openTenPayCost('1', Vitem);
                    setTimeout(function () {
                        tenflag = true;
                    }, 1000);
                }
            });

        });


        function RefreshVirtulItem() {
            // 可使用道具
            $(".items-list dd a").hover(function () {
                $(this).next(".item-intro").show();
            }, function () {
                $(this).next(".item-intro").hide();
            });
            $(".items-list dd a").on("click", function () {
                if ($(this).hasClass("active")) {
                    $(this).removeClass("active");
                } else {
                    $(".items-list dd a.active").removeClass("active");
                    $(this).addClass("active");
                }
            });
        }

        //boss血量
        function BossBlod() {

            //放生活动
         

            //刷新 活动勋章和探宝勋章
            ActiveKeyquery();
            //ActiveKeyquery2();

            // 翻牌效果
            var _current = $(".progress-number").find("span").text();
            $(".progress-current p").css({
                "width": _current + "%"
            });
            $(".progress-current span").css({
                "left": _current + "%"
            });
            if ('true') {
                if (_current == 0) {
                    interval = setInterval(shake, 50);
                } else {
                    clearInterval(interval);
                }
            }
        }


        //重置翻牌
        function RestP() {


            setTimeout(function () {
                $(".lottery li").removeClass("random1").removeClass("random2").removeClass("random3");
                // $(".lottery li a").removeClass("flip");
                if ($(".lottery li a").hasClass("flip")) {
                    $(".lottery li a").removeClass("flip");
                } else {
                    $(".lottery li a").addClass("flip");
                }
            }, 1500);
        }
        function RefreshClick(attr) {
            var att = attr.split('|');
            $(".progress-number").find("span").html(att[1]);
            BossBlod();
            $(".waitclass").addClass("random" + att[0]);
            var lotcount = 0;
            var rd1 = $(".lottery  .random1").length;
            var rd2 = $(".lottery  .random2").length;
            var rd3 = $(".lottery  .random3").length;
            lotcount = rd1 + rd2 + rd3;
            if (lotcount >= 3) {
                RestP();
                return;
            } else {

            }
        }
        function RefreshTenClick(attr) {
            var att = attr.split('|');
            $(".progress-number").find("span").html(att[1]);
            BossBlod();
        }
        var step = 1;
        function shake() {
            if (step == 1) {
                $(".plant").animate({
                    backgroundPositionX: "-3px",
                    backgroundPositionY: 0
                }, 10);
                step = 2;
            } else if (step == 2) {
                $(".plant").animate({
                    backgroundPositionX: "-3px",
                    backgroundPositionY: "-3px"
                }, 10);
                step = 3;
            } else if (step == 3) {
                $(".plant").animate({
                    backgroundPositionX: 0,
                    backgroundPositionY: 0
                }, 10);
                step = 4;
            } else if (step == 4) {
                $(".plant").animate({
                    backgroundPositionX: 0,
                    backgroundPositionY: "-3px"
                }, 10);
                step = 5;
            } else if (step == 5) {
                $(".plant").animate({
                    backgroundPositionX: "-3px",
                    backgroundPositionY: "-3px"
                }, 10);
                step = 1;
            }
        };
    </script>




