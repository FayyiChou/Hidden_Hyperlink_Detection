    <script>

    $('#Jfav').click(function() {
        var $this = $(this);
        var count = parseInt($this.find('span').html());
        if (count > 9999) {
            $this.find('span').html((count / 10000).toFixed(2) + '万');
        }
        var nor = ($this.hasClass('isFav') ? 'cancelCollect' : 'collect');
        $.ajax({
            type: "POST",
            url: pageGlobal.intfRoot + '/intf/video/' + nor + '.jsp?id=2072',
            success: function(data) {
                if (data.status == 1) {
                    if (nor == 'collect') {
                        $this.addClass('isFav');
                        count++;
                    } else {
                        $this.removeClass('isFav');
                        count > 0 && count--;
                    }
                    if (count > 9999) {
                        $this.find('span').html((count / 10000).toFixed(2) + '万');
                    } else {
                        $this.find('span').html(count);
                    }
                } else {
                    alert(data.msg);
                }
            },
            dataType: 'jsonp'
        });
    });

    $('#Jgood').click(function() {
