<script>
function scrollContent(y){
	$("body,html").stop().animate({scrollTop: y }, "slow", "easeOutQuart");		
}
var sSider = $(".site-sider");

$(".site-sider-btns li").click(function(e) {
	var dT = $(document).scrollTop();
	var wH = $(window).height();
	
	if($(this).is(".sider-btn-top")){
		scrollContent(0);	
	}
	if($(this).is(".sider-btn-prev")){
		 scrollContent(dT-wH);
	}
	if($(this).is(".sider-btn-next")){
		 scrollContent(dT+wH);
	}
});
function autoSecContent(){
	var dT = $(document).scrollTop();
	var wH = $(window).height()*0.38;
	
	if(dT > wH){
		sSider.addClass("siderShow").fadeIn();
	} else {
		sSider.removeClass("siderShow").fadeOut();	
	}
}
$(document).scroll(function(){
	autoSecContent();
});	
$(window).resize(function(){
	wH = $(window).height()/2;
	autoSecContent();
});

</script>
