	var timeOutM = null;
	var nowMenu = esMenu.eq(0);
	var nowIndex = 0;
	
	function setTimeoutF (t){
		var t = t || 600;
		timeOutM = setTimeout(function(){
			navArr.eq(nowIndex).removeClass("on");	
			if(ecOutable){
				nowMenu.removeClass("menuShow");
			} else {
				navArr.eq(nowIndex).removeClass("on");	
			}
		},t);
	}
	
	navArr.mouseenter(function(e) {
		window.clearTimeout(window.setTimeout("0") - 1);
		window.clearTimeout("timeOutM");
		timeOutM = null;
		var _this = $(this).addClass("on");
		var _index = navArr.index($(this));
		
			ecOutable = false;
		var menuC = _this.attr("menu") || "";
		if(menuC){	
			if(nowIndex!=_index){//隐藏
				navArr.eq(nowIndex).removeClass("on");
				nowMenu.removeClass("menuShow");
				nowMenu = esMenu.filter("." + menuC).addClass("menuShow");
			}
			if(nowMenu.is(":hidden")){
				nowMenu.addClass("menuShow");
			}
		} else {
			navArr.eq(nowIndex).removeClass("on");
			nowMenu.removeClass("menuShow");	
		}
		//document.title = document.title + "-" +_index
		
		nowIndex=_index;
	});
	navMain.parent().mouseleave(function(){
		ecOutable = true;
		setTimeoutF();	
	});
