		if($(this).is(".sider-btn-prev")){
			if(secIndex>0){
				secIndex+=-1;
				scrollContent(secT[secIndex]);
			} else {
				scrollContent(0);
			}
		}
		if($(this).is(".sider-btn-next")){
			if(secIndex<secLen-1){
				secIndex+=1;
				//alert(secIndex);
				scrollContent(secT[secIndex]);
			} else {
				scrollContent(secT[secLen-1]);
			}
		}
	});
	function autoSecContent(){
		var dT = $(document).scrollTop()+10;
		$.each(secT,function(i,e){
			if(dT>e){
				//alert(i);
				secIndex = i;
				return;	
			}	
		});
