						var self = $(this);
						var tp = mapThisArr.index(self);
						clearTimeout(timer[tp]);
						timer[tp] = setTimeout(function(){
							self.removeClass("mapItemHover");
							mapContentArr.eq(tp).hide();
						},100);
					});
					
					mapContentArr.mouseenter(function(e) {
						var self = $(this);
