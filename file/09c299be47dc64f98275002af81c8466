	sa.identify(Q.guid, true);
	sa.quick('autoTrack', {
		'task': 'h5',
		'guid': Q.guid,
		'bookid': Number(Q.book().id),
		'userid': Q.userInfo.userId,
		'username': Q.userInfo.nickName,
		'isauthor': Q.userInfo.isAuthor ? '是' : '否',
		'source': Q.getURI('hmsr')
	});
</script>

