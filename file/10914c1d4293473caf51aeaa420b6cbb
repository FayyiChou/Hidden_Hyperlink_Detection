<!--
// Íå óäàëÿéòå ýòè ñòðîêè!!!
// Àâòîð ñêðèïòà: Èëüäàð Íàñèáóëëàåâ.
// Âåðñèÿ 1.0 îò 09.04.2008
// Àäðåñ ñêðèïòà â Èíòåðíåòå: http://prohtml.net/javascript/scripts/date_and_time.html

var week = Array("âîñêðåñåíüå","ïîíåäåëüíèê","âòîðíèê","ñðåäà",
	"÷åòâåðã","ïÿòíèöà","ñóááîòà");
var month = Array("ÿíâàðÿ","ôåâðàëÿ","ìàðòà","àïðåëÿ","ìàÿ","èþíÿ",
	"èþëÿ","àâãóñòà","ñåíòÿáðÿ","îêòÿáðÿ","íîÿáðÿ","äåêàáðÿ");

function UpdateTime() {
var CurrentTime = new Date();
var InputTime = document.getElementById('MyTime');
var InputDate = document.getElementById('MyDate');
	h = CurrentTime.getHours();
	if ( h < 10 ) h = "0" + h;
	m = CurrentTime.getMinutes();
	if ( m < 10 ) m = "0" + m;
	s = CurrentTime.getSeconds();
	if ( s < 10 ) s = "0" + s;
	outString = h + ":" + m + ":" + s;
	InputTime.innerHTML = outString;
	outString = CurrentTime.getDate() + " ";
	outString += month[CurrentTime.getMonth()] + " ";
	outString += CurrentTime.getFullYear() + " ãîäà";
	outString += " (" + week[CurrentTime.getDay()] + ")";
	InputDate.innerHTML = outString;
	setTimeout("UpdateTime()",1000);
}
-->
