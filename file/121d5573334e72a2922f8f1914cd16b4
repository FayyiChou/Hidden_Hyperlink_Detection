<script type="text/javascript" tt-ignored-node="1">
    /***********广告加载和统计************/
    var apiPrefix="https://api.wallstreetcn.com";

    if ($('.greek-gods').length > 0) {
        $.each($('.greek-gods'), function (index, el) {
            getAdAjax($(el).attr('data-url'))
        })
    }

    function getAdAjax(url) {
        $.ajax({
            url: url,
            type: 'get',
            dataType: 'jsonp',
            success: function (data) {
                var result = data.results[0];
                if (result) {
                    var id = result.id;
                    var channel = result.channel;
                    var imgUrl = result.img['url'];
                    var width = result.img['w'];
                    var height = result.img['h'];
                    var targetUrl = result.url;
                    $('[data-channel=' + channel + ']').append("<a target='_blank' href='" + targetUrl + "'><img style='width:" + width + "px'" + " src='" + imgUrl + "'/></a>").data("id",id);
                    impressionAds(id);
                }

            },
            error: function (xhr, textStatus) {
                //
            }
        })
    }
    //曝光量统计
    function impressionAds(id){
        var url = apiPrefix+"/v2/tm/track/ads?id="+id+"&pos=&type=banner,inlinel&intent=impression";
        $.ajax({
            url:url,
            type:"GET",
            dataType:"jsonp"
        })
    }
    //点击量统计
    $(".greek-gods").on("click","a",function(e){
        e.preventDefault();
        e.stopPropagation();
        var $this = $(this);
        var id = $this.data("id");
        var href=$this.attr("href");
        var url=apiPrefix+"/v2/tm/track/ads?id="+id+"&pos=&type=banner,inline&intent=click";
        $.ajax({
            url:url,
            type:"POST",
            xhrFields: {
                withCredentials: true
            },
            crossDomain: true,
            success:function(){
                window.location.href = href;
            },
            error:function(){
                window.location.href = href; 
            }
        })
    })
</script>
