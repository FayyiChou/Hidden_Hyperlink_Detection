function bIfWriteCookie()
{
	var dateNow = new Date();
	var sYear = dateNow.getFullYear();
	var sMonth = dateNow.getMonth()+1;
	var sDay = dateNow.getDate();
	if (sMonth<10) sMonth='0'+String(sMonth);
	if (sDay<10) sDay='0'+String(sDay);
	var sCutDate='pagelog'+String(sYear)+String(sMonth)+String(sDay);

	sCookie=document.cookie;
	var arrCookie=sCookie.split("; "); 
	var bRewriteCookie=false;
	var sNewCookie='';
	var sCookieName='';
	var sCookieValue='';
	var sCookieItem='';
	if (arrCookie.length<=0) bRewriteCookie=true;
	for(var i=0;i<arrCookie.length;i++)
	{
		sCookieItem=arrCookie[i];
		
		if (sCookieItem.indexOf(sCutDate+'=')<0) continue;	
		if (sCookieItem.indexOf('-'+pageid+'-')<0) 
		{
			sNewCookie=sCookieItem+'-'+pageid+'-'+"; ";
			bRewriteCookie=true;
			continue;
		}
		else
			sNewCookie=sCookieItem;
			
	}
	if (sNewCookie.indexOf(sCutDate+'=')<0)
	{
		bRewriteCookie=true;
		sNewCookie=sCutDate+'=-'+pageid+'-'+"; ";	
	}
	//alert(bRewriteCookie+'  '+sNewCookie); 
	if (bRewriteCookie) document.cookie=sNewCookie;
	return bRewriteCookie;
}
	
function RecordLog()
{
	if (bIfWriteCookie()==false) return;

	var dz=window.location.href;
	var site="zatan";
	var tg="";
	if (dz.indexOf("?t=m")>10) tg="m";
	if (dz.indexOf("?t=n")>10) tg="n";
	if (dz.indexOf("?t=p")>10) tg="p";
	if (dz.indexOf("?t=w")>10) tg="w";
	if (dz.indexOf("?t=t")>10) tg="t";
	if (dz.indexOf("?t=s")>10) tg="s";
	var postData = "";
	postData = 'pageid=' + pageid;
	postData += '&pindaoid=' + pindaoid;
	postData += '&lanmuid=' + lanmuid;
	postData += '&mubanid=' + mubanid;
	postData += '&tuijian=' + tuijian;
	postData += '&site=' + site;
	postData += '&tg=' + tg;
	postData += '&fabutime=' + fabutime;
	postData += '&title=' + title;	
	//document.getElementById("iframelogsid").src="http://tongji.zatan365.com/tongjiadd.php?"+postData;
	var sURL="http://tongji.zatan365.com/tongjiadd.php?"+postData;
	document.getElementById("diviframelogs").innerHTML='<iframe src="'+sURL+'" height="1" width="1" id="iframelogsid" name="iframelogs" border="0" frameborder="0"></iframe>';
}

setTimeout("RecordLog()", 3000);

