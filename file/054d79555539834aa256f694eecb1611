<script>
function check(){
	if($("#hfnr").val()==""){
		alert("回复内容不可为空");
		return false;
	}
	$.ajax({
	  type: "POST",
	  url: "/index.php/Index/question_aff_ok/",
	  data: {action: "hf" ,id: $("#hfid").val(),hfnr:$("#hfnr").val()},
	  cache: false,
	  async: false,
	  error: function(){
	  alert("操作失败！");
	  },
	 success: function(msg){
	   switch(msg)
	   {
		case "1":
		alert("参数错误！");
		 break;
		case "2":
		 alert("回复内容不可为空！");
		 break;
		case "3":
		 alert("回复内容太长！");
		 break;
		case "4":
		lastid=parseInt($("#hf div:last-child").attr('id'))+1;
		 hfr=$("#hfr").val();
		 if(lastid%2==0){
			  $("#hf").append('<div id='+lastid+' style="background-color:#e4f2fa; border-radius:15px; padding:5px; margin-top:10px;">'+$("#hfnr").val()+'<p>回复人:'+hfr+'</p></div>');
			 }
		 if(lastid%2==1){
			 $("#hf").append('<div id='+lastid+' style="background-color:#ddd; border-radius:15px; padding:5px; margin-top:10px;">'+$("#hfnr").val()+'<p>回复人:'+hfr+'</p></div>');
			 }
		 break; 
		case "5":
		alert("回复间隔时间太短！");
		 break; 
		case "6":
		alert("请登录！");
		top.location.href="login.asp";
		 break;  
		default:
		 alert("操作失败！");
		 break;
	   }
	 }
	});

}
</script>


