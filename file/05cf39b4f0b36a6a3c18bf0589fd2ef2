		  var week=dateTime.getDay();

var days=[ "日 ", "一 ", "二 ", "三 ", "四 ", "五 ", "六 ",] 

		  spantime.innerHTML=yy+"年"+MM+"月"+dd+"日 ";
		  spantime.innerHTML+=hh+":"+mm+":"+ss;

		  setTimeout("bodyLoad();",1000);
	 }
