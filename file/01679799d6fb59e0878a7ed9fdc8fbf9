		function login() {
			sendForm("form_login", "/index.php?m=&c=public&a=check_login");
		}

		$(document).ready(function() {
			var $dom = "#password";
						 $($dom).keydown(function(event) {
				if (event.keyCode == 13) {
					sendForm("form_login", "/index.php?m=&c=public&a=check_login");
					return false;
					
				}
			});
		});
