<script src="//js.3conline.com/min/temp/v1/lib-jquery1.10.2.js"></script>
<script type="text/javascript" src="//js.3conline.com/pcauto/2016/ask/common.js"></script>
<script type="text/javascript" src="//expert.pcauto.com.cn/js/template.js"></script>
<script type="text/javascript" src="//expert.pcauto.com.cn/js/upc/upc.js" charset="utf-8"></script>
<script type="text/javascript">
//关闭模版引擎的默认转义
template.config("escape", false);
var LoginUser = {
      curAnswerTime:1491060258856,
      isExpert:false,
      isLogin:false
};
var params = {
              upcPath:"//upc.pcauto.com.cn", 
              application:"pcauto_expertonline",	
              command:[1022006,1022007,1022008,1022014],	
              windowname:1,
              sessionCookieName:"common_session_id"
};
UPC.init(params);
function getImgLength(){
    return $("#J-upload-pic li").length;
}

    function getImgData(){
        var data="[";
        $("#J-upload-pic li img").each(function(){
            data+="{\"url\":\""+$(this).attr("data")+"\",\"width\":"+$(this).attr("data-width")+",\"height\":"+$(this).attr("data-height")+"},";
        });
        if(data.lastIndexOf(",")==data.length-1){
            data=data.substr(0,data.length-1);
        }
        data+="]";
        return data;
    }

    function upload(name){
        if(getImgLength()>=3){
            showError("只能上传3张");
            return false;
        }
        $("#J-upload-pic").show();
        $("#J-upload-pic").append("<li class=\"loading-img\" id=\"load"+name+"\"></li>");
        var len = Number($("#J-upload-pic").attr("data-size"));
        $("#J-upload-pic").attr("data-size",len+1);
        //上传图片并返回图片列表
                UPC.post({
                        url:"/upload_quick.jsp",	//接口地址
                        data:{keepSrc:"yes", readExif:"yes"},	//接口参数
                        file:[String(name)],		
                        complete:function(msg){	//返回本次事务所有图片列表（包括原图和转换后图片，原图只有上传参数keepSrc="yes"时才有）
                                if(msg.retCode==0){
                                    var files = msg.files;
                                    var sourceSrc="";
                                    var showSrc="";
                                    var width=0;
                                    var height=0;
                                    for(var i=0;i<files.length;i++){
                                        if(files[i].isorg==1){
                                            sourceSrc=files[i].url;
                                            width=files[i].width;
                                            height=files[i].height;
                                        }
                                        if(files[i].url.indexOf("150x100")>-1){
                                             showSrc=files[i].url;
                                         }
                                    }
                                     sourceSrc=sourceSrc.replace("http:","").replace("https:","");   
                                     showSrc=showSrc.replace("http:","").replace("https:","");   
                                    $("#load"+name).html("<a href=\"javascript:;\" class=\"close\"></a><img  data=\""+sourceSrc+"\" data-width=\""+width+"\" data-height=\""+height+"\"  src=\""+showSrc+"\">");
                                    $("#load"+name).removeClass("loading-img");
                                    $(".upl-list a").click(function(){
                                           $(this).parent().remove();
                                           if($("#J-upload-pic li").length==0){
                                               $("#J-upload-pic").hide();
                                           }
                                    });
                                }else{
                                     if(msg.retCode==14){
                                        showError("文件大小超出规定");
                                    }else{
                                        showError("上传图片失败");
                                    }
                                    $("#load"+name).remove();
                                    if($("#J-upload-pic li").length==0){
                                        $("#J-upload-pic").hide();
                                    }
                                }
                                createFileUpload();
                        }
                });
    }
    function createFileUpload(){
        var length = Number($("#J-upload-pic").attr("data-size"));
        var id="pic"+(length+1);
        $("#uploadFileDiv").append("<input type=\"file\" id=\""+id+"\" onchange=\"upload('"+id+"')\"/>");
    }
function showZuiWen(answerId,replyId){
        if(!LoginUser.isLogin){
            goLogin();
            return;
        }
        var txt=$("#reply_"+answerId+"_"+replyId).html();
        if(txt=="继续追问"){
          resetbox();
          resetBtn();
          $("#reply_"+answerId+"_"+replyId).html("取消追问").parent().after(askbox);
          counttxt();
          $(".submit a").unbind("click").bind("click",function(){
                  submitSubQuestion(answerId,replyId);
          });
        }else{    
          $("#reply_"+answerId+"_"+replyId).html("继续追问");
          $(".ask-box").remove();
        }  
}
function resetBtn(){
    $(".zuiwen a").each(function(){
        var text = $(this).html();
        if(text=="取消追问"){
            $(this).html("继续追问");
        }else if(text=="取消修改"){
            $(this).html("修改");
        }
    });
    $(".reply a").each(function(){
        var text = $(this).html();
        if(text=="取消回复"){
            $(this).html("回复");
        }
    });
}
function showReply(answerId,replyId){
    if(!LoginUser.isLogin){
            goLogin();
            return;
        }
        var btn = $("#reply_"+answerId+"_"+replyId);
        var txt=btn.html();
        if(txt=="回复"){
          resetbox();
          resetBtn();
          btn.html("取消回复").parent().after(askbox);
          counttxt();
          $(".submit a").unbind("click").bind("click",function(){
                  submitSubQuestion(answerId,replyId);
          });
        }else{    
          btn.html("回复");
          $(".ask-box").remove();
        }  
 }
 function showAnserReply(questionId){
    if(!LoginUser.isLogin){
           goLogin();
           return;
       }
  var btn = $("#question_"+questionId);
  var txt=btn.html();
        if(txt=="回复"){
          resetbox();
          btn.html("取消回复").parent().after(askbox);
          counttxt();
          $(".submit a").unbind("click").bind("click",function(){
                  submitAnswer(questionId);
          });
        }else{    
          btn.html("回复");
          $(".ask-box").remove();
        }  
 }
 function submitAnswer(questionId){
        var btn = $("#question_"+questionId);
        if(btn.attr("loading")=="true"){
            return ;
        }
        var content =$("#content").val();
        if(!content || content.trim().length==0){
            showError("内容不能为空");
            return;
        }
        showSubmit();
        btn.attr("loading",true);
        $.ajax({
            url:"//expert.pcauto.com.cn/answer/create.do",
            type:"post",
            data:{questionId:questionId,content:content},
            dataType:"json",
            success:function(data){
                if(data.code==0){
                    myalert(1,"回复成功");
                    location.reload();
                }else{
                    myalert(3,data.message);
                }
                btn.attr("loading",false);
            },
            error:function(){
                showError("网络错误");
                btn.attr("loading",false);
            }
        });
    }
    function showUpdateAnswer(answerId){
        if(!LoginUser.isLogin){
            goLogin();
            return;
        }
         var btn = $("#answer_"+answerId);
        var txt=btn.html();
              if(txt=="修改"){
                resetbox();
                btn.html("取消修改").parent().after(askbox);
                counttxt();
                $(".submit a").unbind("click").bind("click",function(){
                        submitUpdateAnswer(answerId);
                });
              }else{    
                btn.html("修改");
                $(".ask-box").remove();
              } 
    }
    function submitUpdateAnswer(answerId){
        var btn = $("#answer_"+answerId);
        if(btn.attr("loading")=="true"){
            return ;
        }
        var content =  $("#content").val();
        if(!content || content.trim().length==0){
            showError("内容不能为空");
            return;
        }
        showSubmit();
        btn.attr("loading",true);
        $.ajax({
            url:"//expert.pcauto.com.cn/answer/updateAnswer.do",
            data:{id:answerId,content:content},
            dataType:"json",
            type:"post",
            success:function(data){
                if(data.code==0){
                    myalert(1,"修改成功");
                     location.reload();
                }else{
                    showError(data.message);
                }
                btn.attr("loading",false);
            },
            error:function(){
                showError("网络错误");
                btn.attr("loading",false);
            }
        });
    }
    function submitSubQuestion(answerId,replyId){
        var btn = $("#reply_"+answerId+"_"+replyId);
        if(btn.attr("loading")=="true"){
            return;
        }
        var content = $("#content").val();
        if(!content || content.trim().length==0){
            showError("内容不能为空");
            return;
        }
        if(content.length>300){
            showError("内容不能超过300字");
            return;
        }
        showSubmit();
        btn.attr("loading",true);
        $.ajax({
            url:"//expert.pcauto.com.cn/subQuestion/create.do",
            type:"post",
            data:{answerId:answerId,replyId:replyId,content:content},
            dataType:"json",
            success:function(data){
                if(data.code==0){
                    myalert(1,"回复成功");
                    if(btn.html()=="取消追问"){
                        showZuiWen(answerId,replyId);
                    }else{
                        showReply(answerId,replyId);
                    }
                }else{
                    myalert(3,data.message);
                }
                btn.attr("loading",false);
            },
           error:function(){
              showError("网络错误");
               btn.attr("loading",false);
           }
        });
    }
    function setTop(questionId){
                $.ajax({
                    url:"//expert.pcauto.com.cn/question/setTop.do",
                    data:{id:questionId,activityId:"1107"},
                    type:"post",
                    dataType:"json",
                    success:function(data){
                        if(data.code==0){
                            location.reload();
                        }else{
                            myalert(3,data.message);
                        }
                    },
                    error:function(){
                       showError("网络错误");
                    }
                });
            }
            function unTop(questionId){
                $.ajax({
                    url:"//expert.pcauto.com.cn/question/unTop.do",
                    data:{id:questionId,activityId:"1107"},
                    type:"post",
                    dataType:"json",
                    success:function(data){
                        if(data.code==0){
                            location.reload();
                        }else{
                            myalert(3,data.message);
                        }
                    },
                    error:function(){
                       showError("网络错误");
                    }
                });
            }
    function loadSubQuestion(answerId){
        var pageNo = Number($("#loadSubQuestion_"+answerId).attr("data-pageNo"))+1;
        $.getJSON("//expert.pcauto.com.cn/subQuestion/loadSubQuestion.do",{answerId:answerId,pageNo:pageNo,pageSize:5,activityId:1107},function(data){
            if(data.code==0){
                var html="";
                var result=  data.resultList;
                for(var i=0;i<result.length;i++){
                    result[i].UCROOT="//my.pcauto.com.cn";
                    result[i].loginId="0";
                    html+=template("subQuestionTemplate",result[i]);
                }
                if(data.pageNo >= data.pageCount){
                     $("#loadSubQuestion_"+answerId).hide();
                }
                if(data.pageNo==data.pageCount-1){
                    $("#loadSubQuestion_"+answerId).html("展开另外<em class=\"orange\">"+(data.total-(data.pageNo*data.pageSize))+"</em>条<i></i>");
                }
                $("#subQuestion-"+answerId).append(html);
                $("#loadSubQuestion_"+answerId).attr("data-pageNo",data.pageNo);
            }
        })
    }
    function loadTop(){
        $.getJSON("//expert.pcauto.com.cn/question/loadTopQuestion.do",{activityId:1107},function(data){
            if(data.code==0){
                var html="";
                var result = data.resultList;
                for(var i=0;i<result.length;i++){
                    result[i].isExpert=LoginUser.isExpert;
                    result[i].isLogined=LoginUser.isLogin;
                    result[i].UCROOT="//my.pcauto.com.cn";
                    result[i].activityId="1107";
                    html+=template("topQuestionTemplate",result[i]);
                }
                $("#topQuestionList").append(html);
            }
        });
    }
    function showError(msg){
        myalert(3,msg)
    }
    function submitQuestion(){
        var btn = $("#submiBtn");
        if(btn.attr("loading")=="true"){
            return;
        }
        var content = $("#questionContent").val();
        if(!content || content.trim().length==0){
            showError("内容不能为空");
            return;
        }
        if(content.length>300){
            showError("内容不能超过300字");
            return;
        }
        var photo = getImgData();
        btn.attr("loading",true);
        showSubmit();
        $.ajax({
            url:"//expert.pcauto.com.cn/question/create.do",
            type:"post",
            data:{activityId:1107,content:content,photo:photo},
            dataType:"json",
            success:function(data){
                if(data.code==0){
                    myalert(1,"提问成功");
                    location.href="//expert.pcauto.com.cn/1107/my/";
                }else{
                    myalert(3,data.message);
                }
                btn.attr("loading",false);
            },
            error:function(data){
                showError("网络错误");
                btn.attr("loading",false);
            }
        });
    }
    function loadPreActivity(){
        $.getJSON("//expert.pcauto.com.cn/activity/getPreviousActivity.do",{activityId:1107,pageSize:5},function(data){
            if(data.code==0){
                var result = data.resultList;
                var len = result.length;
                var html="";
                for(var i=0;i<len;i++){
                    html+=template("preActivityTemplate",result[i]);
                }
                $("#activityList").append(html);
                if(len>0){
                    $("#activityListDiv").show();
                }
            }
        });
    }
    function loadNextActivity(){
        $.getJSON("//expert.pcauto.com.cn/activity/getNextPeriods.do",{activityId:1107},function(data){
            if(data.code==0){
                if(data.data){
                    data.data.ROOT="//expert.pcauto.com.cn";
                    var html = template("nextActivityTemplate",data.data);
                    $("#nextPeriods").append(html);
                    $("#nextPeriods").show();
                }
            }
        })
    }
            var oldCount = "696";
            function getOnlineCount(){
                $.getJSON("//expert.pcauto.com.cn/activity/getOnlineCount.do",{activityId:1107},function(data){
                        if(data.code==0){
                            oldCount=data.count;
                        }
                });
            }
            function showOnlineCount(){
                var count = rd(50);
                var showCount = oldCount;
                if(Math.random()%2==0){
                    showCount +=count;
                }else{
                    showCount -=count;
                }
                if(showCount<100){
                    showCount=100+count;
                }
                $("#onlineCount").html(showCount);
            }
            function rd(m){
                var c = m+1;  
                return Math.floor(Math.random() * c);
            }
              
     function loadNewAnswer(){
        $.getJSON("//expert.pcauto.com.cn/answer/getNewAnswer.do?callback=?",{activityId:1107,userId:0},function(data){
            if(data.code==0){
                if(LoginUser.curAnswerTime<data.answerTime && data.answerTime>0){
                    if(data.isOwner){
                        $("#awnser-tips").html("<a class=\"close\" href=\"javascript:$('#awnser-tips').hide();\"></a>恭喜您，"+data.name+"刚刚回复了您！<a href=\"//expert.pcauto.com.cn/1107/my/\" class=\"orange\">点击查看>></a>");
                    }else{
                        $("#awnser-tips").html("<a class=\"close\" href=\"javascript:$('awnser-tips').hide();\"></a>"+data.name+"刚刚解答了一个新问题！<a href=\"//expert.pcauto.com.cn/1107/\" class=\"orange\">点击查看>></a>");
                    }
                    $("#awnser-tips").show();
                    LoginUser.curAnswerTime=data.answerTime;
                }
            }
        });
     }
     function showSubmit(){
        myalert(2,"提交中...");
     }
     function hideSubmit(){
         $(".pop").hide();
     }
     function goLogin(){
         location.href="//my.pcauto.com.cn/passport/login.jsp?return="+location.href;
     }
     function goQQLogin(){
         location.href="//my.pcauto.com.cn/passport/opens/authorize.jsp?type=qzone_auto&return="+location.href;
    }
    function goWXLogin(){
        location.href="//my.pcauto.com.cn/passport/opens/authorize.jsp?type=weixin_auto&return="+location.href;
    }
    function goWeiBoLogin(){
        location.href="//my.pcauto.com.cn/passport/opens/authorize.jsp?type=sina_auto&return="+location.href;
    }
    function loginOut(){
        location.href="http://passport3.pcauto.com.cn/passport3/passport/logout.jsp?return="+location.href;
    }
    loadNextActivity();
    loadPreActivity();
    
        loadTop();
    
    
    
</script>


</body></html>