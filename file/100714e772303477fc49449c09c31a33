                   (回复了{{replyQuestion.floor}}楼 <span class="blue"><a href="{{replyQuestion.author.isExpert?"javascript:;":UCROOT+"/"+replyQuestion.author.userId}}" target="{{replyQuestion.author.isExpert?"_self":"_blank"}}">{{replyQuestion.author.nickName}}</a></span>)：
                {{/if}}
                {{content}}
            </div>
            
                <div class="reply">
                    {{if loginId!=author.userId}}
                        <a href="javascript:showReply({{answerId}},{{id}})" id="reply_{{answerId}}_{{id}}" loading="false">回复</a>
                    {{/if}}
                </div>
            
    </div>
</script>
<script type="text/html" id="preActivityTemplate">
