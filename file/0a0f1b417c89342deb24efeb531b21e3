<script>
			var url = interFaceUrl+"/bvradio_app/service/BBS?functionName=getActive&size=5&atom=0";
			$(".carousel-inner").html("");
			$.ajax({
			 type: "get",
			 async: true,
			 url: url,
			 dataType: "jsonp",
			 success: function(data){
				for( i=0 ; i<data.length ; i++ ){
					var html = "";
					if(i==0){
						 html += "<div class='item active'>";
					}else{
						html += "<div class='item'>";
					}
					html += "<a href='"+ activityUrl+"?activityId="+ data[i].activeID +"' target='_blank'>";
					html += "<img src='"+data[i].pic+"'>";
					html += "</a>";
					html += "<div class='carousel-caption hide'>";
					html += data[i].title;
					html += "</div>";
					html += "</div>";
					$(".carousel-inner").append(html);
					
					var vhtml = "";
					if(i==0){
						vhtml += "<li data-target='#carousel-example-generic' data-slide-to='"+i+"' class='active'></li>"
					}else{
						vhtml += "<li data-target='#carousel-example-generic' data-slide-to='"+i+"'></li>"
					}
					$(".carousel-indicators").append(vhtml);
				}
			 },
			 error: function(){
				alert("error");
			 }
			});
</script>
