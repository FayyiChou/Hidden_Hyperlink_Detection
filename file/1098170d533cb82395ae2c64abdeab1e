		if( (ua.indexOf('MicroMessenger') > -1) || (ua.indexOf('UCBrowser') > -1) || (ua.indexOf('MQQBrowser') > -1) || (ua.indexOf('BIDUBrowser') > -1) || (ua.indexOf('QQ') > -1) ){
			writeShare();
			writeAD();
