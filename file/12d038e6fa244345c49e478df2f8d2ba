		$(".jq_closeBtn").click(function(){
			$fugai_box.hide();
 			$(".applyCard_box").hide();
		});
		$("#creditOnlineApply").click(function(){
			var list = $("input[type='radio'][name='radioName']:checked");
			if(list.length == 0){
				$("#checkMessage").html("请选择卡类别！");
				clearTimeout(timeOutId);
				timeOutId = setTimeout(function(){
					$("#checkMessage").html("");
				},3000);
				return;
			}
			$fugai_box.hide();
			$(".applyCard_box").hide();
