	function kfmm(){
		var ieVersion = navigator.appVersion;
		var area = "";
		var IEPage = document.title;
		var flashVersion = "";
		var OSVersion = navigator.platform;
		var RP = window.screen.width+"x"+window.screen.height;
		var langue = navigator.systemLanguage;
		var url = "";
		$.ajax({
					url: '/app?m=zxkfRedirect',
					type: 'post',
					data:{
						'ieVersion' : ieVersion,
						'area' : area,
						'IEPage' : IEPage,
						'flashVersion' : flashVersion,
						'OSVersion' : OSVersion,
						'RP' : RP,
						'langue' : langue
						},
					async: false,
					error: function(){
					},
					success: function(data){
						url = data;
					}
				});
	 openType(url);
	}
