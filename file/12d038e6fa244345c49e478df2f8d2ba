 	$(document).ready(function(){
 		var timeOutId;
 		var $jq_applyCard = $(".jq_applyCard");
 		var $fugai_box = $("#fugai_box");
 		$jq_applyCard.click(function(){
 			//$(".applyCard_box").appendTo($("#fugai_box"));
