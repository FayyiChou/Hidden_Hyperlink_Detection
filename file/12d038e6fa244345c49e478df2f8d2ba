       $(document).ready(function () {
           /*功能1：tab页*/
           var $tab_btn = $(".jq_tab li"); //获取tab页按钮
           $tab_btn.click(function () {
               $(this).siblings().removeClass("selected").end().addClass("selected"); //tab页按钮选中状态切换
               var index = $(this).index(); //获取当前tab页按钮的指数
               $(".jq_tab_box").removeClass("show"); //隐藏所有的tab盒子
               $(".jq_tab_box").eq(index).addClass("show"); //目标tab盒子显示
           });
       });
