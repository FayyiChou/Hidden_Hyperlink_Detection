		$(function(){
			var currIndex = 0;
			var childrens = $(".main-page").children();
			var intervalId = setInterval(function(){
				childrens.each(function(index){
					if(currIndex == index){
						$(this).removeClass("hidden");
					}else{
						$(this).addClass("hidden");
					}
				});
				if(currIndex++==4){
					currIndex = 0;
				}
			},4500);
			//clearInterval(intervalId);
		});
	</script>
