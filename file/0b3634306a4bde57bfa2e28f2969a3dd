<script type="text/javascript">
	//书架收藏 下架
	function delBookshelf(bsId) {
		Q.ajax('http://h5.17k.com/h5/user/delbookshelf.action', {"bookshelfId": bsId}, function(data) {
			if(data.code == 0) {
				//TODO 客户端
				window.chineseallread&&window.chineseallread.reloadToBookShelf();
				document.querySelector("#joined").style.display = "none";
				document.querySelector("#join").style.display = 'block';
			}
		}, 'json');
	}

	//是否收藏 书籍
	function isShoucang(bookId) {
		Q.ajax('http://h5.17k.com/book/h5/getuserbookshelf.action', {"bookId": bookId}, function(data) {
			//data={"code":0,"exist":true,"bsId":117302};
			if(data && data.code == 0 && data.exist) {
				document.querySelector("#join").style.display = 'none';
				var joined = document.querySelector("#joined");
				joined.style.display = 'block';

				joined.onclick = function() {
					delBookshelf(data.bsId)
				};
			}
		}, 'json');
	}

	isShoucang(1929051);

	//点击
	Q.ajax('/bookservice/bookClickProcess.action', {"bookId": 1929051, "clickType": 1}, function(data) {
		document.querySelector("#howmuchreadBook").innerHTML = data.click.totalCount + "人读过";
	}, 'json');
	//收藏
	var bookshelf = function() {
		if(!Q.isLogin()) {
			window.open("http://passport.17k.com/m/?url=" + document.URL, "_self");
			return;
		}
		Q.ajax('/bookShelf/bookshelf.action', {"bookId": 1929051}, function(data) {
			if(data.status == 0) {
				//TODO 客户端
				window.chineseallread&&window.chineseallread.reloadToBookShelf();
				isShoucang(1929051);
			} else if(data.status == 1) {
				alert("收藏失败。");
			} else if(data.status == 2) {
				alert("书签加入成功！");
			} else if(data.status == 3) {
				alert("本书已经收藏过了！");
			} else {
				alert("error...");
			}
			//神策埋点
			window.sa&&sa.track('Favorites', {
				'task': 'h5',
				'guid': Q.guid,
				'userid': Q.userInfo.userId,
				'username': Q.userInfo.nickName,
				'isauthor': Q.userInfo.isAuthor ? '是' : '否',
				'bookid': 1929051,
				'bookname': '女帝乱江山',
				'favstatus': ["收藏成功！", "收藏失败。", "书签加入成功！", "本书已经收藏过了！"][data.status]
			});
		}, 'json');
	};
	//阅读
	var readChapter = function() {
		var charpterId = null;
		var userRecordChapterId = "";
		var localRecordChapterId = Q.book(1929051).chapter;
		if(Q.isLogin() && userRecordChapterId && userRecordChapterId.length > 0) {
			charpterId = userRecordChapterId;
		} else if(!Q.isLogin() && localRecordChapterId) {
			charpterId = localRecordChapterId;
		}
		var url = "/list/" +1929051 + ".html";
		if(charpterId)
			url = "/chapter/" + 1929051 + "/" + charpterId + ".html";
		window.open(url, "_self");
	}
</script>

